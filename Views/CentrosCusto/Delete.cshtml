@model SistemaTesourariaEclesiastica.Models.CentroCusto

@{
    ViewData["Title"] = "Excluir Centro de Custo";
    var possuiDependencias = (bool)(ViewBag.PossuiDependencias ?? false);
    var totalMembros = (int)(ViewBag.TotalMembros ?? 0);
    var totalUsuarios = (int)(ViewBag.TotalUsuarios ?? 0);
    var totalEntradas = (int)(ViewBag.TotalEntradas ?? 0);
    var totalSaidas = (int)(ViewBag.TotalSaidas ?? 0);
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h1 class="h3 mb-0">
            <i class="bi bi-trash me-2 text-danger"></i>
            Excluir Centro de Custo
        </h1>
        <p class="text-muted mb-0">Confirmar exclusão do registro</p>
    </div>
    <a asp-action="Index" class="btn btn-outline-secondary">
        <i class="bi bi-arrow-left me-2"></i>Voltar
    </a>
</div>

@if (possuiDependencias)
{
    <div class="alert alert-danger d-flex align-items-center" role="alert">
        <i class="bi bi-exclamation-octagon me-3 fs-3"></i>
        <div>
            <h5 class="alert-heading mb-2">Não é possível excluir este centro de custo!</h5>
            <p class="mb-2">Este centro de custo possui registros associados:</p>
            <ul class="mb-0">
                @if (totalMembros > 0)
                {
                    <li><strong>@totalMembros</strong> membro(s) vinculado(s)</li>
                }
                @if (totalUsuarios > 0)
                {
                    <li><strong>@totalUsuarios</strong> usuário(s) vinculado(s)</li>
                }
                @if (totalEntradas > 0)
                {
                    <li><strong>@totalEntradas</strong> entrada(s) registrada(s)</li>
                }
                @if (totalSaidas > 0)
                {
                    <li><strong>@totalSaidas</strong> saída(s) registrada(s)</li>
                }
            </ul>
            <p class="mb-0 mt-2">Para preservar a integridade do histórico do sistema, não é permitido excluir centros de custo com registros associados. <strong>Recomendamos desativar o centro de custo ao invés de excluí-lo.</strong></p>
        </div>
    </div>
}
else
{
    <div class="alert alert-warning d-flex align-items-center" role="alert">
        <i class="bi bi-exclamation-triangle me-3 fs-3"></i>
        <div>
            <h5 class="alert-heading mb-2">Atenção!</h5>
            <p class="mb-0">Você está prestes a excluir este centro de custo. Esta ação não pode ser desfeita.</p>
        </div>
    </div>
}

<div class="row">
    <div class="col-lg-8">
        <div class="card shadow-sm">
            <div class="card-header">
                <h5 class="mb-0">
                    <i class="bi bi-info-circle me-2"></i>
                    Detalhes do Centro de Custo
                </h5>
            </div>
            <div class="card-body">
                <dl class="row mb-0">
                    <dt class="col-sm-4">Nome:</dt>
                    <dd class="col-sm-8 fw-semibold">@Model.Nome</dd>

                    <dt class="col-sm-4">Tipo:</dt>
                    <dd class="col-sm-8">
                        @if (Model.Tipo == SistemaTesourariaEclesiastica.Enums.TipoCentroCusto.Sede)
                        {
                            <span class="badge bg-primary">
                                <i class="bi bi-building me-1"></i>Sede
                            </span>
                        }
                        else
                        {
                            <span class="badge bg-info">
                                <i class="bi bi-people me-1"></i>Congregação
                            </span>
                        }
                    </dd>

                    @if (!string.IsNullOrEmpty(Model.Descricao))
                    {
                        <dt class="col-sm-4">Descrição:</dt>
                        <dd class="col-sm-8">@Model.Descricao</dd>
                    }

                    <dt class="col-sm-4">Status:</dt>
                    <dd class="col-sm-8">
                        @if (Model.Ativo)
                        {
                            <span class="badge bg-success">
                                <i class="bi bi-check-circle me-1"></i>Ativo
                            </span>
                        }
                        else
                        {
                            <span class="badge bg-danger">
                                <i class="bi bi-x-circle me-1"></i>Inativo
                            </span>
                        }
                    </dd>

                    <dt class="col-sm-4">Data de Criação:</dt>
                    <dd class="col-sm-8">
                        <small class="text-muted">
                            <i class="bi bi-calendar me-1"></i>
                            @Model.DataCriacao.ToString("dd/MM/yyyy 'às' HH:mm")
                        </small>
                    </dd>
                </dl>

                <hr class="my-4">

                @if (!possuiDependencias)
                {
                    <form asp-action="Delete" method="post">
                        <input type="hidden" asp-for="Id" />
                        @Html.AntiForgeryToken()
                        <div class="d-flex gap-2 justify-content-end">
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="bi bi-x-circle me-2"></i>Cancelar
                            </a>
                            <button type="submit" class="btn btn-danger">
                                <i class="bi bi-trash me-2"></i>Confirmar Exclusão
                            </button>
                        </div>
                    </form>
                }
                else
                {
                    <div class="d-flex justify-content-end">
                        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning me-2">
                            <i class="bi bi-pencil me-2"></i>Desativar Centro de Custo
                        </a>
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="bi bi-arrow-left me-2"></i>Voltar à Lista
                        </a>
                    </div>
                }
            </div>
        </div>
    </div>

    @if (possuiDependencias)
    {
        <div class="col-lg-4">
            <div class="card border-warning shadow-sm">
                <div class="card-header bg-warning text-dark">
                    <h6 class="mb-0">
                        <i class="bi bi-info-circle me-2"></i>
                        Registros Associados
                    </h6>
                </div>
                <div class="card-body">
                    <div class="list-group list-group-flush">
                        @if (totalMembros > 0)
                        {
                            <div class="list-group-item d-flex justify-content-between align-items-center px-0">
                                <span>
                                    <i class="bi bi-person-fill text-primary me-2"></i>
                                    Membros
                                </span>
                                <span class="badge bg-primary rounded-pill">@totalMembros</span>
                            </div>
                        }
                        @if (totalUsuarios > 0)
                        {
                            <div class="list-group-item d-flex justify-content-between align-items-center px-0">
                                <span>
                                    <i class="bi bi-people-fill text-info me-2"></i>
                                    Usuários
                                </span>
                                <span class="badge bg-info rounded-pill">@totalUsuarios</span>
                            </div>
                        }
                        @if (totalEntradas > 0)
                        {
                            <div class="list-group-item d-flex justify-content-between align-items-center px-0">
                                <span>
                                    <i class="bi bi-arrow-down-circle-fill text-success me-2"></i>
                                    Entradas
                                </span>
                                <span class="badge bg-success rounded-pill">@totalEntradas</span>
                            </div>
                        }
                        @if (totalSaidas > 0)
                        {
                            <div class="list-group-item d-flex justify-content-between align-items-center px-0">
                                <span>
                                    <i class="bi bi-arrow-up-circle-fill text-danger me-2"></i>
                                    Saídas
                                </span>
                                <span class="badge bg-danger rounded-pill">@totalSaidas</span>
                            </div>
                        }
                    </div>
                </div>
            </div>

            <div class="alert alert-info mt-3" role="alert">
                <i class="bi bi-lightbulb me-2"></i>
                <strong>Dica:</strong> Você pode desativar este centro de custo para mantê-lo no histórico sem permitir novos registros.
            </div>
        </div>
    }
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}