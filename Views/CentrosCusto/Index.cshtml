@model IEnumerable<SistemaTesourariaEclesiastica.Models.CentroCusto>
@using SistemaTesourariaEclesiastica.Enums

@{
    ViewData["Title"] = "Unidades Financeiras";
}

<!-- Cabeçalho -->
<div class="d-flex flex-column flex-md-row justify-content-between align-items-start align-items-md-center mb-4 gap-2">
    <div>
        <h1 class="h3 mb-1">
            <i class="bi bi-diagram-3 me-2"></i>Unidades Financeiras
        </h1>
        <p class="text-muted mb-0 small">Gerenciar sede e congregações</p>
    </div>
    <a asp-action="Create" class="btn btn-primary">
        <i class="bi bi-plus-circle me-2"></i>Nova Unidade Financeira
    </a>
</div>

<!-- Filtros -->
<div class="card shadow-sm mb-4">
    <div class="card-body">
        <form method="get" class="row g-3">
            <div class="col-12 col-md-8">
                <label class="form-label small fw-semibold">Buscar</label>
                <input type="text" class="form-control" name="searchString" value="@ViewData["CurrentFilter"]"
                       placeholder="Nome ou descrição...">
            </div>
            <div class="col-12 col-md-2">
                <label class="form-label small fw-semibold">Tipo</label>
                <select name="tipo" class="form-select">
                    <option value="">Todos</option>
                    <option value="Sede" selected="@(ViewData["TipoFilter"]?.ToString() == "Sede")">Sede</option>
                    <option value="Congregacao" selected="@(ViewData["TipoFilter"]?.ToString() == "Congregacao")">Congregação</option>
                </select>
            </div>
            <div class="col-12 col-md-2 d-flex align-items-end gap-2">
                <button type="submit" class="btn btn-outline-primary flex-fill">
                    <i class="bi bi-search"></i>
                    <span class="d-none d-md-inline ms-1">Filtrar</span>
                </button>
                <a asp-action="Index" class="btn btn-outline-secondary">
                    <i class="bi bi-arrow-clockwise"></i>
                </a>
            </div>
        </form>
    </div>
</div>

<!-- Resultados -->
<div class="card shadow-sm">
    <div class="card-header bg-white d-flex justify-content-between align-items-center py-3">
        <h5 class="mb-0 fw-semibold">
            <i class="bi bi-list-ul me-2 text-primary"></i>
            @ViewBag.TotalItems unidade(s) encontrada(s)
        </h5>
        <button type="button" class="btn btn-sm btn-outline-secondary" onclick="window.print()">
            <i class="bi bi-printer me-1"></i>Imprimir
        </button>
    </div>

    <div class="card-body p-0">
        @if (Model != null && Model.Any())
        {
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="table-light">
                        <tr>
                            <th class="ps-3">Nome</th>
                            <th class="d-none d-lg-table-cell">Descrição</th>
                            <th>Tipo</th>
                            <th class="d-none d-md-table-cell text-center">Status</th>
                            <th class="d-none d-xl-table-cell">Data Criação</th>
                            <th class="text-center" style="width: 140px;">Ações</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="ps-3">
                                    <div class="d-flex align-items-center">
                                        <div class="avatar-circle @(item.Tipo.ToString() == "Sede" ? "bg-danger" : "bg-info") text-white me-2">
                                            @item.Nome.Substring(0, 1).ToUpper()
                                        </div>
                                        <div>
                                            <div class="fw-semibold">@item.Nome</div>
                                            <small class="text-muted d-lg-none">
                                                @(!string.IsNullOrEmpty(item.Descricao) ? item.Descricao : "-")
                                            </small>
                                        </div>
                                    </div>
                                </td>
                                <td class="d-none d-lg-table-cell">
                                    @if (!string.IsNullOrEmpty(item.Descricao))
                                    {
                                        <span class="text-muted">@item.Descricao</span>
                                    }
                                    else
                                    {
                                        <span class="text-muted fst-italic">Sem descrição</span>
                                    }
                                </td>
                                <td>
                                    @switch (item.Tipo)
                                    {
                                        case SistemaTesourariaEclesiastica.Enums.TipoCentroCusto.Sede:
                                            <span class="badge bg-danger">
                                                <i class="bi bi-building me-1"></i>Sede
                                            </span>
                                            break;
                                        
                                        case SistemaTesourariaEclesiastica.Enums.TipoCentroCusto.Congregacao:
                                            <span class="badge bg-info">
                                                <i class="bi bi-house me-1"></i>Congregação
                                            </span>
                                            break;
                                        
                                        case SistemaTesourariaEclesiastica.Enums.TipoCentroCusto.Financeiro:
                                            <span class="badge bg-success">
                                                <i class="bi bi-cash-stack me-1"></i>Financeiro
                                            </span>
                                            break;
                                        
                                        case SistemaTesourariaEclesiastica.Enums.TipoCentroCusto.Departamento:
                                            <span class="badge bg-primary">
                                                <i class="bi bi-briefcase me-1"></i>Departamento
                                            </span>
                                            break;
                                        
                                        case SistemaTesourariaEclesiastica.Enums.TipoCentroCusto.Projeto:
                                            <span class="badge bg-warning text-dark">
                                                <i class="bi bi-kanban me-1"></i>Projeto
                                            </span>
                                            break;
                                        
                                        case SistemaTesourariaEclesiastica.Enums.TipoCentroCusto.Ministerio:
                                            <span class="badge bg-purple">
                                                <i class="bi bi-people me-1"></i>Ministério
                                            </span>
                                            break;
                                        
                                        case SistemaTesourariaEclesiastica.Enums.TipoCentroCusto.Missao:
                                            <span class="badge bg-dark">
                                                <i class="bi bi-globe me-1"></i>Missão
                                            </span>
                                            break;
                                        
                                        case SistemaTesourariaEclesiastica.Enums.TipoCentroCusto.Educacional:
                                            <span class="badge bg-teal">
                                                <i class="bi bi-book me-1"></i>Educacional
                                            </span>
                                            break;
                                        
                                        case SistemaTesourariaEclesiastica.Enums.TipoCentroCusto.Social:
                                            <span class="badge bg-orange">
                                                <i class="bi bi-heart me-1"></i>Social
                                            </span>
                                            break;
                                        
                                        case SistemaTesourariaEclesiastica.Enums.TipoCentroCusto.Evangelistico:
                                            <span class="badge bg-cyan">
                                                <i class="bi bi-megaphone me-1"></i>Evangelístico
                                            </span>
                                            break;
                                        
                                        case SistemaTesourariaEclesiastica.Enums.TipoCentroCusto.Administrativo:
                                            <span class="badge bg-secondary">
                                                <i class="bi bi-gear me-1"></i>Administrativo
                                            </span>
                                            break;
                                        
                                        case SistemaTesourariaEclesiastica.Enums.TipoCentroCusto.Infraestrutura:
                                            <span class="badge bg-brown">
                                                <i class="bi bi-wrench me-1"></i>Infraestrutura
                                            </span>
                                            break;
                                        
                                        case SistemaTesourariaEclesiastica.Enums.TipoCentroCusto.Outro:
                                            <span class="badge bg-light text-dark border">
                                                <i class="bi bi-three-dots me-1"></i>Outro
                                            </span>
                                            break;
                                        
                                        default:
                                            <span class="badge bg-secondary">
                                                <i class="bi bi-question-circle me-1"></i>@item.Tipo.ToString()
                                            </span>
                                            break;
                                    }
                                </td>
                                <td class="d-none d-md-table-cell text-center">
                                    @if (item.Ativo)
                                    {
                                        <span class="badge bg-success bg-opacity-10 text-success border border-success">
                                            <i class="bi bi-check-circle me-1"></i>Ativo
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary bg-opacity-10 text-secondary border border-secondary">
                                            <i class="bi bi-x-circle me-1"></i>Inativo
                                        </span>
                                    }
                                </td>
                                <td class="d-none d-xl-table-cell">
                                    <small class="text-muted">@item.DataCriacao.ToString("dd/MM/yyyy")</small>
                                </td>
                                <td>
                                    <div class="btn-group btn-group-sm" role="group">
                                        <a asp-action="Details" asp-route-id="@item.Id"
                                           class="btn btn-outline-info" title="Detalhes">
                                            <i class="bi bi-eye"></i>
                                        </a>
                                        <a asp-action="Edit" asp-route-id="@item.Id"
                                           class="btn btn-outline-primary" title="Editar">
                                            <i class="bi bi-pencil"></i>
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@item.Id"
                                           class="btn btn-outline-danger" title="Excluir">
                                            <i class="bi bi-trash"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="text-center py-5">
                <i class="bi bi-diagram-3 text-muted" style="font-size: 4rem;"></i>
                <h5 class="mt-3 text-muted">Nenhuma unidade financeira encontrada</h5>
                <p class="text-muted">Não há unidades financeiras cadastradas com os filtros aplicados.</p>
                <a asp-action="Create" class="btn btn-primary mt-2">
                    <i class="bi bi-plus-circle me-2"></i>Cadastrar Primeira Unidade
                </a>
            </div>
        }
    </div>

    @if (ViewBag.TotalPages > 1)
    {
        <div class="card-footer bg-white py-3">
            <nav aria-label="Navegação de páginas">
                <ul class="pagination pagination-sm justify-content-center mb-0">
                    <li class="page-item @(ViewBag.CurrentPage <= 1 ? "disabled" : "")">
                        <a class="page-link" asp-action="Index"
                           asp-route-page="@(ViewBag.CurrentPage - 1)"
                           asp-route-searchString="@ViewData["CurrentFilter"]"
                           asp-route-tipo="@ViewData["TipoFilter"]">
                            <i class="bi bi-chevron-left"></i>
                        </a>
                    </li>

                    @for (int i = Math.Max(1, ViewBag.CurrentPage - 2); i <= Math.Min(ViewBag.TotalPages, ViewBag.CurrentPage + 2); i++)
                    {
                        <li class="page-item @(i == ViewBag.CurrentPage ? "active" : "")">
                            <a class="page-link" asp-action="Index"
                               asp-route-page="@i"
                               asp-route-searchString="@ViewData["CurrentFilter"]"
                               asp-route-tipo="@ViewData["TipoFilter"]">
                                @i
                            </a>
                        </li>
                    }

                    <li class="page-item @(ViewBag.CurrentPage >= ViewBag.TotalPages ? "disabled" : "")">
                        <a class="page-link" asp-action="Index"
                           asp-route-page="@(ViewBag.CurrentPage + 1)"
                           asp-route-searchString="@ViewData["CurrentFilter"]"
                           asp-route-tipo="@ViewData["TipoFilter"]">
                            <i class="bi bi-chevron-right"></i>
                        </a>
                    </li>
                </ul>
            </nav>
        </div>
    }
</div>

@section Styles {
    <style>
        /* Cores customizadas para badges de tipos de unidade financeira */
        .bg-purple {
            background-color: #6f42c1 !important;
            color: white !important;
        }

        .bg-teal {
            background-color: #20c997 !important;
            color: white !important;
        }

        .bg-orange {
            background-color: #fd7e14 !important;
            color: white !important;
        }

        .bg-cyan {
            background-color: #0dcaf0 !important;
            color: black !important;
        }

        .bg-brown {
            background-color: #795548 !important;
            color: white !important;
        }

        /* Estilos adicionais para o avatar circle */
        .avatar-circle {
            width: 40px;
            height: 40px;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            font-weight: bold;
            font-size: 1.1rem;
            flex-shrink: 0;
        }

        /* Responsividade para tabela */
        @@media (max-width: 768px) {
            .badge {
                font-size: 0.7rem;
            }
        }
    </style>
}