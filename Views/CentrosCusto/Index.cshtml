@model IEnumerable<SistemaTesourariaEclesiastica.Models.CentroCusto>
@using SistemaTesourariaEclesiastica.Enums

@{
    ViewData["Title"] = "Centros de Custo";
}

<!-- Cabeçalho -->
<div class="d-flex flex-column flex-md-row justify-content-between align-items-start align-items-md-center mb-3 mb-md-4 gap-2">
    <div>
        <h1 class="h3 mb-1">
            <i class="bi bi-building me-2"></i>
            Centros de Custo
        </h1>
        <p class="text-muted small mb-0">Gerenciar centros e congregações</p>
    </div>
    <a asp-action="Create" class="btn btn-primary btn-sm">
        <i class="bi bi-plus-circle me-1"></i>
        Novo Centro
    </a>
</div>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="bi bi-check-circle me-2"></i>
        @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <i class="bi bi-exclamation-triangle me-2"></i>
        @TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<!-- Filtros -->
<div class="card mb-3 mb-md-4">
    <div class="card-body p-3 p-md-4">
        <form method="get" class="row g-2 g-md-3">
            <div class="col-12 col-md-10">
                <label class="form-label small">Buscar</label>
                <input type="text" class="form-control form-control-sm" name="searchString" value="@ViewData["CurrentFilter"]"
                       placeholder="Nome ou descrição...">
            </div>
            <div class="col-12 col-md-2 d-flex align-items-end">
                <button type="submit" class="btn btn-outline-primary btn-sm w-100">
                    <i class="bi bi-search me-1"></i>
                    Filtrar
                </button>
            </div>
        </form>
    </div>
</div>

<!-- Resultados -->
<div class="card">
    <div class="card-header d-flex justify-content-between align-items-center p-3">
        <h5 class="mb-0 small">
            <i class="bi bi-list-ul me-2"></i>
            @ViewBag.TotalItems centro(s) encontrado(s)
        </h5>
    </div>
    <div class="card-body p-0">
        @if (Model.Any())
        {
            <div class="table-responsive">
                <table class="table table-hover mb-0" id="centrosCustoTable">
                    <!-- Desktop -->
                    <thead class="table-light d-none d-md-table-header-group">
                        <tr>
                            <th>Nome</th>
                            <th>Descrição</th>
                            <th>Tipo</th>
                            <th>Status</th>
                            <th>Data Criação</th>
                            <th class="text-center" width="140">Ações</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <!-- Desktop -->
                            <tr class="d-none d-md-table-row">
                                <td class="fw-semibold">@item.Nome</td>
                                <td>
                                    @if (!string.IsNullOrEmpty(item.Descricao))
                                    {
                                        <span class="text-muted">@item.Descricao</span>
                                    }
                                    else
                                    {
                                        <span class="text-muted fst-italic">Sem descrição</span>
                                    }
                                </td>
                                <td>
                                    <span class="badge bg-info">@item.Tipo.ToString()</span>
                                </td>
                                <td>
                                    @if (item.Ativo)
                                    {
                                        <span class="badge bg-success">
                                            <i class="bi bi-check-circle me-1"></i>Ativo
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">
                                            <i class="bi bi-x-circle me-1"></i>Inativo
                                        </span>
                                    }
                                </td>
                                <td>@item.DataCriacao.ToString("dd/MM/yyyy")</td>
                                <td class="text-center">
                                    <div class="btn-group btn-group-sm" role="group">
                                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-info">
                                            <i class="bi bi-eye"></i>
                                        </a>
                                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-primary">
                                            <i class="bi bi-pencil"></i>
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger">
                                            <i class="bi bi-trash"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>

                            <!-- Mobile -->
                            <tr class="d-md-none">
                                <td class="p-3">
                                    <div class="d-flex justify-content-between align-items-start mb-2">
                                        <div class="flex-grow-1">
                                            <div class="fw-bold mb-1">@item.Nome</div>
                                            @if (!string.IsNullOrEmpty(item.Descricao))
                                            {
                                                <small class="text-muted d-block mb-1">@item.Descricao</small>
                                            }
                                            <div class="d-flex gap-1 flex-wrap">
                                                <span class="badge bg-info" style="font-size: 0.7rem;">
                                                    @item.Tipo.ToString()
                                                </span>
                                                @if (item.Ativo)
                                                {
                                                    <span class="badge bg-success" style="font-size: 0.7rem;">
                                                        <i class="bi bi-check-circle me-1"></i>Ativo
                                                    </span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-secondary" style="font-size: 0.7rem;">
                                                        <i class="bi bi-x-circle me-1"></i>Inativo
                                                    </span>
                                                }
                                            </div>
                                        </div>
                                    </div>
                                    <div class="small text-muted mb-2">
                                        <i class="bi bi-calendar3 me-1"></i>
                                        @item.DataCriacao.ToString("dd/MM/yyyy")
                                    </div>
                                    <div class="btn-group btn-group-sm w-100" role="group">
                                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-info">
                                            <i class="bi bi-eye"></i>
                                        </a>
                                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-primary">
                                            <i class="bi bi-pencil"></i>
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger">
                                            <i class="bi bi-trash"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="text-center py-5">
                <i class="bi bi-inbox display-4 text-muted"></i>
                <p class="text-muted mt-3">Nenhum centro encontrado</p>
                <a asp-action="Create" class="btn btn-primary">
                    <i class="bi bi-plus-circle me-2"></i>Cadastrar Primeiro Centro
                </a>
            </div>
        }
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            if (window.innerWidth > 768) {
                $('#centrosCustoTable').DataTable({
                    language: { url: '//cdn.datatables.net/plug-ins/1.13.7/i18n/pt-BR.json' },
                    responsive: true,
                    order: [[0, 'asc']],
                    pageLength: 25,
                    columnDefs: [{ orderable: false, targets: -1 }]
                });
            }

            $('[data-bs-toggle="tooltip"]').each(function() {
                new bootstrap.Tooltip(this);
            });
        });
    </script>
}