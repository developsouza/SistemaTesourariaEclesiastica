@model SistemaTesourariaEclesiastica.Models.CentroCusto

@{
    ViewData["Title"] = "Detalhes do Centro de Custo";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2><i class="fas fa-building me-2"></i>Detalhes do Centro de Custo</h2>
    <div>
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary me-2">
            <i class="fas fa-edit me-2"></i>Editar
        </a>
        <a asp-action="Index" class="btn btn-secondary">
            <i class="fas fa-arrow-left me-2"></i>Voltar
        </a>
    </div>
</div>

<div class="row">
    <div class="col-md-8">
        <div class="card">
            <div class="card-body">
                <dl class="row">
                    <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Nome)</dt>
                    <dd class="col-sm-9">@Html.DisplayFor(model => model.Nome)</dd>

                    <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Tipo)</dt>
                    <dd class="col-sm-9">
                        <span class="badge bg-info">
                            @Model.Tipo.GetDisplayName()
                        </span>
                    </dd>

                    <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Descricao)</dt>
                    <dd class="col-sm-9">@Html.DisplayFor(model => model.Descricao)</dd>

                    <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Ativo)</dt>
                    <dd class="col-sm-9">
                        @if (Model.Ativo)
                        {
                            <span class="badge bg-success">Ativo</span>
                        }
                        else
                        {
                            <span class="badge bg-secondary">Inativo</span>
                        }
                    </dd>
                </dl>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card">
            <div class="card-header">
                <h6 class="mb-0"><i class="fas fa-chart-bar me-2"></i>Estatísticas</h6>
            </div>
            <div class="card-body">
                <div class="row text-center">
                    <div class="col-6">
                        <div class="border-end">
                            <h5 class="text-success mb-0">R$ 0,00</h5>
                            <small class="text-muted">Total Entradas</small>
                        </div>
                    </div>
                    <div class="col-6">
                        <h5 class="text-danger mb-0">R$ 0,00</h5>
                        <small class="text-muted">Total Saídas</small>
                    </div>
                </div>
                <hr>
                <div class="text-center">
                    <h6 class="mb-0">Saldo Atual</h6>
                    <h4 class="text-primary">R$ 0,00</h4>
                </div>
            </div>
        </div>

        <div class="card mt-3">
            <div class="card-header">
                <h6 class="mb-0"><i class="fas fa-history me-2"></i>Últimas Movimentações</h6>
            </div>
            <div class="card-body">
                <p class="text-muted small">Nenhuma movimentação encontrada para este centro de custo.</p>
            </div>
        </div>
    </div>
</div>
