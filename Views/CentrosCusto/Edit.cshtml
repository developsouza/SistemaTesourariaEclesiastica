@model SistemaTesourariaEclesiastica.Models.CentroCusto

@{
    ViewData["Title"] = "Editar Centro de Custo";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2><i class="fas fa-edit me-2"></i>Editar Centro de Custo</h2>
    <a asp-action="Index" class="btn btn-secondary">
        <i class="fas fa-arrow-left me-2"></i>Voltar
    </a>
</div>

<div class="row">
    <div class="col-md-8">
        <div class="card">
            <div class="card-body">
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="Id" />
                    
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="Nome" class="form-label"></label>
                            <input asp-for="Nome" class="form-control" />
                            <span asp-validation-for="Nome" class="text-danger"></span>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label asp-for="Tipo" class="form-label"></label>
                            <select asp-for="Tipo" class="form-select" asp-items="Html.GetEnumSelectList<TipoCentroCusto>()">
                                <option value="">Selecione o tipo</option>
                            </select>
                            <span asp-validation-for="Tipo" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Descricao" class="form-label"></label>
                        <textarea asp-for="Descricao" class="form-control" rows="3"></textarea>
                        <span asp-validation-for="Descricao" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <div class="form-check">
                            <input asp-for="Ativo" class="form-check-input" type="checkbox" />
                            <label asp-for="Ativo" class="form-check-label"></label>
                        </div>
                    </div>

                    <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                        <a asp-action="Index" class="btn btn-secondary me-md-2">Cancelar</a>
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-save me-2"></i>Salvar Alterações
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card">
            <div class="card-header">
                <h6 class="mb-0"><i class="fas fa-info-circle me-2"></i>Informações</h6>
            </div>
            <div class="card-body">
                <p class="small text-muted">
                    Ao editar um centro de custo, certifique-se de que as alterações não afetem 
                    negativamente os registros financeiros já existentes.
                </p>
                <hr>
                <p class="small text-muted">
                    <strong>Dica:</strong> Se você desativar este centro de custo, ele não aparecerá 
                    mais nas opções de novos lançamentos, mas os registros históricos serão mantidos.
                </p>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
