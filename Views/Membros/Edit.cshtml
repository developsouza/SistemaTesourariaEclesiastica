@model SistemaTesourariaEclesiastica.Models.Membro
@using SistemaTesourariaEclesiastica.Attributes

@{
    ViewData["Title"] = "Editar Membro";
    var selectList = ViewBag.CentroCustoId as SelectList;
    var isDisabled = (selectList?.Count() == 1 && !User.IsInRole(Roles.Administrador) && !User.IsInRole(Roles.TesoureiroGeral));
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h1 class="h3 mb-0">
            <i class="bi bi-pencil-square me-2"></i>
            Editar Membro
        </h1>
        <p class="text-muted mb-0">Atualizar dados do membro</p>
    </div>
    <a asp-action="Index" class="btn btn-outline-secondary">
        <i class="bi bi-arrow-left me-2"></i>
        Voltar
    </a>
</div>

<div class="row">
    <div class="col-lg-8">
        <div class="card">
            <div class="card-header">
                <h5 class="card-title mb-0">Dados do Membro</h5>
            </div>
            <div class="card-body">
                <form asp-action="Edit" method="post">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                    <input type="hidden" asp-for="Id" />

                    <div class="row g-3">
                        <div class="col-md-8">
                            <label asp-for="NomeCompleto" class="form-label"></label>
                            <input asp-for="NomeCompleto" class="form-control">
                            <span asp-validation-for="NomeCompleto" class="text-danger"></span>
                        </div>

                        <div class="col-md-4">
                            <label asp-for="Apelido" class="form-label"></label>
                            <input asp-for="Apelido" class="form-control">
                            <span asp-validation-for="Apelido" class="text-danger"></span>
                        </div>

                        <div class="col-md-6">
                            <label asp-for="CPF" class="form-label"></label>
                            <input asp-for="CPF" class="form-control" data-mask="cpf" readonly>
                            <span asp-validation-for="CPF" class="text-danger"></span>
                            <div class="form-text">
                                <i class="bi bi-lock me-1"></i>
                                O CPF não pode ser alterado
                            </div>
                        </div>

                        <div class="col-md-6">
                            <label asp-for="CentroCustoId" class="form-label"></label>
                            @if (isDisabled)
                            {
                                @* Campo hidden para enviar o valor quando disabled *@
                                <input type="hidden" asp-for="CentroCustoId" />
                                <select class="form-select" disabled>
                                    @foreach (var item in selectList)
                                    {
                                        <option value="@item.Value" selected="@(item.Value == Model.CentroCustoId.ToString())">@item.Text</option>
                                    }
                                </select>
                            }
                            else
                            {
                                <select asp-for="CentroCustoId" class="form-select" asp-items="ViewBag.CentroCustoId">
                                    <option value="">Selecione o centro de custo</option>
                                </select>
                            }
                            <span asp-validation-for="CentroCustoId" class="text-danger"></span>
                            @if (isDisabled)
                            {
                                <div class="form-text">
                                    <i class="bi bi-info-circle me-1"></i>
                                    Como Tesoureiro Local, você não pode transferir membros para outro centro de custo
                                </div>
                            }
                        </div>

                        <div class="col-md-12">
                            <div class="form-check">
                                <input asp-for="Ativo" class="form-check-input" type="checkbox" />
                                <label asp-for="Ativo" class="form-check-label"></label>
                            </div>
                        </div>
                    </div>

                    <hr class="my-4">

                    <div class="d-flex justify-content-end gap-2">
                        <a asp-action="Index" class="btn btn-outline-secondary">
                            <i class="bi bi-x-circle me-2"></i>
                            Cancelar
                        </a>
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-check-circle me-2"></i>
                            Salvar Alterações
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <div class="col-lg-4">
        <div class="card">
            <div class="card-header">
                <h6 class="card-title mb-0">
                    <i class="bi bi-info-circle me-2"></i>
                    Informações
                </h6>
            </div>
            <div class="card-body">
                <div class="alert alert-info mb-0">
                    <p class="small mb-2">
                        <strong>ID:</strong> #@Model.Id
                    </p>
                    <p class="small mb-0">
                        <strong>Cadastrado em:</strong> @Model.DataCadastro.ToString("dd/MM/yyyy HH:mm")
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        $(document).ready(function() {
            $('#NomeCompleto').focus();
        });
    </script>
}