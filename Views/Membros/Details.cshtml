@model SistemaTesourariaEclesiastica.Models.Membro

@{
    ViewData["Title"] = "Detalhes do Membro";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2><i class="fas fa-user me-2"></i>Detalhes do Membro</h2>
    <div>
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary me-2">
            <i class="fas fa-edit me-2"></i>Editar
        </a>
        <a asp-action="Index" class="btn btn-secondary">
            <i class="fas fa-arrow-left me-2"></i>Voltar
        </a>
    </div>
</div>

<div class="row">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0">Informações Pessoais</h5>
            </div>
            <div class="card-body">
                <dl class="row">
                    <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Nome)</dt>
                    <dd class="col-sm-9">@Html.DisplayFor(model => model.Nome)</dd>

                    <dt class="col-sm-3">@Html.DisplayNameFor(model => model.DataNascimento)</dt>
                    <dd class="col-sm-9">
                        @if (Model.DataNascimento.HasValue)
                        {
                            @Model.DataNascimento.Value.ToString("dd/MM/yyyy")
                            <small class="text-muted">
                                (@((DateTime.Now.Year - Model.DataNascimento.Value.Year)) anos)
                            </small>
                        }
                        else
                        {
                            <span class="text-muted">Não informado</span>
                        }
                    </dd>

                    <dt class="col-sm-3">@Html.DisplayNameFor(model => model.CPF)</dt>
                    <dd class="col-sm-9">@Html.DisplayFor(model => model.CPF)</dd>

                    <dt class="col-sm-3">@Html.DisplayNameFor(model => model.RG)</dt>
                    <dd class="col-sm-9">@Html.DisplayFor(model => model.RG)</dd>

                    <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Email)</dt>
                    <dd class="col-sm-9">
                        @if (!string.IsNullOrEmpty(Model.Email))
                        {
                            <a href="mailto:@Model.Email">@Model.Email</a>
                        }
                        else
                        {
                            <span class="text-muted">Não informado</span>
                        }
                    </dd>

                    <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Telefone)</dt>
                    <dd class="col-sm-9">
                        @if (!string.IsNullOrEmpty(Model.Telefone))
                        {
                            <a href="tel:@Model.Telefone">@Model.Telefone</a>
                        }
                        else
                        {
                            <span class="text-muted">Não informado</span>
                        }
                    </dd>

                    <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Ativo)</dt>
                    <dd class="col-sm-9">
                        @if (Model.Ativo)
                        {
                            <span class="badge bg-success">Ativo</span>
                        }
                        else
                        {
                            <span class="badge bg-secondary">Inativo</span>
                        }
                    </dd>
                </dl>
            </div>
        </div>

        <div class="card mt-3">
            <div class="card-header">
                <h5 class="mb-0">Endereço</h5>
            </div>
            <div class="card-body">
                <dl class="row">
                    <dt class="col-sm-3">@Html.DisplayNameFor(model => model.CEP)</dt>
                    <dd class="col-sm-9">@Html.DisplayFor(model => model.CEP)</dd>

                    <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Endereco)</dt>
                    <dd class="col-sm-9">
                        @Model.Endereco
                        @if (!string.IsNullOrEmpty(Model.Numero))
                        {
                            <text>, @Model.Numero</text>
                        }
                        @if (!string.IsNullOrEmpty(Model.Complemento))
                        {
                            <text> - @Model.Complemento</text>
                        }
                    </dd>

                    <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Bairro)</dt>
                    <dd class="col-sm-9">@Html.DisplayFor(model => model.Bairro)</dd>

                    <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Cidade)</dt>
                    <dd class="col-sm-9">@Model.Cidade - @Model.UF</dd>
                </dl>
            </div>
        </div>

        <div class="card mt-3">
            <div class="card-header">
                <h5 class="mb-0">Informações Eclesiásticas</h5>
            </div>
            <div class="card-body">
                <dl class="row">
                    <dt class="col-sm-3">@Html.DisplayNameFor(model => model.DataBatismo)</dt>
                    <dd class="col-sm-9">
                        @if (Model.DataBatismo.HasValue)
                        {
                            @Model.DataBatismo.Value.ToString("dd/MM/yyyy")
                        }
                        else
                        {
                            <span class="text-muted">Não informado</span>
                        }
                    </dd>

                    <dt class="col-sm-3">@Html.DisplayNameFor(model => model.DataCadastro)</dt>
                    <dd class="col-sm-9">@Model.DataCadastro.ToString("dd/MM/yyyy")</dd>
                </dl>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card">
            <div class="card-header">
                <h6 class="mb-0"><i class="fas fa-chart-bar me-2"></i>Resumo Financeiro</h6>
            </div>
            <div class="card-body">
                <div class="row text-center">
                    <div class="col-12 mb-3">
                        <h5 class="text-success mb-0">R$ 0,00</h5>
                        <small class="text-muted">Total de Contribuições</small>
                    </div>
                </div>
                <hr>
                <div class="text-center">
                    <h6 class="mb-0">Última Contribuição</h6>
                    <p class="text-muted small">Nenhuma contribuição registrada</p>
                </div>
            </div>
        </div>

        <div class="card mt-3">
            <div class="card-header">
                <h6 class="mb-0"><i class="fas fa-history me-2"></i>Últimas Contribuições</h6>
            </div>
            <div class="card-body">
                <p class="text-muted small">Nenhuma contribuição encontrada para este membro.</p>
            </div>
        </div>

        <div class="card mt-3">
            <div class="card-header">
                <h6 class="mb-0"><i class="fas fa-info-circle me-2"></i>Informações</h6>
            </div>
            <div class="card-body">
                <p class="small text-muted">
                    <strong>ID do Membro:</strong> #@Model.Id
                </p>
                <p class="small text-muted">
                    <strong>Membro desde:</strong> @Model.DataCadastro.ToString("dd/MM/yyyy")
                </p>
                @if (Model.DataBatismo.HasValue)
                {
                    <p class="small text-muted">
                        <strong>Tempo de batismo:</strong> @((DateTime.Now.Year - Model.DataBatismo.Value.Year)) anos
                    </p>
                }
            </div>
        </div>
    </div>
</div>
