@model SistemaTesourariaEclesiastica.Models.Membro

@{
    ViewData["Title"] = "Detalhes do Membro";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h1 class="h3 mb-0">
            <i class="bi bi-person me-2"></i>
            Detalhes do Membro
        </h1>
        <p class="text-muted mb-0">Informações cadastrais</p>
    </div>
    <div>
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary me-2">
            <i class="bi bi-pencil me-2"></i>
            Editar
        </a>
        <a asp-action="Index" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left me-2"></i>
            Voltar
        </a>
    </div>
</div>

<div class="row">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0">Informações do Membro</h5>
            </div>
            <div class="card-body">
                <dl class="row">
                    <dt class="col-sm-4">@Html.DisplayNameFor(model => model.NomeCompleto)</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.NomeCompleto)</dd>

                    <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Apelido)</dt>
                    <dd class="col-sm-8">
                        @if (!string.IsNullOrEmpty(Model.Apelido))
                        {
                            @Model.Apelido
                        }
                        else
                        {
                            <span class="text-muted">Não informado</span>
                        }
                    </dd>

                    <dt class="col-sm-4">@Html.DisplayNameFor(model => model.CPF)</dt>
                    <dd class="col-sm-8"><span class="font-monospace">@Html.DisplayFor(model => model.CPF)</span></dd>

                    <dt class="col-sm-4">@Html.DisplayNameFor(model => model.DataNascimento)</dt>
                    <dd class="col-sm-8">
                        @if (Model.DataNascimento.HasValue)
                        {
                            @Model.DataNascimento.Value.ToString("dd/MM/yyyy")
                            <i class="bi bi-shield-check text-success ms-2" title="Habilitado para transparência"></i>
                        }
                        else
                        {
                            <span class="text-warning">
                                <i class="bi bi-exclamation-triangle me-1"></i>
                                Não informado
                            </span>
                            <br>
                            <small class="text-muted">Membro não poderá acessar a transparência sem esta informação</small>
                        }
                    </dd>

                    <dt class="col-sm-4">@Html.DisplayNameFor(model => model.CentroCusto)</dt>
                    <dd class="col-sm-8">
                        <span class="badge bg-info">@Model.CentroCusto.Nome</span>
                    </dd>

                    <dt class="col-sm-4">@Html.DisplayNameFor(model => model.DataCadastro)</dt>
                    <dd class="col-sm-8">@Model.DataCadastro.ToString("dd/MM/yyyy HH:mm")</dd>

                    <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Ativo)</dt>
                    <dd class="col-sm-8">
                        @if (Model.Ativo)
                        {
                            <span class="badge bg-success">Ativo</span>
                        }
                        else
                        {
                            <span class="badge bg-secondary">Inativo</span>
                        }
                    </dd>
                </dl>
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card">
            <div class="card-header">
                <h6 class="mb-0"><i class="bi bi-graph-up me-2"></i>Resumo Financeiro</h6>
            </div>
            <div class="card-body text-center">
                <h5 class="text-success mb-0">
                    @Model.Entradas.Sum(e => e.Valor).ToString("C")
                </h5>
                <small class="text-muted">Total de Contribuições</small>
                <hr>
                <p class="small mb-0">
                    <strong>@Model.Entradas.Count</strong> contribuição(ões) registrada(s)
                </p>
            </div>
        </div>
    </div>
</div>