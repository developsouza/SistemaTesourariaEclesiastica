@model SistemaTesourariaEclesiastica.Models.Membro

@{
    ViewData["Title"] = "Novo Membro";
    var centroCustoPreSelecionado = ViewData["CentroCustoIdPreSelecionado"];
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h1 class="h3 mb-0">
            <i class="bi bi-person-plus me-2"></i>
            Novo Membro
        </h1>
        <p class="text-muted mb-0">Cadastrar novo membro/dizimista</p>
    </div>
    <a asp-action="Index" class="btn btn-outline-secondary">
        <i class="bi bi-arrow-left me-2"></i>
        Voltar
    </a>
</div>

<div class="row">
    <div class="col-lg-8">
        <div class="card">
            <div class="card-header">
                <h5 class="card-title mb-0">Dados do Membro</h5>
            </div>
            <div class="card-body">
                <form asp-action="Create" method="post">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                    
                    <div class="row g-3">
                        <div class="col-md-8">
                            <label asp-for="NomeCompleto" class="form-label"></label>
                            <input asp-for="NomeCompleto" class="form-control" placeholder="Digite o nome completo">
                            <span asp-validation-for="NomeCompleto" class="text-danger"></span>
                        </div>
                        
                        <div class="col-md-4">
                            <label asp-for="Apelido" class="form-label"></label>
                            <input asp-for="Apelido" class="form-control" placeholder="Apelido (opcional)">
                            <span asp-validation-for="Apelido" class="text-danger"></span>
                        </div>
                        
                        <div class="col-md-6">
                            <label asp-for="CPF" class="form-label"></label>
                            <input asp-for="CPF" class="form-control" data-mask="cpf" placeholder="000.000.000-00">
                            <span asp-validation-for="CPF" class="text-danger"></span>
                            <div class="form-text">
                                <i class="bi bi-info-circle me-1"></i>
                                Digite apenas os números do CPF
                            </div>
                        </div>
                        
                        <div class="col-md-6">
                            <label asp-for="CentroCustoId" class="form-label"></label>
                            @{
                                var selectList = ViewBag.CentroCustoId as SelectList;
                                var isDisabled = selectList?.Count() == 1;
                            }
                            @if (isDisabled)
                            {
                                @* Campo hidden para enviar o valor quando disabled *@
                                <input type="hidden" asp-for="CentroCustoId" value="@centroCustoPreSelecionado" />
                                <select class="form-select" disabled>
                                    @foreach (var item in selectList)
                                    {
                                        <option value="@item.Value" selected>@item.Text</option>
                                    }
                                </select>
                            }
                            else
                            {
                                <select asp-for="CentroCustoId" class="form-select" asp-items="ViewBag.CentroCustoId">
                                    <option value="">Selecione o centro de custo</option>
                                </select>
                            }
                            <span asp-validation-for="CentroCustoId" class="text-danger"></span>
                            @if (isDisabled)
                            {
                                <div class="form-text">
                                    <i class="bi bi-info-circle me-1"></i>
                                    Como Tesoureiro Local, você só pode cadastrar membros no seu centro de custo
                                </div>
                            }
                        </div>
                    </div>
                    
                    <hr class="my-4">
                    
                    <div class="d-flex justify-content-end gap-2">
                        <a asp-action="Index" class="btn btn-outline-secondary">
                            <i class="bi bi-x-circle me-2"></i>
                            Cancelar
                        </a>
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-check-circle me-2"></i>
                            Salvar Membro
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
    
    <div class="col-lg-4">
        <div class="card">
            <div class="card-header">
                <h6 class="card-title mb-0">
                    <i class="bi bi-info-circle me-2"></i>
                    Informações
                </h6>
            </div>
            <div class="card-body">
                <div class="alert alert-info">
                    <h6 class="alert-heading">
                        <i class="bi bi-lightbulb me-2"></i>
                        Dicas
                    </h6>
                    <ul class="mb-0 small">
                        <li>O CPF deve ser único no sistema</li>
                        <li>O centro de custo define a congregação do membro</li>
                        <li>O apelido é opcional e pode ser usado para facilitar a busca</li>
                        <li>Todos os campos obrigatórios estão marcados com *</li>
                    </ul>
                </div>
                
                <div class="alert alert-warning">
                    <h6 class="alert-heading">
                        <i class="bi bi-exclamation-triangle me-2"></i>
                        Atenção
                    </h6>
                    <p class="mb-0 small">
                        Certifique-se de que os dados estão corretos antes de salvar. 
                        O CPF não poderá ser alterado após o cadastro de dízimos.
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    
    <script>
        $(document).ready(function() {
            // Validação de CPF em tempo real
            $('#CPF').on('blur', function() {
                var cpf = $(this).val();
                if (cpf) {
                    $.get('@Url.Action("VerificarCPF", "Membros")', { cpf: cpf }, function(data) {
                        if (!data) {
                            showToast('Este CPF já está cadastrado!', 'warning');
                            $('#CPF').addClass('is-invalid');
                        } else {
                            $('#CPF').removeClass('is-invalid');
                        }
                    });
                }
            });
            
            // Se há centro de custo pré-selecionado (tesoureiro local), selecionar automaticamente
            @if (centroCustoPreSelecionado != null)
            {
                <text>
                $('#CentroCustoId').val('@centroCustoPreSelecionado');
                </text>
            }
            
            // Foco no primeiro campo
            $('#NomeCompleto').focus();
        });
    </script>
}

