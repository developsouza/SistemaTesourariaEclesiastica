@{
    ViewData["Title"] = "Dashboard de Auditoria";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="h2 mb-1 fw-bold text-primary">
                <i class="bi bi-graph-up-arrow me-2"></i>Dashboard de Auditoria
            </h1>
            <p class="text-muted mb-0">Visão analítica das atividades do sistema</p>
        </div>
        <div class="d-flex gap-2">
            <a asp-action="Index" class="btn btn-outline-secondary">
                <i class="bi bi-list me-1"></i>Ver Logs
            </a>
            <a asp-action="Estatisticas" class="btn btn-outline-info">
                <i class="bi bi-pie-chart me-1"></i>Estatísticas
            </a>
        </div>
    </div>

    <!-- Cards de Estatísticas -->
    <div class="row g-4 mb-4">
        <div class="col-xl-3 col-md-6">
            <div class="card border-0 shadow-sm stat-card">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="flex-shrink-0">
                            <div class="stat-icon bg-primary bg-opacity-10 text-primary">
                                <i class="bi bi-calendar-day"></i>
                            </div>
                        </div>
                        <div class="flex-grow-1 ms-3">
                            <small class="text-muted text-uppercase fw-semibold d-block mb-1">Hoje</small>
                            <h3 class="mb-0 fw-bold">@ViewBag.Stats.LogsHoje</h3>
                            <small class="text-muted">atividades registradas</small>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6">
            <div class="card border-0 shadow-sm stat-card">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="flex-shrink-0">
                            <div class="stat-icon bg-success bg-opacity-10 text-success">
                                <i class="bi bi-calendar-week"></i>
                            </div>
                        </div>
                        <div class="flex-grow-1 ms-3">
                            <small class="text-muted text-uppercase fw-semibold d-block mb-1">Esta Semana</small>
                            <h3 class="mb-0 fw-bold">@ViewBag.Stats.LogsSemana</h3>
                            <small class="text-muted">total de logs</small>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6">
            <div class="card border-0 shadow-sm stat-card">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="flex-shrink-0">
                            <div class="stat-icon bg-info bg-opacity-10 text-info">
                                <i class="bi bi-calendar-month"></i>
                            </div>
                        </div>
                        <div class="flex-grow-1 ms-3">
                            <small class="text-muted text-uppercase fw-semibold d-block mb-1">Este Mês</small>
                            <h3 class="mb-0 fw-bold">@ViewBag.Stats.LogsMes</h3>
                            <small class="text-muted">registros totais</small>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6">
            <div class="card border-0 shadow-sm stat-card">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="flex-shrink-0">
                            <div class="stat-icon bg-warning bg-opacity-10 text-warning">
                                <i class="bi bi-people"></i>
                            </div>
                        </div>
                        <div class="flex-grow-1 ms-3">
                            <small class="text-muted text-uppercase fw-semibold d-block mb-1">Usuários Ativos</small>
                            <h3 class="mb-0 fw-bold">@ViewBag.Stats.UsuariosAtivosMes</h3>
                            <small class="text-muted">este mês</small>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Gráficos -->
    <div class="row g-4">
        <!-- Atividade por Hora -->
        <div class="col-lg-8">
            <div class="card border-0 shadow-sm">
                <div class="card-header">
                    <h5 class="mb-0">
                        <i class="bi bi-clock me-2"></i>Atividade por Hora (Últimas 24h)
                    </h5>
                </div>
                <div class="card-body">
                    <canvas id="activityChart" width="400" height="200"></canvas>
                </div>
            </div>
        </div>

        <!-- Top Ações -->
        <div class="col-lg-4">
            <div class="card border-0 shadow-sm">
                <div class="card-header">
                    <h5 class="mb-0">
                        <i class="bi bi-list-ol me-2"></i>Ações Mais Comuns
                    </h5>
                </div>
                <div class="card-body">
                    <div class="list-group list-group-flush">
                        <div class="list-group-item border-0 px-0 py-2">
                            <div class="d-flex justify-content-between align-items-center">
                                <div>
                                    <div class="fw-semibold">DASHBOARD_ACCESS</div>
                                    <small class="text-muted">Acesso ao dashboard</small>
                                </div>
                                <span class="badge bg-primary rounded-pill">45</span>
                            </div>
                        </div>
                        <div class="list-group-item border-0 px-0 py-2">
                            <div class="d-flex justify-content-between align-items-center">
                                <div>
                                    <div class="fw-semibold">LOGIN</div>
                                    <small class="text-muted">Login de usuário</small>
                                </div>
                                <span class="badge bg-success rounded-pill">32</span>
                            </div>
                        </div>
                        <div class="list-group-item border-0 px-0 py-2">
                            <div class="d-flex justify-content-between align-items-center">
                                <div>
                                    <div class="fw-semibold">CREATE</div>
                                    <small class="text-muted">Criação de registros</small>
                                </div>
                                <span class="badge bg-info rounded-pill">28</span>
                            </div>
                        </div>
                        <div class="list-group-item border-0 px-0 py-2">
                            <div class="d-flex justify-content-between align-items-center">
                                <div>
                                    <div class="fw-semibold">UPDATE</div>
                                    <small class="text-muted">Edição de dados</small>
                                </div>
                                <span class="badge bg-warning rounded-pill">15</span>
                            </div>
                        </div>
                        <div class="list-group-item border-0 px-0 py-2">
                            <div class="d-flex justify-content-between align-items-center">
                                <div>
                                    <div class="fw-semibold">DELETE</div>
                                    <small class="text-muted">Exclusões</small>
                                </div>
                                <span class="badge bg-danger rounded-pill">8</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Alertas e Relatórios Rápidos -->
    <div class="row g-4 mt-2">
        <!-- Alertas -->
        <div class="col-lg-6">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-warning text-dark">
                    <h5 class="mb-0">
                        <i class="bi bi-exclamation-triangle me-2"></i>Alertas de Auditoria
                    </h5>
                </div>
                <div class="card-body">
                    <div class="alert alert-success border-0">
                        <i class="bi bi-check-circle me-2"></i>
                        <strong>Sistema Estável:</strong> Nenhuma atividade suspeita detectada nas últimas 24h.
                    </div>

                    <div class="alert alert-info border-0">
                        <i class="bi bi-info-circle me-2"></i>
                        <strong>Pico de Atividade:</strong> Detectado maior volume de logins entre 08:00 e 09:00.
                    </div>

                    <div class="alert alert-warning border-0">
                        <i class="bi bi-clock me-2"></i>
                        <strong>Limpeza de Logs:</strong> Execute limpeza de logs antigas em 5 dias.
                    </div>
                </div>
            </div>
        </div>

        <!-- Ações Rápidas -->
        <div class="col-lg-6">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">
                        <i class="bi bi-lightning me-2"></i>Ações Rápidas
                    </h5>
                </div>
                <div class="card-body">
                    <div class="d-grid gap-2">
                        <a asp-action="ExportarExcel" class="btn btn-outline-success">
                            <i class="bi bi-file-earmark-excel me-2"></i>Exportar Logs (Excel)
                        </a>

                        <a asp-controller="Admin" asp-action="CleanupLogs" class="btn btn-outline-warning"
                           onclick="return confirm('Confirma a limpeza de logs antigos?')">
                            <i class="bi bi-trash me-2"></i>Limpeza de Logs
                        </a>

                        <a asp-controller="Admin" asp-action="DatabaseStats" class="btn btn-outline-info">
                            <i class="bi bi-database me-2"></i>Estatísticas do Banco
                        </a>

                        <a asp-action="Index" class="btn btn-outline-primary">
                            <i class="bi bi-search me-2"></i>Pesquisar Logs
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/3.9.1/chart.min.js"></script>
<script>
    // Gráfico de atividade por hora
    const ctx = document.getElementById('activityChart').getContext('2d');
    const activityData = @Html.Raw(Json.Serialize(ViewBag.AtividadePorHora ?? new List<object>()));

    // Preparar dados para o gráfico
    const hours = Array.from({length: 24}, (_, i) => i);
    const data = hours.map(hour => {
        const found = activityData.find(item => item.hora === hour);
        return found ? found.quantidade : 0;
    });

    new Chart(ctx, {
        type: 'line',
        data: {
            labels: hours.map(h => `${h}:00`),
            datasets: [{
                label: 'Atividades',
                data: data,
                borderColor: '#0d6efd',
                backgroundColor: 'rgba(13, 110, 253, 0.1)',
                borderWidth: 2,
                fill: true,
                tension: 0.4
            }]
        },
        options: {
            responsive: true,
            maintainAspectRatio: false,
            scales: {
                y: {
                    beginAtZero: true,
                    ticks: {
                        stepSize: 1
                    }
                }
            },
            plugins: {
                legend: {
                    display: false
                }
            }
        }
    });
</script>

<style>
    .stat-card {
        transition: transform 0.2s ease-in-out;
    }

        .stat-card:hover {
            transform: translateY(-2px);
        }

    .stat-icon {
        width: 50px;
        height: 50px;
        border-radius: 12px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.5rem;
    }

    #activityChart {
        height: 200px !important;
    }
</style>
