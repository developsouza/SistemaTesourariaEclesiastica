@using Microsoft.AspNetCore.Identity
@using SistemaTesourariaEclesiastica.Models
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<ul class="navbar-nav">
@if (SignInManager.IsSignedIn(User))
{
    var user = await UserManager.GetUserAsync(User);
    var roles = await UserManager.GetRolesAsync(user);
    var primaryRole = roles.FirstOrDefault() ?? "Usuário";
    
    <li class="nav-item dropdown">
        <a class="nav-link dropdown-toggle d-flex align-items-center" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
            <div class="user-avatar me-2">
                <i class="bi bi-person-circle"></i>
            </div>
            <div class="user-info d-none d-md-block">
                <div class="user-name">@user.NomeCompleto</div>
                <div class="user-role">@primaryRole</div>
            </div>
        </a>
        <ul class="dropdown-menu dropdown-menu-end">
            <li>
                <div class="dropdown-header">
                    <strong>@user.NomeCompleto</strong>
                    <br>
                    <small class="text-muted">@user.Email</small>
                    <br>
                    <span class="badge bg-primary">@primaryRole</span>
                    @if (user.CentroCusto != null)
                    {
                        <br>
                        <small class="text-muted">@user.CentroCusto.Nome</small>
                    }
                </div>
            </li>
            <li><hr class="dropdown-divider"></li>
            <li>
                <a class="dropdown-item" href="#" onclick="toggleTheme()">
                    <i class="bi bi-palette me-2"></i>
                    Alternar Tema
                </a>
            </li>
            <li>
                <a class="dropdown-item" asp-area="Identity" asp-page="/Account/Manage/Index">
                    <i class="bi bi-gear me-2"></i>
                    Configurações
                </a>
            </li>
            <li><hr class="dropdown-divider"></li>
            <li>
                <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                    <button type="submit" class="dropdown-item">
                        <i class="bi bi-box-arrow-right me-2"></i>
                        Sair
                    </button>
                </form>
            </li>
        </ul>
    </li>
}
else
{
    <li class="nav-item">
        <a class="nav-link" asp-area="Identity" asp-page="/Account/Register">
            <i class="bi bi-person-plus me-1"></i>
            Registrar
        </a>
    </li>
    <li class="nav-item">
        <a class="nav-link" asp-area="Identity" asp-page="/Account/Login">
            <i class="bi bi-box-arrow-in-right me-1"></i>
            Entrar
        </a>
    </li>
}
</ul>

<style>
.user-avatar {
    font-size: 1.5rem;
    color: var(--bs-primary);
}

.user-info {
    line-height: 1.2;
}

.user-name {
    font-weight: 500;
    font-size: 0.9rem;
}

.user-role {
    font-size: 0.75rem;
    color: var(--bs-secondary);
}

.dropdown-header {
    padding: 0.75rem 1rem;
    background-color: var(--bs-light);
    border-radius: 0.375rem 0.375rem 0 0;
}

.dropdown-item {
    padding: 0.5rem 1rem;
}

.dropdown-item:hover {
    background-color: var(--bs-primary);
    color: white;
}

.dropdown-item i {
    width: 1rem;
    text-align: center;
}
</style>
