@using Microsoft.AspNetCore.Identity
@using SistemaTesourariaEclesiastica.Models
@using SistemaTesourariaEclesiastica.Attributes
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<!DOCTYPE html>
<html lang="pt-BR" class="h-100">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Sistema de Tesouraria Eclesiástica</title>

    <!-- Bootstrap 5.3 -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- Font Awesome -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">

    <!-- Bootstrap Icons -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css" rel="stylesheet">

    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">

    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

    <!-- Chart.js para gráficos -->
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
</head>

<body class="d-flex flex-column h-100">
    @if (SignInManager.IsSignedIn(User))
    {
        var user = await UserManager.GetUserAsync(User);
        var roles = await UserManager.GetRolesAsync(user);
        var primaryRole = roles.FirstOrDefault() ?? "Usuário";

        <!-- Wrapper principal -->
        <div class="wrapper">
            <!-- Sidebar -->
            <aside class="sidebar" id="sidebar">
                <div class="sidebar-header">
                    <a href="/" class="sidebar-brand">
                        <i class="fas fa-church"></i>
                        <span class="brand-text">Tesouraria</span>
                    </a>
                    <button class="sidebar-toggle" id="sidebarCollapse">
                        <i class="fas fa-bars"></i>
                    </button>
                </div>

                <div class="sidebar-content">
                    <!-- Perfil do usuário -->
                    <div class="profile-card">
                        <div class="profile-avatar">
                            <i class="fas fa-user"></i>
                        </div>
                        <div class="profile-info">
                            <div class="profile-name">@user?.NomeCompleto</div>
                            <div class="profile-role">@primaryRole</div>
                            @if (user?.CentroCusto != null)
                            {
                                <div class="profile-cc">@user.CentroCusto.Nome</div>
                            }
                        </div>
                    </div>

                    <!-- Menu de navegação -->
                    <ul class="nav-menu">
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Index">
                                <i class="fas fa-home"></i>
                                <span class="nav-text">Dashboard</span>
                            </a>
                        </li>

                        @* Operações Financeiras - Administrador, Tesoureiro Geral e Tesoureiro Local *@
                        @if (User.IsInRole(Roles.Administrador) || User.IsInRole(Roles.TesoureiroGeral) || User.IsInRole(Roles.TesoureiroLocal))
                        {
                            <li class="nav-item has-submenu">
                                <a class="nav-link" href="#operacoesSubmenu">
                                    <i class="fas fa-money-bill-wave"></i>
                                    <span class="nav-text">Financeiro</span>
                                    <i class="fas fa-chevron-right submenu-arrow ms-auto"></i>
                                </a>
                                <ul class="submenu collapse" id="operacoesSubmenu">
                                    <li><a class="nav-link" asp-controller="Entradas" asp-action="Index"><i class="bi bi-arrow-down-left me-2"></i>Entradas</a></li>
                                    <li><a class="nav-link" asp-controller="Saidas" asp-action="Index"><i class="bi bi-arrow-up-right me-2"></i>Saídas</a></li>
                                    <li><a class="nav-link" asp-controller="TransferenciasInternas" asp-action="Index"><i class="bi bi-arrow-left-right me-2"></i>Transferências</a></li>
                                </ul>
                            </li>
                        }

                        @* Fechamentos/Prestação de Contas *@
                        @if (User.IsInRole(Roles.Administrador) || User.IsInRole(Roles.TesoureiroGeral))
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="FechamentoPeriodo" asp-action="Index">
                                    <i class="fas fa-file-invoice-dollar"></i>
                                    <span class="nav-text">Fechamentos</span>
                                </a>
                            </li>
                        }

                        @* Relatórios - Todos exceto sem permissão *@
                        @if (User.IsInRole(Roles.Administrador) || User.IsInRole(Roles.TesoureiroGeral) || User.IsInRole(Roles.TesoureiroLocal) || User.IsInRole(Roles.Pastor))
                        {
                            <li class="nav-item has-submenu">
                                <a class="nav-link" href="#relatoriosSubmenu">
                                    <i class="fas fa-chart-line"></i>
                                    <span class="nav-text">Relatórios</span>
                                    <i class="fas fa-chevron-right submenu-arrow ms-auto"></i>
                                </a>
                                <ul class="submenu collapse" id="relatoriosSubmenu">
                                    <li><a class="nav-link" asp-controller="Relatorios" asp-action="Index"><i class="bi bi-speedometer2 me-2"></i>Dashboard</a></li>
                                    <li><a class="nav-link" asp-controller="Relatorios" asp-action="FluxoDeCaixa"><i class="bi bi-cash-coin me-2"></i>Fluxo de Caixa</a></li>
                                    <li><a class="nav-link" asp-controller="Relatorios" asp-action="EntradasPorPeriodo"><i class="bi bi-arrow-down-left me-2"></i>Entradas</a></li>
                                    <li><a class="nav-link" asp-controller="Relatorios" asp-action="SaidasPorPeriodo"><i class="bi bi-arrow-up-right me-2"></i>Saídas</a></li>
                                    <li><a class="nav-link" asp-controller="Relatorios" asp-action="BalanceteGeral"><i class="bi bi-calculator me-2"></i>Balancete</a></li>
                                    <li><a class="nav-link" asp-controller="Relatorios" asp-action="ContribuicoesPorMembro"><i class="bi bi-people me-2"></i>Contribuições</a></li>
                                    <li><a class="nav-link" asp-controller="Relatorios" asp-action="DespesasPorCentroCusto"><i class="bi bi-building me-2"></i>Despesas por CC</a></li>
                                </ul>
                            </li>
                        }

                        @* Cadastros - Apenas Administrador *@
                        @if (User.IsInRole(Roles.Administrador))
                        {
                            <li class="nav-item has-submenu">
                                <a class="nav-link" href="#cadastrosSubmenu">
                                    <i class="fas fa-cog"></i>
                                    <span class="nav-text">Cadastros</span>
                                    <i class="fas fa-chevron-right submenu-arrow ms-auto"></i>
                                </a>
                                <ul class="submenu collapse" id="cadastrosSubmenu">
                                    <li><a class="nav-link" asp-controller="Membros" asp-action="Index"><i class="bi bi-person me-2"></i>Membros</a></li>
                                    <li><a class="nav-link" asp-controller="CentrosCusto" asp-action="Index"><i class="bi bi-building me-2"></i>Centros de Custo</a></li>
                                    <li><a class="nav-link" asp-controller="PlanoDeContas" asp-action="Index"><i class="bi bi-list-check me-2"></i>Plano de Contas</a></li>
                                    <li><a class="nav-link" asp-controller="MeiosPagamento" asp-action="Index"><i class="bi bi-credit-card me-2"></i>Meios de Pagamento</a></li>
                                    <li><a class="nav-link" asp-controller="Fornecedores" asp-action="Index"><i class="bi bi-shop me-2"></i>Fornecedores</a></li>
                                </ul>
                            </li>

                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Usuarios" asp-action="Index">
                                    <i class="fas fa-users"></i>
                                    <span class="nav-text">Usuários</span>
                                </a>
                            </li>

                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Auditoria" asp-action="Index">
                                    <i class="fas fa-shield-alt"></i>
                                    <span class="nav-text">Auditoria</span>
                                </a>
                            </li>
                        }
                    </ul>
                </div>
            </aside>

            <!-- Conteúdo principal -->
            <div class="content" id="content">
                <!-- Navbar superior -->
                <nav class="navbar navbar-expand-lg navbar-light bg-white">
                    <div class="container-fluid">
                        <button class="btn btn-link d-lg-none" id="sidebarCollapseTop">
                            <i class="fas fa-bars"></i>
                        </button>

                        <div class="ms-auto d-flex align-items-center">
                            <!-- Dropdown de perfil -->
                            <div class="dropdown">
                                <button class="btn btn-link dropdown-toggle" type="button" data-bs-toggle="dropdown">
                                    <i class="fas fa-user-circle fa-lg"></i>
                                    <span class="d-none d-md-inline ms-2">@user?.NomeCompleto</span>
                                </button>
                                <ul class="dropdown-menu dropdown-menu-end">
                                    <li>
                                        <a class="dropdown-item" asp-controller="Account" asp-action="Profile">
                                            <i class="fas fa-user me-2"></i>Meu Perfil
                                        </a>
                                    </li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li>
                                        <form asp-controller="Account" asp-action="Logout" method="post" class="d-inline">
                                            <button type="submit" class="dropdown-item">
                                                <i class="fas fa-sign-out-alt me-2"></i>Sair
                                            </button>
                                        </form>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </nav>

                <!-- Main Content Area -->
                <main role="main" class="container-fluid">
                    <!-- Breadcrumb -->
                    <nav aria-label="breadcrumb" class="mb-3">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a></li>
                            @if (ViewContext.RouteData.Values["controller"]?.ToString() != "Home")
                            {
                                <li class="breadcrumb-item active">@ViewContext.RouteData.Values["controller"]</li>
                            }
                        </ol>
                    </nav>

                    <!-- Alerts and Messages -->
                    @if (TempData["Sucesso"] != null)
                    {
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            <i class="fas fa-check-circle me-2"></i>@TempData["Sucesso"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    @if (TempData["Erro"] != null)
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            <i class="fas fa-exclamation-circle me-2"></i>@TempData["Erro"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    @if (TempData["Aviso"] != null)
                    {
                        <div class="alert alert-warning alert-dismissible fade show" role="alert">
                            <i class="fas fa-exclamation-triangle me-2"></i>@TempData["Aviso"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    @RenderBody()
                </main>
            </div>
        </div>
    }
    else
    {
        <!-- Layout para usuários não autenticados -->
        <main role="main" class="flex-shrink-0">
            @RenderBody()
        </main>
    }

    <!-- Loading Overlay Global -->
    <div id="loadingOverlay" class="loading-overlay d-none">
        <div class="loading-content">
            <div class="spinner-border text-primary" role="status">
                <span class="visually-hidden">Carregando...</span>
            </div>
            <div class="loading-text">Processando...</div>
        </div>
    </div>

    <!-- Toast Container -->
    <div class="toast-container position-fixed top-0 end-0 p-3"></div>

    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>