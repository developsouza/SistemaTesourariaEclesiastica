@using Microsoft.AspNetCore.Identity
@using SistemaTesourariaEclesiastica.Models
@using SistemaTesourariaEclesiastica.Attributes
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<!DOCTYPE html>
<html lang="pt-BR" class="h-100">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Tesouraria AD Jacumã</title>

    <!-- Bootstrap 5.3 -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- Bootstrap Icons -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css" rel="stylesheet">

    <!-- DataTables CSS -->
    <link href="https://cdn.datatables.net/1.13.7/css/dataTables.bootstrap5.min.css" rel="stylesheet">
    <link href="https://cdn.datatables.net/responsive/2.5.0/css/responsive.bootstrap5.min.css" rel="stylesheet">

    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">

    <!-- CSS Customizado -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/dashboard.css" asp-append-version="true" />

    @await RenderSectionAsync("Styles", required: false)

    <!-- Chart.js -->
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

    <!-- SweetAlert2 -->
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
</head>

<body class="d-flex flex-column h-100">
    @if (SignInManager.IsSignedIn(User))
    {
        var user = await UserManager.GetUserAsync(User);
        var roles = await UserManager.GetRolesAsync(user);
        var primaryRole = roles.FirstOrDefault() ?? "Usuário";

        @* Wrapper Principal *@
        <div class="wrapper">
            @* Sidebar *@
            <aside class="sidebar" id="sidebar">
                @* Header *@
                <div class="sidebar-header">
                    <a href="/" class="sidebar-brand">
                        <i class="bi bi-bank2"></i>
                        <span class="brand-text">AD JACUMÃ</span>
                    </a>
                    <button class="sidebar-toggle" id="sidebarCollapse">
                        <i class="bi bi-list"></i>
                    </button>
                </div>

                <div class="sidebar-content">
                    @* Perfil *@
                    <div class="profile-card">
                        <div class="profile-avatar">
                            @user?.NomeCompleto?.Substring(0, 1).ToUpper()
                        </div>
                        <div class="profile-info">
                            <div class="profile-name">@user?.NomeCompleto</div>
                            <div class="profile-role">@primaryRole</div>
                            @if (user?.CentroCusto != null)
                            {
                                <div class="profile-cc">@user.CentroCusto.Nome</div>
                            }
                        </div>
                    </div>

                    @* Menu *@
                    <ul class="nav-menu">
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Index">
                                <i class="bi bi-speedometer2"></i>
                                <span class="nav-text">Dashboard</span>
                            </a>
                        </li>

                        @* ==================== MENU FINANCEIRO - CORRIGIDO ==================== *@
                        @if (User.IsInRole(Roles.Administrador) || User.IsInRole(Roles.TesoureiroGeral) || User.IsInRole(Roles.TesoureiroLocal))
                        {
                            <li class="nav-item has-submenu">
                                <a class="nav-link" href="#operacoesSubmenu">
                                    <i class="bi bi-wallet2"></i>
                                    <span class="nav-text">Financeiro</span>
                                    <i class="bi bi-chevron-right submenu-arrow"></i>
                                </a>
                                <ul class="submenu" id="operacoesSubmenu">
                                    <li>
                                        <a class="nav-link" asp-controller="Entradas" asp-action="Index">
                                            <span class="nav-text">Entradas</span>
                                        </a>
                                    </li>
                                    <li>
                                        <a class="nav-link" asp-controller="Saidas" asp-action="Index">
                                            <span class="nav-text">Saídas</span>
                                        </a>
                                    </li>

                                    @* APENAS Admin e Tesoureiro Geral podem ver Transferências e Empréstimos *@
                                    @if (User.IsInRole(Roles.Administrador) || User.IsInRole(Roles.TesoureiroGeral))
                                    {
                                        <li>
                                            <a class="nav-link" asp-controller="TransferenciasInternas" asp-action="Index">
                                                <span class="nav-text">Transferências</span>
                                            </a>
                                        </li>
                                        <li>
                                            <a class="nav-link" asp-controller="Emprestimos" asp-action="Index">
                                                <span class="nav-text">Empréstimos</span>
                                            </a>
                                        </li>
                                    }
                                </ul>
                            </li>
                        }

                        @* ==================== PRESTAÇÃO DE CONTAS - CORRIGIDO ==================== *@
                        @* TODOS OS TESOUREIROS (Geral E Local) têm acesso *@
                        @if (User.IsInRole(Roles.Administrador) || User.IsInRole(Roles.TesoureiroGeral) || User.IsInRole(Roles.TesoureiroLocal))
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="FechamentoPeriodo" asp-action="Index">
                                    <i class="bi bi-file-earmark-check"></i>
                                    <span class="nav-text">Prestação de Contas</span>
                                </a>
                            </li>
                        }

                        @* ==================== MENU RELATÓRIOS ==================== *@
                        @if (User.IsInRole(Roles.Administrador) || User.IsInRole(Roles.TesoureiroGeral) || User.IsInRole(Roles.TesoureiroLocal) || User.IsInRole(Roles.Pastor))
                        {
                            <li class="nav-item has-submenu">
                                <a class="nav-link" href="#relatoriosSubmenu">
                                    <i class="bi bi-graph-up"></i>
                                    <span class="nav-text">Relatórios</span>
                                    <i class="bi bi-chevron-right submenu-arrow"></i>
                                </a>
                                <ul class="submenu" id="relatoriosSubmenu">
                                    <li>
                                        <a class="nav-link" asp-controller="Relatorios" asp-action="Index">
                                            <span class="nav-text">Dashboard</span>
                                        </a>
                                    </li>
                                    <li>
                                        <a class="nav-link" asp-controller="Relatorios" asp-action="FluxoDeCaixa">
                                            <span class="nav-text">Fluxo de Caixa</span>
                                        </a>
                                    </li>
                                    <li>
                                        <a class="nav-link" asp-controller="Relatorios" asp-action="EntradasPorPeriodo">
                                            <span class="nav-text">Entradas</span>
                                        </a>
                                    </li>
                                    <li>
                                        <a class="nav-link" asp-controller="Relatorios" asp-action="SaidasPorPeriodo">
                                            <span class="nav-text">Saídas</span>
                                        </a>
                                    </li>
                                    <li>
                                        <a class="nav-link" asp-controller="Relatorios" asp-action="BalanceteGeral">
                                            <span class="nav-text">Balancete</span>
                                        </a>
                                    </li>
                                    <li>
                                        <a class="nav-link" asp-controller="Relatorios" asp-action="ContribuicoesPorMembro">
                                            <span class="nav-text">Contribuições</span>
                                        </a>
                                    </li>
                                    <li>
                                        <a class="nav-link" asp-controller="Relatorios" asp-action="DespesasPorCentroCusto">
                                            <span class="nav-text">Despesas por CC</span>
                                        </a>
                                    </li>
                                </ul>
                            </li>
                        }

                        @* ==================== MENU CADASTROS (APENAS ADMIN) ==================== *@
                        @if (User.IsInRole(Roles.Administrador))
                        {
                            <li class="nav-item has-submenu">
                                <a class="nav-link" href="#cadastrosSubmenu">
                                    <i class="bi bi-database"></i>
                                    <span class="nav-text">Cadastros</span>
                                    <i class="bi bi-chevron-right submenu-arrow"></i>
                                </a>
                                <ul class="submenu" id="cadastrosSubmenu">
                                    <li>
                                        <a class="nav-link" asp-controller="Membros" asp-action="Index">
                                            <span class="nav-text">Membros</span>
                                        </a>
                                    </li>
                                    <li>
                                        <a class="nav-link" asp-controller="CentrosCusto" asp-action="Index">
                                            <span class="nav-text">Centros de Custo</span>
                                        </a>
                                    </li>
                                    <li>
                                        <a class="nav-link" asp-controller="PlanoDeContas" asp-action="Index">
                                            <span class="nav-text">Plano de Contas</span>
                                        </a>
                                    </li>
                                    <li>
                                        <a class="nav-link" asp-controller="MeiosPagamento" asp-action="Index">
                                            <span class="nav-text">Meios de Pagamento</span>
                                        </a>
                                    </li>
                                    <li>
                                        <a class="nav-link" asp-controller="RegrasRateio" asp-action="Index">
                                            <span class="nav-text">Regras de Rateio</span>
                                        </a>
                                    </li>
                                    <li>
                                        <a class="nav-link" asp-controller="Fornecedores" asp-action="Index">
                                            <span class="nav-text">Fornecedores</span>
                                        </a>
                                    </li>
                                </ul>
                            </li>

                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Usuarios" asp-action="Index">
                                    <i class="bi bi-people"></i>
                                    <span class="nav-text">Usuários</span>
                                </a>
                            </li>

                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Auditoria" asp-action="Index">
                                    <i class="bi bi-shield-check"></i>
                                    <span class="nav-text">Auditoria</span>
                                </a>
                            </li>
                        }
                    </ul>
                </div>
            </aside>

            @* Conteúdo *@
            <div class="content" id="content">
                @* Navbar *@
                <nav class="navbar navbar-expand-lg navbar-light">
                    <div class="container-fluid">
                        @* Botão Menu Mobile *@
                        <button class="btn btn-link d-lg-none p-0 me-3" id="sidebarCollapseTop">
                            <i class="bi bi-list fs-3"></i>
                        </button>

                        <div class="ms-auto d-flex align-items-center gap-2 gap-md-3">
                            @* Tema *@
                            <div class="dropdown">
                                <button class="btn btn-link dropdown-toggle p-2" type="button" id="themeDropdown"
                                        data-bs-toggle="dropdown" aria-expanded="false" title="Tema">
                                    <i id="themeIcon" class="bi bi-sun-fill fs-5"></i>
                                </button>
                                <ul class="dropdown-menu dropdown-menu-end shadow-sm border">
                                    <li>
                                        <button class="dropdown-item d-flex align-items-center" type="button" data-theme="light">
                                            <i class="bi bi-sun me-2"></i>
                                            <span>Claro</span>
                                        </button>
                                    </li>
                                    <li>
                                        <button class="dropdown-item d-flex align-items-center" type="button" data-theme="dark">
                                            <i class="bi bi-moon-stars me-2"></i>
                                            <span>Escuro</span>
                                        </button>
                                    </li>
                                    <li>
                                        <button class="dropdown-item d-flex align-items-center" type="button" data-theme="auto">
                                            <i class="bi bi-circle-half me-2"></i>
                                            <span>Automático</span>
                                        </button>
                                    </li>
                                </ul>
                            </div>

                            @* Perfil *@
                            <div class="dropdown">
                                <button class="btn btn-link dropdown-toggle d-flex align-items-center p-2 text-decoration-none"
                                        type="button" id="userDropdown" data-bs-toggle="dropdown" aria-expanded="false">
                                    <div class="d-flex align-items-center">
                                        <div class="user-avatar-small me-2 d-flex align-items-center justify-content-center rounded-circle bg-primary text-white fw-bold"
                                             style="width: 36px; height: 36px; font-size: 0.875rem;">
                                            @user?.NomeCompleto?.Substring(0, 1).ToUpper()
                                        </div>
                                        <span class="d-none d-md-inline fw-semibold text-dark">@user?.NomeCompleto</span>
                                    </div>
                                </button>
                                <ul class="dropdown-menu dropdown-menu-end shadow-sm border" style="min-width: 280px;">
                                    @* Cabeçalho do Dropdown *@
                                    <li class="dropdown-header p-3" style="background: linear-gradient(135deg, rgba(37, 99, 235, 0.08) 0%, rgba(37, 99, 235, 0.03) 100%);">
                                        <div class="d-flex align-items-center mb-2">
                                            <div class="user-avatar-dropdown me-3 d-flex align-items-center justify-content-center rounded-circle bg-primary text-white fw-bold"
                                                 style="width: 48px; height: 48px;">
                                                @user?.NomeCompleto?.Substring(0, 1).ToUpper()
                                            </div>
                                            <div class="flex-grow-1">
                                                <div class="fw-bold text-dark">@user?.NomeCompleto</div>
                                                <small class="text-muted d-block">@user?.Email</small>
                                            </div>
                                        </div>
                                        <div class="d-flex gap-1 flex-wrap">
                                            <span class="badge bg-primary rounded-pill">
                                                <i class="bi bi-shield-check me-1"></i>@primaryRole
                                            </span>
                                            @if (user?.CentroCusto != null)
                                            {
                                                <span class="badge bg-secondary rounded-pill">
                                                    <i class="bi bi-building me-1"></i>@user.CentroCusto.Nome
                                                </span>
                                            }
                                        </div>
                                    </li>

                                    <li><hr class="dropdown-divider my-2"></li>

                                    @* Seção: Minha Conta *@
                                    <li class="px-3 py-1">
                                        <small class="text-muted text-uppercase fw-semibold" style="font-size: 0.7rem; letter-spacing: 0.5px;">
                                            Minha Conta
                                        </small>
                                    </li>
                                    <li>
                                        <a class="dropdown-item d-flex align-items-center py-2" asp-controller="Account" asp-action="Profile">
                                            <div class="icon-wrapper me-3 d-flex align-items-center justify-content-center rounded-circle bg-primary bg-opacity-10"
                                                 style="width: 36px; height: 36px;">
                                                <i class="bi bi-person text-primary"></i>
                                            </div>
                                            <div>
                                                <div class="fw-semibold">Meu Perfil</div>
                                                <small class="text-muted">Visualize suas informações</small>
                                            </div>
                                        </a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item d-flex align-items-center py-2" asp-controller="Account" asp-action="ChangePassword">
                                            <div class="icon-wrapper me-3 d-flex align-items-center justify-content-center rounded-circle bg-warning bg-opacity-10"
                                                 style="width: 36px; height: 36px;">
                                                <i class="bi bi-key text-warning"></i>
                                            </div>
                                            <div>
                                                <div class="fw-semibold">Alterar Senha</div>
                                                <small class="text-muted">Mantenha sua conta segura</small>
                                            </div>
                                        </a>
                                    </li>

                                    <li><hr class="dropdown-divider my-2"></li>

                                    @* Seção: Preferências *@
                                    <li class="px-3 py-1">
                                        <small class="text-muted text-uppercase fw-semibold" style="font-size: 0.7rem; letter-spacing: 0.5px;">
                                            Preferências
                                        </small>
                                    </li>
                                    <li>
                                        <button class="dropdown-item d-flex align-items-center py-2" type="button" id="themeMenuItem">
                                            <div class="icon-wrapper me-3 d-flex align-items-center justify-content-center rounded-circle bg-info bg-opacity-10"
                                                 style="width: 36px; height: 36px;">
                                                <i class="bi bi-palette-fill text-info"></i>
                                            </div>
                                            <div class="flex-grow-1">
                                                <div class="fw-semibold">Aparência</div>
                                                <small class="text-muted">Tema atual: <span id="currentThemeText">Claro</span></small>
                                            </div>
                                        </button>
                                    </li>

                                    <li><hr class="dropdown-divider my-2"></li>

                                    @* Sair *@
                                    <li>
                                        <form asp-controller="Account" asp-action="Logout" method="post" class="d-inline w-100">
                                            <button type="submit" class="dropdown-item d-flex align-items-center py-2 text-danger">
                                                <div class="icon-wrapper me-3 d-flex align-items-center justify-content-center rounded-circle bg-danger bg-opacity-10"
                                                     style="width: 36px; height: 36px;">
                                                    <i class="bi bi-box-arrow-right text-danger"></i>
                                                </div>
                                                <div>
                                                    <div class="fw-semibold">Sair do Sistema</div>
                                                    <small class="opacity-75">Encerrar sessão</small>
                                                </div>
                                            </button>
                                        </form>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </nav>

                @* Main *@
                <main role="main" class="main-content">
                    @* Breadcrumb *@
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item">
                                <a asp-controller="Home" asp-action="Index">
                                    <i class="bi bi-house-door me-1"></i>Home
                                </a>
                            </li>
                            @if (ViewContext.RouteData.Values["controller"]?.ToString() != "Home")
                            {
                                <li class="breadcrumb-item active">
                                    @ViewContext.RouteData.Values["controller"]
                                </li>
                            }
                        </ol>
                    </nav>

                    @* Alertas *@
                    @if (TempData["Sucesso"] != null)
                    {
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            <i class="bi bi-check-circle me-2"></i>@TempData["Sucesso"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    @if (TempData["Erro"] != null)
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            <i class="bi bi-exclamation-circle me-2"></i>@TempData["Erro"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    @if (TempData["Aviso"] != null)
                    {
                        <div class="alert alert-warning alert-dismissible fade show" role="alert">
                            <i class="bi bi-exclamation-triangle me-2"></i>@TempData["Aviso"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    @RenderBody()
                </main>
            </div>
        </div>
    }
    else
    {
        <main role="main" class="flex-shrink-0">
            @RenderBody()
        </main>
    }

    @* Loading *@
    <div id="loadingOverlay" class="loading-overlay d-none">
        <div class="loading-content">
            <div class="spinner-border text-primary" role="status">
                <span class="visually-hidden">Carregando...</span>
            </div>
            <div class="loading-text">Processando...</div>
        </div>
    </div>

    @* Toast *@
    <div class="toast-container position-fixed top-0 end-0 p-3"></div>

    @* Scripts *@
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.7/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.7/js/dataTables.bootstrap5.min.js"></script>
    <script src="https://cdn.datatables.net/responsive/2.5.0/js/dataTables.responsive.min.js"></script>
    <script src="https://cdn.datatables.net/responsive/2.5.0/js/responsive.bootstrap5.min.js"></script>

    <script>
        $.extend(true, $.fn.dataTable.defaults, {
            language: { url: '//cdn.datatables.net/plug-ins/1.13.7/i18n/pt-BR.json' }
        });

        // Atualizar texto do tema atual
        document.addEventListener('DOMContentLoaded', function() {
            const updateThemeText = () => {
                const theme = localStorage.getItem('theme') || 'light';
                const themeText = document.getElementById('currentThemeText');
                if (themeText) {
                    const themeNames = {
                        'light': 'Claro',
                        'dark': 'Escuro',
                        'auto': 'Automático'
                    };
                    themeText.textContent = themeNames[theme] || 'Claro';
                }
            };

            updateThemeText();

            // Atualizar quando mudar o tema
            document.querySelectorAll('[data-theme]').forEach(btn => {
                btn.addEventListener('click', () => {
                    setTimeout(updateThemeText, 100);
                });
            });
        });
    </script>

    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html></html>