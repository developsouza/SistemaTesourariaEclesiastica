@model SistemaTesourariaEclesiastica.ViewModels.RegisterViewModel

@{
    ViewData["Title"] = "Registrar Novo Usuário";
}

<div class="row justify-content-center">
    <div class="col-md-10 col-lg-8 col-xl-7">
        <div class="card border-0 shadow-sm">
            <div class="card-body p-4 p-md-5">
                <!-- Header -->
                <div class="text-center mb-5">
                    <div class="mb-3">
                        <div class="d-inline-flex align-items-center justify-content-center rounded-circle bg-primary bg-opacity-10"
                             style="width: 80px; height: 80px;">
                            <i class="bi bi-person-plus text-primary" style="font-size: 2.5rem;"></i>
                        </div>
                    </div>
                    <h2 class="h3 fw-bold">Criar Nova Conta</h2>
                    <p class="text-muted mb-0">Preencha os dados para criar seu acesso ao sistema</p>
                </div>

                <form asp-action="Register" method="post">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger border-0" role="alert"></div>

                    <div class="row g-4">
                        <!-- Nome Completo -->
                        <div class="col-12">
                            <label asp-for="NomeCompleto" class="form-label fw-semibold">
                                <i class="bi bi-person text-muted me-2"></i>Nome Completo
                                <span class="text-danger">*</span>
                            </label>
                            <input asp-for="NomeCompleto" class="form-control form-control-lg"
                                   placeholder="Digite seu nome completo" autofocus />
                            <span asp-validation-for="NomeCompleto" class="text-danger small"></span>
                        </div>

                        <!-- Email -->
                        <div class="col-12">
                            <label asp-for="Email" class="form-label fw-semibold">
                                <i class="bi bi-envelope text-muted me-2"></i>E-mail
                                <span class="text-danger">*</span>
                            </label>
                            <div class="input-group">
                                <span class="input-group-text bg-light">
                                    <i class="bi bi-at"></i>
                                </span>
                                <input asp-for="Email" class="form-control form-control-lg"
                                       placeholder="seu@email.com" />
                            </div>
                            <span asp-validation-for="Email" class="text-danger small"></span>
                        </div>

                        <!-- Centro de Custo -->
                        <div class="col-12">
                            <label asp-for="CentroCustoId" class="form-label fw-semibold">
                                <i class="bi bi-building text-muted me-2"></i>Centro de Custo
                                <span class="text-danger">*</span>
                            </label>
                            <select asp-for="CentroCustoId" class="form-select form-select-lg" asp-items="ViewBag.CentroCustoId">
                                <option value="">Selecione o centro de custo</option>
                            </select>
                            <span asp-validation-for="CentroCustoId" class="text-danger small"></span>
                            <div class="form-text">
                                <i class="bi bi-info-circle me-1"></i>
                                Centro de custo ao qual você está vinculado
                            </div>
                        </div>

                        <!-- Senha -->
                        <div class="col-md-6">
                            <label asp-for="Password" class="form-label fw-semibold">
                                <i class="bi bi-lock text-muted me-2"></i>Senha
                                <span class="text-danger">*</span>
                            </label>
                            <div class="input-group">
                                <span class="input-group-text bg-light">
                                    <i class="bi bi-shield-lock"></i>
                                </span>
                                <input asp-for="Password" class="form-control form-control-lg"
                                       placeholder="Digite sua senha" />
                                <button class="btn btn-outline-secondary" type="button" onclick="togglePassword('Password', 'toggleIcon1')">
                                    <i class="bi bi-eye" id="toggleIcon1"></i>
                                </button>
                            </div>
                            <span asp-validation-for="Password" class="text-danger small"></span>
                        </div>

                        <!-- Confirmar Senha -->
                        <div class="col-md-6">
                            <label asp-for="ConfirmPassword" class="form-label fw-semibold">
                                <i class="bi bi-shield-check text-muted me-2"></i>Confirmar Senha
                                <span class="text-danger">*</span>
                            </label>
                            <div class="input-group">
                                <span class="input-group-text bg-light">
                                    <i class="bi bi-shield-check"></i>
                                </span>
                                <input asp-for="ConfirmPassword" class="form-control form-control-lg"
                                       placeholder="Confirme sua senha" />
                                <button class="btn btn-outline-secondary" type="button" onclick="togglePassword('ConfirmPassword', 'toggleIcon2')">
                                    <i class="bi bi-eye" id="toggleIcon2"></i>
                                </button>
                            </div>
                            <span asp-validation-for="ConfirmPassword" class="text-danger small"></span>
                        </div>
                    </div>

                    <!-- Requisitos da Senha -->
                    <div class="mt-4 p-3 rounded-3" style="background: linear-gradient(135deg, rgba(37, 99, 235, 0.05) 0%, rgba(37, 99, 235, 0.02) 100%); border-left: 4px solid var(--bs-primary);">
                        <h6 class="fw-semibold mb-3">
                            <i class="bi bi-info-circle text-primary me-2"></i>
                            Requisitos da Senha
                        </h6>
                        <div class="row g-2 small">
                            <div class="col-md-6">
                                <div class="d-flex align-items-center">
                                    <i class="bi bi-check-circle text-success me-2"></i>
                                    <span>Mínimo de 6 caracteres</span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="d-flex align-items-center">
                                    <i class="bi bi-check-circle text-success me-2"></i>
                                    <span>Uma letra maiúscula</span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="d-flex align-items-center">
                                    <i class="bi bi-check-circle text-success me-2"></i>
                                    <span>Uma letra minúscula</span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="d-flex align-items-center">
                                    <i class="bi bi-check-circle text-success me-2"></i>
                                    <span>Um número</span>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Botões -->
                    <div class="d-grid gap-2 mt-4">
                        <button type="submit" class="btn btn-primary btn-lg">
                            <i class="bi bi-check-lg me-2"></i>
                            Criar Conta
                        </button>
                    </div>
                </form>

                <hr class="my-4">

                <!-- Link para Login -->
                <div class="text-center">
                    <p class="mb-0 text-muted">
                        Já tem uma conta?
                        <a asp-action="Login" class="text-decoration-none fw-semibold">
                            <i class="bi bi-box-arrow-in-right me-1"></i>
                            Fazer Login
                        </a>
                    </p>
                </div>
            </div>
        </div>

        <!-- Card de Ajuda -->
        <div class="card border-0 bg-light mt-4">
            <div class="card-body">
                <h6 class="card-title fw-semibold mb-3">
                    <i class="bi bi-question-circle text-info me-2"></i>
                    Precisa de Ajuda?
                </h6>
                <p class="mb-0 small text-muted">
                    Se você está com dificuldades para criar sua conta ou precisa de permissões especiais,
                    entre em contato com o administrador do sistema.
                </p>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        function togglePassword(fieldId, iconId) {
            const passwordInput = document.getElementById(fieldId);
            const toggleIcon = document.getElementById(iconId);

            if (passwordInput.type === 'password') {
                passwordInput.type = 'text';
                toggleIcon.classList.remove('bi-eye');
                toggleIcon.classList.add('bi-eye-slash');
            } else {
                passwordInput.type = 'password';
                toggleIcon.classList.remove('bi-eye-slash');
                toggleIcon.classList.add('bi-eye');
            }
        }

        // Validação em tempo real
        document.getElementById('Password').addEventListener('input', function() {
            const password = this.value;
            // Aqui você pode adicionar validação visual dos requisitos
        });

        // Foco automático
        document.getElementById('NomeCompleto').focus();
    </script>
}

<style>
    .form-control:focus,
    .form-select:focus {
        border-color: #86b7fe;
        box-shadow: 0 0 0 0.25rem rgba(13, 110, 253, 0.25);
    }

    .input-group-text {
        border-right: none;
    }

    .input-group .form-control {
        border-left: none;
    }

    .input-group:focus-within .input-group-text {
        border-color: #86b7fe;
        background-color: #eff6ff;
        color: #2563eb;
    }

    .input-group:focus-within .form-control {
        border-color: #86b7fe;
    }
</style>