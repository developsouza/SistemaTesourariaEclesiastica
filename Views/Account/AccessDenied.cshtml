@{
    ViewData["Title"] = "Acesso Negado";
    Layout = "_LoginLayout";
}

<div class="min-vh-100 d-flex align-items-center justify-content-center" style="background: linear-gradient(135deg, #dc3545 0%, #c82333 100%);">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-xl-10 col-lg-11">
                <div class="card border-0 shadow-lg" style="border-radius: 1rem; overflow: hidden;">
                    <div class="row g-0">
                        <!-- Painel Esquerdo -->
                        <div class="col-lg-5 d-none d-lg-flex"
                             style="background: linear-gradient(135deg, rgba(220, 53, 69, 0.95) 0%, rgba(200, 35, 51, 0.95) 100%),
                             url('data:image /svg+xml,<svg xmlns=&quot;http://www.w3.org/2000/svg&quot; viewBox=&quot;0 0 1000 1000&quot;><defs><pattern id=&quot;security-pattern&quot; x=&quot;0&quot; y=&quot;0&quot; width=&quot;50&quot; height=&quot;50&quot; patternUnits=&quot;userSpaceOnUse&quot;><circle cx=&quot;25&quot; cy=&quot;25&quot; r=&quot;2&quot; fill=&quot;rgba(255,255,255,0.1)&quot;/></pattern></defs><rect width=&quot;1000&quot; height=&quot;1000&quot; fill=&quot;url(%23security-pattern)&quot;/></svg>');
                                    background-size: cover; background-position: center;">
                            <div class="d-flex flex-column justify-content-center align-items-center h-100 text-white p-5">
                                <div class="text-center">
                                    <div class="mb-4" style="animation: pulse 2s infinite;">
                                        <i class="bi bi-shield-exclamation" style="font-size: 5rem; opacity: 0.9;"></i>
                                    </div>
                                    <h2 class="h3 mb-4 fw-bold">Área Protegida</h2>
                                    <p class="lead mb-4 opacity-90">
                                        Esta seção do sistema requer permissões específicas para acesso.
                                    </p>

                                    <div class="security-info mt-5">
                                        <div class="d-flex align-items-center mb-3 opacity-90">
                                            <div class="me-3 d-flex align-items-center justify-content-center rounded-circle bg-white bg-opacity-15"
                                                 style="width: 40px; height: 40px;">
                                                <i class="bi bi-lock-fill"></i>
                                            </div>
                                            <span>Controle de Acesso Ativo</span>
                                        </div>
                                        <div class="d-flex align-items-center mb-3 opacity-90">
                                            <div class="me-3 d-flex align-items-center justify-content-center rounded-circle bg-white bg-opacity-15"
                                                 style="width: 40px; height: 40px;">
                                                <i class="bi bi-person-badge"></i>
                                            </div>
                                            <span>Auditoria de Segurança</span>
                                        </div>
                                        <div class="d-flex align-items-center opacity-90">
                                            <div class="me-3 d-flex align-items-center justify-content-center rounded-circle bg-white bg-opacity-15"
                                                 style="width: 40px; height: 40px;">
                                                <i class="bi bi-eye-fill"></i>
                                            </div>
                                            <span>Monitoramento Contínuo</span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Painel Direito -->
                        <div class="col-lg-7">
                            <div class="p-5">
                                <div class="text-center mb-5">
                                    <!-- Ícone Mobile -->
                                    <div class="d-lg-none mb-4">
                                        <i class="bi bi-exclamation-triangle" style="font-size: 4rem; color: #dc3545;"></i>
                                    </div>

                                    <h1 class="display-1 fw-bold mb-2" style="color: #dc3545; font-size: 6rem; line-height: 1;">403</h1>
                                    <h2 class="h4 fw-bold mb-3">Acesso Negado</h2>
                                    <p class="text-muted mb-4">
                                        Você não possui permissão para acessar esta página ou recurso.
                                    </p>
                                </div>

                                <div class="alert border-0 d-flex align-items-start mb-4"
                                     style="background: linear-gradient(135deg, rgba(255, 193, 7, 0.15) 0%, rgba(255, 193, 7, 0.05) 100%);">
                                    <i class="bi bi-exclamation-triangle-fill text-warning flex-shrink-0 me-3 mt-1 fs-5"></i>
                                    <div>
                                        <strong>Permissão Insuficiente:</strong>
                                        <div class="mt-1 small text-muted">
                                            Sua conta não possui o nível de acesso necessário para esta operação.
                                        </div>
                                    </div>
                                </div>

                                <div class="mb-4">
                                    <h6 class="text-muted mb-3 fw-semibold">O que você pode fazer:</h6>
                                    <div class="list-group list-group-flush">
                                        <div class="list-group-item border-0 bg-transparent px-0 py-2">
                                            <i class="bi bi-arrow-left text-primary me-2"></i>
                                            <span>Voltar para a página anterior</span>
                                        </div>
                                        <div class="list-group-item border-0 bg-transparent px-0 py-2">
                                            <i class="bi bi-house text-primary me-2"></i>
                                            <span>Ir para o Dashboard principal</span>
                                        </div>
                                        <div class="list-group-item border-0 bg-transparent px-0 py-2">
                                            <i class="bi bi-person-gear text-primary me-2"></i>
                                            <span>Entrar em contato com o administrador</span>
                                        </div>
                                        <div class="list-group-item border-0 bg-transparent px-0 py-2">
                                            <i class="bi bi-box-arrow-right text-primary me-2"></i>
                                            <span>Fazer logout e entrar com outra conta</span>
                                        </div>
                                    </div>
                                </div>

                                <div class="d-flex flex-column flex-sm-row gap-2">
                                    <button onclick="history.back()" class="btn btn-outline-secondary flex-fill">
                                        <i class="bi bi-arrow-left me-2"></i>Voltar
                                    </button>
                                    <a asp-controller="Home" asp-action="Index" class="btn btn-outline-primary flex-fill">
                                        <i class="bi bi-house me-2"></i>Dashboard
                                    </a>
                                    <form asp-controller="Account" asp-action="Logout" method="post" class="flex-fill">
                                        <button type="submit" class="btn btn-danger w-100">
                                            <i class="bi bi-box-arrow-right me-2"></i>Logout
                                        </button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    @@keyframes pulse {
        0%, 100% {
            opacity: 0.9;
            transform: scale(1);
        }

        50% {
            opacity: 1;
            transform: scale(1.05);
        }
    }

    .card {
        animation: slideInUp 0.6s ease-out;
    }

    @@keyframes slideInUp {
        from {
            opacity: 0;
            transform: translateY(30px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    .list-group-item:hover {
        background: rgba(37, 99, 235, 0.05) !important;
        transform: translateX(4px);
        transition: all 0.3s ease;
    }

    @@media (max-width: 991.98px) {
        .display-1 {
            font-size: 4rem !important;
        }
    }
</style>