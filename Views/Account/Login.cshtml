@model SistemaTesourariaEclesiastica.ViewModels.LoginViewModel

@{
    ViewData["Title"] = "Login - Sistema de Tesouraria";
    Layout = "_LoginLayout";
}

<div class="min-vh-100 d-flex align-items-center justify-content-center bg-gradient-primary">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-xl-10 col-lg-12 col-md-9">
                <div class="card o-hidden border-0 shadow-lg my-5">
                    <div class="card-body p-0">
                        <div class="row">
                            <!-- Lado esquerdo com imagem/informações -->
                            <div class="col-lg-6 d-none d-lg-block bg-login-image">
                                <div class="login-info-panel d-flex flex-column justify-content-center align-items-center h-100 text-white p-5">
                                    <div class="text-center">
                                        <div class="login-icon mb-4">
                                            <i class="fas fa-church fa-4x text-white-50"></i>
                                        </div>
                                        <h2 class="h3 mb-4">Sistema de Tesouraria Eclesiástica</h2>
                                        <p class="lead">
                                            Gerencie as finanças da sua igreja de forma simples, segura e transparente.
                                        </p>
                                        <div class="features-list mt-4">
                                            <div class="feature-item mb-3">
                                                <i class="fas fa-shield-alt me-3"></i>
                                                <span>Segurança e Auditoria Completa</span>
                                            </div>
                                            <div class="feature-item mb-3">
                                                <i class="fas fa-chart-line me-3"></i>
                                                <span>Relatórios Gerenciais Detalhados</span>
                                            </div>
                                            <div class="feature-item mb-3">
                                                <i class="fas fa-users me-3"></i>
                                                <span>Controle Multi-Congregação</span>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <!-- Lado direito com formulário de login -->
                            <div class="col-lg-6">
                                <div class="login-form-panel p-5">
                                    <div class="text-center mb-4">
                                        <div class="d-lg-none mb-4">
                                            <i class="fas fa-church fa-3x text-primary"></i>
                                        </div>
                                        <h1 class="h4 text-gray-900 mb-2">Bem-vindo!</h1>
                                        <p class="text-muted">Faça login para acessar o sistema</p>
                                    </div>

                                    <form asp-action="Login" asp-route-returnurl="@ViewData["ReturnUrl"]" method="post" class="user">
                                        <div asp-validation-summary="ModelOnly" class="alert alert-danger alert-dismissible fade show" role="alert">
                                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                                        </div>

                                        <div class="form-group mb-4">
                                            <label asp-for="Email" class="form-label text-muted small fw-bold text-uppercase">Email</label>
                                            <div class="input-group input-group-lg">
                                                <span class="input-group-text bg-transparent">
                                                    <i class="fas fa-envelope text-muted"></i>
                                                </span>
                                                <input asp-for="Email" class="form-control form-control-user border-start-0"
                                                       placeholder="Insira seu email..." autocomplete="email" autofocus />
                                            </div>
                                            <span asp-validation-for="Email" class="text-danger small"></span>
                                        </div>

                                        <div class="form-group mb-4">
                                            <label asp-for="Password" class="form-label text-muted small fw-bold text-uppercase">Senha</label>
                                            <div class="input-group input-group-lg">
                                                <span class="input-group-text bg-transparent">
                                                    <i class="fas fa-lock text-muted"></i>
                                                </span>
                                                <input asp-for="Password" type="password" class="form-control form-control-user border-start-0 border-end-0"
                                                       placeholder="Sua senha..." autocomplete="current-password" />
                                                <button class="btn btn-outline-secondary border-start-0" type="button" onclick="togglePassword()" tabindex="-1">
                                                    <i class="fas fa-eye" id="toggleIcon"></i>
                                                </button>
                                            </div>
                                            <span asp-validation-for="Password" class="text-danger small"></span>
                                        </div>

                                        <div class="form-group mb-4">
                                            <div class="custom-control custom-checkbox small">
                                                <div class="form-check">
                                                    <input asp-for="RememberMe" class="form-check-input" type="checkbox" />
                                                    <label asp-for="RememberMe" class="form-check-label text-muted">
                                                        Lembrar de mim
                                                    </label>
                                                </div>
                                            </div>
                                        </div>

                                        <button type="submit" class="btn btn-primary btn-user btn-block btn-lg w-100 mb-4">
                                            <i class="fas fa-sign-in-alt me-2"></i>
                                            Entrar
                                        </button>

                                        <div class="text-center">
                                            <a class="small text-decoration-none" href="#" onclick="showForgotPassword()">
                                                <i class="fas fa-question-circle me-1"></i>
                                                Esqueceu sua senha?
                                            </a>
                                        </div>
                                    </form>

                                    <!-- Loading overlay -->
                                    <div class="loading-overlay d-none">
                                        <div class="spinner-border text-primary" role="status">
                                            <span class="visually-hidden">Carregando...</span>
                                        </div>
                                        <div class="mt-3 text-muted">Verificando credenciais...</div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Toast para mensagens -->
<div class="toast-container position-fixed bottom-0 end-0 p-3">
    <div id="loginToast" class="toast align-items-center text-white border-0" role="alert" aria-live="assertive" aria-atomic="true">
        <div class="d-flex">
            <div class="toast-body">
                Verificando suas credenciais...
            </div>
            <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast"></button>
        </div>
    </div>
</div>

<style>
    /* Gradiente de fundo */
    .bg-gradient-primary {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        min-height: 100vh;
    }

    /* Painel esquerdo com informações */
    .bg-login-image {
        background: linear-gradient(135deg, rgba(102, 126, 234, 0.9) 0%, rgba(118, 75, 162, 0.9) 100%),
                    url('data:image/svg+xml,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 1000 1000"><defs><pattern id="church-pattern" x="0" y="0" width="100" height="100" patternUnits="userSpaceOnUse"><path d="M20,80 L50,50 L80,80 L80,90 L20,90 Z" fill="rgba(255,255,255,0.1)"/><circle cx="50" cy="30" r="8" fill="rgba(255,255,255,0.1)"/></pattern></defs><rect width="1000" height="1000" fill="url(%23church-pattern)"/></svg>');
        background-size: cover;
        background-position: center;
    }

    .login-info-panel {
        background: rgba(0,0,0,0.1);
        backdrop-filter: blur(10px);
        border-radius: 0 0 0 1rem;
    }

    .feature-item {
        font-size: 0.95rem;
        opacity: 0.9;
    }

    /* Painel do formulário */
    .login-form-panel {
        background: white;
        position: relative;
        overflow: hidden;
    }

    .login-form-panel::before {
        content: '';
        position: absolute;
        top: -50%;
        right: -50%;
        width: 200%;
        height: 200%;
        background: radial-gradient(circle, rgba(102, 126, 234, 0.03) 0%, transparent 70%);
        pointer-events: none;
    }

    /* Estilização do formulário */
    .form-control-user {
        border: 2px solid #e3e6f0;
        transition: all 0.3s ease;
    }

    .form-control-user:focus {
        border-color: #667eea;
        box-shadow: 0 0 0 0.2rem rgba(102, 126, 234, 0.25);
    }

    .input-group-text {
        border: 2px solid #e3e6f0;
        border-right: none;
    }

    .btn-user {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        border: none;
        border-radius: 0.35rem;
        padding: 0.75rem 1rem;
        font-weight: 600;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        transition: all 0.3s ease;
    }

    .btn-user:hover {
        transform: translateY(-2px);
        box-shadow: 0 7px 14px rgba(102, 126, 234, 0.4);
    }

    /* Loading overlay */
    .loading-overlay {
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: rgba(255, 255, 255, 0.95);
        display: flex !important;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        z-index: 1000;
    }

    /* Card shadow melhorada */
    .shadow-lg {
        box-shadow: 0 1rem 3rem rgba(0, 0, 0, 0.175) !important;
    }

    /* Responsividade */
    @@media (max-width: 991.98px) {
        .bg-gradient-primary {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            padding: 1rem;
        }

        .card {
            margin: 0 !important;
        }
    }

    /* Animações */
    .card {
        animation: fadeInUp 0.8s ease-out;
    }

    @@keyframes fadeInUp {
        from {
            opacity: 0;
            transform: translate3d(0, 40px, 0);
        }
        to {
            opacity: 1;
            transform: translate3d(0, 0, 0);
        }
    }

    /* Toast personalizado */
    .toast {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%) !important;
    }
</style>

<script>
    // Toggle password visibility
    function togglePassword() {
        const passwordField = document.querySelector('#Password');
        const toggleIcon = document.querySelector('#toggleIcon');

        if (passwordField.type === 'password') {
            passwordField.type = 'text';
            toggleIcon.classList.remove('fa-eye');
            toggleIcon.classList.add('fa-eye-slash');
        } else {
            passwordField.type = 'password';
            toggleIcon.classList.remove('fa-eye-slash');
            toggleIcon.classList.add('fa-eye');
        }
    }

    // Show forgot password modal/alert
    function showForgotPassword() {
        alert('Entre em contato com o administrador do sistema para redefinir sua senha.');
    }

    // Form submission with loading
    document.querySelector('form').addEventListener('submit', function(e) {
        const loadingOverlay = document.querySelector('.loading-overlay');
        const submitBtn = this.querySelector('button[type="submit"]');

        // Mostrar loading
        loadingOverlay.classList.remove('d-none');
        submitBtn.disabled = true;

        // Mostrar toast
        const toast = new bootstrap.Toast(document.getElementById('loginToast'));
        toast.show();
    });

    // Auto-focus no campo de email ao carregar a página
    document.addEventListener('DOMContentLoaded', function() {
        const emailField = document.querySelector('#Email');
        if (emailField && !emailField.value) {
            emailField.focus();
        }
    });
</script>