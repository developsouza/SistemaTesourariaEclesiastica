@model SistemaTesourariaEclesiastica.ViewModels.ChangePasswordViewModel

@{
    ViewData["Title"] = "Alterar Senha";
}

<div class="row justify-content-center">
    <div class="col-md-6 col-lg-5">
        <!-- Header -->
        <div class="text-center mb-4">
            <div class="mb-3">
                <i class="fas fa-key fa-3x text-primary"></i>
            </div>
            <h2 class="h3">Alterar Senha</h2>
            <p class="text-muted">Mantenha sua conta segura com uma senha forte</p>
        </div>

        <!-- Card Principal -->
        <div class="card border-0 shadow">
            <div class="card-body p-4">
                <form asp-action="ChangePassword" method="post" id="changePasswordForm" novalidate>
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                    
                    <!-- Senha Atual -->
                    <div class="mb-4">
                        <label asp-for="SenhaAtual" class="form-label fw-semibold">
                            <i class="fas fa-lock me-2 text-muted"></i>Senha Atual
                        </label>
                        <div class="input-group">
                            <input asp-for="SenhaAtual" type="password" class="form-control form-control-lg" 
                                   placeholder="Digite sua senha atual" autocomplete="current-password" />
                            <button class="btn btn-outline-secondary" type="button" onclick="togglePassword('SenhaAtual')">
                                <i class="fas fa-eye" id="toggleIconSenhaAtual"></i>
                            </button>
                        </div>
                        <span asp-validation-for="SenhaAtual" class="text-danger small"></span>
                    </div>

                    <!-- Nova Senha -->
                    <div class="mb-4">
                        <label asp-for="NovaSenha" class="form-label fw-semibold">
                            <i class="fas fa-key me-2 text-muted"></i>Nova Senha
                        </label>
                        <div class="input-group">
                            <input asp-for="NovaSenha" type="password" class="form-control form-control-lg" 
                                   placeholder="Digite sua nova senha" autocomplete="new-password" />
                            <button class="btn btn-outline-secondary" type="button" onclick="togglePassword('NovaSenha')">
                                <i class="fas fa-eye" id="toggleIconNovaSenha"></i>
                            </button>
                        </div>
                        <span asp-validation-for="NovaSenha" class="text-danger small"></span>
                        
                        <!-- Indicador de Força da Senha -->
                        <div class="password-strength mt-2">
                            <div class="password-strength-bar">
                                <div class="strength-fill" id="strengthFill"></div>
                            </div>
                            <small class="strength-text" id="strengthText">Digite uma senha para ver sua força</small>
                        </div>
                    </div>

                    <!-- Confirmar Nova Senha -->
                    <div class="mb-4">
                        <label asp-for="ConfirmarNovaSenha" class="form-label fw-semibold">
                            <i class="fas fa-check-double me-2 text-muted"></i>Confirmar Nova Senha
                        </label>
                        <div class="input-group">
                            <input asp-for="ConfirmarNovaSenha" type="password" class="form-control form-control-lg" 
                                   placeholder="Confirme sua nova senha" autocomplete="new-password" />
                            <button class="btn btn-outline-secondary" type="button" onclick="togglePassword('ConfirmarNovaSenha')">
                                <i class="fas fa-eye" id="toggleIconConfirmarNovaSenha"></i>
                            </button>
                        </div>
                        <span asp-validation-for="ConfirmarNovaSenha" class="text-danger small"></span>
                        <div class="password-match mt-1" id="passwordMatch"></div>
                    </div>

                    <!-- Requisitos de Senha -->
                    <div class="password-requirements mb-4">
                        <h6 class="text-muted mb-2">
                            <i class="fas fa-info-circle me-1"></i>Requisitos da Senha:
                        </h6>
                        <ul class="list-unstyled small">
                            <li class="requirement" id="req-length">
                                <i class="fas fa-times text-danger me-2"></i>
                                Pelo menos 6 caracteres
                            </li>
                            <li class="requirement" id="req-upper">
                                <i class="fas fa-times text-danger me-2"></i>
                                Uma letra maiúscula
                            </li>
                            <li class="requirement" id="req-lower">
                                <i class="fas fa-times text-danger me-2"></i>
                                Uma letra minúscula
                            </li>
                            <li class="requirement" id="req-number">
                                <i class="fas fa-times text-danger me-2"></i>
                                Um número
                            </li>
                        </ul>
                    </div>

                    <!-- Botões de Ação -->
                    <div class="d-grid gap-2 d-md-flex justify-content-md-between">
                        <a asp-action="Profile" class="btn btn-secondary btn-lg px-4">
                            <i class="fas fa-arrow-left me-2"></i>Voltar
                        </a>
                        <button type="submit" class="btn btn-primary btn-lg px-4" id="submitBtn" disabled>
                            <i class="fas fa-save me-2"></i>Alterar Senha
                        </button>
                    </div>
                </form>
            </div>
        </div>

        <!-- Dicas de Segurança -->
        <div class="card border-0 bg-light mt-4">
            <div class="card-body">
                <h6 class="card-title">
                    <i class="fas fa-shield-alt text-success me-2"></i>
                    Dicas de Segurança
                </h6>
                <ul class="list-unstyled small mb-0">
                    <li class="mb-2">
                        <i class="fas fa-check text-success me-2"></i>
                        Use uma combinação de letras, números e símbolos
                    </li>
                    <li class="mb-2">
                        <i class="fas fa-check text-success me-2"></i>
                        Evite informações pessoais óbvias (nome, aniversário)
                    </li>
                    <li class="mb-2">
                        <i class="fas fa-check text-success me-2"></i>
                        Não reutilize senhas de outros sistemas
                    </li>
                    <li>
                        <i class="fas fa-check text-success me-2"></i>
                        Altere sua senha regularmente
                    </li>
                </ul>
            </div>
        </div>
    </div>
</div>

<style>
    .password-strength-bar {
        height: 6px;
        background: #e9ecef;
        border-radius: 3px;
        overflow: hidden;
        margin-bottom: 0.5rem;
    }

    .strength-fill {
        height: 100%;
        transition: all 0.3s ease;
        border-radius: 3px;
        width: 0;
    }

    .strength-weak .strength-fill {
        width: 25%;
        background: #dc3545;
    }

    .strength-fair .strength-fill {
        width: 50%;
        background: #fd7e14;
    }

    .strength-good .strength-fill {
        width: 75%;
        background: #ffc107;
    }

    .strength-strong .strength-fill {
        width: 100%;
        background: #198754;
    }

    .requirement i {
        width: 16px;
    }

    .password-match {
        font-size: 0.875rem;
    }

    .match-success {
        color: #198754;
    }

    .match-error {
        color: #dc3545;
    }

    .form-control:focus {
        border-color: #86b7fe;
        box-shadow: 0 0 0 0.25rem rgba(13, 110, 253, 0.25);
    }

    .btn-outline-secondary:focus {
        box-shadow: none;
    }

    .card {
        border-radius: 1rem;
    }

    .form-control-lg {
        border-radius: 0.5rem;
    }
</style>

@section Scripts {
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const novaSenhaInput = document.getElementById('NovaSenha');
            const confirmarSenhaInput = document.getElementById('ConfirmarNovaSenha');
            const submitBtn = document.getElementById('submitBtn');
            
            // Event listeners
            novaSenhaInput.addEventListener('input', function() {
                checkPasswordStrength(this.value);
                checkPasswordMatch();
                validateForm();
            });
            
            confirmarSenhaInput.addEventListener('input', function() {
                checkPasswordMatch();
                validateForm();
            });
            
            document.getElementById('SenhaAtual').addEventListener('input', validateForm);
        });

        function togglePassword(fieldId) {
            const field = document.getElementById(fieldId);
            const icon = document.getElementById('toggleIcon' + fieldId);
            
            if (field.type === 'password') {
                field.type = 'text';
                icon.classList.remove('fa-eye');
                icon.classList.add('fa-eye-slash');
            } else {
                field.type = 'password';
                icon.classList.remove('fa-eye-slash');
                icon.classList.add('fa-eye');
            }
        }

        function checkPasswordStrength(password) {
            const strengthBar = document.querySelector('.password-strength');
            const strengthText = document.getElementById('strengthText');
            const strengthFill = document.getElementById('strengthFill');
            
            if (!password) {
                strengthBar.className = 'password-strength';
                strengthText.textContent = 'Digite uma senha para ver sua força';
                return;
            }
            
            let score = 0;
            let feedback = [];
            
            // Check requirements
            const requirements = {
                'req-length': password.length >= 6,
                'req-upper': /[A-Z]/.test(password),
                'req-lower': /[a-z]/.test(password),
                'req-number': /\d/.test(password)
            };
            
            // Update requirement indicators
            for (const [id, met] of Object.entries(requirements)) {
                const element = document.getElementById(id);
                const icon = element.querySelector('i');
                
                if (met) {
                    icon.className = 'fas fa-check text-success me-2';
                    score++;
                } else {
                    icon.className = 'fas fa-times text-danger me-2';
                }
            }
            
            // Additional strength checks
            if (password.length >= 8) score++;
            if (/[!@@#$%^&*(),.?":{}|<>]/.test(password)) score++;

            // Determine strength level
            let strengthClass, strengthLabel;
            if (score <= 2) {
                strengthClass = 'strength-weak';
                strengthLabel = 'Fraca';
            } else if (score <= 3) {
                strengthClass = 'strength-fair';
                strengthLabel = 'Razoável';
            } else if (score <= 4) {
                strengthClass = 'strength-good';
                strengthLabel = 'Boa';
            } else {
                strengthClass = 'strength-strong';
                strengthLabel = 'Forte';
            }
            
            strengthBar.className = 'password-strength ' + strengthClass;
            strengthText.textContent = 'Força da senha: ' + strengthLabel;
        }

        function checkPasswordMatch() {
            const newPassword = document.getElementById('NovaSenha').value;
            const confirmPassword = document.getElementById('ConfirmarNovaSenha').value;
            const matchDiv = document.getElementById('passwordMatch');
            
            if (!confirmPassword) {
                matchDiv.innerHTML = '';
                return false;
            }
            
            if (newPassword === confirmPassword) {
                matchDiv.innerHTML = '<i class="fas fa-check me-1"></i>As senhas coincidem';
                matchDiv.className = 'password-match match-success';
                return true;
            } else {
                matchDiv.innerHTML = '<i class="fas fa-times me-1"></i>As senhas não coincidem';
                matchDiv.className = 'password-match match-error';
                return false;
            }
        }

        function validateForm() {
            const currentPassword = document.getElementById('SenhaAtual').value;
            const newPassword = document.getElementById('NovaSenha').value;
            const confirmPassword = document.getElementById('ConfirmarNovaSenha').value;
            const submitBtn = document.getElementById('submitBtn');
            
            // Check if all fields are filled
            const allFilled = currentPassword && newPassword && confirmPassword;
            
            // Check if new password meets requirements
            const requirements = [
                newPassword.length >= 6,
                /[A-Z]/.test(newPassword),
                /[a-z]/.test(newPassword),
                /\d/.test(newPassword)
            ];
            const meetsRequirements = requirements.every(req => req);
            
            // Check if passwords match
            const passwordsMatch = newPassword === confirmPassword;
            
            // Enable/disable submit button
            const canSubmit = allFilled && meetsRequirements && passwordsMatch;
            submitBtn.disabled = !canSubmit;
            
            return canSubmit;
        }

        // Form submission handling
        document.getElementById('changePasswordForm').addEventListener('submit', function(e) {
            if (!validateForm()) {
                e.preventDefault();
                return false;
            }
            
            const submitBtn = document.getElementById('submitBtn');
            submitBtn.disabled = true;
            submitBtn.innerHTML = '<i class="fas fa-spinner fa-spin me-2"></i>Alterando...';
            
            // Let the form submit naturally
            return true;
        });
    </script>
}

@section Styles {
    <style>
        .password-requirements {
            background: #f8f9fa;
            padding: 1rem;
            border-radius: 0.5rem;
            border-left: 4px solid #0d6efd;
        }
        
        .requirement {
            margin-bottom: 0.5rem;
        }
        
        .requirement:last-child {
            margin-bottom: 0;
        }
    </style>
}