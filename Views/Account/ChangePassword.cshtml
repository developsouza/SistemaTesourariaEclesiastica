@model SistemaTesourariaEclesiastica.ViewModels.ChangePasswordViewModel

@{
    ViewData["Title"] = "Alterar Senha";
}

<div class="row justify-content-center">
    <div class="col-md-7 col-lg-6 col-xl-5">
        <!-- Header -->
        <div class="text-center mb-4">
            <div class="mb-3">
                <div class="d-inline-flex align-items-center justify-content-center rounded-circle bg-primary bg-opacity-10" 
                     style="width: 80px; height: 80px;">
                    <i class="bi bi-shield-lock text-primary" style="font-size: 2.5rem;"></i>
                </div>
            </div>
            <h2 class="h3 fw-bold">Alterar Senha</h2>
            <p class="text-muted">Mantenha sua conta segura com uma senha forte</p>
        </div>

        <!-- Card Principal -->
        <div class="card border-0 shadow-sm">
            <div class="card-body p-4">
                <form asp-action="ChangePassword" method="post" id="changePasswordForm" novalidate>
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger border-0" role="alert"></div>
                    
                    <!-- Senha Atual -->
                    <div class="mb-4">
                        <label asp-for="SenhaAtual" class="form-label fw-semibold">
                            <i class="bi bi-lock text-muted me-2"></i>Senha Atual
                        </label>
                        <div class="input-group">
                            <span class="input-group-text bg-light border-end-0">
                                <i class="bi bi-key"></i>
                            </span>
                            <input asp-for="SenhaAtual" type="password" 
                                   class="form-control border-start-0" 
                                   placeholder="Digite sua senha atual" 
                                   autocomplete="current-password" />
                            <button class="btn btn-outline-secondary" type="button" onclick="togglePassword('SenhaAtual')">
                                <i class="bi bi-eye" id="toggleIconSenhaAtual"></i>
                            </button>
                        </div>
                        <span asp-validation-for="SenhaAtual" class="text-danger small"></span>
                    </div>

                    <!-- Nova Senha -->
                    <div class="mb-4">
                        <label asp-for="NovaSenha" class="form-label fw-semibold">
                            <i class="bi bi-key-fill text-muted me-2"></i>Nova Senha
                        </label>
                        <div class="input-group">
                            <span class="input-group-text bg-light border-end-0">
                                <i class="bi bi-shield-check"></i>
                            </span>
                            <input asp-for="NovaSenha" type="password" 
                                   class="form-control border-start-0" 
                                   placeholder="Digite sua nova senha" 
                                   autocomplete="new-password" />
                            <button class="btn btn-outline-secondary" type="button" onclick="togglePassword('NovaSenha')">
                                <i class="bi bi-eye" id="toggleIconNovaSenha"></i>
                            </button>
                        </div>
                        <span asp-validation-for="NovaSenha" class="text-danger small"></span>
                        
                        <!-- Indicador de Força da Senha -->
                        <div class="password-strength mt-2">
                            <div class="password-strength-bar rounded-pill overflow-hidden" style="height: 6px; background: #e9ecef;">
                                <div class="strength-fill rounded-pill" id="strengthFill" style="height: 100%; width: 0; transition: all 0.3s ease;"></div>
                            </div>
                            <small class="strength-text text-muted d-block mt-1" id="strengthText">Digite uma senha para ver sua força</small>
                        </div>
                    </div>

                    <!-- Confirmar Nova Senha -->
                    <div class="mb-4">
                        <label asp-for="ConfirmarNovaSenha" class="form-label fw-semibold">
                            <i class="bi bi-check-circle text-muted me-2"></i>Confirmar Nova Senha
                        </label>
                        <div class="input-group">
                            <span class="input-group-text bg-light border-end-0">
                                <i class="bi bi-shield-check"></i>
                            </span>
                            <input asp-for="ConfirmarNovaSenha" type="password" 
                                   class="form-control border-start-0" 
                                   placeholder="Confirme sua nova senha" 
                                   autocomplete="new-password" />
                            <button class="btn btn-outline-secondary" type="button" onclick="togglePassword('ConfirmarNovaSenha')">
                                <i class="bi bi-eye" id="toggleIconConfirmarNovaSenha"></i>
                            </button>
                        </div>
                        <span asp-validation-for="ConfirmarNovaSenha" class="text-danger small"></span>
                        <div class="password-match mt-1 small" id="passwordMatch"></div>
                    </div>

                    <!-- Requisitos de Senha -->
                    <div class="password-requirements mb-4 p-3 rounded-3" style="background: linear-gradient(135deg, rgba(37, 99, 235, 0.05) 0%, rgba(37, 99, 235, 0.02) 100%); border-left: 4px solid var(--bs-primary);">
                        <h6 class="text-dark mb-3 fw-semibold">
                            <i class="bi bi-info-circle text-primary me-2"></i>Requisitos da Senha:
                        </h6>
                        <ul class="list-unstyled mb-0 small">
                            <li class="requirement mb-2" id="req-length">
                                <i class="bi bi-x-circle text-danger me-2"></i>
                                <span>Pelo menos 6 caracteres</span>
                            </li>
                            <li class="requirement mb-2" id="req-upper">
                                <i class="bi bi-x-circle text-danger me-2"></i>
                                <span>Uma letra maiúscula</span>
                            </li>
                            <li class="requirement mb-2" id="req-lower">
                                <i class="bi bi-x-circle text-danger me-2"></i>
                                <span>Uma letra minúscula</span>
                            </li>
                            <li class="requirement" id="req-number">
                                <i class="bi bi-x-circle text-danger me-2"></i>
                                <span>Um número</span>
                            </li>
                        </ul>
                    </div>

                    <!-- Botões de Ação -->
                    <div class="d-grid gap-2 d-sm-flex justify-content-sm-between">
                        <a asp-action="Profile" class="btn btn-outline-secondary px-4">
                            <i class="bi bi-arrow-left me-2"></i>Voltar
                        </a>
                        <button type="submit" class="btn btn-primary px-4" id="submitBtn" disabled>
                            <i class="bi bi-check-lg me-2"></i>Alterar Senha
                        </button>
                    </div>
                </form>
            </div>
        </div>

        <!-- Dicas de Segurança -->
        <div class="card border-0 bg-light mt-4">
            <div class="card-body">
                <h6 class="card-title fw-semibold mb-3">
                    <i class="bi bi-shield-check text-success me-2"></i>
                    Dicas de Segurança
                </h6>
                <ul class="list-unstyled mb-0 small">
                    <li class="mb-2">
                        <i class="bi bi-check2-circle text-success me-2"></i>
                        Use uma combinação de letras, números e símbolos
                    </li>
                    <li class="mb-2">
                        <i class="bi bi-check2-circle text-success me-2"></i>
                        Evite informações pessoais óbvias (nome, aniversário)
                    </li>
                    <li class="mb-2">
                        <i class="bi bi-check2-circle text-success me-2"></i>
                        Não reutilize senhas de outros sistemas
                    </li>
                    <li>
                        <i class="bi bi-check2-circle text-success me-2"></i>
                        Altere sua senha regularmente
                    </li>
                </ul>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const novaSenhaInput = document.getElementById('NovaSenha');
            const confirmarSenhaInput = document.getElementById('ConfirmarNovaSenha');
            const submitBtn = document.getElementById('submitBtn');
            
            novaSenhaInput.addEventListener('input', function() {
                checkPasswordStrength(this.value);
                checkPasswordMatch();
                validateForm();
            });
            
            confirmarSenhaInput.addEventListener('input', function() {
                checkPasswordMatch();
                validateForm();
            });
            
            document.getElementById('SenhaAtual').addEventListener('input', validateForm);
        });

        function togglePassword(fieldId) {
            const field = document.getElementById(fieldId);
            const icon = document.getElementById('toggleIcon' + fieldId);
            
            if (field.type === 'password') {
                field.type = 'text';
                icon.classList.remove('bi-eye');
                icon.classList.add('bi-eye-slash');
            } else {
                field.type = 'password';
                icon.classList.remove('bi-eye-slash');
                icon.classList.add('bi-eye');
            }
        }

        function checkPasswordStrength(password) {
            const strengthFill = document.getElementById('strengthFill');
            const strengthText = document.getElementById('strengthText');
            
            if (!password) {
                strengthFill.style.width = '0';
                strengthText.textContent = 'Digite uma senha para ver sua força';
                strengthText.className = 'strength-text text-muted d-block mt-1';
                return;
            }
            
            let score = 0;
            const requirements = {
                'req-length': password.length >= 6,
                'req-upper': /[A-Z]/.test(password),
                'req-lower': /[a-z]/.test(password),
                'req-number': /\d/.test(password)
            };
            
            for (const [id, met] of Object.entries(requirements)) {
                const element = document.getElementById(id);
                const icon = element.querySelector('i');
                
                if (met) {
                    icon.className = 'bi bi-check-circle-fill text-success me-2';
                    score++;
                } else {
                    icon.className = 'bi bi-x-circle text-danger me-2';
                }
            }
            
            if (password.length >= 8) score++;
            if (/[!@@#$%^&*(),.?":{}|<>]/.test(password)) score++;

            let strengthClass, strengthLabel, color;
            if (score <= 2) {
                strengthClass = 'strength-weak';
                strengthLabel = 'Fraca';
                color = '#dc3545';
            } else if (score <= 3) {
                strengthClass = 'strength-fair';
                strengthLabel = 'Razoável';
                color = '#fd7e14';
            } else if (score <= 4) {
                strengthClass = 'strength-good';
                strengthLabel = 'Boa';
                color = '#ffc107';
            } else {
                strengthClass = 'strength-strong';
                strengthLabel = 'Forte';
                color = '#198754';
            }
            
            const percentage = (score / 6) * 100;
            strengthFill.style.width = percentage + '%';
            strengthFill.style.background = color;
            strengthText.textContent = 'Força da senha: ' + strengthLabel;
            strengthText.className = 'strength-text d-block mt-1 fw-semibold';
            strengthText.style.color = color;
        }

        function checkPasswordMatch() {
            const newPassword = document.getElementById('NovaSenha').value;
            const confirmPassword = document.getElementById('ConfirmarNovaSenha').value;
            const matchDiv = document.getElementById('passwordMatch');
            
            if (!confirmPassword) {
                matchDiv.innerHTML = '';
                return false;
            }
            
            if (newPassword === confirmPassword) {
                matchDiv.innerHTML = '<i class="bi bi-check-circle-fill text-success me-1"></i>As senhas coincidem';
                matchDiv.className = 'password-match mt-1 small text-success fw-semibold';
                return true;
            } else {
                matchDiv.innerHTML = '<i class="bi bi-x-circle-fill text-danger me-1"></i>As senhas não coincidem';
                matchDiv.className = 'password-match mt-1 small text-danger fw-semibold';
                return false;
            }
        }

        function validateForm() {
            const currentPassword = document.getElementById('SenhaAtual').value;
            const newPassword = document.getElementById('NovaSenha').value;
            const confirmPassword = document.getElementById('ConfirmarNovaSenha').value;
            const submitBtn = document.getElementById('submitBtn');
            
            const allFilled = currentPassword && newPassword && confirmPassword;
            
            const requirements = [
                newPassword.length >= 6,
                /[A-Z]/.test(newPassword),
                /[a-z]/.test(newPassword),
                /\d/.test(newPassword)
            ];
            const meetsRequirements = requirements.every(req => req);
            
            const passwordsMatch = newPassword === confirmPassword;
            
            const canSubmit = allFilled && meetsRequirements && passwordsMatch;
            submitBtn.disabled = !canSubmit;
            
            return canSubmit;
        }

        document.getElementById('changePasswordForm').addEventListener('submit', function(e) {
            if (!validateForm()) {
                e.preventDefault();
                return false;
            }
            
            const submitBtn = document.getElementById('submitBtn');
            submitBtn.disabled = true;
            submitBtn.innerHTML = '<span class="spinner-border spinner-border-sm me-2" role="status" aria-hidden="true"></span>Alterando...';
            
            return true;
        });
    </script>
}