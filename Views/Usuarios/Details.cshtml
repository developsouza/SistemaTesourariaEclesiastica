@model SistemaTesourariaEclesiastica.ViewModels.UsuarioViewModel

@{
    ViewData["Title"] = "Detalhes do Usuário";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h1 class="h3 mb-0">
            <i class="bi bi-person-badge me-2"></i>
            Detalhes do Usuário
        </h1>
        <p class="text-muted mb-0">Visualizar informações detalhadas</p>
    </div>
    <div>
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary me-2">
            <i class="bi bi-pencil me-2"></i>Editar
        </a>
        <a asp-action="Index" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left me-2"></i>Voltar
        </a>
    </div>
</div>

<div class="row">
    <div class="col-lg-8">
        <!-- Card de Informações Pessoais -->
        <div class="card shadow-sm mb-4">
            <div class="card-header">
                <h5 class="mb-0">
                    <i class="bi bi-person-circle me-2"></i>
                    Informações Pessoais
                </h5>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-2 text-center mb-3 mb-md-0">
                        <div class="user-avatar mx-auto">
                            <i class="bi bi-person-circle display-1 text-primary"></i>
                        </div>
                    </div>
                    <div class="col-md-10">
                        <dl class="row mb-0">
                            <dt class="col-sm-4">Nome Completo:</dt>
                            <dd class="col-sm-8 fw-semibold">@Model.NomeCompleto</dd>

                            <dt class="col-sm-4">E-mail:</dt>
                            <dd class="col-sm-8">
                                <i class="bi bi-envelope me-1 text-muted"></i>
                                @Model.Email
                            </dd>

                            <dt class="col-sm-4">Centro de Custo:</dt>
                            <dd class="col-sm-8">
                                <span class="badge bg-info">
                                    <i class="bi bi-building me-1"></i>
                                    @Model.CentroCustoNome
                                </span>
                            </dd>

                            <dt class="col-sm-4">Status:</dt>
                            <dd class="col-sm-8">
                                @if (Model.Ativo)
                                {
                                    <span class="badge bg-success">
                                        <i class="bi bi-check-circle me-1"></i>Ativo
                                    </span>
                                }
                                else
                                {
                                    <span class="badge bg-danger">
                                        <i class="bi bi-x-circle me-1"></i>Inativo
                                    </span>
                                }
                            </dd>

                            <dt class="col-sm-4">Data de Criação:</dt>
                            <dd class="col-sm-8">
                                <small class="text-muted">
                                    <i class="bi bi-calendar me-1"></i>
                                    @Model.DataCriacao.ToString("dd/MM/yyyy 'às' HH:mm")
                                </small>
                            </dd>
                        </dl>
                    </div>
                </div>
            </div>
        </div>

        <!-- Card de Permissões e Acessos -->
        <div class="card shadow-sm mb-4">
            <div class="card-header">
                <h5 class="mb-0">
                    <i class="bi bi-shield-check me-2"></i>
                    Permissões e Acessos
                </h5>
            </div>
            <div class="card-body">
                <h6 class="text-muted mb-3">Perfis de Acesso:</h6>

                @if (Model.Roles.Any())
                {
                    <div class="row g-3">
                        @foreach (var role in Model.Roles)
                        {
                            var roleInfo = GetRoleInfo(role);
                            <div class="col-md-6">
                                <div class="role-card p-3 border rounded">
                                    <div class="d-flex align-items-center">
                                        <div class="role-icon me-3">
                                            <i class="@roleInfo.Icon text-@roleInfo.Color fs-3"></i>
                                        </div>
                                        <div class="flex-grow-1">
                                            <h6 class="mb-1">@roleInfo.DisplayName</h6>
                                            <p class="small text-muted mb-0">@roleInfo.Description</p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                }
                else
                {
                    <div class="text-center py-3">
                        <i class="bi bi-exclamation-triangle display-4 text-warning opacity-50"></i>
                        <p class="text-muted mt-2 mb-0">Nenhum perfil de acesso atribuído</p>
                    </div>
                }
            </div>
        </div>

        <!-- Card de Atividades Recentes -->
        <div class="card shadow-sm">
            <div class="card-header">
                <h5 class="mb-0">
                    <i class="bi bi-clock-history me-2"></i>
                    Atividades Recentes
                </h5>
            </div>
            <div class="card-body">
                <div class="text-center py-4">
                    <i class="bi bi-journal-text display-4 text-muted opacity-50"></i>
                    <p class="text-muted mt-3 mb-0">
                        Consulte os logs de auditoria para visualizar o histórico completo de atividades deste usuário
                    </p>
                    <a href="#" class="btn btn-outline-primary btn-sm mt-3">
                        <i class="bi bi-search me-1"></i>
                        Ver Logs de Auditoria
                    </a>
                </div>
            </div>
        </div>
    </div>

    <div class="col-lg-4">
        <!-- Card de Ações Rápidas -->
        <div class="card shadow-sm border-primary border-opacity-25 mb-3">
            <div class="card-header bg-primary bg-opacity-10">
                <h6 class="mb-0 text-primary">
                    <i class="bi bi-lightning me-2"></i>Ações Rápidas
                </h6>
            </div>
            <div class="card-body">
                <div class="d-grid gap-2">
                    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-outline-primary btn-sm">
                        <i class="bi bi-pencil me-2"></i>Editar Informações
                    </a>

                    @if (Model.Ativo)
                    {
                        <button type="button" class="btn btn-outline-warning btn-sm">
                            <i class="bi bi-pause-circle me-2"></i>Desativar Usuário
                        </button>
                    }
                    else
                    {
                        <button type="button" class="btn btn-outline-success btn-sm">
                            <i class="bi bi-play-circle me-2"></i>Ativar Usuário
                        </button>
                    }

                    <button type="button" class="btn btn-outline-secondary btn-sm">
                        <i class="bi bi-key me-2"></i>Redefinir Senha
                    </button>

                    <hr class="my-2">

                    <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-outline-danger btn-sm">
                        <i class="bi bi-trash me-2"></i>Excluir Usuário
                    </a>
                </div>
            </div>
        </div>

        <!-- Card de Estatísticas -->
        <div class="card shadow-sm border-info border-opacity-25 mb-3">
            <div class="card-header bg-info bg-opacity-10">
                <h6 class="mb-0 text-info">
                    <i class="bi bi-graph-up me-2"></i>Estatísticas
                </h6>
            </div>
            <div class="card-body">
                <div class="stat-item mb-3 pb-3 border-bottom">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <i class="bi bi-box-arrow-in-right text-primary me-2"></i>
                            <span class="small">Total de Logins</span>
                        </div>
                        <span class="badge bg-primary">-</span>
                    </div>
                </div>

                <div class="stat-item mb-3 pb-3 border-bottom">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <i class="bi bi-calendar-check text-success me-2"></i>
                            <span class="small">Último Acesso</span>
                        </div>
                        <small class="text-muted">-</small>
                    </div>
                </div>

                <div class="stat-item mb-3 pb-3 border-bottom">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <i class="bi bi-pencil-square text-warning me-2"></i>
                            <span class="small">Ações Realizadas</span>
                        </div>
                        <span class="badge bg-warning">-</span>
                    </div>
                </div>

                <div class="stat-item">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <i class="bi bi-clock text-secondary me-2"></i>
                            <span class="small">Tempo Total Online</span>
                        </div>
                        <small class="text-muted">-</small>
                    </div>
                </div>
            </div>
        </div>

        <!-- Card de Informações do Sistema -->
        <div class="card shadow-sm border-secondary border-opacity-25">
            <div class="card-header bg-secondary bg-opacity-10">
                <h6 class="mb-0 text-secondary">
                    <i class="bi bi-info-circle me-2"></i>Informações do Sistema
                </h6>
            </div>
            <div class="card-body">
                <div class="small">
                    <div class="d-flex justify-content-between mb-2">
                        <span class="text-muted">ID do Usuário:</span>
                        <code class="small">@Model.Id.Substring(0, 8)...</code>
                    </div>
                    <div class="d-flex justify-content-between mb-2">
                        <span class="text-muted">Conta desde:</span>
                        <span>@((DateTime.Now - Model.DataCriacao).Days) dias</span>
                    </div>
                    <div class="d-flex justify-content-between">
                        <span class="text-muted">Tipo de Conta:</span>
                        <span class="badge bg-secondary">Padrão</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@functions {
    private (string DisplayName, string Description, string Icon, string Color) GetRoleInfo(string role)
    {
        return role switch
        {
            "Administrador" => ("Administrador", "Acesso total ao sistema", "bi bi-person-fill-gear", "danger"),
            "TesoureiroGeral" => ("Tesoureiro Geral", "Gerencia a sede e aprova prestações", "bi bi-briefcase", "primary"),
            "TesoureiroLocal" => ("Tesoureiro Local", "Gerencia congregação local", "bi bi-person-workspace", "info"),
            "Pastor" => ("Pastor/Liderança", "Acesso de consulta aos relatórios", "bi bi-book", "secondary"),
            _ => (role, "Permissão personalizada", "bi bi-shield", "dark")
        };
    }
}

<style>
    .role-card {
        transition: all 0.2s ease;
        background: #f8f9fa;
    }

    .role-card:hover {
        box-shadow: 0 2px 8px rgba(0,0,0,0.1);
        transform: translateY(-2px);
    }

    .user-avatar {
        width: 80px;
        height: 80px;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .stat-item {
        transition: all 0.2s ease;
    }

    .stat-item:hover {
        background: #f8f9fa;
        margin: -0.5rem;
        padding: 0.5rem !important;
        border-radius: 0.375rem;
    }
</style>