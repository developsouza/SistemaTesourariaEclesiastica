@model SistemaTesourariaEclesiastica.ViewModels.EditarUsuarioViewModel

@{
    ViewData["Title"] = "Editar Usuário";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h1 class="h3 mb-0">
            <i class="bi bi-pencil-square me-2"></i>
            Editar Usuário
        </h1>
        <p class="text-muted mb-0">Atualizar informações do usuário</p>
    </div>
    <a asp-action="Index" class="btn btn-outline-secondary">
        <i class="bi bi-arrow-left me-2"></i>Voltar
    </a>
</div>

<div class="row">
    <div class="col-lg-8">
        <div class="card shadow-sm">
            <div class="card-header">
                <h5 class="mb-0">
                    <i class="bi bi-info-circle me-2"></i>
                    Informações do Usuário
                </h5>
            </div>
            <div class="card-body">
                <form asp-action="Edit" method="post">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                    <input type="hidden" asp-for="Id" />

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="NomeCompleto" class="form-label">Nome Completo <span class="text-danger">*</span></label>
                            <div class="input-group">
                                <span class="input-group-text">
                                    <i class="bi bi-person"></i>
                                </span>
                                <input asp-for="NomeCompleto" class="form-control" />
                            </div>
                            <span asp-validation-for="NomeCompleto" class="text-danger"></span>
                        </div>

                        <div class="col-md-6 mb-3">
                            <label asp-for="Email" class="form-label">E-mail <span class="text-danger">*</span></label>
                            <div class="input-group">
                                <span class="input-group-text">
                                    <i class="bi bi-envelope"></i>
                                </span>
                                <input asp-for="Email" class="form-control" type="email" readonly />
                            </div>
                            <div class="form-text">O e-mail não pode ser alterado</div>
                        </div>
                    </div>

                    <div class="alert alert-info d-flex align-items-center mb-3">
                        <i class="bi bi-info-circle me-2 fs-5"></i>
                        <div>
                            <strong>Alterar Senha:</strong> Preencha os campos abaixo apenas se desejar alterar a senha do usuário. Deixe em branco para manter a senha atual.
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="NovaSenha" class="form-label">Nova Senha (opcional)</label>
                            <div class="input-group">
                                <span class="input-group-text">
                                    <i class="bi bi-lock"></i>
                                </span>
                                <input asp-for="NovaSenha" class="form-control" type="password" placeholder="••••••••" />
                                <button class="btn btn-outline-secondary" type="button" onclick="togglePassword('NovaSenha')">
                                    <i class="bi bi-eye" id="toggleIconNovaSenha"></i>
                                </button>
                            </div>
                            <span asp-validation-for="NovaSenha" class="text-danger"></span>
                            <div class="form-text">Deixe em branco para não alterar</div>
                        </div>

                        <div class="col-md-6 mb-3">
                            <label asp-for="ConfirmarNovaSenha" class="form-label">Confirmar Nova Senha</label>
                            <div class="input-group">
                                <span class="input-group-text">
                                    <i class="bi bi-lock-fill"></i>
                                </span>
                                <input asp-for="ConfirmarNovaSenha" class="form-control" type="password" placeholder="••••••••" />
                                <button class="btn btn-outline-secondary" type="button" onclick="togglePassword('ConfirmarNovaSenha')">
                                    <i class="bi bi-eye" id="toggleIconConfirmarNovaSenha"></i>
                                </button>
                            </div>
                            <span asp-validation-for="ConfirmarNovaSenha" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="CentroCustoId" class="form-label">Centro de Custo <span class="text-danger">*</span></label>
                            <div class="input-group">
                                <span class="input-group-text">
                                    <i class="bi bi-building"></i>
                                </span>
                                <select asp-for="CentroCustoId" class="form-select" asp-items="ViewBag.CentroCustoId">
                                    <option value="">Selecione um centro de custo</option>
                                </select>
                            </div>
                            <span asp-validation-for="CentroCustoId" class="text-danger"></span>
                        </div>

                        <div class="col-md-6 mb-3">
                            <label asp-for="Role" class="form-label">Perfil de Acesso <span class="text-danger">*</span></label>
                            <div class="input-group">
                                <span class="input-group-text">
                                    <i class="bi bi-shield"></i>
                                </span>
                                <select asp-for="Role" class="form-select" asp-items="ViewBag.Roles">
                                    <option value="">Selecione um perfil</option>
                                </select>
                            </div>
                            <span asp-validation-for="Role" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="mb-3">
                        <div class="form-check form-switch">
                            <input asp-for="Ativo" class="form-check-input" type="checkbox" />
                            <label asp-for="Ativo" class="form-check-label">Usuário ativo no sistema</label>
                        </div>
                        <div class="form-text">Desative se o usuário não deve mais ter acesso ao sistema</div>
                    </div>

                    <hr class="my-4">

                    <div class="d-flex gap-2 justify-content-end">
                        <a asp-action="Index" class="btn btn-outline-secondary">
                            <i class="bi bi-x-circle me-2"></i>Cancelar
                        </a>
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-check-circle me-2"></i>Salvar Alterações
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <div class="col-lg-4">
        <div class="card shadow-sm border-warning border-opacity-25 mb-3">
            <div class="card-header bg-warning bg-opacity-10">
                <h6 class="mb-0 text-warning">
                    <i class="bi bi-exclamation-triangle me-2"></i>Atenção
                </h6>
            </div>
            <div class="card-body">
                <ul class="small text-muted mb-0 ps-3">
                    <li class="mb-2">Ao alterar o perfil de acesso, as permissões do usuário serão atualizadas imediatamente</li>
                    <li class="mb-2">Desativar um usuário impedirá seu acesso ao sistema</li>
                    <li>A alteração de senha forçará o usuário a usar a nova senha no próximo login</li>
                </ul>
            </div>
        </div>

        <div class="card shadow-sm border-primary border-opacity-25">
            <div class="card-header bg-primary bg-opacity-10">
                <h6 class="mb-0 text-primary">
                    <i class="bi bi-shield-check me-2"></i>Perfis de Acesso
                </h6>
            </div>
            <div class="card-body">
                <div class="role-info mb-3">
                    <div class="d-flex align-items-start">
                        <i class="bi bi-person-fill-gear text-danger me-2 mt-1"></i>
                        <div>
                            <strong class="small">Administrador</strong>
                            <p class="small text-muted mb-0">Acesso total</p>
                        </div>
                    </div>
                </div>

                <div class="role-info mb-3">
                    <div class="d-flex align-items-start">
                        <i class="bi bi-briefcase text-primary me-2 mt-1"></i>
                        <div>
                            <strong class="small">Tesoureiro Geral</strong>
                            <p class="small text-muted mb-0">Gerencia a Sede</p>
                        </div>
                    </div>
                </div>

                <div class="role-info mb-3">
                    <div class="d-flex align-items-start">
                        <i class="bi bi-person-workspace text-info me-2 mt-1"></i>
                        <div>
                            <strong class="small">Tesoureiro Local</strong>
                            <p class="small text-muted mb-0">Gerencia congregação</p>
                        </div>
                    </div>
                </div>

                <div class="role-info">
                    <div class="d-flex align-items-start">
                        <i class="bi bi-book text-secondary me-2 mt-1"></i>
                        <div>
                            <strong class="small">Pastor/Liderança</strong>
                            <p class="small text-muted mb-0">Consulta relatórios</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        function togglePassword(fieldId) {
            const field = document.getElementById(fieldId);
            const icon = document.getElementById('toggleIcon' + fieldId);

            if (field.type === 'password') {
                field.type = 'text';
                icon.classList.remove('bi-eye');
                icon.classList.add('bi-eye-slash');
            } else {
                field.type = 'password';
                icon.classList.remove('bi-eye-slash');
                icon.classList.add('bi-eye');
            }
        }
    </script>
}