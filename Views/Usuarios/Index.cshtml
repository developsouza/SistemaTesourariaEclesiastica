@model IEnumerable<SistemaTesourariaEclesiastica.ViewModels.UsuarioViewModel>

@{
    ViewData["Title"] = "Usuários";
}

<!-- Cabeçalho -->
<div class="d-flex flex-column flex-md-row justify-content-between align-items-start align-items-md-center mb-3 mb-md-4 gap-2">
    <div>
        <h1 class="h3 mb-1">
            <i class="bi bi-people me-2"></i>
            Usuários do Sistema
        </h1>
        <p class="text-muted small mb-0">Gerenciar usuários e permissões</p>
    </div>
    <a asp-action="Create" class="btn btn-primary btn-sm">
        <i class="bi bi-person-plus me-1"></i>
        Novo Usuário
    </a>
</div>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="bi bi-check-circle me-2"></i>
        @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <i class="bi bi-exclamation-triangle me-2"></i>
        @TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<!-- Estatísticas -->
<div class="row g-2 g-md-3 mb-3 mb-md-4">
    <div class="col-6 col-md-3">
        <div class="card border-0 stat-card h-100">
            <div class="card-body p-2 p-md-3">
                <div class="d-flex align-items-center">
                    <div class="flex-shrink-0 d-none d-md-block">
                        <div class="stat-icon-modern bg-primary bg-opacity-10 text-primary">
                            <i class="bi bi-people"></i>
                        </div>
                    </div>
                    <div class="flex-grow-1 ms-md-3">
                        <small class="text-muted text-uppercase fw-semibold d-block mb-1" style="font-size: 0.7rem;">
                            Total
                        </small>
                        <h4 class="mb-0 fw-bold" style="font-size: clamp(1.25rem, 4vw, 1.75rem);">
                            @Model.Count()
                        </h4>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-6 col-md-3">
        <div class="card border-0 stat-card h-100">
            <div class="card-body p-2 p-md-3">
                <div class="d-flex align-items-center">
                    <div class="flex-shrink-0 d-none d-md-block">
                        <div class="stat-icon-modern bg-success bg-opacity-10 text-success">
                            <i class="bi bi-check-circle"></i>
                        </div>
                    </div>
                    <div class="flex-grow-1 ms-md-3">
                        <small class="text-muted text-uppercase fw-semibold d-block mb-1" style="font-size: 0.7rem;">
                            Ativos
                        </small>
                        <h4 class="mb-0 fw-bold" style="font-size: clamp(1.25rem, 4vw, 1.75rem);">
                            @Model.Count(u => u.Ativo)
                        </h4>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-6 col-md-3">
        <div class="card border-0 stat-card h-100">
            <div class="card-body p-2 p-md-3">
                <div class="d-flex align-items-center">
                    <div class="flex-shrink-0 d-none d-md-block">
                        <div class="stat-icon-modern bg-danger bg-opacity-10 text-danger">
                            <i class="bi bi-x-circle"></i>
                        </div>
                    </div>
                    <div class="flex-grow-1 ms-md-3">
                        <small class="text-muted text-uppercase fw-semibold d-block mb-1" style="font-size: 0.7rem;">
                            Inativos
                        </small>
                        <h4 class="mb-0 fw-bold" style="font-size: clamp(1.25rem, 4vw, 1.75rem);">
                            @Model.Count(u => !u.Ativo)
                        </h4>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-6 col-md-3">
        <div class="card border-0 stat-card h-100">
            <div class="card-body p-2 p-md-3">
                <div class="d-flex align-items-center">
                    <div class="flex-shrink-0 d-none d-md-block">
                        <div class="stat-icon-modern bg-warning bg-opacity-10 text-warning">
                            <i class="bi bi-shield"></i>
                        </div>
                    </div>
                    <div class="flex-grow-1 ms-md-3">
                        <small class="text-muted text-uppercase fw-semibold d-block mb-1" style="font-size: 0.7rem;">
                            Admins
                        </small>
                        <h4 class="mb-0 fw-bold" style="font-size: clamp(1.25rem, 4vw, 1.75rem);">
                            @Model.Count(u => u.Roles.Contains("Administrador"))
                        </h4>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Tabela -->
<div class="card">
    <div class="card-header d-flex justify-content-between align-items-center p-3">
        <h5 class="mb-0 small">
            <i class="bi bi-list-ul me-2"></i>
            Lista de Usuários
        </h5>
    </div>
    <div class="card-body p-0">
        @if (Model.Any())
        {
            <div class="table-responsive">
                <table class="table table-hover mb-0" id="usuariosTable">
                    <!-- Desktop -->
                    <thead class="table-light d-none d-md-table-header-group">
                        <tr>
                            <th>Nome</th>
                            <th>Email</th>
                            <th>Centro</th>
                            <th>Perfil</th>
                            <th>Status</th>
                            <th>Data</th>
                            <th class="text-center" width="140">Ações</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <!-- Desktop -->
                            <tr class="d-none d-md-table-row">
                                <td class="fw-semibold">@item.NomeCompleto</td>
                                <td>
                                    <i class="bi bi-envelope me-1 text-muted"></i>
                                    @item.Email
                                </td>
                                <td>
                                    <span class="badge bg-info">@item.CentroCustoNome</span>
                                </td>
                                <td>
                                    @if (item.Roles.Any())
                                    {
                                        @foreach (var role in item.Roles)
                                        {
                                            var badgeClass = role switch
                                            {
                                                "Administrador" => "bg-danger",
                                                "TesoureiroGeral" => "bg-primary",
                                                "TesoureiroLocal" => "bg-info",
                                                "Pastor" => "bg-secondary",
                                                _ => "bg-dark"
                                            };
                                            <span class="badge @badgeClass me-1">@role</span>
                                        }
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">Sem perfil</span>
                                    }
                                </td>
                                <td>
                                    @if (item.Ativo)
                                    {
                                        <span class="badge bg-success">
                                            <i class="bi bi-check-circle me-1"></i>Ativo
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-danger">
                                            <i class="bi bi-x-circle me-1"></i>Inativo
                                        </span>
                                    }
                                </td>
                                <td>@item.DataCriacao.ToString("dd/MM/yyyy")</td>
                                <td class="text-center">
                                    <div class="btn-group btn-group-sm" role="group">
                                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-info">
                                            <i class="bi bi-eye"></i>
                                        </a>
                                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-primary">
                                            <i class="bi bi-pencil"></i>
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger">
                                            <i class="bi bi-trash"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>

                            <!-- Mobile -->
                            <tr class="d-md-none">
                                <td class="p-3">
                                    <div class="d-flex justify-content-between align-items-start mb-2">
                                        <div class="flex-grow-1">
                                            <div class="fw-bold mb-1">@item.NomeCompleto</div>
                                            <small class="text-muted d-block mb-1">
                                                <i class="bi bi-envelope me-1"></i>
                                                @item.Email
                                            </small>
                                            <div class="d-flex flex-wrap gap-1 mb-1">
                                                <span class="badge bg-info" style="font-size: 0.65rem;">
                                                    @item.CentroCustoNome
                                                </span>
                                                @if (item.Ativo)
                                                {
                                                    <span class="badge bg-success" style="font-size: 0.65rem;">
                                                        <i class="bi bi-check-circle me-1"></i>Ativo
                                                    </span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-danger" style="font-size: 0.65rem;">
                                                        <i class="bi bi-x-circle me-1"></i>Inativo
                                                    </span>
                                                }
                                            </div>
                                            <div class="d-flex flex-wrap gap-1">
                                                @if (item.Roles.Any())
                                                {
                                                    @foreach (var role in item.Roles)
                                                    {
                                                        var badgeClass = role switch
                                                        {
                                                            "Administrador" => "bg-danger",
                                                            "TesoureiroGeral" => "bg-primary",
                                                            "TesoureiroLocal" => "bg-info",
                                                            "Pastor" => "bg-secondary",
                                                            _ => "bg-dark"
                                                        };
                                                        <span class="badge @badgeClass" style="font-size: 0.65rem;">@role</span>
                                                    }
                                                }
                                            </div>
                                        </div>
                                    </div>
                                    <div class="small text-muted mb-2">
                                        <i class="bi bi-calendar3 me-1"></i>
                                        @item.DataCriacao.ToString("dd/MM/yyyy")
                                    </div>
                                    <div class="btn-group btn-group-sm w-100" role="group">
                                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-info">
                                            <i class="bi bi-eye"></i>
                                        </a>
                                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-primary">
                                            <i class="bi bi-pencil"></i>
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger">
                                            <i class="bi bi-trash"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="text-center py-5">
                <i class="bi bi-person-x display-4 text-muted"></i>
                <p class="text-muted mt-3">Nenhum usuário cadastrado</p>
                <a asp-action="Create" class="btn btn-primary">
                    <i class="bi bi-person-plus me-2"></i>Cadastrar Primeiro Usuário
                </a>
            </div>
        }
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            if (window.innerWidth > 768) {
                $('#usuariosTable').DataTable({
                    language: { url: '//cdn.datatables.net/plug-ins/1.13.7/i18n/pt-BR.json' },
                    responsive: true,
                    order: [[0, 'asc']],
                    pageLength: 25,
                    columnDefs: [{ orderable: false, targets: -1 }]
                });
            }

            $('[data-bs-toggle="tooltip"]').each(function() {
                new bootstrap.Tooltip(this);
            });
        });
    </script>
}