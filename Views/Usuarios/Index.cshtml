@model IEnumerable<SistemaTesourariaEclesiastica.ViewModels.UsuarioViewModel>

@{
    ViewData["Title"] = "Usuários do Sistema";
}

<!-- Cabeçalho -->
<div class="d-flex flex-column flex-md-row justify-content-between align-items-start align-items-md-center mb-4 gap-2">
    <div>
        <h1 class="h3 mb-1">
            <i class="bi bi-people-fill me-2"></i>Usuários do Sistema
        </h1>
        <p class="text-muted mb-0 small">Gerenciar usuários e permissões de acesso</p>
    </div>
    <a asp-action="Create" class="btn btn-primary">
        <i class="bi bi-person-plus me-2"></i>Novo Usuário
    </a>
</div>

<!-- Cards de Estatísticas -->
<div class="row g-3 mb-4">
    <div class="col-12 col-sm-6 col-md-3">
        <div class="card shadow-sm border-0">
            <div class="card-body">
                <div class="d-flex align-items-center">
                    <div class="flex-shrink-0">
                        <div class="avatar-circle bg-primary text-white">
                            <i class="bi bi-people"></i>
                        </div>
                    </div>
                    <div class="flex-grow-1 ms-3">
                        <small class="text-muted d-block">Total</small>
                        <h4 class="mb-0 fw-bold">@(Model?.Count() ?? 0)</h4>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-12 col-sm-6 col-md-3">
        <div class="card shadow-sm border-0">
            <div class="card-body">
                <div class="d-flex align-items-center">
                    <div class="flex-shrink-0">
                        <div class="avatar-circle bg-success text-white">
                            <i class="bi bi-check-circle"></i>
                        </div>
                    </div>
                    <div class="flex-grow-1 ms-3">
                        <small class="text-muted d-block">Ativos</small>
                        <h4 class="mb-0 fw-bold">@(Model?.Count(u => u.Ativo) ?? 0)</h4>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-12 col-sm-6 col-md-3">
        <div class="card shadow-sm border-0">
            <div class="card-body">
                <div class="d-flex align-items-center">
                    <div class="flex-shrink-0">
                        <div class="avatar-circle bg-info text-white">
                            <i class="bi bi-person-badge"></i>
                        </div>
                    </div>
                    <div class="flex-grow-1 ms-3">
                        <small class="text-muted d-block">Tesoureiros</small>
                        <h4 class="mb-0 fw-bold">@(Model?.Count(u => u.Roles.Contains("Tesoureiro")) ?? 0)</h4>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-12 col-sm-6 col-md-3">
        <div class="card shadow-sm border-0">
            <div class="card-body">
                <div class="d-flex align-items-center">
                    <div class="flex-shrink-0">
                        <div class="avatar-circle bg-warning text-dark">
                            <i class="bi bi-shield"></i>
                        </div>
                    </div>
                    <div class="flex-grow-1 ms-3">
                        <small class="text-muted d-block">Admins</small>
                        <h4 class="mb-0 fw-bold">@(Model?.Count(u => u.Roles.Contains("Administrador")) ?? 0)</h4>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Resultados -->
<div class="card shadow-sm">
    <div class="card-header bg-white d-flex justify-content-between align-items-center py-3">
        <h5 class="mb-0 fw-semibold">
            <i class="bi bi-list-ul me-2 text-primary"></i>
            Lista de Usuários
        </h5>
        <button type="button" class="btn btn-sm btn-outline-secondary" onclick="window.print()">
            <i class="bi bi-printer me-1"></i>Imprimir
        </button>
    </div>

    <div class="card-body p-0">
        @if (Model != null && Model.Any())
        {
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="table-light">
                        <tr>
                            <th class="ps-3">Nome</th>
                            <th class="d-none d-md-table-cell">Email</th>
                            <th class="d-none d-lg-table-cell">Centro de Custo</th>
                            <th>Perfil</th>
                            <th class="d-none d-xl-table-cell text-center">Status</th>
                            <th class="d-none d-xl-table-cell">Criado em</th>
                            <th class="text-center" style="width: 140px;">Ações</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr class="@(item.Ativo ? "" : "table-secondary")">
                                <td class="ps-3">
                                    <div class="d-flex align-items-center">
                                        <div class="avatar-circle bg-primary text-white me-2">
                                            @item.NomeCompleto.Substring(0, 1).ToUpper()
                                        </div>
                                        <div>
                                            <div class="fw-semibold">@item.NomeCompleto</div>
                                            <small class="text-muted d-md-none">@item.Email</small>
                                        </div>
                                    </div>
                                </td>
                                <td class="d-none d-md-table-cell">
                                    <small class="text-muted">
                                        <i class="bi bi-envelope me-1"></i>@item.Email
                                    </small>
                                </td>
                                <td class="d-none d-lg-table-cell">
                                    @if (!string.IsNullOrEmpty(item.CentroCustoNome))
                                    {
                                        <span class="badge bg-info bg-opacity-10 text-info border border-info">
                                            @item.CentroCustoNome
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="text-muted fst-italic">-</span>
                                    }
                                </td>
                                <td>
                                    @if (item.Roles.Contains("Administrador"))
                                    {
                                        <span class="badge bg-danger">
                                            <i class="bi bi-shield-fill me-1"></i>Administrador
                                        </span>
                                    }
                                    else if (item.Roles.Contains("Tesoureiro"))
                                    {
                                        <span class="badge bg-primary">
                                            <i class="bi bi-wallet2 me-1"></i>Tesoureiro
                                        </span>
                                    }
                                    else if (item.Roles.Contains("Lideranca"))
                                    {
                                        <span class="badge bg-info">
                                            <i class="bi bi-person-badge me-1"></i>Liderança
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">Usuário</span>
                                    }
                                </td>
                                <td class="d-none d-xl-table-cell text-center">
                                    @if (item.Ativo)
                                    {
                                        <span class="badge bg-success bg-opacity-10 text-success border border-success">
                                            <i class="bi bi-check-circle me-1"></i>Ativo
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary bg-opacity-10 text-secondary border border-secondary">
                                            <i class="bi bi-x-circle me-1"></i>Inativo
                                        </span>
                                    }
                                </td>
                                <td class="d-none d-xl-table-cell">
                                    <small class="text-muted">@item.DataCriacao.ToString("dd/MM/yyyy")</small>
                                </td>
                                <td>
                                    <div class="btn-group btn-group-sm" role="group">
                                        <a asp-action="Details" asp-route-id="@item.Id"
                                           class="btn btn-outline-info" title="Detalhes">
                                            <i class="bi bi-eye"></i>
                                        </a>
                                        <a asp-action="Edit" asp-route-id="@item.Id"
                                           class="btn btn-outline-primary" title="Editar">
                                            <i class="bi bi-pencil"></i>
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@item.Id"
                                           class="btn btn-outline-danger" title="Excluir">
                                            <i class="bi bi-trash"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="text-center py-5">
                <i class="bi bi-people-fill text-muted" style="font-size: 4rem;"></i>
                <h5 class="mt-3 text-muted">Nenhum usuário encontrado</h5>
                <p class="text-muted">Não há usuários cadastrados no sistema.</p>
                <a asp-action="Create" class="btn btn-primary mt-2">
                    <i class="bi bi-person-plus me-2"></i>Cadastrar Primeiro Usuário
                </a>
            </div>
        }
    </div>
</div>