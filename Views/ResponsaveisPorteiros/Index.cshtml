@model IEnumerable<SistemaTesourariaEclesiastica.Models.ResponsavelPorteiro>
@using SistemaTesourariaEclesiastica.Helpers

@{
    ViewData["Title"] = "Responsáveis pelos Porteiros";
}

<!-- Cabeçalho -->
<div class="d-flex flex-column flex-md-row justify-content-between align-items-start align-items-md-center mb-4 gap-2">
    <div>
        <h1 class="h3 mb-1">
            <i class="bi bi-person-check me-2"></i>Responsáveis pelos Porteiros
        </h1>
        <p class="text-muted mb-0 small">
            Gerenciar responsáveis pela escala de porteiros
        </p>
    </div>
    <a asp-action="Create" class="btn btn-primary">
        <i class="bi bi-plus-circle me-2"></i>Novo Responsável
    </a>
</div>

<!-- Resultados -->
<div class="card shadow-sm">
    <div class="card-header bg-white d-flex justify-content-between align-items-center py-3">
        <h5 class="mb-0 fw-semibold">
            <i class="bi bi-list-ul me-2 text-primary"></i>
            @Model.Count() responsável(is) cadastrado(s)
        </h5>
    </div>

    <div class="card-body p-0">
        @if (Model != null && Model.Any())
        {
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="table-light">
                        <tr>
                            <th class="ps-3">Nome</th>
                            <th>Telefone</th>
                            <th class="text-center">Status</th>
                            <th class="d-none d-md-table-cell">Data de Cadastro</th>
                            <th class="text-center" style="width: 140px;">Ações</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr class="@(!item.Ativo ? "table-secondary" : "")">
                                <td class="ps-3">
                                    <div class="d-flex align-items-center">
                                        <div class="avatar-circle bg-success text-white me-2">
                                            @item.Nome.Substring(0, 1).ToUpper()
                                        </div>
                                        <div class="fw-semibold">@item.Nome</div>
                                    </div>
                                </td>
                                <td>
                                    <i class="bi bi-telephone me-1"></i>@LocalizacaoHelper.FormatarTelefone(item.Telefone)
                                </td>
                                <td class="text-center">
                                    @if (item.Ativo)
                                    {
                                        <span class="badge bg-success">Ativo</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">Inativo</span>
                                    }
                                </td>
                                <td class="d-none d-md-table-cell">
                                    @item.DataCadastro.ToString("dd/MM/yyyy")
                                </td>
                                <td>
                                    <div class="btn-group btn-group-sm" role="group">
                                        <a asp-action="Edit" asp-route-id="@item.Id"
                                           class="btn btn-outline-primary" title="Editar">
                                            <i class="bi bi-pencil"></i>
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@item.Id"
                                           class="btn btn-outline-danger" title="Excluir">
                                            <i class="bi bi-trash"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="text-center py-5">
                <i class="bi bi-person-check text-muted" style="font-size: 4rem;"></i>
                <h5 class="mt-3 text-muted">Nenhum responsável cadastrado</h5>
                <p class="text-muted">
                    Cadastre responsáveis para poder gerar escalas.
                </p>
                <a asp-action="Create" class="btn btn-primary mt-2">
                    <i class="bi bi-plus-circle me-2"></i>Cadastrar Primeiro Responsável
                </a>
            </div>
        }
    </div>
</div>
