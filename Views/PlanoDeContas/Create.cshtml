@model SistemaTesourariaEclesiastica.Models.PlanoDeContas

@{
    ViewData["Title"] = "Nova Conta";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h1 class="h3 mb-0">
            <i class="bi bi-list-ul me-2"></i>
            Nova Conta
        </h1>
        <p class="text-muted mb-0">Adicionar nova conta ao plano de contas</p>
    </div>
    <a asp-action="Index" class="btn btn-outline-secondary">
        <i class="bi bi-arrow-left me-2"></i>
        Voltar
    </a>
</div>

<div class="row">
    <div class="col-lg-8">
        <div class="card">
            <div class="card-header">
                <h5 class="card-title mb-0">Dados da Conta</h5>
            </div>
            <div class="card-body">
                <form asp-action="Create" method="post">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                    <div class="row g-3">
                        <div class="col-md-6">
                            <label asp-for="Nome" class="form-label required"></label>
                            <input asp-for="Nome" class="form-control" placeholder="Ex: Dízimos e Ofertas">
                            <span asp-validation-for="Nome" class="text-danger"></span>
                        </div>

                        <div class="col-md-6">
                            <label asp-for="Tipo" class="form-label required"></label>
                            <select asp-for="Tipo" class="form-select" asp-items="Html.GetEnumSelectList<SistemaTesourariaEclesiastica.Enums.TipoPlanoContas>()">
                                <option value="">Selecione o Tipo</option>
                            </select>
                            <span asp-validation-for="Tipo" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row g-3">
                        <div class="col-12">
                            <label asp-for="Descricao" class="form-label required"></label>
                            <textarea asp-for="Descricao" class="form-control" rows="3" placeholder="Descrição detalhada da conta contábil"></textarea>
                            <span asp-validation-for="Descricao" class="text-danger"></span>
                            <div class="form-text">
                                <i class="bi bi-info-circle me-1"></i>
                                Seja específico para facilitar a identificação nos lançamentos
                            </div>
                        </div>
                    </div>

                    <div class="d-flex justify-content-end gap-2 mt-4">
                        <a asp-action="Index" class="btn btn-outline-secondary">
                            <i class="bi bi-x-circle me-2"></i>
                            Cancelar
                        </a>
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-check-circle me-2"></i>
                            Salvar
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <!-- Sidebar de Ajuda -->
    <div class="col-lg-4">
        <div class="card">
            <div class="card-header">
                <h6 class="card-title mb-0">
                    <i class="bi bi-lightbulb me-2"></i>
                    Exemplos de Contas
                </h6>
            </div>
            <div class="card-body">
                <div class="mb-3">
                    <h6 class="text-success">
                        <i class="bi bi-arrow-down-circle me-1"></i>
                        Receitas
                    </h6>
                    <ul class="small mb-0">
                        <li>Dízimos</li>
                        <li>Ofertas Especiais</li>
                        <li>Eventos e Festivais</li>
                        <li>Doações</li>
                        <li>Vendas de Produtos</li>
                    </ul>
                </div>

                <div class="mb-3">
                    <h6 class="text-danger">
                        <i class="bi bi-arrow-up-circle me-1"></i>
                        Despesas
                    </h6>
                    <ul class="small mb-0">
                        <li>Salários e Encargos</li>
                        <li>Aluguel e Condomínio</li>
                        <li>Energia Elétrica</li>
                        <li>Materiais de Limpeza</li>
                        <li>Equipamentos</li>
                        <li>Manutenção</li>
                    </ul>
                </div>

                <div class="alert alert-info">
                    <h6 class="alert-heading">
                        <i class="bi bi-info-circle me-2"></i>
                        Dica
                    </h6>
                    <p class="mb-0 small">
                        Use nomes claros e descrições detalhadas para facilitar a identificação das contas nos relatórios e lançamentos.
                    </p>
                </div>
            </div>
        </div>

        <div class="card mt-3">
            <div class="card-header">
                <h6 class="card-title mb-0">
                    <i class="bi bi-graph-up me-2"></i>
                    Estatísticas Atuais
                </h6>
            </div>
            <div class="card-body">
                <div class="row g-3 text-center">
                    <div class="col-6">
                        <div class="border rounded p-2">
                            <i class="bi bi-arrow-down-circle text-success"></i>
                            <div class="fw-bold" id="totalReceitas">-</div>
                            <small class="text-muted">Receitas</small>
                        </div>
                    </div>
                    <div class="col-6">
                        <div class="border rounded p-2">
                            <i class="bi bi-arrow-up-circle text-danger"></i>
                            <div class="fw-bold" id="totalDespesas">-</div>
                            <small class="text-muted">Despesas</small>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        $(document).ready(function() {
            // Buscar estatísticas atuais
            $.get('/PlanoDeContas/BuscarEstatisticas', function(data) {
                $('#totalReceitas').text(data.totalReceitas);
                $('#totalDespesas').text(data.totalDespesas);
            });

            // Validação de descrição única (AJAX)
            $("#Descricao").blur(function() {
                var descricao = $(this).val();
                if (descricao) {
                    $.get('@Url.Action("VerificarDescricao", "PlanoDeContas")', { descricao: descricao }, function(data) {
                        if (!data) {
                            $("#Descricao").addClass("is-invalid");
                            $("#Descricao").next(".text-danger").text("Já existe um plano de contas com esta descrição.");
                        } else {
                            $("#Descricao").removeClass("is-invalid");
                            $("#Descricao").next(".text-danger").text("");
                        }
                    });
                }
            });

            // Foco no primeiro campo
            $("#Nome").focus();
        });
    </script>
}