@model PaginatedList<SistemaTesourariaEclesiastica.Models.PlanoDeContas>

@{
    ViewData["Title"] = "Plano de Contas";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h1 class="h3 mb-0">
            <i class="bi bi-list-ul me-2"></i>
            Plano de Contas
        </h1>
        <p class="text-muted mb-0">Estrutura contábil de receitas e despesas</p>
    </div>
    <a asp-action="Create" class="btn btn-primary">
        <i class="bi bi-plus-circle me-2"></i>
        Nova Conta
    </a>
</div>

<!-- Filtros -->
<div class="card mb-4">
    <div class="card-body">
        <form method="get" class="row g-3">
            <div class="col-md-4">
                <label class="form-label">Buscar</label>
                <input type="text" class="form-control" name="searchString" value="@ViewData["CurrentFilter"]"
                       placeholder="Nome ou descrição...">
            </div>
            <div class="col-md-4">
                <label class="form-label">Tipo</label>
                @Html.DropDownList("tipo", Html.GetEnumSelectList<SistemaTesourariaEclesiastica.Enums.TipoPlanoContas>(), "Todos",
                new { @class = "form-select" })
            </div>
            <div class="col-md-4 d-flex align-items-end">
                <button type="submit" class="btn btn-outline-primary me-2">
                    <i class="bi bi-search me-1"></i>
                    Filtrar
                </button>
                <a asp-action="Index" class="btn btn-outline-secondary">
                    <i class="bi bi-arrow-clockwise me-1"></i>
                    Limpar
                </a>
            </div>
        </form>
    </div>
</div>

<!-- Resultados -->
<div class="card">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h5 class="card-title mb-0">
            @ViewBag.TotalItems conta(s) encontrada(s)
        </h5>
        <div class="btn-group btn-group-sm">
            <button type="button" class="btn btn-outline-secondary">
                <i class="bi bi-download"></i>
                Exportar
            </button>
        </div>
    </div>
    <div class="card-body p-0">
        @if (Model.Any())
        {
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>
                                <a asp-action="Index" asp-route-sortOrder="@ViewData["NameSortParm"]"
                                   asp-route-currentFilter="@ViewData["CurrentFilter"]"
                                   asp-route-tipo="@ViewData["TipoFilter"]">
                                    @Html.DisplayNameFor(model => model.First().Nome)
                                    @if (ViewData["CurrentSort"]?.ToString() == "")
                                    {
                                        <i class="bi bi-caret-up-fill"></i>
                                    }
                                    else if (ViewData["CurrentSort"]?.ToString() == "name_desc")
                                    {
                                        <i class="bi bi-caret-down-fill"></i>
                                    }
                                </a>
                            </th>
                            <th>@Html.DisplayNameFor(model => model.First().Descricao)</th>
                            <th>
                                <a asp-action="Index" asp-route-sortOrder="@ViewData["TipoSortParm"]"
                                   asp-route-currentFilter="@ViewData["CurrentFilter"]"
                                   asp-route-tipo="@ViewData["TipoFilter"]">
                                    @Html.DisplayNameFor(model => model.First().Tipo)
                                    @if (ViewData["CurrentSort"]?.ToString() == "tipo")
                                    {
                                        <i class="bi bi-caret-up-fill"></i>
                                    }
                                    else if (ViewData["CurrentSort"]?.ToString() == "tipo_desc")
                                    {
                                        <i class="bi bi-caret-down-fill"></i>
                                    }
                                </a>
                            </th>
                            <th>
                                <a asp-action="Index" asp-route-sortOrder="@ViewData["DateSortParm"]"
                                   asp-route-currentFilter="@ViewData["CurrentFilter"]"
                                   asp-route-tipo="@ViewData["TipoFilter"]">
                                    @Html.DisplayNameFor(model => model.First().DataCriacao)
                                    @if (ViewData["CurrentSort"]?.ToString() == "date")
                                    {
                                        <i class="bi bi-caret-up-fill"></i>
                                    }
                                    else if (ViewData["CurrentSort"]?.ToString() == "date_desc")
                                    {
                                        <i class="bi bi-caret-down-fill"></i>
                                    }
                                </a>
                            </th>
                            <th>Status</th>
                            <th width="150">Ações</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    <strong>@Html.DisplayFor(modelItem => item.Nome)</strong>
                                </td>
                                <td>@Html.DisplayFor(modelItem => item.Descricao)</td>
                                <td>
                                    @if (item.Tipo == SistemaTesourariaEclesiastica.Enums.TipoPlanoContas.Receita)
                                    {
                                        <span class="badge bg-success">@Html.DisplayFor(modelItem => item.Tipo)</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-danger">@Html.DisplayFor(modelItem => item.Tipo)</span>
                                    }
                                </td>
                                <td>@Html.DisplayFor(modelItem => item.DataCriacao)</td>
                                <td>
                                    @if (item.Ativo)
                                    {
                                        <span class="badge bg-success">Ativo</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">Inativo</span>
                                    }
                                </td>
                                <td>
                                    <div class="btn-group btn-group-sm">
                                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-info" title="Detalhes">
                                            <i class="bi bi-eye"></i>
                                        </a>
                                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-primary" title="Editar">
                                            <i class="bi bi-pencil"></i>
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger" title="Excluir">
                                            <i class="bi bi-trash"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <!-- Paginação -->
            @if (Model.HasPreviousPage || Model.HasNextPage)
            {
                <div class="card-footer">
                    <nav aria-label="Navegação de páginas">
                        <ul class="pagination justify-content-center mb-0">
                            <li class="page-item @(Model.HasPreviousPage ? "" : "disabled")">
                                <a asp-action="Index"
                                   asp-route-sortOrder="@ViewData["CurrentSort"]"
                                   asp-route-pageNumber="@(Model.PageIndex - 1)"
                                   asp-route-currentFilter="@ViewData["CurrentFilter"]"
                                   asp-route-tipo="@ViewData["TipoFilter"]"
                                   class="page-link">Anterior</a>
                            </li>
                            @for (int i = 1; i <= Model.TotalPages; i++)
                            {
                                <li class="page-item @(i == Model.PageIndex ? "active" : "")">
                                    <a asp-action="Index"
                                       asp-route-sortOrder="@ViewData["CurrentSort"]"
                                       asp-route-pageNumber="@i"
                                       asp-route-currentFilter="@ViewData["CurrentFilter"]"
                                       asp-route-tipo="@ViewData["TipoFilter"]"
                                       class="page-link">@i</a>
                                </li>
                            }
                            <li class="page-item @(Model.HasNextPage ? "" : "disabled")">
                                <a asp-action="Index"
                                   asp-route-sortOrder="@ViewData["CurrentSort"]"
                                   asp-route-pageNumber="@(Model.PageIndex + 1)"
                                   asp-route-currentFilter="@ViewData["CurrentFilter"]"
                                   asp-route-tipo="@ViewData["TipoFilter"]"
                                   class="page-link">Próximo</a>
                            </li>
                        </ul>
                    </nav>
                </div>
            }
        }
        else
        {
            <div class="text-center py-4">
                <i class="bi bi-search display-4 text-muted"></i>
                <h5 class="mt-2">Nenhuma conta encontrada</h5>
                <p class="text-muted">Tente ajustar os filtros ou adicione uma nova conta.</p>
                <a asp-action="Create" class="btn btn-primary">
                    <i class="bi bi-plus-circle me-2"></i>
                    Adicionar Conta
                </a>
            </div>
        }
    </div>
</div>