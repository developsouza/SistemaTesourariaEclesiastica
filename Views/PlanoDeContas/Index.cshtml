@model IEnumerable<SistemaTesourariaEclesiastica.Models.PlanoDeContas>

@{
    ViewData["Title"] = "Plano de Contas";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h1 class="h3 mb-0">
            <i class="bi bi-list-ul me-2"></i>
            Plano de Contas
        </h1>
        <p class="text-muted mb-0">Estrutura contábil de receitas e despesas</p>
    </div>
    <a asp-action="Create" class="btn btn-primary">
        <i class="bi bi-plus-circle me-2"></i>
        Nova Conta
    </a>
</div>

<!-- Filtros -->
<div class="card mb-4">
    <div class="card-body">
        <form method="get" class="row g-3">
            <div class="col-md-4">
                <label class="form-label">Buscar</label>
                <input type="text" class="form-control" name="searchString" value="@ViewData["CurrentFilter"]" 
                       placeholder="Código ou descrição...">
            </div>
            <div class="col-md-4">
                <label class="form-label">Tipo</label>
                @Html.DropDownList("tipo", Html.GetEnumSelectList<SistemaTesourariaEclesiastica.Enums.TipoPlanoContas>(), "Todos", 
                    new { @class = "form-select" })
            </div>
            <div class="col-md-4 d-flex align-items-end">
                <button type="submit" class="btn btn-outline-primary me-2">
                    <i class="bi bi-search me-1"></i>
                    Filtrar
                </button>
                <a asp-action="Index" class="btn btn-outline-secondary">
                    <i class="bi bi-arrow-clockwise me-1"></i>
                    Limpar
                </a>
            </div>
        </form>
    </div>
</div>

<!-- Resultados -->
<div class="card">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h5 class="card-title mb-0">
            @ViewBag.TotalItems conta(s) encontrada(s)
        </h5>
        <div class="btn-group btn-group-sm">
            <button type="button" class="btn btn-outline-secondary">
                <i class="bi bi-download"></i>
                Exportar
            </button>
        </div>
    </div>
    <div class="card-body p-0">
        @if (Model.Any())
        {
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>Código</th>
                            <th>Descrição</th>
                            <th>Tipo</th>
                            <th>Status</th>
                            <th width="120">Ações</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    <span class="font-monospace fw-bold">@item.Codigo</span>
                                </td>
                                <td>
                                    <div>
                                        <span class="fw-semibold">@item.Descricao</span>
                                    </div>
                                </td>
                                <td>
                                    @{
                                        var badgeClass = item.Tipo == SistemaTesourariaEclesiastica.Enums.TipoPlanoContas.Receita ? "bg-success" : "bg-danger";
                                        var icon = item.Tipo == SistemaTesourariaEclesiastica.Enums.TipoPlanoContas.Receita ? "bi-arrow-down-circle" : "bi-arrow-up-circle";
                                    }
                                    <span class="badge @badgeClass">
                                        <i class="bi @icon me-1"></i>
                                        @item.Tipo.ToString()
                                    </span>
                                </td>
                                <td>
                                    <span class="badge bg-success">
                                        <i class="bi bi-check-circle me-1"></i>
                                        Ativo
                                    </span>
                                </td>
                                <td>
                                    <div class="btn-group btn-group-sm">
                                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-info" title="Detalhes">
                                            <i class="bi bi-eye"></i>
                                        </a>
                                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-warning" title="Editar">
                                            <i class="bi bi-pencil"></i>
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger" title="Excluir"
                                           data-confirm="Tem certeza que deseja excluir esta conta?">
                                            <i class="bi bi-trash"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="text-center py-5">
                <i class="bi bi-list-ul display-1 text-muted"></i>
                <h5 class="mt-3">Nenhuma conta encontrada</h5>
                <p class="text-muted">Não há contas cadastradas com os filtros aplicados.</p>
                <a asp-action="Create" class="btn btn-primary">
                    <i class="bi bi-plus-circle me-2"></i>
                    Criar Primeira Conta
                </a>
            </div>
        }
    </div>
    
    @if (ViewBag.TotalPages > 1)
    {
        <div class="card-footer">
            <nav aria-label="Navegação de páginas">
                <ul class="pagination pagination-sm justify-content-center mb-0">
                    @if (ViewBag.CurrentPage > 1)
                    {
                        <li class="page-item">
                            <a class="page-link" asp-action="Index" 
                               asp-route-page="@(ViewBag.CurrentPage - 1)"
                               asp-route-searchString="@ViewData["CurrentFilter"]"
                               asp-route-tipo="@ViewData["TipoFilter"]">
                                <i class="bi bi-chevron-left"></i>
                            </a>
                        </li>
                    }
                    
                    @for (int i = Math.Max(1, ViewBag.CurrentPage - 2); i <= Math.Min(ViewBag.TotalPages, ViewBag.CurrentPage + 2); i++)
                    {
                        <li class="page-item @(i == ViewBag.CurrentPage ? "active" : "")">
                            <a class="page-link" asp-action="Index" 
                               asp-route-page="@i"
                               asp-route-searchString="@ViewData["CurrentFilter"]"
                               asp-route-tipo="@ViewData["TipoFilter"]">
                                @i
                            </a>
                        </li>
                    }
                    
                    @if (ViewBag.CurrentPage < ViewBag.TotalPages)
                    {
                        <li class="page-item">
                            <a class="page-link" asp-action="Index" 
                               asp-route-page="@(ViewBag.CurrentPage + 1)"
                               asp-route-searchString="@ViewData["CurrentFilter"]"
                               asp-route-tipo="@ViewData["TipoFilter"]">
                                <i class="bi bi-chevron-right"></i>
                            </a>
                        </li>
                    }
                </ul>
            </nav>
        </div>
    }
</div>

<!-- Cards de Resumo por Tipo -->
<div class="row g-3 mt-4">
    <div class="col-md-6">
        <div class="card border-success">
            <div class="card-header bg-success text-white">
                <h6 class="card-title mb-0">
                    <i class="bi bi-arrow-down-circle me-2"></i>
                    Contas de Receita
                </h6>
            </div>
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h4 class="mb-0">@Model.Count(m => m.Tipo == SistemaTesourariaEclesiastica.Enums.TipoPlanoContas.Receita)</h4>
                        <small class="text-muted">contas cadastradas</small>
                    </div>
                    <i class="bi bi-graph-up-arrow display-6 text-success"></i>
                </div>
            </div>
        </div>
    </div>
    
    <div class="col-md-6">
        <div class="card border-danger">
            <div class="card-header bg-danger text-white">
                <h6 class="card-title mb-0">
                    <i class="bi bi-arrow-up-circle me-2"></i>
                    Contas de Despesa
                </h6>
            </div>
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h4 class="mb-0">@Model.Count(m => m.Tipo == SistemaTesourariaEclesiastica.Enums.TipoPlanoContas.Despesa)</h4>
                        <small class="text-muted">contas cadastradas</small>
                    </div>
                    <i class="bi bi-graph-down-arrow display-6 text-danger"></i>
                </div>
            </div>
        </div>
    </div>
</div>

