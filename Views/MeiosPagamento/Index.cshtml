@model IEnumerable<SistemaTesourariaEclesiastica.Models.MeioDePagamento>

@{
    ViewData["Title"] = "Meios de Pagamento";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h1 class="h3 mb-0">
            <i class="bi bi-credit-card me-2"></i>
            Meios de Pagamento
        </h1>
        <p class="text-muted mb-0">Gerenciar formas de recebimento e pagamento</p>
    </div>
    <a asp-action="Create" class="btn btn-primary">
        <i class="bi bi-plus-circle me-2"></i>
        Novo Meio de Pagamento
    </a>
</div>

<!-- Filtros -->
<div class="card mb-4">
    <div class="card-body">
        <form method="get" class="row g-3">
            <div class="col-md-8">
                <label class="form-label">Buscar</label>
                <input type="text" class="form-control" name="searchString" value="@ViewData["CurrentFilter"]" 
                       placeholder="Nome do meio de pagamento...">
            </div>
            <div class="col-md-4 d-flex align-items-end">
                <button type="submit" class="btn btn-outline-primary me-2">
                    <i class="bi bi-search me-1"></i>
                    Buscar
                </button>
                <a asp-action="Index" class="btn btn-outline-secondary">
                    <i class="bi bi-arrow-clockwise me-1"></i>
                    Limpar
                </a>
            </div>
        </form>
    </div>
</div>

<!-- Resultados -->
<div class="card">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h5 class="card-title mb-0">
            @ViewBag.TotalItems meio(s) de pagamento encontrado(s)
        </h5>
        <div class="btn-group btn-group-sm">
            <button type="button" class="btn btn-outline-secondary">
                <i class="bi bi-download"></i>
                Exportar
            </button>
        </div>
    </div>
    <div class="card-body p-0">
        @if (Model.Any())
        {
            <div class="row g-3 p-3">
                @foreach (var item in Model)
                {
                    <div class="col-md-6 col-lg-4">
                        <div class="card h-100 @(item.Ativo ? "border-success" : "border-secondary")">
                            <div class="card-header d-flex justify-content-between align-items-center @(item.Ativo ? "bg-success" : "bg-secondary") text-white">
                                <h6 class="card-title mb-0">
                                    @{
                                        var icon = item.Nome.ToLower() switch
                                        {
                                            var n when n.Contains("dinheiro") || n.Contains("espécie") => "bi-cash-coin",
                                            var n when n.Contains("pix") => "bi-qr-code",
                                            var n when n.Contains("cartão") || n.Contains("card") => "bi-credit-card",
                                            var n when n.Contains("transferência") || n.Contains("ted") || n.Contains("doc") => "bi-arrow-left-right",
                                            var n when n.Contains("cheque") => "bi-receipt",
                                            var n when n.Contains("boleto") => "bi-upc-scan",
                                            _ => "bi-wallet2"
                                        };
                                    }
                                    <i class="@icon me-2"></i>
                                    @item.Nome
                                </h6>
                                <div class="dropdown">
                                    <button class="btn btn-sm btn-outline-light" type="button" data-bs-toggle="dropdown">
                                        <i class="bi bi-three-dots-vertical"></i>
                                    </button>
                                    <ul class="dropdown-menu">
                                        <li><a class="dropdown-item" asp-action="Details" asp-route-id="@item.Id">
                                            <i class="bi bi-eye me-2"></i>Detalhes
                                        </a></li>
                                        <li><a class="dropdown-item" asp-action="Edit" asp-route-id="@item.Id">
                                            <i class="bi bi-pencil me-2"></i>Editar
                                        </a></li>
                                        <li><hr class="dropdown-divider"></li>
                                        <li>
                                            <form asp-action="ToggleStatus" asp-route-id="@item.Id" method="post" class="d-inline">
                                                <button type="submit" class="dropdown-item">
                                                    @if (item.Ativo)
                                                    {
                                                        <text><i class="bi bi-pause-circle me-2"></i>Desativar</text>
                                                    }
                                                    else
                                                    {
                                                        <text><i class="bi bi-play-circle me-2"></i>Ativar</text>
                                                    }
                                                </button>
                                            </form>
                                        </li>
                                        <li><hr class="dropdown-divider"></li>
                                        <li><a class="dropdown-item text-danger" asp-action="Delete" asp-route-id="@item.Id"
                                               data-confirm="Tem certeza que deseja excluir este meio de pagamento?">
                                            <i class="bi bi-trash me-2"></i>Excluir
                                        </a></li>
                                    </ul>
                                </div>
                            </div>
                            <div class="card-body">
                                @if (!string.IsNullOrEmpty(item.Descricao))
                                {
                                    <p class="card-text text-muted small mb-3">@item.Descricao</p>
                                }
                                else
                                {
                                    <p class="card-text text-muted small mb-3 fst-italic">Sem descrição</p>
                                }
                                
                                <div class="row g-2 text-center">
                                    <div class="col-6">
                                        <div class="border rounded p-2">
                                            <i class="bi bi-arrow-down-circle text-success"></i>
                                            <div class="fw-bold small">0</div>
                                            <small class="text-muted">Entradas</small>
                                        </div>
                                    </div>
                                    <div class="col-6">
                                        <div class="border rounded p-2">
                                            <i class="bi bi-arrow-up-circle text-danger"></i>
                                            <div class="fw-bold small">0</div>
                                            <small class="text-muted">Saídas</small>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="card-footer d-flex justify-content-between align-items-center">
                                <span class="badge @(item.Ativo ? "bg-success" : "bg-secondary")">
                                    @(item.Ativo ? "Ativo" : "Inativo")
                                </span>
                                <div class="btn-group btn-group-sm">
                                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-info" title="Detalhes">
                                        <i class="bi bi-eye"></i>
                                    </a>
                                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-warning" title="Editar">
                                        <i class="bi bi-pencil"></i>
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
        else
        {
            <div class="text-center py-5">
                <i class="bi bi-credit-card display-1 text-muted"></i>
                <h5 class="mt-3">Nenhum meio de pagamento encontrado</h5>
                <p class="text-muted">Não há meios de pagamento cadastrados com os filtros aplicados.</p>
                <a asp-action="Create" class="btn btn-primary">
                    <i class="bi bi-plus-circle me-2"></i>
                    Cadastrar Primeiro Meio de Pagamento
                </a>
            </div>
        }
    </div>
    
    @if (ViewBag.TotalPages > 1)
    {
        <div class="card-footer">
            <nav aria-label="Navegação de páginas">
                <ul class="pagination pagination-sm justify-content-center mb-0">
                    @if (ViewBag.CurrentPage > 1)
                    {
                        <li class="page-item">
                            <a class="page-link" asp-action="Index" 
                               asp-route-page="@(ViewBag.CurrentPage - 1)"
                               asp-route-searchString="@ViewData["CurrentFilter"]">
                                <i class="bi bi-chevron-left"></i>
                            </a>
                        </li>
                    }
                    
                    @for (int i = Math.Max(1, ViewBag.CurrentPage - 2); i <= Math.Min(ViewBag.TotalPages, ViewBag.CurrentPage + 2); i++)
                    {
                        <li class="page-item @(i == ViewBag.CurrentPage ? "active" : "")">
                            <a class="page-link" asp-action="Index" 
                               asp-route-page="@i"
                               asp-route-searchString="@ViewData["CurrentFilter"]">
                                @i
                            </a>
                        </li>
                    }
                    
                    @if (ViewBag.CurrentPage < ViewBag.TotalPages)
                    {
                        <li class="page-item">
                            <a class="page-link" asp-action="Index" 
                               asp-route-page="@(ViewBag.CurrentPage + 1)"
                               asp-route-searchString="@ViewData["CurrentFilter"]">
                                <i class="bi bi-chevron-right"></i>
                            </a>
                        </li>
                    }
                </ul>
            </nav>
        </div>
    }
</div>

<!-- Cards de Resumo -->
<div class="row g-3 mt-4">
    <div class="col-md-3">
        <div class="card border-primary">
            <div class="card-header bg-primary text-white">
                <h6 class="card-title mb-0">
                    <i class="bi bi-credit-card me-2"></i>
                    Total
                </h6>
            </div>
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h4 class="mb-0">@ViewBag.TotalItems</h4>
                        <small class="text-muted">meios cadastrados</small>
                    </div>
                    <i class="bi bi-wallet2 display-6 text-primary"></i>
                </div>
            </div>
        </div>
    </div>
    
    <div class="col-md-3">
        <div class="card border-success">
            <div class="card-header bg-success text-white">
                <h6 class="card-title mb-0">
                    <i class="bi bi-check-circle me-2"></i>
                    Ativos
                </h6>
            </div>
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h4 class="mb-0">@Model.Count(m => m.Ativo)</h4>
                        <small class="text-muted">em uso</small>
                    </div>
                    <i class="bi bi-check-circle display-6 text-success"></i>
                </div>
            </div>
        </div>
    </div>
    
    <div class="col-md-3">
        <div class="card border-secondary">
            <div class="card-header bg-secondary text-white">
                <h6 class="card-title mb-0">
                    <i class="bi bi-pause-circle me-2"></i>
                    Inativos
                </h6>
            </div>
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h4 class="mb-0">@Model.Count(m => !m.Ativo)</h4>
                        <small class="text-muted">desabilitados</small>
                    </div>
                    <i class="bi bi-pause-circle display-6 text-secondary"></i>
                </div>
            </div>
        </div>
    </div>
    
    <div class="col-md-3">
        <div class="card border-info">
            <div class="card-header bg-info text-white">
                <h6 class="card-title mb-0">
                    <i class="bi bi-graph-up me-2"></i>
                    Mais Usado
                </h6>
            </div>
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="mb-0">@(Model.FirstOrDefault()?.Nome ?? "N/A")</h6>
                        <small class="text-muted">meio preferido</small>
                    </div>
                    <i class="bi bi-trophy display-6 text-info"></i>
                </div>
            </div>
        </div>
    </div>
</div>

