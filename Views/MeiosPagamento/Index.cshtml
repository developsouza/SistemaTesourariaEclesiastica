@model IEnumerable<SistemaTesourariaEclesiastica.Models.MeioDePagamento>

@{
    ViewData["Title"] = "Meios de Pagamento";
}

<!-- Cabeçalho -->
<div class="d-flex flex-column flex-md-row justify-content-between align-items-start align-items-md-center mb-4 gap-2">
    <div>
        <h1 class="h3 mb-1">
            <i class="bi bi-credit-card me-2"></i>Meios de Pagamento
        </h1>
        <p class="text-muted mb-0 small">Gerenciar formas de recebimento e pagamento</p>
    </div>
    <a asp-action="Create" class="btn btn-primary">
        <i class="bi bi-plus-circle me-2"></i>Novo Meio de Pagamento
    </a>
</div>

<!-- Filtros -->
<div class="card shadow-sm mb-4">
    <div class="card-body">
        <form method="get" class="row g-3">
            <div class="col-12 col-md-10">
                <label class="form-label small fw-semibold">Buscar</label>
                <input type="text" class="form-control" name="searchString" value="@ViewData["CurrentFilter"]"
                       placeholder="Nome do meio de pagamento...">
            </div>
            <div class="col-12 col-md-2 d-flex align-items-end gap-2">
                <button type="submit" class="btn btn-outline-primary flex-fill">
                    <i class="bi bi-search"></i>
                    <span class="d-none d-md-inline ms-1">Buscar</span>
                </button>
                <a asp-action="Index" class="btn btn-outline-secondary">
                    <i class="bi bi-arrow-clockwise"></i>
                </a>
            </div>
        </form>
    </div>
</div>

<!-- Resultados -->
<div class="card shadow-sm">
    <div class="card-header bg-white d-flex justify-content-between align-items-center py-3">
        <h5 class="mb-0 fw-semibold">
            <i class="bi bi-list-ul me-2 text-primary"></i>
            @ViewBag.TotalItems meio(s) de pagamento encontrado(s)
        </h5>
        <button type="button" class="btn btn-sm btn-outline-secondary" onclick="window.print()">
            <i class="bi bi-printer me-1"></i>Imprimir
        </button>
    </div>

    <div class="card-body p-0">
        @if (Model != null && Model.Any())
        {
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="table-light">
                        <tr>
                            <th class="ps-3">Nome</th>
                            <th class="d-none d-md-table-cell">Descrição</th>
                            <th>Tipo de Caixa</th>
                            <th class="d-none d-lg-table-cell text-center">Status</th>
                            <th class="text-center" style="width: 140px;">Ações</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr class="@(item.Ativo ? "" : "table-secondary")">
                                <td class="ps-3">
                                    <div class="d-flex align-items-center">
                                        <div class="avatar-circle @(item.TipoCaixa.ToString() == "Fisico" ? "bg-warning" : "bg-info") text-white me-2">
                                            @if (item.TipoCaixa.ToString() == "Fisico")
                                            {
                                                <i class="bi bi-cash-coin"></i>
                                            }
                                            else
                                            {
                                                <i class="bi bi-credit-card"></i>
                                            }
                                        </div>
                                        <div>
                                            <div class="fw-semibold">@item.Nome</div>
                                            <small class="text-muted d-md-none">
                                                @(!string.IsNullOrEmpty(item.Descricao) ? item.Descricao : "-")
                                            </small>
                                        </div>
                                    </div>
                                </td>
                                <td class="d-none d-md-table-cell">
                                    @if (!string.IsNullOrEmpty(item.Descricao))
                                    {
                                        <span class="text-muted">@item.Descricao</span>
                                    }
                                    else
                                    {
                                        <span class="text-muted fst-italic">-</span>
                                    }
                                </td>
                                <td>
                                    @if (item.TipoCaixa.ToString() == "Fisico")
                                    {
                                        <span class="badge bg-warning text-dark">
                                            <i class="bi bi-cash-coin me-1"></i>Caixa Físico
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-info">
                                            <i class="bi bi-bank me-1"></i>Caixa Digital
                                        </span>
                                    }
                                </td>
                                <td class="d-none d-lg-table-cell text-center">
                                    @if (item.Ativo)
                                    {
                                        <span class="badge bg-success bg-opacity-10 text-success border border-success">
                                            <i class="bi bi-check-circle me-1"></i>Ativo
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary bg-opacity-10 text-secondary border border-secondary">
                                            <i class="bi bi-x-circle me-1"></i>Inativo
                                        </span>
                                    }
                                </td>
                                <td>
                                    <div class="btn-group btn-group-sm" role="group">
                                        <a asp-action="Details" asp-route-id="@item.Id"
                                           class="btn btn-outline-info" title="Detalhes">
                                            <i class="bi bi-eye"></i>
                                        </a>
                                        <a asp-action="Edit" asp-route-id="@item.Id"
                                           class="btn btn-outline-primary" title="Editar">
                                            <i class="bi bi-pencil"></i>
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@item.Id"
                                           class="btn btn-outline-danger" title="Excluir">
                                            <i class="bi bi-trash"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="text-center py-5">
                <i class="bi bi-credit-card text-muted" style="font-size: 4rem;"></i>
                <h5 class="mt-3 text-muted">Nenhum meio de pagamento encontrado</h5>
                <p class="text-muted">Não há meios de pagamento cadastrados com os filtros aplicados.</p>
                <a asp-action="Create" class="btn btn-primary mt-2">
                    <i class="bi bi-plus-circle me-2"></i>Cadastrar Primeiro Meio de Pagamento
                </a>
            </div>
        }
    </div>

    @if (ViewBag.TotalPages > 1)
    {
        <div class="card-footer bg-white py-3">
            <nav aria-label="Navegação de páginas">
                <ul class="pagination pagination-sm justify-content-center mb-0">
                    <li class="page-item @(ViewBag.CurrentPage <= 1 ? "disabled" : "")">
                        <a class="page-link" asp-action="Index"
                           asp-route-page="@(ViewBag.CurrentPage - 1)"
                           asp-route-searchString="@ViewData["CurrentFilter"]">
                            <i class="bi bi-chevron-left"></i>
                        </a>
                    </li>

                    @for (int i = Math.Max(1, ViewBag.CurrentPage - 2); i <= Math.Min(ViewBag.TotalPages, ViewBag.CurrentPage + 2); i++)
                    {
                        <li class="page-item @(i == ViewBag.CurrentPage ? "active" : "")">
                            <a class="page-link" asp-action="Index"
                               asp-route-page="@i"
                               asp-route-searchString="@ViewData["CurrentFilter"]">
                                @i
                            </a>
                        </li>
                    }

                    <li class="page-item @(ViewBag.CurrentPage >= ViewBag.TotalPages ? "disabled" : "")">
                        <a class="page-link" asp-action="Index"
                           asp-route-page="@(ViewBag.CurrentPage + 1)"
                           asp-route-searchString="@ViewData["CurrentFilter"]">
                            <i class="bi bi-chevron-right"></i>
                        </a>
                    </li>
                </ul>
            </nav>
        </div>
    }
</div>