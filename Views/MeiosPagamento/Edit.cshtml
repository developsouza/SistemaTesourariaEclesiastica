@model SistemaTesourariaEclesiastica.Models.MeioDePagamento

@{
    ViewData["Title"] = "Editar Meio de Pagamento";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h1 class="h3 mb-0">
            <i class="bi bi-pencil me-2"></i>
            Editar Meio de Pagamento
        </h1>
        <p class="text-muted mb-0">Atualizar informações da forma de recebimento ou pagamento</p>
    </div>
    <a asp-action="Index" class="btn btn-outline-secondary">
        <i class="bi bi-arrow-left me-2"></i>
        Voltar
    </a>
</div>

<div class="row">
    <div class="col-lg-8">
        <div class="card">
            <div class="card-header">
                <h5 class="card-title mb-0">
                    <i class="bi bi-info-circle me-2"></i>
                    Informações do Meio de Pagamento
                </h5>
            </div>
            <div class="card-body">
                <form asp-action="Edit" method="post" id="meioPagamentoForm">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                    <input type="hidden" asp-for="Id" />

                    <!-- Nome -->
                    <div class="mb-3">
                        <label asp-for="Nome" class="form-label required"></label>
                        <input asp-for="Nome" class="form-control" placeholder="Ex: Dinheiro, PIX, Cartão de Débito...">
                        <span asp-validation-for="Nome" class="text-danger"></span>
                        <div class="form-text">
                            <i class="bi bi-info-circle me-1"></i>
                            Nome que identificará este meio de pagamento no sistema
                        </div>
                    </div>

                    <!-- Descrição -->
                    <div class="mb-3">
                        <label asp-for="Descricao" class="form-label"></label>
                        <textarea asp-for="Descricao" class="form-control" rows="3" placeholder="Descrição detalhada sobre este meio de pagamento..."></textarea>
                        <span asp-validation-for="Descricao" class="text-danger"></span>
                        <div class="form-text">
                            <i class="bi bi-info-circle me-1"></i>
                            Informações adicionais que ajudem a identificar ou usar este meio de pagamento
                        </div>
                    </div>

                    <!-- Tipo de Caixa -->
                    <div class="mb-3">
                        <label asp-for="TipoCaixa" class="form-label required"></label>
                        <select asp-for="TipoCaixa" class="form-select" asp-items="Html.GetEnumSelectList<SistemaTesourariaEclesiastica.Enums.TipoCaixa>()">
                        </select>
                        <span asp-validation-for="TipoCaixa" class="text-danger"></span>
                        <div class="form-text">
                            <i class="bi bi-exclamation-triangle text-warning me-1"></i>
                            <strong>ATENÇÃO:</strong> Alterar o tipo de caixa pode afetar os cálculos de fechamentos futuros!
                        </div>
                    </div>

                    <!-- Preview do Tipo de Caixa -->
                    <div class="alert" id="tipoCaixaPreview">
                        <div class="d-flex align-items-center">
                            <i class="fs-3 me-3" id="iconTipoCaixa"></i>
                            <div>
                                <strong id="tituloTipoCaixa"></strong>
                                <p class="mb-0 small" id="descricaoTipoCaixa"></p>
                            </div>
                        </div>
                    </div>

                    <!-- Status Ativo -->
                    <div class="mb-4">
                        <div class="form-check form-switch">
                            <input asp-for="Ativo" class="form-check-input" type="checkbox">
                            <label asp-for="Ativo" class="form-check-label">
                                @(Model.Ativo ? "Meio de pagamento ativo" : "Meio de pagamento inativo")
                            </label>
                        </div>
                        <div class="form-text">
                            <i class="bi bi-info-circle me-1"></i>
                            Apenas meios de pagamento ativos aparecerão nas opções de entrada e saída
                        </div>
                    </div>

                    <!-- Botões -->
                    <div class="d-flex justify-content-end gap-2">
                        <a asp-action="Index" class="btn btn-outline-secondary">
                            <i class="bi bi-x-circle me-2"></i>
                            Cancelar
                        </a>
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-check-circle me-2"></i>
                            Salvar Alterações
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <!-- Sidebar de Ajuda -->
    <div class="col-lg-4">
        <div class="card">
            <div class="card-header">
                <h6 class="card-title mb-0">
                    <i class="bi bi-lightbulb me-2"></i>
                    Sobre Tipos de Caixa
                </h6>
            </div>
            <div class="card-body">
                <div class="alert alert-warning">
                    <h6 class="alert-heading">
                        <i class="bi bi-cash-coin me-2"></i>
                        Caixa Físico
                    </h6>
                    <p class="small mb-0">
                        Usado para <strong>dinheiro em espécie</strong>. No fechamento de período, estes valores serão somados no <strong>Balanço Físico</strong>, que representa o dinheiro que precisa ser fisicamente repassado para a Sede.
                    </p>
                </div>

                <div class="alert alert-info">
                    <h6 class="alert-heading">
                        <i class="bi bi-bank2 me-2"></i>
                        Caixa Digital/Bancário
                    </h6>
                    <p class="small mb-0">
                        Usado para <strong>PIX, transferências, cartões</strong> e outros meios eletrônicos. No fechamento de período, estes valores serão somados no <strong>Balanço Digital</strong>, que é apenas informativo (valores já depositados).
                    </p>
                </div>

                <div class="alert alert-danger">
                    <i class="bi bi-exclamation-octagon me-2"></i>
                    <strong>Importante:</strong> Alterar o tipo de caixa de um meio já utilizado pode comprometer a precisão dos relatórios históricos.
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        $(document).ready(function() {
            // Função para atualizar preview
            function atualizarPreview() {
                var valor = $('#TipoCaixa').val();
                var preview = $('#tipoCaixaPreview');
                var icon = $('#iconTipoCaixa');
                var titulo = $('#tituloTipoCaixa');
                var descricao = $('#descricaoTipoCaixa');

                if (valor == '1') { // Físico
                    preview.removeClass('alert-info').addClass('alert-warning');
                    icon.removeClass().addClass('bi bi-cash-coin fs-3 me-3 text-warning');
                    titulo.text('Caixa Físico - Dinheiro em Espécie');
                    descricao.text('Este meio de pagamento será contabilizado no BALANÇO FÍSICO do fechamento.');
                } else if (valor == '2') { // Digital
                    preview.removeClass('alert-warning').addClass('alert-info');
                    icon.removeClass().addClass('bi bi-bank2 fs-3 me-3 text-info');
                    titulo.text('Caixa Digital/Bancário');
                    descricao.text('Este meio de pagamento será contabilizado no BALANÇO DIGITAL do fechamento.');
                }
            }

            // Executar ao carregar
            atualizarPreview();

            // Executar ao alterar
            $('#TipoCaixa').change(atualizarPreview);

            // Preview do status
            $('#Ativo').change(function() {
                var label = $(this).next('label');
                if ($(this).is(':checked')) {
                    label.removeClass('text-muted').addClass('text-success');
                    label.html('<i class="bi bi-check-circle me-1"></i>Meio de pagamento ativo');
                } else {
                    label.removeClass('text-success').addClass('text-muted');
                    label.html('<i class="bi bi-pause-circle me-1"></i>Meio de pagamento inativo');
                }
            });
        });
    </script>
}