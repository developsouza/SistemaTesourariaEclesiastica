@model SistemaTesourariaEclesiastica.Models.MeioDePagamento

@{
    ViewData["Title"] = "Novo Meio de Pagamento";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h1 class="h3 mb-0">
            <i class="bi bi-credit-card-2-front me-2"></i>
            Novo Meio de Pagamento
        </h1>
        <p class="text-muted mb-0">Cadastrar nova forma de recebimento ou pagamento</p>
    </div>
    <a asp-action="Index" class="btn btn-outline-secondary">
        <i class="bi bi-arrow-left me-2"></i>
        Voltar
    </a>
</div>

<div class="row">
    <div class="col-lg-8">
        <div class="card">
            <div class="card-header">
                <h5 class="card-title mb-0">
                    <i class="bi bi-info-circle me-2"></i>
                    Informações do Meio de Pagamento
                </h5>
            </div>
            <div class="card-body">
                <form asp-action="Create" method="post" id="meioPagamentoForm">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                    <!-- Nome -->
                    <div class="mb-3">
                        <label asp-for="Nome" class="form-label required"></label>
                        <input asp-for="Nome" class="form-control" placeholder="Ex: Dinheiro, PIX, Cartão de Débito...">
                        <span asp-validation-for="Nome" class="text-danger"></span>
                        <div class="form-text">
                            <i class="bi bi-info-circle me-1"></i>
                            Nome que identificará este meio de pagamento no sistema
                        </div>
                    </div>

                    <!-- Descrição -->
                    <div class="mb-3">
                        <label asp-for="Descricao" class="form-label"></label>
                        <textarea asp-for="Descricao" class="form-control" rows="3" placeholder="Descrição detalhada sobre este meio de pagamento..."></textarea>
                        <span asp-validation-for="Descricao" class="text-danger"></span>
                        <div class="form-text">
                            <i class="bi bi-info-circle me-1"></i>
                            Informações adicionais que ajudem a identificar ou usar este meio de pagamento
                        </div>
                    </div>

                    <!-- NOVO: Tipo de Caixa -->
                    <div class="mb-3">
                        <label asp-for="TipoCaixa" class="form-label required"></label>
                        <select asp-for="TipoCaixa" class="form-select" asp-items="Html.GetEnumSelectList<SistemaTesourariaEclesiastica.Enums.TipoCaixa>()">
                            <option value="">Selecione o tipo de caixa...</option>
                        </select>
                        <span asp-validation-for="TipoCaixa" class="text-danger"></span>
                        <div class="form-text">
                            <i class="bi bi-info-circle me-1"></i>
                            <strong>Caixa Físico:</strong> Para dinheiro em espécie |
                            <strong>Caixa Digital:</strong> Para PIX, transferências, cartões
                        </div>
                    </div>

                    <!-- Preview do Tipo de Caixa -->
                    <div class="alert alert-info" id="tipoCaixaPreview" style="display: none;">
                        <div class="d-flex align-items-center">
                            <i class="bi bi-cash-coin fs-3 me-3" id="iconTipoCaixa"></i>
                            <div>
                                <strong id="tituloTipoCaixa"></strong>
                                <p class="mb-0 small" id="descricaoTipoCaixa"></p>
                            </div>
                        </div>
                    </div>

                    <!-- Status Ativo -->
                    <div class="mb-4">
                        <div class="form-check form-switch">
                            <input asp-for="Ativo" class="form-check-input" type="checkbox" checked>
                            <label asp-for="Ativo" class="form-check-label">
                                Meio de pagamento ativo
                            </label>
                        </div>
                        <div class="form-text">
                            <i class="bi bi-info-circle me-1"></i>
                            Apenas meios de pagamento ativos aparecerão nas opções de entrada e saída
                        </div>
                    </div>

                    <!-- Botões -->
                    <div class="d-flex justify-content-end gap-2">
                        <a asp-action="Index" class="btn btn-outline-secondary">
                            <i class="bi bi-x-circle me-2"></i>
                            Cancelar
                        </a>
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-check-circle me-2"></i>
                            Salvar Meio de Pagamento
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <!-- Sidebar de Ajuda -->
    <div class="col-lg-4">
        <div class="card">
            <div class="card-header">
                <h6 class="card-title mb-0">
                    <i class="bi bi-lightbulb me-2"></i>
                    Exemplos de Meios de Pagamento
                </h6>
            </div>
            <div class="card-body">
                <div class="mb-3">
                    <h6 class="text-primary">
                        <i class="bi bi-cash-coin me-1"></i>
                        Dinheiro em Espécie
                    </h6>
                    <p class="small text-muted mb-1">
                        Para recebimentos e pagamentos em dinheiro físico.
                    </p>
                    <span class="badge bg-warning text-dark">Caixa Físico</span>
                </div>

                <div class="mb-3">
                    <h6 class="text-primary">
                        <i class="bi bi-qr-code me-1"></i>
                        PIX
                    </h6>
                    <p class="small text-muted mb-1">
                        Transferências instantâneas via PIX.
                    </p>
                    <span class="badge bg-info">Caixa Digital</span>
                </div>

                <div class="mb-3">
                    <h6 class="text-primary">
                        <i class="bi bi-credit-card me-1"></i>
                        Cartão de Débito/Crédito
                    </h6>
                    <p class="small text-muted mb-1">
                        Pagamentos com cartão através de maquininha.
                    </p>
                    <span class="badge bg-info">Caixa Digital</span>
                </div>

                <div class="mb-3">
                    <h6 class="text-primary">
                        <i class="bi bi-bank me-1"></i>
                        Transferência Bancária
                    </h6>
                    <p class="small text-muted mb-1">
                        TED, DOC ou transferências entre bancos.
                    </p>
                    <span class="badge bg-info">Caixa Digital</span>
                </div>

                <div class="alert alert-warning mt-3">
                    <i class="bi bi-exclamation-triangle me-2"></i>
                    <strong>Importante:</strong> O tipo de caixa (Físico ou Digital) afeta o cálculo dos balanços no fechamento de período!
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        $(document).ready(function() {
            // Preview do Tipo de Caixa
            $('#TipoCaixa').change(function() {
                var valor = $(this).val();
                var preview = $('#tipoCaixaPreview');
                var icon = $('#iconTipoCaixa');
                var titulo = $('#tituloTipoCaixa');
                var descricao = $('#descricaoTipoCaixa');

                if (valor == '1') { // Físico
                    preview.removeClass('alert-info').addClass('alert-warning').fadeIn();
                    icon.removeClass().addClass('bi bi-cash-coin fs-3 me-3 text-warning');
                    titulo.text('Caixa Físico - Dinheiro em Espécie');
                    descricao.text('Este meio de pagamento será contabilizado no BALANÇO FÍSICO do fechamento. Usado para dinheiro que precisa ser fisicamente repassado para a Sede.');
                } else if (valor == '2') { // Digital
                    preview.removeClass('alert-warning').addClass('alert-info').fadeIn();
                    icon.removeClass().addClass('bi bi-bank2 fs-3 me-3 text-info');
                    titulo.text('Caixa Digital/Bancário');
                    descricao.text('Este meio de pagamento será contabilizado no BALANÇO DIGITAL do fechamento. Usado para PIX, transferências, cartões e outros meios eletrônicos.');
                } else {
                    preview.fadeOut();
                }
            });

            // Preview do status
            $('#Ativo').change(function() {
                var label = $(this).next('label');
                if ($(this).is(':checked')) {
                    label.removeClass('text-muted').addClass('text-success');
                    label.html('<i class="bi bi-check-circle me-1"></i>Meio de pagamento ativo');
                } else {
                    label.removeClass('text-success').addClass('text-muted');
                    label.html('<i class="bi bi-pause-circle me-1"></i>Meio de pagamento inativo');
                }
            });

            // Ícone dinâmico no campo Nome
            $('#Nome').on('input', function() {
                var valor = $(this).val().toLowerCase();

                if (valor.includes('dinheiro') || valor.includes('especie')) {
                    $(this).prev('label').html('<i class="bi bi-cash-coin me-1"></i>Nome');
                    $('#TipoCaixa').val('1').trigger('change'); // Auto-selecionar Físico
                } else if (valor.includes('pix')) {
                    $(this).prev('label').html('<i class="bi bi-qr-code me-1"></i>Nome');
                    $('#TipoCaixa').val('2').trigger('change'); // Auto-selecionar Digital
                } else if (valor.includes('cartao') || valor.includes('card')) {
                    $(this).prev('label').html('<i class="bi bi-credit-card me-1"></i>Nome');
                    $('#TipoCaixa').val('2').trigger('change');
                } else if (valor.includes('transferencia') || valor.includes('ted') || valor.includes('doc')) {
                    $(this).prev('label').html('<i class="bi bi-arrow-left-right me-1"></i>Nome');
                    $('#TipoCaixa').val('2').trigger('change');
                } else if (valor.includes('cheque')) {
                    $(this).prev('label').html('<i class="bi bi-receipt me-1"></i>Nome');
                    $('#TipoCaixa').val('2').trigger('change');
                } else {
                    $(this).prev('label').html('<i class="bi bi-wallet2 me-1"></i>Nome');
                }
            });
        });
    </script>
}