@model SistemaTesourariaEclesiastica.ViewModels.TransparenciaHistoricoViewModel

@{
    ViewData["Title"] = "Histórico de Contribuições";
}

<!-- Cabeçalho -->
<div class="d-flex flex-column flex-md-row justify-content-between align-items-start align-items-md-center mb-4 gap-2">
    <div>
        <h1 class="h3 mb-1">
            <i class="bi bi-wallet2 me-2 text-success"></i>Histórico de Contribuições
        </h1>
        <p class="text-muted mb-0 small">Visualize seu histórico de dízimos e ofertas</p>
    </div>
    <div class="d-flex gap-2">
        <a asp-action="ExportarPdf" 
           asp-route-nomeCompleto="@Model.MembroNome" 
           class="btn btn-danger btn-sm" 
           id="btnDownloadPdf"
           style="background: linear-gradient(135deg, #dc2626 0%, #b91c1c 100%); border: none; box-shadow: 0 4px 6px rgba(220, 38, 38, 0.3);">
            <i class="bi bi-file-pdf-fill me-2"></i>Download PDF
        </a>
        <a asp-action="Index" class="btn btn-outline-secondary btn-sm">
            <i class="bi bi-arrow-left me-1"></i>Nova Consulta
        </a>
    </div>
</div>

<!-- Card de Informações do Membro -->
<div class="row mb-4">
    <div class="col-lg-4 mb-3">
        <div class="card shadow-sm h-100 border-success">
            <div class="card-header bg-success text-white">
                <h5 class="mb-0">
                    <i class="bi bi-person-circle me-2"></i>Suas Informações
                </h5>
            </div>
            <div class="card-body">
                <div class="text-center mb-3">
                    <div class="avatar-circle-lg bg-success text-white mx-auto mb-3" style="width: 80px; height: 80px; font-size: 2.5rem; display: flex; align-items: center; justify-content: center; border-radius: 50%;">
                        @Model.MembroNome.Substring(0, 1).ToUpper()
                    </div>
                    <h5 class="fw-bold mb-1">@Model.MembroNome</h5>
                    @if (!string.IsNullOrEmpty(Model.MembroApelido))
                    {
                        <p class="text-muted small mb-0">(@Model.MembroApelido)</p>
                    }
                </div>

                <hr>

                <dl class="row mb-0">
                    <dt class="col-5 small">Centro:</dt>
                    <dd class="col-7 small">
                        <span class="badge bg-info">@Model.CentroCustoNome</span>
                    </dd>

                    <dt class="col-5 small">Membro desde:</dt>
                    <dd class="col-7 small">@Model.DataCadastro.ToString("dd/MM/yyyy")</dd>
                </dl>
            </div>
        </div>
    </div>

    <div class="col-lg-8">
        <div class="row">
            <div class="col-md-4 mb-3">
                <div class="card shadow-sm h-100 border-start border-success border-4">
                    <div class="card-body">
                        <div class="d-flex align-items-center">
                            <div class="flex-shrink-0">
                                <div class="avatar-circle bg-success bg-opacity-10 text-success">
                                    <i class="bi bi-cash-coin" style="font-size: 1.5rem;"></i>
                                </div>
                            </div>
                            <div class="ms-3 flex-grow-1">
                                <p class="text-muted small mb-1">Total Contribuído</p>
                                <h4 class="mb-0 fw-bold text-success">@Model.TotalContribuido.ToString("C2")</h4>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-md-4 mb-3">
                <div class="card shadow-sm h-100 border-start border-primary border-4">
                    <div class="card-body">
                        <div class="d-flex align-items-center">
                            <div class="flex-shrink-0">
                                <div class="avatar-circle bg-primary bg-opacity-10 text-primary">
                                    <i class="bi bi-list-ol" style="font-size: 1.5rem;"></i>
                                </div>
                            </div>
                            <div class="ms-3 flex-grow-1">
                                <p class="text-muted small mb-1">Total de Registros</p>
                                <h4 class="mb-0 fw-bold text-primary">@Model.QuantidadeContribuicoes</h4>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-md-4 mb-3">
                <div class="card shadow-sm h-100 border-start border-warning border-4">
                    <div class="card-body">
                        <div class="d-flex align-items-center">
                            <div class="flex-shrink-0">
                                <div class="avatar-circle bg-warning bg-opacity-10 text-warning">
                                    <i class="bi bi-calendar-check" style="font-size: 1.5rem;"></i>
                                </div>
                            </div>
                            <div class="ms-3 flex-grow-1">
                                <p class="text-muted small mb-1">Última Contribuição</p>
                                @if (Model.UltimaContribuicao.HasValue)
                                {
                                    <h6 class="mb-0 fw-bold text-warning">@Model.UltimaContribuicao.Value.ToString("dd/MM/yyyy")</h6>
                                }
                                else
                                {
                                    <h6 class="mb-0 text-muted small">-</h6>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="card shadow-sm border-info">
            <div class="card-body">
                <div class="d-flex align-items-start">
                    <i class="bi bi-info-circle-fill text-info me-3 mt-1" style="font-size: 1.5rem;"></i>
                    <div>
                        <h6 class="fw-semibold mb-2">Sobre este Histórico</h6>
                        <p class="small text-muted mb-0">
                            Este relatório exibe apenas as contribuições que foram <strong>aprovadas</strong> pela administração.
                            Os valores são atualizados após cada fechamento mensal.
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Tabela de Histórico -->
@if (Model.Contribuicoes != null && Model.Contribuicoes.Any())
{
    <div class="card shadow-sm">
        <div class="card-header bg-white d-flex justify-content-between align-items-center py-3">
            <h5 class="mb-0 fw-semibold">
                <i class="bi bi-list-ul me-2 text-success"></i>
                Detalhamento das Contribuições
            </h5>
            <span class="badge bg-success">@Model.QuantidadeContribuicoes registro(s)</span>
        </div>

        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="table-light">
                        <tr>
                            <th class="ps-3">Data</th>
                            <th class="d-none d-md-table-cell">Descrição</th>
                            <th class="d-none d-lg-table-cell">Tipo</th>
                            <th class="d-none d-lg-table-cell">Centro de Custo</th>
                            <th class="d-none d-xl-table-cell">Meio de Pagamento</th>
                            <th class="text-end pe-3">Valor</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var contribuicao in Model.Contribuicoes)
                        {
                            <tr>
                                <td class="ps-3">
                                    <div class="fw-semibold">@contribuicao.Data.ToString("dd/MM/yyyy")</div>
                                    <small class="text-muted">@contribuicao.Data.ToString("HH:mm")</small>
                                </td>
                                <td class="d-none d-md-table-cell">
                                    <div>@contribuicao.Descricao</div>
                                    <small class="text-muted d-lg-none">
                                        @contribuicao.PlanoDeContas?.Nome | @contribuicao.CentroCusto?.Nome
                                    </small>
                                </td>
                                <td class="d-none d-lg-table-cell">
                                    <span class="badge bg-success bg-opacity-10 text-success border border-success">
                                        @contribuicao.PlanoDeContas?.Nome
                                    </span>
                                </td>
                                <td class="d-none d-lg-table-cell">
                                    <span class="badge bg-info bg-opacity-10 text-info border border-info">
                                        @contribuicao.CentroCusto?.Nome
                                    </span>
                                </td>
                                <td class="d-none d-xl-table-cell">
                                    <small class="text-muted">
                                        <i class="bi bi-credit-card me-1"></i>
                                        @contribuicao.MeioDePagamento?.Nome
                                    </small>
                                </td>
                                <td class="text-end pe-3">
                                    <span class="fw-bold text-success">@contribuicao.Valor.ToString("C2")</span>
                                    <div class="d-md-none">
                                        <small class="text-muted">@contribuicao.Descricao</small>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                    <tfoot class="table-success">
                        <tr>
                            <th class="ps-3" colspan="5">TOTAL</th>
                            <th class="text-end pe-3">
                                <span class="fw-bold text-dark fs-5">@Model.TotalContribuido.ToString("C2")</span>
                            </th>
                        </tr>
                    </tfoot>
                </table>
            </div>
        </div>
    </div>
}
else
{
    <div class="card shadow-sm">
        <div class="card-body text-center py-5">
            <i class="bi bi-inbox text-muted" style="font-size: 4rem;"></i>
            <h5 class="mt-3 text-muted">Nenhuma contribuição encontrada</h5>
            <p class="text-muted">Não há contribuições aprovadas para exibir no momento.</p>
        </div>
    </div>
}

<!-- Rodapé -->
<div class="card shadow-sm mt-4 border-primary">
    <div class="card-body">
        <div class="row align-items-center">
            <div class="col-md-8">
                <h6 class="fw-semibold mb-2">
                    <i class="bi bi-heart-fill text-danger me-2"></i>
                    Obrigado por sua fidelidade!
                </h6>
                <p class="small text-muted mb-0">
                    Suas contribuições são essenciais para a obra de Deus. Que o Senhor te abençoe e multiplique tudo o que você semear!
                </p>
            </div>
            <div class="col-md-4 text-md-end mt-3 mt-md-0">
                <a asp-action="Index" class="btn btn-success">
                    <i class="bi bi-arrow-clockwise me-2"></i>
                    Nova Consulta
                </a>
            </div>
        </div>
    </div>
</div>

<style>
    .avatar-circle {
        width: 40px;
        height: 40px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-weight: bold;
    }

    #btnDownloadPdf {
        transition: all 0.3s ease;
        position: relative;
        overflow: hidden;
    }

    #btnDownloadPdf:hover {
        transform: translateY(-2px);
        box-shadow: 0 6px 12px rgba(220, 38, 38, 0.4) !important;
    }

    #btnDownloadPdf:active {
        transform: translateY(0);
    }

    #btnDownloadPdf.loading {
        pointer-events: none;
        opacity: 0.7;
    }

    #btnDownloadPdf::before {
        content: '';
        position: absolute;
        top: 0;
        left: -100%;
        width: 100%;
        height: 100%;
        background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.3), transparent);
        transition: left 0.5s;
    }

    #btnDownloadPdf:hover::before {
        left: 100%;
    }
</style>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const btnPdf = document.getElementById('btnDownloadPdf');

            if (btnPdf) {
                btnPdf.addEventListener('click', function (e) {
                    this.classList.add('loading');
                    const originalHtml = this.innerHTML;
                    this.innerHTML = '<span class="spinner-border spinner-border-sm me-2" role="status" aria-hidden="true"></span>Gerando PDF...';

                    setTimeout(() => {
                        this.classList.remove('loading');
                        this.innerHTML = originalHtml;
                    }, 3000);
                });
            }

            @if (TempData["Erro"] != null)
            {
                <text>
                    alert('@TempData["Erro"]');
                </text>
            }
        });
    </script>
}
