@model IEnumerable<SistemaTesourariaEclesiastica.Models.Fornecedor>

@{
    ViewData["Title"] = "Fornecedores";
}

<!-- Cabeçalho -->
<div class="d-flex flex-column flex-md-row justify-content-between align-items-start align-items-md-center mb-4 gap-2">
    <div>
        <h1 class="h3 mb-1">
            <i class="bi bi-building me-2"></i>Fornecedores
        </h1>
        <p class="text-muted mb-0 small">Gerenciar fornecedores e prestadores de serviços</p>
    </div>
    <a asp-action="Create" class="btn btn-primary">
        <i class="bi bi-plus-circle me-2"></i>Novo Fornecedor
    </a>
</div>

<!-- Filtros -->
<div class="card shadow-sm mb-4">
    <div class="card-body">
        <form method="get" class="row g-3">
            <div class="col-12 col-md-10">
                <label class="form-label small fw-semibold">Buscar</label>
                <input type="text" class="form-control" name="searchString" value="@ViewData["CurrentFilter"]"
                       placeholder="Nome, CNPJ, CPF ou email...">
            </div>
            <div class="col-12 col-md-2 d-flex align-items-end gap-2">
                <button type="submit" class="btn btn-outline-primary flex-fill">
                    <i class="bi bi-search"></i>
                    <span class="d-none d-md-inline ms-1">Buscar</span>
                </button>
                <a asp-action="Index" class="btn btn-outline-secondary">
                    <i class="bi bi-arrow-clockwise"></i>
                </a>
            </div>
        </form>
    </div>
</div>

<!-- Resultados -->
<div class="card shadow-sm">
    <div class="card-header bg-white d-flex justify-content-between align-items-center py-3">
        <h5 class="mb-0 fw-semibold">
            <i class="bi bi-list-ul me-2 text-primary"></i>
            @ViewBag.TotalItems fornecedor(es) encontrado(s)
        </h5>
        <button type="button" class="btn btn-sm btn-outline-secondary" onclick="window.print()">
            <i class="bi bi-printer me-1"></i>Imprimir
        </button>
    </div>

    <div class="card-body p-0">
        @if (Model != null && Model.Any())
        {
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="table-light">
                        <tr>
                            <th class="ps-3">Fornecedor</th>
                            <th class="d-none d-md-table-cell">Documento</th>
                            <th class="d-none d-lg-table-cell">Contato</th>
                            <th class="d-none d-xl-table-cell">Localização</th>
                            <th class="text-center" style="width: 140px;">Ações</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="ps-3">
                                    <div class="d-flex align-items-center">
                                        <div class="avatar-circle bg-primary text-white me-2">
                                            @item.Nome.Substring(0, 1).ToUpper()
                                        </div>
                                        <div>
                                            <div class="fw-semibold">@item.Nome</div>
                                            <small class="text-muted d-md-none">
                                                @(!string.IsNullOrEmpty(item.CNPJ) ? item.CNPJ : item.CPF)
                                            </small>
                                        </div>
                                    </div>
                                </td>
                                <td class="d-none d-md-table-cell">
                                    @if (!string.IsNullOrEmpty(item.CNPJ))
                                    {
                                        <div>
                                            <small class="text-muted">CNPJ:</small>
                                            <div class="fw-semibold">@item.CNPJ</div>
                                        </div>
                                    }
                                    else if (!string.IsNullOrEmpty(item.CPF))
                                    {
                                        <div>
                                            <small class="text-muted">CPF:</small>
                                            <div class="fw-semibold">@item.CPF</div>
                                        </div>
                                    }
                                    else
                                    {
                                        <span class="text-muted fst-italic">-</span>
                                    }
                                </td>
                                <td class="d-none d-lg-table-cell">
                                    @if (!string.IsNullOrEmpty(item.Email))
                                    {
                                        <div>
                                            <i class="bi bi-envelope me-1 text-muted"></i>
                                            <small>@item.Email</small>
                                        </div>
                                    }
                                    @if (!string.IsNullOrEmpty(item.Telefone))
                                    {
                                        <div>
                                            <i class="bi bi-telephone me-1 text-muted"></i>
                                            <small>@item.Telefone</small>
                                        </div>
                                    }
                                    @if (string.IsNullOrEmpty(item.Email) && string.IsNullOrEmpty(item.Telefone))
                                    {
                                        <span class="text-muted fst-italic">-</span>
                                    }
                                </td>
                                <td class="d-none d-xl-table-cell">
                                    @if (!string.IsNullOrEmpty(item.Cidade) && !string.IsNullOrEmpty(item.Estado))
                                    {
                                        <div>
                                            <i class="bi bi-geo-alt me-1 text-muted"></i>
                                            <small>@item.Cidade/@item.Estado</small>
                                        </div>
                                    }
                                    else
                                    {
                                        <span class="text-muted fst-italic">-</span>
                                    }
                                </td>
                                <td>
                                    <div class="btn-group btn-group-sm" role="group">
                                        <a asp-action="Details" asp-route-id="@item.Id"
                                           class="btn btn-outline-info" title="Detalhes">
                                            <i class="bi bi-eye"></i>
                                        </a>
                                        <a asp-action="Edit" asp-route-id="@item.Id"
                                           class="btn btn-outline-primary" title="Editar">
                                            <i class="bi bi-pencil"></i>
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@item.Id"
                                           class="btn btn-outline-danger" title="Excluir">
                                            <i class="bi bi-trash"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="text-center py-5">
                <i class="bi bi-building text-muted" style="font-size: 4rem;"></i>
                <h5 class="mt-3 text-muted">Nenhum fornecedor encontrado</h5>
                <p class="text-muted">Não há fornecedores cadastrados com os filtros aplicados.</p>
                <a asp-action="Create" class="btn btn-primary mt-2">
                    <i class="bi bi-plus-circle me-2"></i>Cadastrar Primeiro Fornecedor
                </a>
            </div>
        }
    </div>

    @if (ViewBag.TotalPages > 1)
    {
        <div class="card-footer bg-white py-3">
            <nav aria-label="Navegação de páginas">
                <ul class="pagination pagination-sm justify-content-center mb-0">
                    <li class="page-item @(ViewBag.CurrentPage <= 1 ? "disabled" : "")">
                        <a class="page-link" asp-action="Index"
                           asp-route-page="@(ViewBag.CurrentPage - 1)"
                           asp-route-searchString="@ViewData["CurrentFilter"]">
                            <i class="bi bi-chevron-left"></i>
                        </a>
                    </li>

                    @for (int i = Math.Max(1, ViewBag.CurrentPage - 2); i <= Math.Min(ViewBag.TotalPages, ViewBag.CurrentPage + 2); i++)
                    {
                        <li class="page-item @(i == ViewBag.CurrentPage ? "active" : "")">
                            <a class="page-link" asp-action="Index"
                               asp-route-page="@i"
                               asp-route-searchString="@ViewData["CurrentFilter"]">
                                @i
                            </a>
                        </li>
                    }

                    <li class="page-item @(ViewBag.CurrentPage >= ViewBag.TotalPages ? "disabled" : "")">
                        <a class="page-link" asp-action="Index"
                           asp-route-page="@(ViewBag.CurrentPage + 1)"
                           asp-route-searchString="@ViewData["CurrentFilter"]">
                            <i class="bi bi-chevron-right"></i>
                        </a>
                    </li>
                </ul>
            </nav>
        </div>
    }
</div>