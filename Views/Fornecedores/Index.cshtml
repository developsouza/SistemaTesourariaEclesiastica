@model IEnumerable<SistemaTesourariaEclesiastica.Models.Fornecedor>

@{
    ViewData["Title"] = "Fornecedores";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h1 class="h3 mb-0">
            <i class="bi bi-building me-2"></i>
            Fornecedores
        </h1>
        <p class="text-muted mb-0">Gerenciar fornecedores e prestadores de serviços</p>
    </div>
    <a asp-action="Create" class="btn btn-primary">
        <i class="bi bi-plus-circle me-2"></i>
        Novo Fornecedor
    </a>
</div>

<!-- Filtros -->
<div class="card mb-4">
    <div class="card-body">
        <form method="get" class="row g-3">
            <div class="col-md-8">
                <label class="form-label">Buscar</label>
                <input type="text" class="form-control" name="searchString" value="@ViewData["CurrentFilter"]" 
                       placeholder="Nome, CNPJ, CPF ou email...">
            </div>
            <div class="col-md-4 d-flex align-items-end">
                <button type="submit" class="btn btn-outline-primary me-2">
                    <i class="bi bi-search me-1"></i>
                    Buscar
                </button>
                <a asp-action="Index" class="btn btn-outline-secondary">
                    <i class="bi bi-arrow-clockwise me-1"></i>
                    Limpar
                </a>
            </div>
        </form>
    </div>
</div>

<!-- Resultados -->
<div class="card">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h5 class="card-title mb-0">
            @ViewBag.TotalItems fornecedor(es) encontrado(s)
        </h5>
        <div class="btn-group btn-group-sm">
            <button type="button" class="btn btn-outline-secondary">
                <i class="bi bi-download"></i>
                Exportar
            </button>
        </div>
    </div>
    <div class="card-body p-0">
        @if (Model.Any())
        {
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>Fornecedor</th>
                            <th>Documento</th>
                            <th>Contato</th>
                            <th>Localização</th>
                            <th width="120">Ações</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    <div class="d-flex align-items-center">
                                        <div class="avatar-sm bg-primary text-white rounded-circle d-flex align-items-center justify-content-center me-3">
                                            @item.Nome.Substring(0, 1).ToUpper()
                                        </div>
                                        <div>
                                            <span class="fw-semibold">@item.Nome</span>
                                            @if (!string.IsNullOrEmpty(item.Observacoes))
                                            {
                                                <br>
                                                <small class="text-muted">@item.Observacoes.Substring(0, Math.Min(50, item.Observacoes.Length))@(item.Observacoes.Length > 50 ? "..." : "")</small>
                                            }
                                        </div>
                                    </div>
                                </td>
                                <td>
                                    @if (!string.IsNullOrEmpty(item.CNPJ))
                                    {
                                        <div>
                                            <span class="badge bg-info">CNPJ</span>
                                            <br>
                                            <span class="font-monospace small">@item.CNPJ</span>
                                        </div>
                                    }
                                    else if (!string.IsNullOrEmpty(item.CPF))
                                    {
                                        <div>
                                            <span class="badge bg-secondary">CPF</span>
                                            <br>
                                            <span class="font-monospace small">@item.CPF</span>
                                        </div>
                                    }
                                    else
                                    {
                                        <span class="text-muted">Não informado</span>
                                    }
                                </td>
                                <td>
                                    @if (!string.IsNullOrEmpty(item.Telefone))
                                    {
                                        <div>
                                            <i class="bi bi-telephone me-1"></i>
                                            <span class="small">@item.Telefone</span>
                                        </div>
                                    }
                                    @if (!string.IsNullOrEmpty(item.Email))
                                    {
                                        <div>
                                            <i class="bi bi-envelope me-1"></i>
                                            <span class="small">@item.Email</span>
                                        </div>
                                    }
                                    @if (string.IsNullOrEmpty(item.Telefone) && string.IsNullOrEmpty(item.Email))
                                    {
                                        <span class="text-muted">Não informado</span>
                                    }
                                </td>
                                <td>
                                    @if (!string.IsNullOrEmpty(item.Cidade) && !string.IsNullOrEmpty(item.Estado))
                                    {
                                        <div>
                                            <i class="bi bi-geo-alt me-1"></i>
                                            <span class="small">@item.Cidade/@item.Estado</span>
                                        </div>
                                    }
                                    @if (!string.IsNullOrEmpty(item.CEP))
                                    {
                                        <div>
                                            <i class="bi bi-mailbox me-1"></i>
                                            <span class="small font-monospace">@item.CEP</span>
                                        </div>
                                    }
                                    @if (string.IsNullOrEmpty(item.Cidade) && string.IsNullOrEmpty(item.Estado) && string.IsNullOrEmpty(item.CEP))
                                    {
                                        <span class="text-muted">Não informado</span>
                                    }
                                </td>
                                <td>
                                    <div class="btn-group btn-group-sm">
                                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-info" title="Detalhes">
                                            <i class="bi bi-eye"></i>
                                        </a>
                                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-warning" title="Editar">
                                            <i class="bi bi-pencil"></i>
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger" title="Excluir"
                                           data-confirm="Tem certeza que deseja excluir este fornecedor?">
                                            <i class="bi bi-trash"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="text-center py-5">
                <i class="bi bi-building display-1 text-muted"></i>
                <h5 class="mt-3">Nenhum fornecedor encontrado</h5>
                <p class="text-muted">Não há fornecedores cadastrados com os filtros aplicados.</p>
                <a asp-action="Create" class="btn btn-primary">
                    <i class="bi bi-plus-circle me-2"></i>
                    Cadastrar Primeiro Fornecedor
                </a>
            </div>
        }
    </div>
    
    @if (ViewBag.TotalPages > 1)
    {
        <div class="card-footer">
            <nav aria-label="Navegação de páginas">
                <ul class="pagination pagination-sm justify-content-center mb-0">
                    @if (ViewBag.CurrentPage > 1)
                    {
                        <li class="page-item">
                            <a class="page-link" asp-action="Index" 
                               asp-route-page="@(ViewBag.CurrentPage - 1)"
                               asp-route-searchString="@ViewData["CurrentFilter"]">
                                <i class="bi bi-chevron-left"></i>
                            </a>
                        </li>
                    }
                    
                    @for (int i = Math.Max(1, ViewBag.CurrentPage - 2); i <= Math.Min(ViewBag.TotalPages, ViewBag.CurrentPage + 2); i++)
                    {
                        <li class="page-item @(i == ViewBag.CurrentPage ? "active" : "")">
                            <a class="page-link" asp-action="Index" 
                               asp-route-page="@i"
                               asp-route-searchString="@ViewData["CurrentFilter"]">
                                @i
                            </a>
                        </li>
                    }
                    
                    @if (ViewBag.CurrentPage < ViewBag.TotalPages)
                    {
                        <li class="page-item">
                            <a class="page-link" asp-action="Index" 
                               asp-route-page="@(ViewBag.CurrentPage + 1)"
                               asp-route-searchString="@ViewData["CurrentFilter"]">
                                <i class="bi bi-chevron-right"></i>
                            </a>
                        </li>
                    }
                </ul>
            </nav>
        </div>
    }
</div>

<!-- Cards de Resumo -->
<div class="row g-3 mt-4">
    <div class="col-md-4">
        <div class="card border-primary">
            <div class="card-header bg-primary text-white">
                <h6 class="card-title mb-0">
                    <i class="bi bi-building me-2"></i>
                    Total de Fornecedores
                </h6>
            </div>
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h4 class="mb-0">@ViewBag.TotalItems</h4>
                        <small class="text-muted">cadastrados</small>
                    </div>
                    <i class="bi bi-people display-6 text-primary"></i>
                </div>
            </div>
        </div>
    </div>
    
    <div class="col-md-4">
        <div class="card border-info">
            <div class="card-header bg-info text-white">
                <h6 class="card-title mb-0">
                    <i class="bi bi-building-check me-2"></i>
                    Pessoa Jurídica
                </h6>
            </div>
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h4 class="mb-0">@Model.Count(f => !string.IsNullOrEmpty(f.CNPJ))</h4>
                        <small class="text-muted">com CNPJ</small>
                    </div>
                    <i class="bi bi-building-gear display-6 text-info"></i>
                </div>
            </div>
        </div>
    </div>
    
    <div class="col-md-4">
        <div class="card border-secondary">
            <div class="card-header bg-secondary text-white">
                <h6 class="card-title mb-0">
                    <i class="bi bi-person-check me-2"></i>
                    Pessoa Física
                </h6>
            </div>
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h4 class="mb-0">@Model.Count(f => !string.IsNullOrEmpty(f.CPF))</h4>
                        <small class="text-muted">com CPF</small>
                    </div>
                    <i class="bi bi-person-gear display-6 text-secondary"></i>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .avatar-sm {
        width: 40px;
        height: 40px;
        font-size: 1rem;
        font-weight: 600;
    }
</style>

