@model SistemaTesourariaEclesiastica.Models.Fornecedor

@{
    ViewData["Title"] = "Excluir Fornecedor";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h1 class="h3 mb-0 text-danger">
            <i class="bi bi-trash me-2"></i>
            Excluir Fornecedor
        </h1>
        <p class="text-muted mb-0">Confirme a exclusão deste fornecedor</p>
    </div>
    <a asp-action="Index" class="btn btn-outline-secondary">
        <i class="bi bi-arrow-left me-2"></i>
        Voltar
    </a>
</div>

<div class="alert alert-danger" role="alert">
    <h4 class="alert-heading"><i class="bi bi-exclamation-triangle me-2"></i>Atenção!</h4>
    <p>Você está prestes a excluir o fornecedor <strong>@Model.Nome</strong>. Esta ação é irreversível.</p>
    <hr>
    <p class="mb-0">Tem certeza que deseja prosseguir com a exclusão?</p>
</div>

<div class="card">
    <div class="card-header">
        <h5 class="card-title mb-0">
            <i class="bi bi-info-circle me-2"></i>
            Detalhes do Fornecedor
        </h5>
    </div>
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Nome)</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Nome)</dd>

            @if (!string.IsNullOrEmpty(Model.CNPJ))
            {
                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.CNPJ)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.CNPJ)</dd>
            }
            else if (!string.IsNullOrEmpty(Model.CPF))
            {
                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.CPF)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.CPF)</dd>
            }

            <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Telefone)</dt>
            <dd class="col-sm-9">@(string.IsNullOrEmpty(Model.Telefone) ? "Não informado" : Html.DisplayFor(model => model.Telefone))</dd>

            <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Email)</dt>
            <dd class="col-sm-9">@(string.IsNullOrEmpty(Model.Email) ? "Não informado" : Html.DisplayFor(model => model.Email))</dd>

            <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Endereco)</dt>
            <dd class="col-sm-9">@(string.IsNullOrEmpty(Model.Endereco) ? "Não informado" : Html.DisplayFor(model => model.Endereco))</dd>

            <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Cidade)</dt>
            <dd class="col-sm-9">@(string.IsNullOrEmpty(Model.Cidade) ? "Não informado" : Html.DisplayFor(model => model.Cidade))</dd>

            <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Estado)</dt>
            <dd class="col-sm-9">@(string.IsNullOrEmpty(Model.Estado) ? "Não informado" : Html.DisplayFor(model => model.Estado))</dd>

            <dt class="col-sm-3">@Html.DisplayNameFor(model => model.CEP)</dt>
            <dd class="col-sm-9">@(string.IsNullOrEmpty(Model.CEP) ? "Não informado" : Html.DisplayFor(model => model.CEP))</dd>

            <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Observacoes)</dt>
            <dd class="col-sm-9">@(string.IsNullOrEmpty(Model.Observacoes) ? "Nenhuma observação" : Html.DisplayFor(model => model.Observacoes))</dd>
        </dl>
    </div>
</div>

<div class="d-flex justify-content-end gap-2 mt-4">
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">
            <i class="bi bi-trash me-2"></i>
            Confirmar Exclusão
        </button>
    </form>
    <a asp-action="Index" class="btn btn-outline-secondary">
        <i class="bi bi-x-circle me-2"></i>
        Cancelar
    </a>
</div>


