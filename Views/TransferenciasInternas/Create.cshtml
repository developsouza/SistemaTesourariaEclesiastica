@model SistemaTesourariaEclesiastica.Models.TransferenciaInterna

@{
    ViewData["Title"] = "Nova Transferência Interna";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h1 class="h3 mb-0">
            <i class="bi bi-arrow-left-right me-2"></i>
            Nova Transferência Interna
        </h1>
        <p class="text-muted mb-0">Registrar uma nova transferência de valores entre contas</p>
    </div>
    <a asp-action="Index" class="btn btn-outline-secondary">
        <i class="bi bi-arrow-left me-2"></i>
        Voltar
    </a>
</div>

<div class="row">
    <div class="col-lg-8">
        <div class="card">
            <div class="card-header">
                <h5 class="card-title mb-0">
                    <i class="bi bi-cash-coin me-2"></i>
                    Dados da Transferência
                </h5>
            </div>
            <div class="card-body">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                    
                    <!-- Data -->
                    <div class="mb-3">
                        <label asp-for="Data" class="form-label required"></label>
                        <input asp-for="Data" class="form-control" type="date">
                        <span asp-validation-for="Data" class="text-danger"></span>
                    </div>

                    <!-- Valor -->
                    <div class="mb-3">
                        <label asp-for="Valor" class="form-label required"></label>
                        <input asp-for="Valor" class="form-control" type="number" step="0.01" placeholder="0.00">
                        <span asp-validation-for="Valor" class="text-danger"></span>
                    </div>

                    <!-- Descrição -->
                    <div class="mb-3">
                        <label asp-for="Descricao" class="form-label"></label>
                        <textarea asp-for="Descricao" class="form-control" rows="3" placeholder="Breve descrição da transferência..."></textarea>
                        <span asp-validation-for="Descricao" class="text-danger"></span>
                    </div>

                    <!-- Meio de Pagamento Origem -->
                    <div class="mb-3">
                        <label asp-for="MeioDePagamentoOrigemId" class="form-label required"></label>
                        <select asp-for="MeioDePagamentoOrigemId" class="form-select" asp-items="ViewBag.MeioDePagamentoOrigemId">
                            <option value="">-- Selecione o Meio de Pagamento de Origem --</option>
                        </select>
                        <span asp-validation-for="MeioDePagamentoOrigemId" class="text-danger"></span>
                    </div>

                    <!-- Meio de Pagamento Destino -->
                    <div class="mb-3">
                        <label asp-for="MeioDePagamentoDestinoId" class="form-label required"></label>
                        <select asp-for="MeioDePagamentoDestinoId" class="form-select" asp-items="ViewBag.MeioDePagamentoDestinoId">
                            <option value="">-- Selecione o Meio de Pagamento de Destino --</option>
                        </select>
                        <span asp-validation-for="MeioDePagamentoDestinoId" class="text-danger"></span>
                    </div>

                    <!-- Centro de Custo Origem -->
                    <div class="mb-3">
                        <label asp-for="CentroCustoOrigemId" class="form-label required"></label>
                        <select asp-for="CentroCustoOrigemId" class="form-select" asp-items="ViewBag.CentroCustoOrigemId">
                            <option value="">-- Selecione o Centro de Custo de Origem --</option>
                        </select>
                        <span asp-validation-for="CentroCustoOrigemId" class="text-danger"></span>
                    </div>

                    <!-- Centro de Custo Destino -->
                    <div class="mb-3">
                        <label asp-for="CentroCustoDestinoId" class="form-label required"></label>
                        <select asp-for="CentroCustoDestinoId" class="form-select" asp-items="ViewBag.CentroCustoDestinoId">
                            <option value="">-- Selecione o Centro de Custo de Destino --</option>
                        </select>
                        <span asp-validation-for="CentroCustoDestinoId" class="text-danger"></span>
                    </div>

                    <!-- Botões -->
                    <div class="d-flex justify-content-end gap-2">
                        <a asp-action="Index" class="btn btn-outline-secondary">
                            <i class="bi bi-x-circle me-2"></i>
                            Cancelar
                        </a>
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-check-circle me-2"></i>
                            Registrar Transferência
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <!-- Sidebar de Ajuda -->
    <div class="col-lg-4">
        <div class="card">
            <div class="card-header">
                <h6 class="card-title mb-0">
                    <i class="bi bi-lightbulb me-2"></i>
                    Dicas de Preenchimento
                </h6>
            </div>
            <div class="card-body">
                <div class="mb-3">
                    <h6 class="text-primary">
                        <i class="bi bi-arrow-left-right me-1"></i>
                        Contas de Origem e Destino
                    </h6>
                    <p class="small text-muted mb-0">
                        Selecione as contas bancárias entre as quais o valor será transferido.
                    </p>
                </div>

                <div class="mb-3">
                    <h6 class="text-primary">
                        <i class="bi bi-currency-dollar me-1"></i>
                        Valor da Transferência
                    </h6>
                    <p class="small text-muted mb-0">
                        Certifique-se de que o valor seja positivo e que a conta de origem tenha saldo suficiente.
                    </p>
                </div>

                <div class="alert alert-info">
                    <i class="bi bi-info-circle me-2"></i>
                    <strong>Importante:</strong> A data e o valor são campos obrigatórios.
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}


