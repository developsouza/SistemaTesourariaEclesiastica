@model SistemaTesourariaEclesiastica.Models.TransferenciaInterna

@{
    ViewData["Title"] = "Detalhes da Transferência Interna";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h1 class="h3 mb-0">
            <i class="bi bi-arrow-left-right me-2"></i>
            Detalhes da Transferência Interna
        </h1>
        <p class="text-muted mb-0">Informações detalhadas sobre a transferência de valores entre contas</p>
    </div>
    <a asp-action="Index" class="btn btn-outline-secondary">
        <i class="bi bi-arrow-left me-2"></i>
        Voltar
    </a>
</div>

<div class="row">
    <div class="col-lg-8">
        <div class="card mb-4">
            <div class="card-header">
                <h5 class="card-title mb-0">
                    <i class="bi bi-info-circle me-2"></i>
                    Dados da Transferência
                </h5>
            </div>
            <div class="card-body">
                <dl class="row">
                    <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Data)</dt>
                    <dd class="col-sm-9">@Html.DisplayFor(model => model.Data)</dd>

                    <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Valor)</dt>
                    <dd class="col-sm-9">@Html.DisplayFor(model => model.Valor)</dd>

                    <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Descricao)</dt>
                    <dd class="col-sm-9">@Html.DisplayFor(model => model.Descricao)</dd>

                    <dt class="col-sm-3">Meio de Pagamento Origem</dt>
                    <dd class="col-sm-9">@Html.DisplayFor(model => model.MeioDePagamentoOrigem.Nome)</dd>

                    <dt class="col-sm-3">Meio de Pagamento Destino</dt>
                    <dd class="col-sm-9">@Html.DisplayFor(model => model.MeioDePagamentoDestino.Nome)</dd>

                    <dt class="col-sm-3">Centro de Custo Origem</dt>
                    <dd class="col-sm-9">@Html.DisplayFor(model => model.CentroCustoOrigem.Nome)</dd>

                    <dt class="col-sm-3">Centro de Custo Destino</dt>
                    <dd class="col-sm-9">@Html.DisplayFor(model => model.CentroCustoDestino.Nome)</dd>

                    <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Usuario)</dt>
                    <dd class="col-sm-9">@Html.DisplayFor(model => model.Usuario.UserName)</dd>

                    <dt class="col-sm-3">@Html.DisplayNameFor(model => model.DataCriacao)</dt>
                    <dd class="col-sm-9">@Html.DisplayFor(model => model.DataCriacao)</dd>
                </dl>
            </div>
        </div>

        <div class="d-flex justify-content-end gap-2">
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">
                <i class="bi bi-pencil me-2"></i>
                Editar
            </a>
            <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger">
                <i class="bi bi-trash me-2"></i>
                Excluir
            </a>
        </div>
    </div>

    <!-- Sidebar de Resumo -->
    <div class="col-lg-4">
        <div class="card">
            <div class="card-header">
                <h6 class="card-title mb-0">
                    <i class="bi bi-graph-up me-2"></i>
                    Resumo da Transferência
                </h6>
            </div>
            <div class="card-body">
                <div class="mb-3">
                    <h6 class="text-primary">
                        <i class="bi bi-cash-coin me-1"></i>
                        Valor Transferido
                    </h6>
                    <p class="small text-muted mb-0">
                        R$ @(Model.Valor.ToString("N2"))
                    </p>
                </div>

                <div class="mb-3">
                    <h6 class="text-primary">
                        <i class="bi bi-calendar-event me-1"></i>
                        Data da Transferência
                    </h6>
                    <p class="small text-muted mb-0">
                        @Model.Data.ToString("dd/MM/yyyy")
                    </p>
                </div>

                <div class="alert alert-info">
                    <i class="bi bi-info-circle me-2"></i>
                    <strong>Dica:</strong> Transferências afetam o saldo de ambas as contas.
                </div>
            </div>
        </div>
    </div>
</div>


