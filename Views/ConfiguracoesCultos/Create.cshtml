@model SistemaTesourariaEclesiastica.Models.ConfiguracaoCulto

@{
    ViewData["Title"] = "Nova Configuração de Culto";
}

<div class="row justify-content-center">
    <div class="col-lg-8">
        <div class="card shadow-sm">
            <div class="card-header bg-primary text-white">
                <h4 class="mb-0">
                    <i class="bi bi-calendar-plus me-2"></i>Nova Configuração de Culto
                </h4>
            </div>
            <div class="card-body">
                <form asp-action="Create" method="post">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                    <div class="alert alert-info" role="alert">
                        <i class="bi bi-info-circle me-2"></i>
                        <strong>Escolha uma das opções:</strong>
                        <ul class="mb-0 mt-2">
                            <li><strong>Dia da Semana:</strong> Para cultos que se repetem semanalmente (exemplo: todas as quartas-feiras)</li>
                            <li><strong>Data Específica:</strong> Para eventos especiais em data única (exemplo: congresso no dia 15/06/2024)</li>
                        </ul>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="DiaSemana" class="form-label fw-semibold">
                                <i class="bi bi-calendar-week me-1"></i>
                                @Html.DisplayNameFor(m => m.DiaSemana) (Semanal)
                            </label>
                            <select asp-for="DiaSemana" class="form-select" id="diaSemanaSelect">
                                <option value="">-- Selecione (opcional) --</option>
                                <option value="0">Domingo</option>
                                <option value="1">Segunda-feira</option>
                                <option value="2">Terça-feira</option>
                                <option value="3">Quarta-feira</option>
                                <option value="4">Quinta-feira</option>
                                <option value="5">Sexta-feira</option>
                                <option value="6">Sábado</option>
                            </select>
                            <span asp-validation-for="DiaSemana" class="text-danger small"></span>
                        </div>

                        <div class="col-md-6 mb-3">
                            <label asp-for="DataEspecifica" class="form-label fw-semibold">
                                <i class="bi bi-calendar-event me-1"></i>
                                @Html.DisplayNameFor(m => m.DataEspecifica) (Evento)
                            </label>
                            <input asp-for="DataEspecifica" type="date" class="form-control" id="dataEspecificaInput" />
                            <span asp-validation-for="DataEspecifica" class="text-danger small"></span>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-4 mb-3">
                            <label asp-for="Horario" class="form-label fw-semibold">
                                <i class="bi bi-clock me-1"></i>
                                @Html.DisplayNameFor(m => m.Horario)
                            </label>
                            <input asp-for="Horario" type="time" class="form-control" />
                            <span asp-validation-for="Horario" class="text-danger small"></span>
                        </div>

                        <div class="col-md-5 mb-3">
                            <label asp-for="TipoCulto" class="form-label fw-semibold">
                                <i class="bi bi-bookmark me-1"></i>
                                @Html.DisplayNameFor(m => m.TipoCulto)
                            </label>
                            <select asp-for="TipoCulto" class="form-select" asp-items="Html.GetEnumSelectList<SistemaTesourariaEclesiastica.Enums.TipoCulto>()"></select>
                            <span asp-validation-for="TipoCulto" class="text-danger small"></span>
                        </div>

                        <div class="col-md-3 mb-3">
                            <label class="form-label fw-semibold">Status</label>
                            <div class="form-check form-switch">
                                <input asp-for="Ativo" class="form-check-input" type="checkbox" checked />
                                <label asp-for="Ativo" class="form-check-label">@Html.DisplayNameFor(m => m.Ativo)</label>
                            </div>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Observacao" class="form-label fw-semibold">
                            <i class="bi bi-chat-left-text me-1"></i>
                            @Html.DisplayNameFor(m => m.Observacao)
                        </label>
                        <textarea asp-for="Observacao" class="form-control" rows="3" placeholder="Ex: Congresso de Missões, Aniversário da Igreja, etc."></textarea>
                        <span asp-validation-for="Observacao" class="text-danger small"></span>
                    </div>

                    <div class="d-flex justify-content-between gap-2 mt-4">
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="bi bi-arrow-left me-1"></i>Voltar
                        </a>
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-save me-1"></i>Salvar
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    
    <script>
        $(document).ready(function() {
            // Sincronizar seleção: quando seleciona um, limpa o outro
            $('#diaSemanaSelect').on('change', function() {
                if ($(this).val()) {
                    $('#dataEspecificaInput').val('');
                }
            });

            $('#dataEspecificaInput').on('change', function() {
                if ($(this).val()) {
                    $('#diaSemanaSelect').val('');
                }
            });

            // Definir data mínima como hoje
            var today = new Date().toISOString().split('T')[0];
            $('#dataEspecificaInput').attr('min', today);
        });
    </script>
}
