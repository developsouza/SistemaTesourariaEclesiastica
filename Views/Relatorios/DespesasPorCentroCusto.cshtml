@model IEnumerable<SistemaTesourariaEclesiastica.Models.Saida>

@{
    ViewData["Title"] = "Despesas por Centro de Custo";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2><i class="fas fa-building me-2"></i>Despesas por Centro de Custo</h2>
    <div>
        <a asp-action="ExportarSaidasExcel" asp-route-dataInicio="@ViewBag.DataInicio" asp-route-dataFim="@ViewBag.DataFim" class="btn btn-success me-2">
            <i class="fas fa-file-excel me-2"></i>Excel
        </a>
        <a asp-action="Index" class="btn btn-secondary">
            <i class="fas fa-arrow-left me-2"></i>Voltar
        </a>
    </div>
</div>

<div class="card mb-4">
    <div class="card-body">
        <form method="get" class="row g-3">
            <div class="col-md-3">
                <label for="dataInicio" class="form-label">Data Início</label>
                <input type="date" class="form-control" id="dataInicio" name="dataInicio" value="@ViewBag.DataInicio" />
            </div>
            <div class="col-md-3">
                <label for="dataFim" class="form-label">Data Fim</label>
                <input type="date" class="form-control" id="dataFim" name="dataFim" value="@ViewBag.DataFim" />
            </div>
            <div class="col-md-4">
                <label for="centroCustoId" class="form-label">Centro de Custo</label>
                <select class="form-select" id="centroCustoId" name="centroCustoId" asp-items="ViewBag.CentrosCusto">
                    <option value="">Todos os centros de custo</option>
                </select>
            </div>
            <div class="col-md-2 d-flex align-items-end">
                <button type="submit" class="btn btn-primary">
                    <i class="fas fa-search me-2"></i>Filtrar
                </button>
            </div>
        </form>
    </div>
</div>

@if (ViewBag.ResumoPorCentroCusto != null)
{
    <div class="card mb-4">
        <div class="card-header">
            <h5 class="mb-0">Resumo por Centro de Custo</h5>
        </div>
        <div class="card-body">
            <div class="row">
                @foreach (var resumo in ViewBag.ResumoPorCentroCusto)
                {
                    <div class="col-md-4 mb-3">
                        <div class="card">
                            <div class="card-body text-center">
                                <h6 class="card-title">@resumo.CentroCustoNome</h6>
                                <h4 class="text-danger">@resumo.TotalDespesas.ToString("C")</h4>
                                <small class="text-muted">@resumo.QuantidadeDespesas despesas</small>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
}

<div class="card">
    <div class="card-header">
        <h5 class="mb-0">Detalhamento das Despesas</h5>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-hover" id="despesasTable">
                <thead>
                    <tr>
                        <th>Data</th>
                        <th>Descrição</th>
                        <th>Fornecedor</th>
                        <th>Centro de Custo</th>
                        <th>Plano de Contas</th>
                        <th>Meio de Pagamento</th>
                        <th class="text-end">Valor</th>
                    </tr>
                </thead>
                <tbody>
                    @{
                        decimal totalDespesas = 0;
                    }
                    @foreach (var item in Model)
                    {
                        totalDespesas += item.Valor;
                        <tr>
                            <td>@item.Data.ToString("dd/MM/yyyy")</td>
                            <td>@item.Descricao</td>
                            <td>@item.Fornecedor?.Nome</td>
                            <td>
                                <span class="badge bg-info">@item.CentroCusto?.Nome</span>
                            </td>
                            <td>
                                <span class="badge bg-primary">@item.PlanoDeContas?.Nome</span>
                            </td>
                            <td>
                                <span class="badge bg-secondary">@item.MeioDePagamento?.Nome</span>
                            </td>
                            <td class="text-end text-danger">@item.Valor.ToString("C")</td>
                        </tr>
                    }
                </tbody>
                <tfoot>
                    <tr class="table-dark">
                        <th colspan="6">TOTAL GERAL</th>
                        <th class="text-end text-danger">@totalDespesas.ToString("C")</th>
                    </tr>
                </tfoot>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            $('#despesasTable').DataTable({
                language: {
                    url: '//cdn.datatables.net/plug-ins/1.13.7/i18n/pt-BR.json'
                },
                responsive: true,
                order: [[0, 'desc']],
                pageLength: 25
            });
        });
    </script>
}
