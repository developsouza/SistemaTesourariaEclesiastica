@model IEnumerable<SistemaTesourariaEclesiastica.Models.Saida>

@{
    ViewData["Title"] = "Despesas por Centro de Custo";
}

<!-- Cabeçalho -->
<div class="d-flex flex-column flex-md-row justify-content-between align-items-start align-items-md-center mb-3 mb-md-4 gap-2">
    <h2 class="h3 mb-0">
        <i class="bi bi-building me-2"></i>
        Despesas por Centro
    </h2>
    <div class="d-flex gap-2">
        <a asp-action="ExportarSaidasExcel" asp-route-dataInicio="@ViewBag.DataInicio" asp-route-dataFim="@ViewBag.DataFim" class="btn btn-success btn-sm">
            <i class="bi bi-file-excel me-1"></i>Excel
        </a>
        <a asp-action="Index" class="btn btn-secondary btn-sm">
            <i class="bi bi-arrow-left me-1"></i>Voltar
        </a>
    </div>
</div>

<!-- Filtros -->
<div class="card mb-3 mb-md-4">
    <div class="card-body p-3 p-md-4">
        <form method="get" class="row g-2 g-md-3">
            <div class="col-6 col-md-3">
                <label for="dataInicio" class="form-label small">Data Início</label>
                <input type="date" class="form-control form-control-sm" id="dataInicio" name="dataInicio" value="@ViewBag.DataInicio" />
            </div>
            <div class="col-6 col-md-3">
                <label for="dataFim" class="form-label small">Data Fim</label>
                <input type="date" class="form-control form-control-sm" id="dataFim" name="dataFim" value="@ViewBag.DataFim" />
            </div>
            <div class="col-12 col-md-4">
                <label for="centroCustoId" class="form-label small">Centro de Custo</label>
                <select class="form-select form-select-sm" id="centroCustoId" name="centroCustoId" asp-items="ViewBag.CentrosCusto">
                    <option value="">Todos</option>
                </select>
            </div>
            <div class="col-12 col-md-2 d-flex align-items-end">
                <button type="submit" class="btn btn-primary btn-sm w-100">
                    <i class="bi bi-search me-1"></i>Filtrar
                </button>
            </div>
        </form>
    </div>
</div>

<!-- Resumo por Centro -->
@if (ViewBag.ResumoPorCentroCusto != null)
{
    <div class="card mb-3 mb-md-4">
        <div class="card-header bg-white border-0 p-3">
            <h5 class="mb-0 small">Resumo por Centro de Custo</h5>
        </div>
        <div class="card-body p-2 p-md-3">
            <div class="row g-2 g-md-3">
                @foreach (var resumo in ViewBag.ResumoPorCentroCusto)
                {
                    <div class="col-6 col-md-4">
                        <div class="card h-100 border">
                            <div class="card-body p-2 p-md-3 text-center">
                                <h6 class="card-title small mb-1">@resumo.CentroCustoNome</h6>
                                <h5 class="text-danger mb-1 fw-bold" style="font-size: clamp(1rem, 3vw, 1.5rem);">
                                    @resumo.TotalDespesas.ToString("C")
                                </h5>
                                <small class="text-muted" style="font-size: 0.7rem;">
                                    @resumo.QuantidadeDespesas despesas
                                </small>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
}

<!-- Tabela DESKTOP -->
<div class="card d-none d-md-block">
    <div class="card-header bg-white border-0 p-3">
        <h5 class="mb-0 small">Detalhamento das Despesas</h5>
    </div>
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-hover mb-0" id="despesasTable">
                <thead class="table-light">
                    <tr>
                        <th>Data</th>
                        <th>Descrição</th>
                        <th>Fornecedor</th>
                        <th>Centro</th>
                        <th>Plano</th>
                        <th>Meio Pgto</th>
                        <th class="text-end">Valor</th>
                    </tr>
                </thead>
                <tbody>
                    @{
                        decimal totalDespesas = 0;
                    }
                    @foreach (var item in Model)
                    {
                        totalDespesas += item.Valor;
                        <tr>
                            <td>@item.Data.ToString("dd/MM/yyyy")</td>
                            <td class="fw-semibold">@item.Descricao</td>
                            <td>@item.Fornecedor?.Nome</td>
                            <td>
                                <span class="badge bg-info">@item.CentroCusto?.Nome</span>
                            </td>
                            <td>
                                <span class="badge bg-primary">@item.PlanoDeContas?.Nome</span>
                            </td>
                            <td>
                                <span class="badge bg-secondary">@item.MeioDePagamento?.Nome</span>
                            </td>
                            <td class="text-end text-danger fw-bold">@item.Valor.ToString("C")</td>
                        </tr>
                    }
                </tbody>
                <tfoot>
                    <tr class="table-dark">
                        <th colspan="6">TOTAL GERAL</th>
                        <th class="text-end text-danger">@totalDespesas.ToString("C")</th>
                    </tr>
                </tfoot>
            </table>
        </div>
    </div>
</div>

<!-- Tabela MOBILE -->
<div class="card d-md-none">
    <div class="card-header bg-white border-0 p-3">
        <h5 class="mb-0 small">Detalhamento das Despesas</h5>
    </div>
    <div class="card-body p-0">
        <div class="list-group list-group-flush">
            @{
                decimal totalDespesasMobile = 0;
            }
            @foreach (var item in Model)
            {
                totalDespesasMobile += item.Valor;
                <div class="list-group-item p-2">
                    <div class="d-flex justify-content-between align-items-start mb-2">
                        <div class="flex-grow-1">
                            <div class="fw-semibold small mb-1">@item.Descricao</div>
                            <small class="text-muted d-block mb-1">
                                <i class="bi bi-calendar3 me-1"></i>
                                @item.Data.ToString("dd/MM/yy")
                            </small>
                            @if (item.Fornecedor != null)
                            {
                                <small class="text-muted d-block">
                                    <i class="bi bi-person me-1"></i>
                                    @item.Fornecedor.Nome
                                </small>
                            }
                        </div>
                        <div class="text-end ms-2">
                            <div class="text-danger fw-bold">
                                @item.Valor.ToString("C")
                            </div>
                        </div>
                    </div>
                    <div class="d-flex flex-wrap gap-1">
                        <span class="badge bg-info" style="font-size: 0.65rem;">
                            @item.CentroCusto?.Nome
                        </span>
                        <span class="badge bg-primary" style="font-size: 0.65rem;">
                            @item.PlanoDeContas?.Nome
                        </span>
                        <span class="badge bg-secondary" style="font-size: 0.65rem;">
                            @item.MeioDePagamento?.Nome
                        </span>
                    </div>
                </div>
            }
        </div>

        <!-- Total Mobile -->
        <div class="p-3 bg-dark text-white">
            <div class="d-flex justify-content-between align-items-center">
                <div class="fw-bold">TOTAL GERAL</div>
                <div class="text-danger fw-bold h5 mb-0">
                    @totalDespesasMobile.ToString("C")
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Inicializar DataTables apenas na tabela desktop
            $('#despesasTable').DataTable({
                language: {
                    url: '//cdn.datatables.net/plug-ins/1.13.7/i18n/pt-BR.json'
                },
                responsive: false,
                order: [[0, 'desc']],
                pageLength: 25
            });
        });
    </script>
}