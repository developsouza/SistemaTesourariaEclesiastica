@model IEnumerable<dynamic>

@{
    ViewData["Title"] = "Balancete Geral";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2><i class="fas fa-balance-scale me-2"></i>Balancete Geral</h2>
    <a asp-action="Index" class="btn btn-secondary">
        <i class="fas fa-arrow-left me-2"></i>Voltar
    </a>
</div>

<div class="card mb-4">
    <div class="card-body">
        <form method="get" class="row g-3">
            <div class="col-md-4">
                <label for="dataInicio" class="form-label">Data Início</label>
                <input type="date" class="form-control" id="dataInicio" name="dataInicio" value="@ViewBag.DataInicio" />
            </div>
            <div class="col-md-4">
                <label for="dataFim" class="form-label">Data Fim</label>
                <input type="date" class="form-control" id="dataFim" name="dataFim" value="@ViewBag.DataFim" />
            </div>
            <div class="col-md-4 d-flex align-items-end">
                <button type="submit" class="btn btn-primary me-2">
                    <i class="fas fa-search me-2"></i>Filtrar
                </button>
                <button type="button" class="btn btn-success" onclick="exportarPDF()">
                    <i class="fas fa-file-pdf me-2"></i>PDF
                </button>
            </div>
        </form>
    </div>
</div>

<div class="card">
    <div class="card-header">
        <h5 class="mb-0">Balancete do Período: @DateTime.Parse(ViewBag.DataInicio).ToString("dd/MM/yyyy") a @DateTime.Parse(ViewBag.DataFim).ToString("dd/MM/yyyy")</h5>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-hover" id="balanceteTable">
                <thead>
                    <tr>
                        <th>Plano de Contas</th>
                        <th>Tipo</th>
                        <th class="text-end">Entradas</th>
                        <th class="text-end">Saídas</th>
                        <th class="text-end">Saldo</th>
                    </tr>
                </thead>
                <tbody>
                    @{
                        decimal totalEntradas = 0;
                        decimal totalSaidas = 0;
                        decimal saldoGeral = 0;
                    }
                    @foreach (var item in Model)
                    {
                        totalEntradas += item.TotalEntradas;
                        totalSaidas += item.TotalSaidas;
                        saldoGeral += item.Saldo;
                        
                        <tr>
                            <td>@item.PlanoContasNome</td>
                            <td>
                                <span class="badge bg-info">
                                    @item.Tipo.GetDisplayName()
                                </span>
                            </td>
                            <td class="text-end text-success">@item.TotalEntradas.ToString("C")</td>
                            <td class="text-end text-danger">@item.TotalSaidas.ToString("C")</td>
                            <td class="text-end @(item.Saldo >= 0 ? "text-success" : "text-danger")">
                                @item.Saldo.ToString("C")
                            </td>
                        </tr>
                    }
                </tbody>
                <tfoot>
                    <tr class="table-dark">
                        <th colspan="2">TOTAIS</th>
                        <th class="text-end text-success">@totalEntradas.ToString("C")</th>
                        <th class="text-end text-danger">@totalSaidas.ToString("C")</th>
                        <th class="text-end @(saldoGeral >= 0 ? "text-success" : "text-danger")">
                            @saldoGeral.ToString("C")
                        </th>
                    </tr>
                </tfoot>
            </table>
        </div>
    </div>
</div>

<div class="row mt-4">
    <div class="col-md-4">
        <div class="card text-center">
            <div class="card-body">
                <h5 class="card-title text-success">Total de Entradas</h5>
                <h3 class="text-success">@totalEntradas.ToString("C")</h3>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card text-center">
            <div class="card-body">
                <h5 class="card-title text-danger">Total de Saídas</h5>
                <h3 class="text-danger">@totalSaidas.ToString("C")</h3>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card text-center">
            <div class="card-body">
                <h5 class="card-title">Saldo Geral</h5>
                <h3 class="@(saldoGeral >= 0 ? "text-success" : "text-danger")">@saldoGeral.ToString("C")</h3>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            $('#balanceteTable').DataTable({
                language: {
                    url: '//cdn.datatables.net/plug-ins/1.13.7/i18n/pt-BR.json'
                },
                responsive: true,
                order: [[0, 'asc']],
                paging: false,
                searching: false,
                info: false
            });
        });

        function exportarPDF() {
            window.print();
        }
    </script>
}
