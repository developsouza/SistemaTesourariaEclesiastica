@model IEnumerable<dynamic>

@{
    ViewData["Title"] = "Balancete Geral";
}

<!-- Cabeçalho -->
<div class="d-flex flex-column flex-md-row justify-content-between align-items-start align-items-md-center mb-3 mb-md-4 gap-2">
    <h2 class="h3 mb-0">
        <i class="bi bi-calculator me-2"></i>
        Balancete Geral
    </h2>
    <a asp-action="Index" class="btn btn-secondary btn-sm">
        <i class="bi bi-arrow-left me-1"></i>Voltar
    </a>
</div>

<!-- Filtros -->
<div class="card mb-3 mb-md-4">
    <div class="card-body p-3 p-md-4">
        <form method="get" class="row g-2 g-md-3">
            <div class="col-12 col-md-4">
                <label for="dataInicio" class="form-label small">Data Início</label>
                <input type="date" class="form-control form-control-sm" id="dataInicio" name="dataInicio" value="@ViewBag.DataInicio" />
            </div>
            <div class="col-12 col-md-4">
                <label for="dataFim" class="form-label small">Data Fim</label>
                <input type="date" class="form-control form-control-sm" id="dataFim" name="dataFim" value="@ViewBag.DataFim" />
            </div>
            <div class="col-12 col-md-4 d-flex align-items-end gap-2">
                <button type="submit" class="btn btn-primary btn-sm flex-grow-1">
                    <i class="bi bi-search me-1"></i>Filtrar
                </button>
                <button type="button" class="btn btn-success btn-sm" onclick="exportarPDF()">
                    <i class="bi bi-file-pdf me-1"></i>PDF
                </button>
            </div>
        </form>
    </div>
</div>

<!-- Cards de Resumo -->
<div class="row g-2 g-md-3 mb-3 mb-md-4">
    @{
        decimal totalEntradas = 0;
        decimal totalSaidas = 0;
        decimal saldoGeral = 0;

        foreach (var item in Model)
        {
            totalEntradas += item.TotalEntradas;
            totalSaidas += item.TotalSaidas;
            saldoGeral += item.Saldo;
        }
    }

    <div class="col-4 col-md-4">
        <div class="card border-0 h-100">
            <div class="card-body p-2 p-md-3 text-center">
                <small class="text-muted d-block mb-1" style="font-size: 0.7rem;">Entradas</small>
                <h5 class="mb-0 text-success fw-bold" style="font-size: clamp(0.9rem, 3vw, 1.25rem);">
                    @totalEntradas.ToString("C")
                </h5>
            </div>
        </div>
    </div>

    <div class="col-4 col-md-4">
        <div class="card border-0 h-100">
            <div class="card-body p-2 p-md-3 text-center">
                <small class="text-muted d-block mb-1" style="font-size: 0.7rem;">Saídas</small>
                <h5 class="mb-0 text-danger fw-bold" style="font-size: clamp(0.9rem, 3vw, 1.25rem);">
                    @totalSaidas.ToString("C")
                </h5>
            </div>
        </div>
    </div>

    <div class="col-4 col-md-4">
        <div class="card border-0 h-100">
            <div class="card-body p-2 p-md-3 text-center">
                <small class="text-muted d-block mb-1" style="font-size: 0.7rem;">Saldo</small>
                <h5 class="mb-0 fw-bold @(saldoGeral >= 0 ? "text-success" : "text-danger")" style="font-size: clamp(0.9rem, 3vw, 1.25rem);">
                    @saldoGeral.ToString("C")
                </h5>
            </div>
        </div>
    </div>
</div>

<!-- Tabela DESKTOP -->
<div class="card d-none d-md-block">
    <div class="card-header bg-white border-0 p-3 p-md-4">
        <h5 class="mb-0">
            Período: @DateTime.Parse(ViewBag.DataInicio).ToString("dd/MM/yyyy") a @DateTime.Parse(ViewBag.DataFim).ToString("dd/MM/yyyy")
        </h5>
    </div>
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-hover mb-0" id="balanceteTable">
                <thead class="table-light">
                    <tr>
                        <th>Plano de Contas</th>
                        <th>Tipo</th>
                        <th class="text-end">Entradas</th>
                        <th class="text-end">Saídas</th>
                        <th class="text-end">Saldo</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="fw-semibold">@item.PlanoContasNome</td>
                            <td>
                                <span class="badge bg-info">
                                    @item.Tipo.ToString()
                                </span>
                            </td>
                            <td class="text-end text-success">@item.TotalEntradas.ToString("C")</td>
                            <td class="text-end text-danger">@item.TotalSaidas.ToString("C")</td>
                            <td class="text-end fw-bold @(item.Saldo >= 0 ? "text-success" : "text-danger")">
                                @item.Saldo.ToString("C")
                            </td>
                        </tr>
                    }
                </tbody>
                <tfoot>
                    <tr class="table-dark">
                        <th colspan="2">TOTAIS</th>
                        <th class="text-end text-success">@totalEntradas.ToString("C")</th>
                        <th class="text-end text-danger">@totalSaidas.ToString("C")</th>
                        <th class="text-end @(saldoGeral >= 0 ? "text-success" : "text-danger")">
                            @saldoGeral.ToString("C")
                        </th>
                    </tr>
                </tfoot>
            </table>
        </div>
    </div>
</div>

<!-- Tabela MOBILE -->
<div class="card d-md-none">
    <div class="card-header bg-white border-0 p-3">
        <h5 class="mb-0 small">
            Período: @DateTime.Parse(ViewBag.DataInicio).ToString("dd/MM/yyyy") a @DateTime.Parse(ViewBag.DataFim).ToString("dd/MM/yyyy")
        </h5>
    </div>
    <div class="card-body p-0">
        <div class="list-group list-group-flush">
            @foreach (var item in Model)
            {
                <div class="list-group-item p-2">
                    <div class="mb-2">
                        <div class="fw-semibold small mb-1">@item.PlanoContasNome</div>
                        <span class="badge bg-info" style="font-size: 0.7rem;">
                            @item.Tipo.ToString()
                        </span>
                    </div>
                    <div class="row g-2 small">
                        <div class="col-4">
                            <div class="text-muted" style="font-size: 0.7rem;">Entradas</div>
                            <div class="text-success fw-bold">@item.TotalEntradas.ToString("C")</div>
                        </div>
                        <div class="col-4">
                            <div class="text-muted" style="font-size: 0.7rem;">Saídas</div>
                            <div class="text-danger fw-bold">@item.TotalSaidas.ToString("C")</div>
                        </div>
                        <div class="col-4">
                            <div class="text-muted" style="font-size: 0.7rem;">Saldo</div>
                            <div class="fw-bold @(item.Saldo >= 0 ? "text-success" : "text-danger")">
                                @item.Saldo.ToString("C")
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>

        <!-- Totais Mobile -->
        <div class="p-3 bg-dark text-white">
            <div class="fw-bold mb-2">TOTAIS</div>
            <div class="row g-2 small">
                <div class="col-4">
                    <div class="text-white-50" style="font-size: 0.7rem;">Entradas</div>
                    <div class="text-success fw-bold">@totalEntradas.ToString("C")</div>
                </div>
                <div class="col-4">
                    <div class="text-white-50" style="font-size: 0.7rem;">Saídas</div>
                    <div class="text-danger fw-bold">@totalSaidas.ToString("C")</div>
                </div>
                <div class="col-4">
                    <div class="text-white-50" style="font-size: 0.7rem;">Saldo</div>
                    <div class="fw-bold @(saldoGeral >= 0 ? "text-success" : "text-danger")">
                        @saldoGeral.ToString("C")
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Inicializar DataTables apenas na tabela desktop
            $('#balanceteTable').DataTable({
                language: {
                    url: '//cdn.datatables.net/plug-ins/1.13.7/i18n/pt-BR.json'
                },
                responsive: false,
                order: [[0, 'asc']],
                paging: false,
                searching: false,
                info: false
            });
        });

        function exportarPDF() {
            window.print();
        }
    </script>
}