@{
    ViewData["Title"] = "Relatórios Gerenciais";
}

<!-- Cabeçalho -->
<div class="mb-4">
    <h1 class="h3 mb-1">
        <i class="bi bi-bar-chart-line me-2"></i>Relatórios Gerenciais
    </h1>
    <p class="text-muted mb-0 small">Análises financeiras e acompanhamento de resultados</p>
</div>

<!-- Cards de Relatórios -->
<div class="row g-4">
    <!-- Fluxo de Caixa -->
    <div class="col-12 col-md-6 col-lg-4">
        <a asp-action="FluxoDeCaixa" class="text-decoration-none">
            <div class="card shadow-sm h-100 border-0 border-start border-info border-4 hover-lift">
                <div class="card-body">
                    <div class="d-flex align-items-center mb-3">
                        <div class="flex-shrink-0 me-3">
                            <div class="avatar-circle bg-info text-white" style="width: 50px; height: 50px;">
                                <i class="bi bi-graph-up fs-4"></i>
                            </div>
                        </div>
                        <div class="flex-grow-1">
                            <h5 class="mb-0 fw-bold">Fluxo de Caixa</h5>
                            <small class="text-muted">Análise diária</small>
                        </div>
                    </div>
                    <p class="text-muted small mb-0">
                        Acompanhe entradas e saídas diárias com saldo acumulado
                    </p>
                </div>
                <div class="card-footer bg-info bg-opacity-10 border-0">
                    <div class="d-flex justify-content-between align-items-center">
                        <small class="text-info fw-semibold">Visualizar relatório</small>
                        <i class="bi bi-arrow-right text-info"></i>
                    </div>
                </div>
            </div>
        </a>
    </div>

    <!-- Entradas por Período -->
    <div class="col-12 col-md-6 col-lg-4">
        <a asp-action="EntradasPorPeriodo" class="text-decoration-none">
            <div class="card shadow-sm h-100 border-0 border-start border-success border-4 hover-lift">
                <div class="card-body">
                    <div class="d-flex align-items-center mb-3">
                        <div class="flex-shrink-0 me-3">
                            <div class="avatar-circle bg-success text-white" style="width: 50px; height: 50px;">
                                <i class="bi bi-arrow-down-circle fs-4"></i>
                            </div>
                        </div>
                        <div class="flex-grow-1">
                            <h5 class="mb-0 fw-bold">Entradas</h5>
                            <small class="text-muted">Por período</small>
                        </div>
                    </div>
                    <p class="text-muted small mb-0">
                        Relatório detalhado de todas as receitas do período
                    </p>
                </div>
                <div class="card-footer bg-success bg-opacity-10 border-0">
                    <div class="d-flex justify-content-between align-items-center">
                        <small class="text-success fw-semibold">Visualizar relatório</small>
                        <i class="bi bi-arrow-right text-success"></i>
                    </div>
                </div>
            </div>
        </a>
    </div>

    <!-- Saídas por Período -->
    <div class="col-12 col-md-6 col-lg-4">
        <a asp-action="SaidasPorPeriodo" class="text-decoration-none">
            <div class="card shadow-sm h-100 border-0 border-start border-danger border-4 hover-lift">
                <div class="card-body">
                    <div class="d-flex align-items-center mb-3">
                        <div class="flex-shrink-0 me-3">
                            <div class="avatar-circle bg-danger text-white" style="width: 50px; height: 50px;">
                                <i class="bi bi-arrow-up-circle fs-4"></i>
                            </div>
                        </div>
                        <div class="flex-grow-1">
                            <h5 class="mb-0 fw-bold">Saídas</h5>
                            <small class="text-muted">Por período</small>
                        </div>
                    </div>
                    <p class="text-muted small mb-0">
                        Relatório detalhado de todas as despesas do período
                    </p>
                </div>
                <div class="card-footer bg-danger bg-opacity-10 border-0">
                    <div class="d-flex justify-content-between align-items-center">
                        <small class="text-danger fw-semibold">Visualizar relatório</small>
                        <i class="bi bi-arrow-right text-danger"></i>
                    </div>
                </div>
            </div>
        </a>
    </div>

    <!-- Balancete Mensal -->
    <div class="col-12 col-md-6 col-lg-4">
        <a asp-action="BalanceteMensal" class="text-decoration-none">
            <div class="card shadow-sm h-100 border-0 border-start border-success border-4 hover-lift">
                <div class="card-body">
                    <div class="d-flex align-items-center mb-3">
                        <div class="flex-shrink-0 me-3">
                            <div class="avatar-circle bg-success text-white" style="width: 50px; height: 50px;">
                                <i class="bi bi-file-earmark-spreadsheet fs-4"></i>
                            </div>
                        </div>
                        <div class="flex-grow-1">
                            <h5 class="mb-0 fw-bold">Balancete Mensal</h5>
                            <small class="text-muted">Verificação de entradas</small>
                        </div>
                    </div>
                    <p class="text-muted small mb-0">
                        Relatório oficial de verificação de entradas e congregações
                    </p>
                </div>
                <div class="card-footer bg-success bg-opacity-10 border-0">
                    <div class="d-flex justify-content-between align-items-center">
                        <small class="text-success fw-semibold">Visualizar relatório</small>
                        <i class="bi bi-arrow-right text-success"></i>
                    </div>
                </div>
            </div>
        </a>
    </div>

    <!-- Balancete Geral -->
    <div class="col-12 col-md-6 col-lg-4">
        <a asp-action="BalanceteGeral" class="text-decoration-none">
            <div class="card shadow-sm h-100 border-0 border-start border-primary border-4 hover-lift">
                <div class="card-body">
                    <div class="d-flex align-items-center mb-3">
                        <div class="flex-shrink-0 me-3">
                            <div class="avatar-circle bg-primary text-white" style="width: 50px; height: 50px;">
                                <i class="bi bi-calculator fs-4"></i>
                            </div>
                        </div>
                        <div class="flex-grow-1">
                            <h5 class="mb-0 fw-bold">Balancete Geral</h5>
                            <small class="text-muted">Consolidado</small>
                        </div>
                    </div>
                    <p class="text-muted small mb-0">
                        Visão consolidada de receitas e despesas por categoria
                    </p>
                </div>
                <div class="card-footer bg-primary bg-opacity-10 border-0">
                    <div class="d-flex justify-content-between align-items-center">
                        <small class="text-primary fw-semibold">Visualizar relatório</small>
                        <i class="bi bi-arrow-right text-primary"></i>
                    </div>
                </div>
            </div>
        </a>
    </div>

    <!-- Contribuições por Membro -->
    <div class="col-12 col-md-6 col-lg-4">
        <a asp-action="ContribuicoesPorMembro" class="text-decoration-none">
            <div class="card shadow-sm h-100 border-0 border-start border-warning border-4 hover-lift">
                <div class="card-body">
                    <div class="d-flex align-items-center mb-3">
                        <div class="flex-shrink-0 me-3">
                            <div class="avatar-circle bg-warning text-dark" style="width: 50px; height: 50px;">
                                <i class="bi bi-people fs-4"></i>
                            </div>
                        </div>
                        <div class="flex-grow-1">
                            <h5 class="mb-0 fw-bold">Contribuições</h5>
                            <small class="text-muted">Por membro</small>
                        </div>
                    </div>
                    <p class="text-muted small mb-0">
                        Acompanhamento de dízimos e ofertas por dizimista
                    </p>
                </div>
                <div class="card-footer bg-warning bg-opacity-10 border-0">
                    <div class="d-flex justify-content-between align-items-center">
                        <small class="text-warning fw-semibold">Visualizar relatório</small>
                        <i class="bi bi-arrow-right text-warning"></i>
                    </div>
                </div>
            </div>
        </a>
    </div>

    <!-- Despesas por Centro de Custo -->
    <div class="col-12 col-md-6 col-lg-4">
        <a asp-action="DespesasPorCentroCusto" class="text-decoration-none">
            <div class="card shadow-sm h-100 border-0 border-start border-secondary border-4 hover-lift">
                <div class="card-body">
                    <div class="d-flex align-items-center mb-3">
                        <div class="flex-shrink-0 me-3">
                            <div class="avatar-circle bg-secondary text-white" style="width: 50px; height: 50px;">
                                <i class="bi bi-diagram-3 fs-4"></i>
                            </div>
                        </div>
                        <div class="flex-grow-1">
                            <h5 class="mb-0 fw-bold">Despesas por CC</h5>
                            <small class="text-muted">Centro de custo</small>
                        </div>
                    </div>
                    <p class="text-muted small mb-0">
                        Análise de gastos por unidade administrativa
                    </p>
                </div>
                <div class="card-footer bg-secondary bg-opacity-10 border-0">
                    <div class="d-flex justify-content-between align-items-center">
                        <small class="text-secondary fw-semibold">Visualizar relatório</small>
                        <i class="bi bi-arrow-right text-secondary"></i>
                    </div>
                </div>
            </div>
        </a>
    </div>
</div>

<!-- Alert Informativo -->
<div class="alert alert-info mt-4 d-flex align-items-start">
    <i class="bi bi-info-circle me-3 fs-5"></i>
    <div>
        <h6 class="alert-heading mb-2">Sobre os Relatórios</h6>
        <p class="mb-0 small">
            Todos os relatórios podem ser exportados para <strong>Excel</strong> e <strong>PDF</strong>.
            Use os filtros disponíveis em cada relatório para personalizar a análise conforme sua necessidade.
        </p>
    </div>
</div>

@section Styles {
    <style>
        .hover-lift {
            transition: all 0.3s ease;
        }

            .hover-lift:hover {
                transform: translateY(-5px);
                box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15) !important;
            }

        .card a:hover {
            text-decoration: none;
        }
    </style>
}