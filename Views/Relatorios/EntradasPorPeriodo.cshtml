@model IEnumerable<SistemaTesourariaEclesiastica.Models.Entrada>

@{
    ViewData["Title"] = "Relatório de Entradas por Período";
}

<!-- Cabeçalho -->
<div class="d-flex flex-column flex-md-row justify-content-between align-items-start align-items-md-center mb-4 gap-2">
    <div>
        <h1 class="h3 mb-1">
            <i class="bi bi-arrow-down-circle me-2 text-success"></i>Entradas por Período
        </h1>
        <p class="text-muted mb-0 small">Relatório detalhado de receitas</p>
    </div>
    <div class="d-flex gap-2">
        <button class="btn btn-success btn-sm" onclick="exportToExcel()">
            <i class="bi bi-file-excel me-1"></i>Excel
        </button>
        <button class="btn btn-danger btn-sm" onclick="exportToPdf()">
            <i class="bi bi-file-pdf me-1"></i>PDF
        </button>
        <a asp-action="Index" class="btn btn-outline-secondary btn-sm">
            <i class="bi bi-arrow-left me-1"></i>Voltar
        </a>
    </div>
</div>

<!-- Filtros -->
<div class="card shadow-sm mb-4">
    <div class="card-body">
        <form method="get" class="row g-3">
            <div class="col-12 col-md-5">
                <label class="form-label small fw-semibold">Data Início</label>
                <input type="date" class="form-control" name="dataInicio" value="@ViewBag.DataInicio">
            </div>
            <div class="col-12 col-md-5">
                <label class="form-label small fw-semibold">Data Fim</label>
                <input type="date" class="form-control" name="dataFim" value="@ViewBag.DataFim">
            </div>
            <div class="col-12 col-md-2 d-flex align-items-end">
                <button type="submit" class="btn btn-primary w-100">
                    <i class="bi bi-search me-1"></i>Filtrar
                </button>
            </div>
        </form>
    </div>
</div>

<!-- Resultados -->
@if (Model == null || !Model.Any())
{
    <div class="card shadow-sm">
        <div class="card-body text-center py-5">
            <i class="bi bi-inbox text-muted" style="font-size: 4rem;"></i>
            <h5 class="mt-3 text-muted">Nenhuma entrada encontrada</h5>
            <p class="text-muted">Não há registros de entradas para o período selecionado.</p>
        </div>
    </div>
}
else
{
    <!-- Card de Resumo -->
    <div class="row g-3 mb-4">
        <div class="col-12 col-md-4">
            <div class="card shadow-sm border-0 bg-success bg-opacity-10 border-start border-success border-4">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="flex-grow-1">
                            <small class="text-muted d-block">Total de Entradas</small>
                            <h4 class="mb-0 fw-bold text-success">@Model.Sum(x => x.Valor).ToString("C2")</h4>
                        </div>
                        <div class="flex-shrink-0">
                            <i class="bi bi-cash-coin text-success" style="font-size: 2rem;"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-12 col-md-4">
            <div class="card shadow-sm border-0 bg-info bg-opacity-10 border-start border-info border-4">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="flex-grow-1">
                            <small class="text-muted d-block">Quantidade</small>
                            <h4 class="mb-0 fw-bold text-info">@Model.Count()</h4>
                        </div>
                        <div class="flex-shrink-0">
                            <i class="bi bi-list-ol text-info" style="font-size: 2rem;"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-12 col-md-4">
            <div class="card shadow-sm border-0 bg-primary bg-opacity-10 border-start border-primary border-4">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="flex-grow-1">
                            <small class="text-muted d-block">Ticket Médio</small>
                            <h4 class="mb-0 fw-bold text-primary">@((Model.Sum(x => x.Valor) / Model.Count()).ToString("C2"))</h4>
                        </div>
                        <div class="flex-shrink-0">
                            <i class="bi bi-graph-up text-primary" style="font-size: 2rem;"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Tabela -->
    <div class="card shadow-sm">
        <div class="card-header bg-white d-flex justify-content-between align-items-center py-3">
            <h5 class="mb-0 fw-semibold">
                <i class="bi bi-table me-2 text-success"></i>
                Detalhamento das Entradas
            </h5>
            <button type="button" class="btn btn-sm btn-outline-secondary" onclick="window.print()">
                <i class="bi bi-printer me-1"></i>Imprimir
            </button>
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0" id="entradasTable">
                    <thead class="table-light">
                        <tr>
                            <th class="ps-3">Data</th>
                            <th>Descrição</th>
                            <th class="text-end">Valor</th>
                            <th class="d-none d-md-table-cell">Fonte de Renda</th>
                            <th class="d-none d-lg-table-cell">Membro</th>
                            <th class="d-none d-xl-table-cell">Centro de Custo</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="ps-3">
                                    <div class="fw-semibold">@item.Data.ToString("dd/MM/yy")</div>
                                    <small class="text-muted">@item.Data.ToString("HH:mm")</small>
                                </td>
                                <td>
                                    <div>@item.Descricao</div>
                                    <small class="text-muted d-md-none">@item.PlanoDeContas?.Nome</small>
                                </td>
                                <td class="text-end">
                                    <span class="fw-bold text-success">@item.Valor.ToString("C2")</span>
                                </td>
                                <td class="d-none d-md-table-cell">
                                    <span class="badge bg-success bg-opacity-10 text-success border border-success">
                                        @item.PlanoDeContas?.Nome
                                    </span>
                                </td>
                                <td class="d-none d-lg-table-cell">
                                    @if (item.Membro != null)
                                    {
                                        <span>@item.Membro.NomeCompleto</span>
                                    }
                                    else
                                    {
                                        <span class="text-muted fst-italic">-</span>
                                    }
                                </td>
                                <td class="d-none d-xl-table-cell">
                                    <small class="text-muted">@item.CentroCusto?.Nome</small>
                                </td>
                            </tr>
                        }
                    </tbody>
                    <tfoot class="table-light">
                        <tr>
                            <th class="ps-3" colspan="2">TOTAL</th>
                            <th class="text-end">
                                <span class="fw-bold text-success">@Model.Sum(x => x.Valor).ToString("C2")</span>
                            </th>
                            <th colspan="3"></th>
                        </tr>
                    </tfoot>
                </table>
            </div>
        </div>
    </div>
}

@section Scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/xlsx/0.17.0/xlsx.full.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jspdf/2.3.1/jspdf.umd.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jspdf-autotable/3.5.14/jspdf.plugin.autotable.min.js"></script>
    <script>
        function exportToExcel() {
            const table = document.getElementById("entradasTable");
            const ws = XLSX.utils.table_to_sheet(table);
            const wb = XLSX.utils.book_new();
            XLSX.utils.book_append_sheet(wb, ws, "Entradas");
            XLSX.writeFile(wb, "EntradasPorPeriodo.xlsx");
        }

        function exportToPdf() {
            const { jsPDF } = window.jspdf;
            const doc = new jsPDF();
            doc.text("Relatório de Entradas por Período", 14, 15);
            doc.autoTable({
                html: '#entradasTable',
                startY: 25,
                headStyles: { fillColor: [40, 167, 69] },
                styles: { fontSize: 8 }
            });
            doc.save("EntradasPorPeriodo.pdf");
        }
    </script>
}