@model SistemaTesourariaEclesiastica.ViewModels.BalanceteMensalViewModel

@{
    ViewData["Title"] = "Balancete de Verificação";
    var mes = Model.DataInicio.ToString("MMMM", new System.Globalization.CultureInfo("pt-BR")).ToUpper();
    var ano = Model.DataInicio.Year;
}

<!-- Estilos customizados para o balancete -->
<style>
    .balancete-container {
        background: white;
        padding: 30px;
        box-shadow: var(--shadow-lg);
        font-family: Arial, sans-serif;
        color: black;
        max-width: 800px;
        margin: 0 auto;
    }

    .balancete-header {
        text-align: center;
        border: 2px solid black;
        padding: 10px;
        margin-bottom: 0;
        background: white;
    }

    .balancete-header-content {
        display: flex;
        align-items: center;
        justify-content: flex-start;
        gap: 15px;
    }

    .balancete-header-content img {
        height: 100px;
        width: 100px;
        object-fit: contain;
        flex-shrink: 0;
    }

    .balancete-header-text {
        text-align: center;
        flex-grow: 1;
    }

    .balancete-header h1 {
        font-size: 14px;
        font-weight: bold;
        margin: 0;
        padding: 0;
        text-transform: uppercase;
        color: black;
        line-height: 1.2;
    }

    .balancete-header p {
        font-size: 10px;
        margin: 3px 0 0 0;
        color: black;
    }

    .balancete-header .subtitle {
        font-size: 11px;
        font-weight: bold;
        margin: 8px 0 3px 0;
    }

    .periodo-info-container {
        display: grid;
        grid-template-columns: 1fr auto 1fr;
        border-left: 2px solid black;
        border-right: 2px solid black;
        border-bottom: 2px solid black;
        margin-bottom: 5px;
    }

    .periodo-box {
        border: 1px solid black;
        padding: 4px 8px;
        font-size: 11px;
        text-align: center;
        font-weight: bold;
        background: white;
    }

    .periodo-box.left {
        border-right: none;
    }

    .periodo-box.center {
        border-right: none;
        border-left: none;
    }

    .periodo-box.right {
        border-left: none;
    }

    .secao-titulo {
        background: transparent;
        color: black;
        padding: 4px 8px;
        font-weight: bold;
        font-size: 11px;
        text-transform: uppercase;
        margin-top: 5px;
        margin-bottom: 0;
        border: 2px solid black;
        border-bottom: none;
        width: 55%;
        display: inline-block;
        text-align: center;
        box-sizing: border-box;
    }

    .balancete-table {
        width: 100%;
        border-collapse: collapse;
        margin-bottom: 0;
        margin-top: 0;
        font-size: 10px;
        background: white;
        border-left: 2px solid black;
        border-right: 2px solid black;
        border-top: 2px solid black;
    }

    .balancete-table td {
        padding: 2px 6px;
        border-bottom: 1px solid black;
        color: black;
        line-height: 1.4;
    }

    .balancete-table .item-descricao {
        width: 55%;
        text-align: left;
        border-right: 1px solid black;
    }

    .balancete-table .item-label {
        width: 5%;
        text-align: center;
        border-right: 1px solid black;
        font-weight: normal;
    }

    .balancete-table .item-valor {
        width: 20%;
        text-align: right;
        padding-right: 10px;
        border-right: 1px solid black;
    }

    .balancete-table .item-total {
        width: 20%;
        text-align: right;
        padding-right: 10px;
    }

    .balancete-table .total-row td {
        font-weight: bold;
        padding: 4px 6px;
        border-bottom: 2px solid black;
    }

    .balancete-table .total-row .item-total {
        font-weight: bold;
    }

    .balancete-table .last-section {
        border-bottom: 2px solid black;
    }

    .assinaturas {
        display: flex;
        justify-content: space-around;
        margin-top: 60px;
        padding-top: 20px;
        gap: 40px;
    }

    .assinatura {
        text-align: center;
        flex: 1;
    }

    .assinatura-linha {
        border-top: 1px solid black;
        width: 100%;
        max-width: 250px;
        margin: 0 auto 5px;
        padding-top: 5px;
        color: black;
        font-size: 10px;
    }

    .assinatura-cargo {
        font-size: 10px;
        color: black;
        margin-top: 3px;
    }

    .no-print {
        margin-bottom: 20px;
    }

    /* Ajustes para impressão */
    @@media print {
        .no-print {
            display: none !important;
        }

        .balancete-container {
            box-shadow: none;
            padding: 0;
            max-width: 100%;
        }

        body, .balancete-container {
            background: white !important;
            color: black !important;
        }
    }
</style>

<!-- Botões de ação -->
<div class="no-print mb-4">
    <div class="d-flex justify-content-between align-items-center">
        <div>
            <h3><i class="bi bi-file-earmark-spreadsheet me-2"></i>Balancete de Verificação</h3>
            <p class="text-muted mb-0">Relatório de verificação das igrejas representadas e congregações</p>
        </div>
        <div>
            <button onclick="window.print()" class="btn btn-primary">
                <i class="bi bi-printer me-1"></i>Imprimir
            </button>
            <a href="@Url.Action("BalanceteMensalPdf", new { centroCustoId = ViewBag.CentroCustoId, dataInicio = ViewBag.DataInicio, dataFim = ViewBag.DataFim })"
               class="btn btn-danger">
                <i class="bi bi-file-pdf me-1"></i>Exportar PDF
            </a>
            <a asp-action="Index" class="btn btn-outline-secondary">
                <i class="bi bi-arrow-left me-1"></i>Voltar
            </a>
        </div>
    </div>

    <!-- Filtros -->
    @if (ViewBag.PodeEscolherCentroCusto)
    {
        <div class="card mt-3">
            <div class="card-body">
                <form method="get" class="row g-3">
                    <div class="col-md-4">
                        <label class="form-label small fw-semibold">Centro de Custo</label>
                        <select name="centroCustoId" class="form-select">
                            @if (ViewBag.CentrosCusto != null)
                            {
                                foreach (var item in ViewBag.CentrosCusto)
                                {
                                    <option value="@item.Value" selected="@(item.Selected)">@item.Text</option>
                                }
                            }
                        </select>
                    </div>
                    <div class="col-md-3">
                        <label class="form-label small fw-semibold">Data Início</label>
                        <input type="date" name="dataInicio" class="form-control" value="@ViewBag.DataInicio" />
                    </div>
                    <div class="col-md-3">
                        <label class="form-label small fw-semibold">Data Fim</label>
                        <input type="date" name="dataFim" class="form-control" value="@ViewBag.DataFim" />
                    </div>
                    <div class="col-md-2 d-flex align-items-end">
                        <button type="submit" class="btn btn-primary w-100">
                            <i class="bi bi-search me-1"></i>Filtrar
                        </button>
                    </div>
                </form>
            </div>
        </div>
    }
</div>

<!-- Relatório Balancete -->
<div class="balancete-container">
    <!-- Cabeçalho Oficial -->
    <div class="balancete-header">
        <div class="balancete-header-content">
            <img src="/images/logoadpb.png" alt="Logo ADPB" onerror="this.style.display='none'" />
            <div class="balancete-header-text">
                <h1>CONVENÇÃO DE MINISTROS DAS ASSEMBLÉIAS DE DEUS</h1>
                <h1>NO ESTADO DA PARAÍBA - COMADEP</h1>
                <p>CNPJ 04.362.336/0001-55 - Rua 1° de Maio, 239,Jaguaribe - João Pessoa-PB</p>
                <p class="subtitle">Balancete de Verificação das Igrejas Representadas e Congregações</p>
                <p style="margin-bottom: 0;">Realizado em</p>
            </div>
        </div>
    </div>

    <!-- Informações do Período -->
    <div class="periodo-info-container">
        <div class="periodo-box left">@Model.CentroCustoNome</div>
        <div class="periodo-box center">PB</div>
        <div class="periodo-box right">@Model.DataInicio.Day / @mes / @ano</div>
    </div>

    <!-- ========================================
         RECEITAS OPERACIONAIS
         ======================================== -->
    <div class="secao-titulo">RECEITAS OPERACIONAIS</div>
    <table class="balancete-table">
        <tr>
            <td class="item-descricao">Saldo do Mês Anterior</td>
            <td class="item-label">R$</td>
            <td class="item-valor"></td>
            <td class="item-total">R$</td>
        </tr>
        <tr>
            <td class="item-descricao">Dízimos e ofertas do Tempo Centra</td>
            <td class="item-label">R$</td>
            <td class="item-valor">@(Model.ReceitasOperacionais.FirstOrDefault(r => r.Descricao.Contains("Dízimo"))?.Valor.ToString("N2") ?? "")</td>
            <td class="item-total"></td>
        </tr>
        <tr>
            <td class="item-descricao">Ofertas do Círculo de Oração (Adultos e Mocidades</td>
            <td class="item-label">R$</td>
            <td class="item-valor">@(Model.ReceitasOperacionais.FirstOrDefault(r => r.Descricao.Contains("Círculo"))?.Valor.ToString("N2") ?? "")</td>
            <td class="item-total"></td>
        </tr>
        <tr>
            <td class="item-descricao">Ofertas</td>
            <td class="item-label">R$</td>
            <td class="item-valor">@(Model.ReceitasOperacionais.FirstOrDefault(r => r.Descricao == "Ofertas")?.Valor.ToString("N2") ?? "")</td>
            <td class="item-total"></td>
        </tr>
        <tr class="total-row">
            <td class="item-descricao">Total do crédito</td>
            <td class="item-label"></td>
            <td class="item-valor"></td>
            <td class="item-total">R$ @Model.TotalCredito.ToString("N2")</td>
        </tr>
    </table>

    <!-- ========================================
         IMOBILIZADOS
         ======================================== -->
    <div class="secao-titulo">IMOBILIZADOS</div>
    <table class="balancete-table">
        <tr>
            <td class="item-descricao">Imóveis</td>
            <td class="item-label">R$</td>
            <td class="item-valor"></td>
            <td class="item-total"></td>
        </tr>
        <tr>
            <td class="item-descricao">Veículo</td>
            <td class="item-label">R$</td>
            <td class="item-valor"></td>
            <td class="item-total"></td>
        </tr>
        <tr>
            <td class="item-descricao">Móveis e Utensílio</td>
            <td class="item-label">R$</td>
            <td class="item-valor"></td>
            <td class="item-total"></td>
        </tr>
        <tr>
            <td class="item-descricao">Instalações</td>
            <td class="item-label">R$</td>
            <td class="item-valor"></td>
            <td class="item-total"></td>
        </tr>
        <tr>
            <td class="item-descricao">Máquinas e Equipamentos</td>
            <td class="item-label">R$</td>
            <td class="item-valor"></td>
            <td class="item-total"></td>
        </tr>
        <tr class="total-row">
            <td class="item-descricao">Total do Crédito</td>
            <td class="item-label"></td>
            <td class="item-valor"></td>
            <td class="item-total">R$ @Model.TotalCreditoComImobilizados.ToString("N2")</td>
        </tr>
    </table>

    <!-- ========================================
         DESPESAS ADMINISTRATIVAS
         ======================================== -->
    <div class="secao-titulo">DESPESAS ADIMINISTRATIVAS</div>
    <table class="balancete-table">
        @{
            var lastAdm = Model.DespesasAdministrativas.LastOrDefault();
        }
        @foreach (var item in Model.DespesasAdministrativas)
        {
            <tr>
                <td class="item-descricao">@item.Descricao</td>
                <td class="item-label">R$</td>
                <td class="item-valor">@(item.Valor > 0 ? item.Valor.ToString("N2") : "")</td>
                <td class="item-total">@(item == lastAdm ? "R$ 0,00" : "")</td>
            </tr>
        }
    </table>

    <!-- ========================================
         DESPESAS TRIBUTÁRIAS
         ======================================== -->
    <div class="secao-titulo">Despesas Tributárias</div>
    <table class="balancete-table">
        @{
            var lastTrib = Model.DespesasTributarias.LastOrDefault();
        }
        @foreach (var item in Model.DespesasTributarias)
        {
            <tr>
                <td class="item-descricao">@item.Descricao</td>
                <td class="item-label">R$</td>
                <td class="item-valor">@(item.Valor > 0 ? item.Valor.ToString("N2") : "")</td>
                <td class="item-total">@(item == lastTrib ? "R$ 0,00" : "")</td>
            </tr>
        }
    </table>

    <!-- ========================================
         DESPESAS FINANCEIRAS
         ======================================== -->
    <div class="secao-titulo">DESPESAS FINANCEIRAS</div>
    <table class="balancete-table">
        @foreach (var item in Model.DespesasFinanceiras)
        {
            <tr>
                <td class="item-descricao">@item.Descricao</td>
                <td class="item-label">R$</td>
                <td class="item-valor">@(item.Valor > 0 ? item.Valor.ToString("N2") : "")</td>
                <td class="item-total"></td>
            </tr>
        }
        <tr class="total-row last-section">
            <td class="item-descricao">Total do Débito</td>
            <td class="item-label"></td>
            <td class="item-valor"></td>
            <td class="item-total">R$ @Model.TotalDebito.ToString("N2")</td>
        </tr>
    </table>

    <!-- Assinaturas -->
    <div class="assinaturas">
        <div class="assinatura">
            <div class="assinatura-linha">
                @(string.IsNullOrEmpty(Model.TesoureriroResponsavel) ? "" : Model.TesoureriroResponsavel)
            </div>
            <div class="assinatura-cargo">Tesoureiro</div>
        </div>
        <div class="assinatura">
            <div class="assinatura-linha">
                @(string.IsNullOrEmpty(Model.VistoDoPastor) ? "" : Model.VistoDoPastor)
            </div>
            <div class="assinatura-cargo">Visto do Pastor</div>
        </div>
    </div>
</div></div>