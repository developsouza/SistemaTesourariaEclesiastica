@model IEnumerable<SistemaTesourariaEclesiastica.Models.Entrada>

@{
    ViewData["Title"] = "Contribuições por Membro";
}

<!-- Cabeçalho -->
<div class="d-flex flex-column flex-md-row justify-content-between align-items-start align-items-md-center mb-3 mb-md-4 gap-2">
    <h2 class="h3 mb-0">
        <i class="bi bi-people me-2"></i>
        Contribuições por Membro
    </h2>
    <div class="d-flex gap-2">
        <a asp-action="ExportarEntradasExcel" asp-route-dataInicio="@ViewBag.DataInicio" asp-route-dataFim="@ViewBag.DataFim" class="btn btn-success btn-sm">
            <i class="bi bi-file-excel me-1"></i>Excel
        </a>
        <a asp-action="Index" class="btn btn-secondary btn-sm">
            <i class="bi bi-arrow-left me-1"></i>Voltar
        </a>
    </div>
</div>

<!-- Filtros -->
<div class="card mb-3 mb-md-4">
    <div class="card-body p-3 p-md-4">
        <form method="get" class="row g-2 g-md-3">
            <div class="col-6 col-md-3">
                <label for="dataInicio" class="form-label small">Data Início</label>
                <input type="date" class="form-control form-control-sm" id="dataInicio" name="dataInicio" value="@ViewBag.DataInicio" />
            </div>
            <div class="col-6 col-md-3">
                <label for="dataFim" class="form-label small">Data Fim</label>
                <input type="date" class="form-control form-control-sm" id="dataFim" name="dataFim" value="@ViewBag.DataFim" />
            </div>
            <div class="col-12 col-md-4">
                <label for="membroId" class="form-label small">Membro</label>
                <select class="form-select form-select-sm" id="membroId" name="membroId" asp-items="ViewBag.Membros">
                    <option value="">Todos os membros</option>
                </select>
            </div>
            <div class="col-12 col-md-2 d-flex align-items-end">
                <button type="submit" class="btn btn-primary btn-sm w-100">
                    <i class="bi bi-search me-1"></i>Filtrar
                </button>
            </div>
        </form>
    </div>
</div>

<!-- Resumo por Membro -->
@if (ViewBag.ResumoPorMembro != null)
{
    <div class="card mb-3 mb-md-4">
        <div class="card-header bg-white border-0 p-3">
            <h5 class="mb-0 small">Resumo por Membro</h5>
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <!-- Desktop -->
                    <thead class="d-none d-md-table-header-group">
                        <tr>
                            <th>Membro</th>
                            <th class="text-end">Total Contribuições</th>
                            <th class="text-center">Quantidade</th>
                            <th class="text-center">Última Contribuição</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var resumo in ViewBag.ResumoPorMembro)
                        {
                            <!-- Desktop -->
                            <tr class="d-none d-md-table-row">
                                <td class="fw-semibold">@resumo.MembroNome</td>
                                <td class="text-end text-success fw-bold">@resumo.TotalContribuicoes.ToString("C")</td>
                                <td class="text-center">@resumo.QuantidadeContribuicoes</td>
                                <td class="text-center">@resumo.UltimaContribuicao.ToString("dd/MM/yyyy")</td>
                            </tr>

                            <!-- Mobile -->
                            <tr class="d-md-none">
                                <td class="p-3">
                                    <div class="d-flex justify-content-between align-items-start mb-2">
                                        <div class="flex-grow-1">
                                            <div class="fw-bold mb-1">@resumo.MembroNome</div>
                                            <small class="text-muted">
                                                <i class="bi bi-calendar3 me-1"></i>
                                                Última: @resumo.UltimaContribuicao.ToString("dd/MM/yy")
                                            </small>
                                        </div>
                                        <div class="text-end">
                                            <div class="text-success fw-bold h6 mb-0">
                                                @resumo.TotalContribuicoes.ToString("C")
                                            </div>
                                        </div>
                                    </div>
                                    <div class="text-center">
                                        <span class="badge bg-primary">
                                            @resumo.QuantidadeContribuicoes contribuições
                                        </span>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
}

<!-- Detalhamento das Contribuições -->
<div class="card">
    <div class="card-header bg-white border-0 p-3">
        <h5 class="mb-0 small">Detalhamento das Contribuições</h5>
    </div>
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-hover mb-0" id="contribuicoesTable">
                <!-- Desktop -->
                <thead class="table-light d-none d-md-table-header-group">
                    <tr>
                        <th>Data</th>
                        <th>Membro</th>
                        <th>Descrição</th>
                        <th>Centro</th>
                        <th>Plano</th>
                        <th>Meio Pgto</th>
                        <th class="text-end">Valor</th>
                    </tr>
                </thead>
                <tbody>
                    @{
                        decimal totalContribuicoes = 0;
                    }
                    @foreach (var item in Model)
                    {
                        totalContribuicoes += item.Valor;

                        <!-- Desktop -->
                        <tr class="d-none d-md-table-row">
                            <td>@item.Data.ToString("dd/MM/yyyy")</td>
                            <td class="fw-semibold">@item.Membro?.NomeCompleto</td>
                            <td>@item.Descricao</td>
                            <td>
                                <span class="badge bg-info">@item.CentroCusto?.Nome</span>
                            </td>
                            <td>
                                <span class="badge bg-primary">@item.PlanoDeContas?.Nome</span>
                            </td>
                            <td>
                                <span class="badge bg-secondary">@item.MeioDePagamento?.Nome</span>
                            </td>
                            <td class="text-end text-success fw-bold">@item.Valor.ToString("C")</td>
                        </tr>

                        <!-- Mobile -->
                        <tr class="d-md-none">
                            <td class="p-2">
                                <div class="d-flex justify-content-between align-items-start mb-2">
                                    <div class="flex-grow-1">
                                        <div class="fw-semibold small mb-1">@item.Membro?.NomeCompleto</div>
                                        <small class="text-muted d-block mb-1">@item.Descricao</small>
                                        <small class="text-muted">
                                            <i class="bi bi-calendar3 me-1"></i>
                                            @item.Data.ToString("dd/MM/yy")
                                        </small>
                                    </div>
                                    <div class="text-end ms-2">
                                        <div class="text-success fw-bold">
                                            @item.Valor.ToString("C")
                                        </div>
                                    </div>
                                </div>
                                <div class="d-flex flex-wrap gap-1">
                                    <span class="badge bg-info" style="font-size: 0.65rem;">
                                        @item.CentroCusto?.Nome
                                    </span>
                                    <span class="badge bg-primary" style="font-size: 0.65rem;">
                                        @item.PlanoDeContas?.Nome
                                    </span>
                                    <span class="badge bg-secondary" style="font-size: 0.65rem;">
                                        @item.MeioDePagamento?.Nome
                                    </span>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>

                <!-- Totais Desktop -->
                <tfoot class="d-none d-md-table-footer-group">
                    <tr class="table-dark">
                        <th colspan="6">TOTAL GERAL</th>
                        <th class="text-end text-success">@totalContribuicoes.ToString("C")</th>
                    </tr>
                </tfoot>
            </table>
        </div>

        <!-- Total Mobile -->
        <div class="d-md-none p-3 bg-dark text-white">
            <div class="d-flex justify-content-between align-items-center">
                <div class="fw-bold">TOTAL GERAL</div>
                <div class="text-success fw-bold h5 mb-0">
                    @totalContribuicoes.ToString("C")
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            if (window.innerWidth > 768) {
                $('#contribuicoesTable').DataTable({
                    language: {
                        url: '//cdn.datatables.net/plug-ins/1.13.7/i18n/pt-BR.json'
                    },
                    responsive: true,
                    order: [[0, 'desc']],
                    pageLength: 25
                });
            }
        });
    </script>
}