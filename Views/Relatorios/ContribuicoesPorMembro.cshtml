@model IEnumerable<SistemaTesourariaEclesiastica.Models.Entrada>

@{
    ViewData["Title"] = "Contribui√ß√µes por Membro";
}

<!-- Cabe√ßalho -->
<div class="d-flex flex-column flex-md-row justify-content-between align-items-start align-items-md-center mb-4 gap-2">
    <div>
        <h1 class="h3 mb-1">
            <i class="bi bi-people me-2 text-warning"></i>Contribui√ß√µes por Membro
        </h1>
        <p class="text-muted mb-0 small">Acompanhamento de d√≠zimos e ofertas</p>
    </div>
    <div class="d-flex gap-2">
        <a asp-action="ExportarEntradasExcel" asp-route-dataInicio="@ViewBag.DataInicio" asp-route-dataFim="@ViewBag.DataFim" class="btn btn-success btn-sm">
            <i class="bi bi-file-excel me-1"></i>Excel
        </a>
        @* ‚úÖ NOVO: Bot√£o PDF *@
        <a asp-action="ExportarEntradasPdf" asp-route-dataInicio="@ViewBag.DataInicio" asp-route-dataFim="@ViewBag.DataFim" class="btn btn-danger btn-sm">
            <i class="bi bi-file-pdf me-1"></i>PDF
        </a>
        <a asp-action="Index" class="btn btn-outline-secondary btn-sm">
            <i class="bi bi-arrow-left me-1"></i>Voltar
        </a>
    </div>
</div>

<!-- Filtros -->
<div class="card shadow-sm mb-4">
    <div class="card-body">
        <form method="get" class="row g-3">
            <div class="col-12 col-md-3">
                <label class="form-label small fw-semibold">Data In√≠cio</label>
                <input type="date" class="form-control" name="dataInicio" value="@ViewBag.DataInicio" />
            </div>
            <div class="col-12 col-md-3">
                <label class="form-label small fw-semibold">Data Fim</label>
                <input type="date" class="form-control" name="dataFim" value="@ViewBag.DataFim" />
            </div>
            @* ‚úÖ NOVO: Filtro por Centro de Custo *@
            @if (ViewBag.CentrosCusto != null)
            {
                <div class="col-12 col-md-3">
                    <label class="form-label small fw-semibold">Centro de Custo</label>
                    <select class="form-select" name="centroCustoId" asp-items="ViewBag.CentrosCusto">
                        <option value="">Todos os centros</option>
                    </select>
                </div>
            }
            <div class="col-12 col-md-@(ViewBag.CentrosCusto != null ? "2" : "5")">
                <label class="form-label small fw-semibold">Membro</label>
                <select class="form-select" name="membroId" asp-items="ViewBag.Membros">
                    <option value="">Todos os membros</option>
                </select>
            </div>
            <div class="col-12 col-md-1 d-flex align-items-end">
                <button type="submit" class="btn btn-primary w-100">
                    <i class="bi bi-search"></i>
                </button>
            </div>
        </form>
    </div>
</div>

@* ‚úÖ NOVO: Alert indicando dados consolidados quando Tesoureiro Geral da SEDE *@
@if ((User.IsInRole("Administrador") || User.IsInRole("Pastor") || User.IsInRole("TesoureiroGeral")) && 
     ViewBag.ResumoPorCentroCusto != null && ((IEnumerable<dynamic>)ViewBag.ResumoPorCentroCusto).Count() > 1)
{
    <div class="alert alert-info d-flex align-items-center mb-4" role="alert">
        <i class="bi bi-info-circle-fill me-2 fs-5"></i>
        <div>
            <strong>Dados Consolidados:</strong> Este relat√≥rio exibe contribui√ß√µes de m√∫ltiplos centros de custo (Sede e Congrega√ß√µes).
        </div>
    </div>
}

@* ‚úÖ NOVO: Resumo por Centro de Custo *@
@if (ViewBag.ResumoPorCentroCusto != null && ((IEnumerable<dynamic>)ViewBag.ResumoPorCentroCusto).Any())
{
    <div class="card shadow-sm mb-4 border-primary">
        <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center py-3">
            <h5 class="mb-0 fw-semibold">
                <i class="bi bi-building me-2"></i>
                üìä Resumo por Centro de Custo
            </h5>
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="table-light">
                        <tr>
                            <th class="ps-3">Centro de Custo</th>
                            <th class="text-end">Total Contribui√ß√µes</th>
                            <th class="text-center">Membros</th>
                            <th class="text-center">Quantidade</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var resumo in ViewBag.ResumoPorCentroCusto)
                        {
                            <tr>
                                <td class="ps-3">
                                    <div class="d-flex align-items-center">
                                        <i class="bi bi-building-fill text-primary me-2"></i>
                                        <strong>@resumo.CentroCustoNome</strong>
                                    </div>
                                </td>
                                <td class="text-end">
                                    <span class="fw-bold text-success fs-5">@resumo.TotalContribuicoes.ToString("C2")</span>
                                </td>
                                <td class="text-center">
                                    <span class="badge bg-info">
                                        @resumo.QuantidadeMembros membros
                                    </span>
                                </td>
                                <td class="text-center">
                                    <span class="badge bg-primary">
                                        @resumo.QuantidadeContribuicoes lan√ßamentos
                                    </span>
                                </td>
                            </tr>
                        }
                    </tbody>
                    <tfoot class="table-primary">
                        <tr>
                            <th class="ps-3">TOTAL CONSOLIDADO</th>
                            <th class="text-end">
                                <span class="fw-bold text-dark fs-5">
                                    @{
                                        var resumoCentroCusto = (IEnumerable<dynamic>)ViewBag.ResumoPorCentroCusto;
                                        var totalConsolidado = resumoCentroCusto.Sum(x => (decimal)x.TotalContribuicoes);
                                    }
                                    @totalConsolidado.ToString("C2")
                                </span>
                            </th>
                            <th class="text-center">
                                @{
                                    var totalMembros = resumoCentroCusto.Sum(x => (int)x.QuantidadeMembros);
                                }
                                @totalMembros
                            </th>
                            <th class="text-center">
                                @{
                                    var totalContribuicoes = resumoCentroCusto.Sum(x => (int)x.QuantidadeContribuicoes);
                                }
                                @totalContribuicoes
                            </th>
                        </tr>
                    </tfoot>
                </table>
            </div>
        </div>
    </div>
}

<!-- Resumo por Membro -->
@if (ViewBag.ResumoPorMembro != null && ((IEnumerable<dynamic>)ViewBag.ResumoPorMembro).Any())
{
    <div class="card shadow-sm mb-4">
        <div class="card-header bg-white d-flex justify-content-between align-items-center py-3">
            <h5 class="mb-0 fw-semibold">
                <i class="bi bi-bar-chart me-2 text-warning"></i>
                Resumo Detalhado por Membro
            </h5>
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="table-light">
                        <tr>
                            <th class="ps-3">Membro</th>
                            <th class="d-none d-md-table-cell">Centro de Custo</th>
                            <th class="text-end">Total Contribui√ß√µes</th>
                            <th class="text-center d-none d-md-table-cell">Quantidade</th>
                            <th class="text-center d-none d-lg-table-cell">√öltima Contribui√ß√£o</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var resumo in ViewBag.ResumoPorMembro)
                        {
                            <tr>
                                <td class="ps-3">
                                    <div class="d-flex align-items-center">
                                        <div class="avatar-circle bg-warning text-dark me-2">
                                            @resumo.MembroNome.Substring(0, 1).ToUpper()
                                        </div>
                                        <div>
                                            <div class="fw-semibold">@resumo.MembroNome</div>
                                            <small class="text-muted d-md-none">
                                                @resumo.CentroCustoNome | √öltima: @resumo.UltimaContribuicao.ToString("dd/MM/yy")
                                            </small>
                                        </div>
                                    </div>
                                </td>
                                <td class="d-none d-md-table-cell">
                                    <span class="badge bg-secondary">@resumo.CentroCustoNome</span>
                                </td>
                                <td class="text-end">
                                    <span class="fw-bold text-success">@resumo.TotalContribuicoes.ToString("C2")</span>
                                    <div class="d-md-none">
                                        <span class="badge bg-primary mt-1">
                                            @resumo.QuantidadeContribuicoes
                                        </span>
                                    </div>
                                </td>
                                <td class="text-center d-none d-md-table-cell">
                                    <span class="badge bg-primary">
                                        @resumo.QuantidadeContribuicoes
                                    </span>
                                </td>
                                <td class="text-center d-none d-lg-table-cell">
                                    <small class="text-muted">@resumo.UltimaContribuicao.ToString("dd/MM/yyyy")</small>
                                </td>
                            </tr>
                        }
                    </tbody>
                    <tfoot class="table-light">
                        <tr>
                            <th class="ps-3" colspan="2">TOTAL</th>
                            <th class="text-end">
                                <span class="fw-bold text-success">
                                    @{
                                        var resumoMembro = (IEnumerable<dynamic>)ViewBag.ResumoPorMembro;
                                        var totalMembro = resumoMembro.Sum(x => (decimal)x.TotalContribuicoes);
                                    }
                                    @totalMembro.ToString("C2")
                                </span>
                            </th>
                            <th colspan="2"></th>
                        </tr>
                    </tfoot>
                </table>
            </div>
        </div>
    </div>
}

<!-- Detalhamento das Contribui√ß√µes -->
@if (Model != null && Model.Any())
{
    <div class="card shadow-sm">
        <div class="card-header bg-white d-flex justify-content-between align-items-center py-3">
            <h5 class="mb-0 fw-semibold">
                <i class="bi bi-list-ul me-2 text-warning"></i>
                Detalhamento das Contribui√ß√µes
            </h5>
            <button type="button" class="btn btn-sm btn-outline-secondary" onclick="window.print()">
                <i class="bi bi-printer me-1"></i>Imprimir
            </button>
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0" id="contribuicoesTable">
                    <thead class="table-light">
                        <tr>
                            <th class="ps-3">Data</th>
                            <th>Membro</th>
                            <th>Descri√ß√£o</th>
                            <th class="d-none d-lg-table-cell">Centro de Custo</th>
                            <th class="d-none d-xl-table-cell">Fonte</th>
                            <th class="d-none d-xl-table-cell">Meio Pgto</th>
                            <th class="text-end">Valor</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="ps-3">
                                    <div class="fw-semibold">@item.Data.ToString("dd/MM/yy")</div>
                                    <small class="text-muted">@item.Data.ToString("HH:mm")</small>
                                </td>
                                <td>
                                    <div class="d-flex align-items-center">
                                        <div class="avatar-circle-sm bg-warning text-dark me-2">
                                            @item.Membro?.NomeCompleto.Substring(0, 1).ToUpper()
                                        </div>
                                        <span class="fw-semibold">@item.Membro?.NomeCompleto</span>
                                    </div>
                                </td>
                                <td>
                                    <div>@item.Descricao</div>
                                    <small class="text-muted d-lg-none">@item.CentroCusto?.Nome</small>
                                </td>
                                <td class="d-none d-lg-table-cell">
                                    <span class="badge bg-info bg-opacity-10 text-info border border-info">
                                        @item.CentroCusto?.Nome
                                    </span>
                                </td>
                                <td class="d-none d-xl-table-cell">
                                    <span class="badge bg-success bg-opacity-10 text-success border border-success">
                                        @item.PlanoDeContas?.Nome
                                    </span>
                                </td>
                                <td class="d-none d-xl-table-cell">
                                    <small class="text-muted">@item.MeioDePagamento?.Nome</small>
                                </td>
                                <td class="text-end">
                                    <span class="fw-bold text-success">@item.Valor.ToString("C2")</span>
                                </td>
                            </tr>
                        }
                    </tbody>
                    <tfoot class="table-light">
                        <tr>
                            <th class="ps-3" colspan="6">TOTAL GERAL</th>
                            <th class="text-end">
                                <span class="fw-bold text-success">@Model.Sum(x => x.Valor).ToString("C2")</span>
                            </th>
                        </tr>
                    </tfoot>
                </table>
            </div>
        </div>
    </div>
}
else
{
    <div class="card shadow-sm">
        <div class="card-body text-center py-5">
            <i class="bi bi-inbox text-muted" style="font-size: 4rem;"></i>
            <h5 class="mt-3 text-muted">Nenhuma contribui√ß√£o encontrada</h5>
            <p class="text-muted">N√£o h√° contribui√ß√µes para o per√≠odo e filtros selecionados.</p>
        </div>
    </div>
}