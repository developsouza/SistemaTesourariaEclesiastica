@{
    ViewData["Title"] = "Política de Privacidade";
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-lg-10">
            <!-- Cabeçalho -->
            <div class="text-center mb-5">
                <div class="mb-4">
                    <i class="bi bi-shield-check display-1 text-primary"></i>
                </div>
                <h1 class="display-5 fw-bold mb-3">Política de Privacidade</h1>
                <p class="lead text-muted">
                    Seu compromisso com a proteção de dados e transparência
                </p>
            </div>

            <!-- Conteúdo -->
            <div class="card border-0 shadow-sm">
                <div class="card-body p-4 p-lg-5">
                    <!-- Introdução -->
                    <section class="mb-5">
                        <h3 class="fw-bold mb-3">
                            <i class="bi bi-info-circle text-primary me-2"></i>
                            Introdução
                        </h3>
                        <p class="text-muted">
                            Esta Política de Privacidade descreve como o Sistema de Tesouraria Eclesiástica
                            coleta, usa, processa e protege suas informações pessoais. Estamos comprometidos
                            com a privacidade e a segurança dos seus dados, em conformidade com a Lei Geral
                            de Proteção de Dados (LGPD).
                        </p>
                    </section>

                    <!-- Dados Coletados -->
                    <section class="mb-5">
                        <h3 class="fw-bold mb-3">
                            <i class="bi bi-collection text-primary me-2"></i>
                            Dados Coletados
                        </h3>
                        <p class="text-muted mb-3">Coletamos os seguintes tipos de informações:</p>
                        <ul class="list-unstyled">
                            <li class="mb-3">
                                <div class="d-flex">
                                    <i class="bi bi-check-circle text-success me-3 mt-1"></i>
                                    <div>
                                        <strong>Dados de Identificação:</strong>
                                        <span class="text-muted">Nome completo, CPF, e-mail e telefone</span>
                                    </div>
                                </div>
                            </li>
                            <li class="mb-3">
                                <div class="d-flex">
                                    <i class="bi bi-check-circle text-success me-3 mt-1"></i>
                                    <div>
                                        <strong>Dados Financeiros:</strong>
                                        <span class="text-muted">Informações sobre dízimos, ofertas e transações</span>
                                    </div>
                                </div>
                            </li>
                            <li class="mb-3">
                                <div class="d-flex">
                                    <i class="bi bi-check-circle text-success me-3 mt-1"></i>
                                    <div>
                                        <strong>Dados de Acesso:</strong>
                                        <span class="text-muted">Logs de acesso, endereço IP e dispositivo utilizado</span>
                                    </div>
                                </div>
                            </li>
                        </ul>
                    </section>

                    <!-- Uso dos Dados -->
                    <section class="mb-5">
                        <h3 class="fw-bold mb-3">
                            <i class="bi bi-gear text-primary me-2"></i>
                            Como Usamos Seus Dados
                        </h3>
                        <div class="row g-3">
                            <div class="col-md-6">
                                <div class="p-3 bg-light rounded-3">
                                    <h6 class="fw-semibold mb-2">
                                        <i class="bi bi-check2-circle text-primary me-2"></i>
                                        Gestão Financeira
                                    </h6>
                                    <small class="text-muted">
                                        Processamento de contribuições e controle financeiro
                                    </small>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="p-3 bg-light rounded-3">
                                    <h6 class="fw-semibold mb-2">
                                        <i class="bi bi-check2-circle text-primary me-2"></i>
                                        Relatórios
                                    </h6>
                                    <small class="text-muted">
                                        Geração de relatórios e análises financeiras
                                    </small>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="p-3 bg-light rounded-3">
                                    <h6 class="fw-semibold mb-2">
                                        <i class="bi bi-check2-circle text-primary me-2"></i>
                                        Comunicação
                                    </h6>
                                    <small class="text-muted">
                                        Envio de notificações e comunicados importantes
                                    </small>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="p-3 bg-light rounded-3">
                                    <h6 class="fw-semibold mb-2">
                                        <i class="bi bi-check2-circle text-primary me-2"></i>
                                        Segurança
                                    </h6>
                                    <small class="text-muted">
                                        Proteção contra fraudes e uso não autorizado
                                    </small>
                                </div>
                            </div>
                        </div>
                    </section>

                    <!-- Compartilhamento -->
                    <section class="mb-5">
                        <h3 class="fw-bold mb-3">
                            <i class="bi bi-share text-primary me-2"></i>
                            Compartilhamento de Dados
                        </h3>
                        <div class="alert alert-info border-0">
                            <i class="bi bi-info-circle me-2"></i>
                            Seus dados <strong>não são vendidos ou compartilhados</strong> com terceiros
                            para fins comerciais. Compartilhamos apenas quando necessário para:
                        </div>
                        <ul class="text-muted">
                            <li>Cumprir obrigações legais e regulatórias</li>
                            <li>Processar transações financeiras com segurança</li>
                            <li>Proteger os direitos e a segurança da organização</li>
                        </ul>
                    </section>

                    <!-- Seus Direitos -->
                    <section class="mb-5">
                        <h3 class="fw-bold mb-3">
                            <i class="bi bi-person-check text-primary me-2"></i>
                            Seus Direitos
                        </h3>
                        <p class="text-muted mb-3">De acordo com a LGPD, você tem os seguintes direitos:</p>
                        <div class="row g-3">
                            <div class="col-md-4">
                                <div class="text-center p-3 border rounded-3">
                                    <i class="bi bi-eye display-6 text-primary mb-2"></i>
                                    <h6 class="mb-1">Acesso</h6>
                                    <small class="text-muted">Visualizar seus dados</small>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="text-center p-3 border rounded-3">
                                    <i class="bi bi-pencil display-6 text-primary mb-2"></i>
                                    <h6 class="mb-1">Correção</h6>
                                    <small class="text-muted">Atualizar informações</small>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="text-center p-3 border rounded-3">
                                    <i class="bi bi-trash display-6 text-primary mb-2"></i>
                                    <h6 class="mb-1">Exclusão</h6>
                                    <small class="text-muted">Solicitar remoção</small>
                                </div>
                            </div>
                        </div>
                    </section>

                    <!-- Segurança -->
                    <section class="mb-5">
                        <h3 class="fw-bold mb-3">
                            <i class="bi bi-lock text-primary me-2"></i>
                            Segurança dos Dados
                        </h3>
                        <p class="text-muted">
                            Implementamos medidas técnicas e organizacionais para proteger seus dados, incluindo:
                        </p>
                        <div class="row g-3 mt-3">
                            <div class="col-md-6">
                                <div class="d-flex align-items-start">
                                    <i class="bi bi-shield-lock text-success me-3 fs-4"></i>
                                    <div>
                                        <strong>Criptografia</strong>
                                        <p class="text-muted small mb-0">Dados protegidos com tecnologia SSL/TLS</p>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="d-flex align-items-start">
                                    <i class="bi bi-key text-success me-3 fs-4"></i>
                                    <div>
                                        <strong>Controle de Acesso</strong>
                                        <p class="text-muted small mb-0">Autenticação segura e permissões restritas</p>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="d-flex align-items-start">
                                    <i class="bi bi-database-lock text-success me-3 fs-4"></i>
                                    <div>
                                        <strong>Backup Regular</strong>
                                        <p class="text-muted small mb-0">Cópias de segurança periódicas</p>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="d-flex align-items-start">
                                    <i class="bi bi-clipboard-data text-success me-3 fs-4"></i>
                                    <div>
                                        <strong>Auditoria</strong>
                                        <p class="text-muted small mb-0">Logs completos de todas as ações</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </section>

                    <!-- Contato -->
                    <section>
                        <h3 class="fw-bold mb-3">
                            <i class="bi bi-envelope text-primary me-2"></i>
                            Entre em Contato
                        </h3>
                        <div class="alert alert-primary border-0">
                            <p class="mb-2">
                                Para exercer seus direitos ou esclarecer dúvidas sobre esta política,
                                entre em contato com nosso Encarregado de Dados:
                            </p>
                            <ul class="list-unstyled mb-0">
                                <li><i class="bi bi-envelope me-2"></i> <strong>E-mail:</strong> privacidade@tesouraria.com</li>
                                <li><i class="bi bi-telephone me-2"></i> <strong>Telefone:</strong> (83) 99334-6304</li>
                            </ul>
                        </div>
                    </section>

                    <!-- Rodapé -->
                    <div class="mt-5 pt-4 border-top text-center">
                        <p class="text-muted small mb-0">
                            <i class="bi bi-calendar-check me-2"></i>
                            Última atualização: <strong>Janeiro de 2025</strong>
                        </p>
                    </div>
                </div>
            </div>

            <!-- Botão voltar -->
            <div class="text-center mt-4">
                <a asp-controller="Home" asp-action="Index" class="btn btn-outline-primary">
                    <i class="bi bi-arrow-left me-2"></i>
                    Voltar ao Dashboard
                </a>
            </div>
        </div>
    </div>
</div>

<style>
    section {
        scroll-margin-top: 80px;
    }

    .card {
        animation: fadeIn 0.6s ease-out;
    }

    @@keyframes fadeIn {
        from

    {
        opacity: 0;
        transform: translateY(20px);
    }

    to {
        opacity: 1;
        transform: translateY(0);
    }

    }
</style>