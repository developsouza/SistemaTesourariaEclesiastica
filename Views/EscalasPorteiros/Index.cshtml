@model IEnumerable<SistemaTesourariaEclesiastica.Models.EscalaPorteiro>
@using SistemaTesourariaEclesiastica.Helpers

@{
    ViewData["Title"] = "Escala de Porteiros";
}

<!-- Cabeçalho -->
<div class="d-flex flex-column flex-md-row justify-content-between align-items-start align-items-md-center mb-4 gap-2">
    <div>
        <h1 class="h3 mb-1">
            <i class="bi bi-calendar-check me-2"></i>Escala de Porteiros
        </h1>
        <p class="text-muted mb-0 small">
            Gerenciar escalas de porteiros para os cultos
        </p>
    </div>
    <div class="d-flex gap-2">
        <a asp-action="Gerar" class="btn btn-primary">
            <i class="bi bi-plus-circle me-2"></i>Gerar Nova Escala
        </a>
        <div class="dropdown">
            <button class="btn btn-outline-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown">
                <i class="bi bi-gear me-1"></i>Configurações
            </button>
            <ul class="dropdown-menu">
                <li><a class="dropdown-item" asp-controller="Porteiros" asp-action="Index">
                    <i class="bi bi-person-badge me-2"></i>Gerenciar Porteiros
                </a></li>
                <li><a class="dropdown-item" asp-controller="ResponsaveisPorteiros" asp-action="Index">
                    <i class="bi bi-person-check me-2"></i>Gerenciar Responsáveis
                </a></li>
                <li><hr class="dropdown-divider"></li>
                <li><a class="dropdown-item" asp-controller="ConfiguracoesCultos" asp-action="Index">
                    <i class="bi bi-calendar3 me-2"></i>Configurar Dias de Cultos
                </a></li>
            </ul>
        </div>
    </div>
</div>

<!-- Filtros -->
<div class="card shadow-sm mb-4">
    <div class="card-body">
        <form method="get" class="row g-3">
            <div class="col-md-4">
                <label class="form-label small fw-semibold">Data de Início</label>
                <input type="date" class="form-control" name="dataInicio" value="@ViewBag.DataInicio" />
            </div>
            <div class="col-md-4">
                <label class="form-label small fw-semibold">Data de Fim</label>
                <input type="date" class="form-control" name="dataFim" value="@ViewBag.DataFim" />
            </div>
            <div class="col-md-4 d-flex align-items-end gap-2">
                <button type="submit" class="btn btn-outline-primary flex-fill">
                    <i class="bi bi-search"></i> Filtrar
                </button>
                <a asp-action="Index" class="btn btn-outline-secondary" title="Limpar">
                    <i class="bi bi-arrow-clockwise"></i>
                </a>
            </div>
        </form>
    </div>
</div>

<!-- Resultados -->
<div class="card shadow-sm">
    <div class="card-header bg-white d-flex justify-content-between align-items-center py-3">
        <h5 class="mb-0 fw-semibold">
            <i class="bi bi-list-ul me-2 text-primary"></i>
            @Model.Count() dia(s) de culto cadastrados
        </h5>
        @if (Model.Any())
        {
            <div class="d-flex flex-wrap gap-2">
                <a asp-action="DownloadPdf" 
                   asp-route-dataInicio="@ViewBag.DataInicio" 
                   asp-route-dataFim="@ViewBag.DataFim" 
                   class="btn btn-sm btn-danger">
                    <i class="bi bi-file-pdf me-1"></i>Baixar PDF
                </a>
                <button type="button" class="btn btn-sm btn-outline-primary" onclick="window.print()">
                    <i class="bi bi-printer me-1"></i>Imprimir
                </button>
                <form asp-action="DeletePeriodo" method="post" onsubmit="return confirm('Tem certeza que deseja excluir TODAS as escalas deste período? Esta ação não pode ser desfeita.')" class="d-inline">
                    @Html.AntiForgeryToken()
                    <input type="hidden" name="dataInicio" value="@ViewBag.DataInicio" />
                    <input type="hidden" name="dataFim" value="@ViewBag.DataFim" />
                    <button type="submit" class="btn btn-sm btn-outline-danger">
                        <i class="bi bi-trash3 me-1"></i>Excluir Período
                    </button>
                </form>
            </div>
        }
    </div>

    <div class="card-body p-0">
        @if (Model != null && Model.Any())
        {
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="table-light">
                        <tr>
                            <th class="ps-3">Data</th>
                            <th>Dia da Semana</th>
                            <th>Tipo de Culto</th>
                            <th>Porteiro</th>
                            <th>Responsável</th>
                            <th class="text-center" style="width:140px;">Ações</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="ps-3">
                                    <strong>@LocalizacaoHelper.FormatarData(item.DataCulto)</strong>
                                </td>
                                <td>
                                    @LocalizacaoHelper.ObterNomeDiaSemana(item.DataCulto.DayOfWeek)
                                </td>
                                <td>
                                    <span class="badge bg-info">
                                        @item.TipoCulto.GetDisplayName()
                                    </span>
                                </td>
                                <td>
                                    <div class="d-flex align-items-center">
                                        <div class="avatar-circle bg-primary text-white me-2" style="width:30px;height:30px;font-size:.8rem;">
                                            @item.Porteiro?.Nome.Substring(0,1).ToUpper()
                                        </div>
                                        <div>
                                            <div>@item.Porteiro?.Nome</div>
                                            <small class="text-muted">
                                                <i class="bi bi-telephone me-1"></i>@LocalizacaoHelper.FormatarTelefone(item.Porteiro?.Telefone)
                                            </small>
                                        </div>
                                    </div>
                                </td>
                                <td>
                                    <div>@item.Responsavel?.Nome</div>
                                    <small class="text-muted">
                                        <i class="bi bi-telephone me-1"></i>@LocalizacaoHelper.FormatarTelefone(item.Responsavel?.Telefone)
                                    </small>
                                </td>
                                <td>
                                    <div class="btn-group btn-group-sm" role="group">
                                        <a asp-action="Edit" asp-route-id="@item.Id"
                                           class="btn btn-outline-primary" title="Editar">
                                            <i class="bi bi-pencil"></i>
                                        </a>
                                        <form asp-action="Delete" asp-route-id="@item.Id" method="post" style="display:inline;">
                                            @Html.AntiForgeryToken()
                                            <button type="submit" class="btn btn-outline-danger" title="Excluir" onclick="return confirm('Tem certeza que deseja excluir esta escala?')">
                                                <i class="bi bi-trash"></i>
                                            </button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="text-center py-5">
                <i class="bi bi-calendar-x text-muted" style="font-size:4rem;"></i>
                <h5 class="mt-3 text-muted">Nenhuma escala encontrada</h5>
                <p class="text-muted">
                    Não há escalas cadastradas para o período selecionado.
                </p>
                <a asp-action="Gerar" class="btn btn-primary mt-2">
                    <i class="bi bi-plus-circle me-2"></i>Gerar Nova Escala
                </a>
            </div>
        }
    </div>
</div>

@section Scripts {
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
