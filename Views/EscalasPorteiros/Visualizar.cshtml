@model SistemaTesourariaEclesiastica.ViewModels.EscalaGeradaViewModel
@using SistemaTesourariaEclesiastica.Extensions
@using SistemaTesourariaEclesiastica.Helpers

@{
    ViewData["Title"] = "Visualizar Escala";
}

<style>
    @@media print {
        .no-print {
            display: none !important;
        }
        
        .card {
            border: none !important;
            box-shadow: none !important;
        }
        
        body {
            font-size: 12pt;
        }
        
        table {
            page-break-inside: auto;
        }
        
        tr {
            page-break-inside: avoid;
            page-break-after: auto;
        }
    }
    
    .porteiros-rodape {
        border-top: 2px solid #dee2e6;
        padding-top: 20px;
        margin-top: 30px;
    }
</style>

<div class="no-print mb-3">
    <div class="d-flex justify-content-between align-items-center">
        <div>
            <h1 class="h3 mb-1">
                <i class="bi bi-calendar-check me-2"></i>Escala de Porteiros
            </h1>
            <p class="text-muted mb-0">
                Período: @Model.DataInicio.ToString("dd/MM/yyyy") a @Model.DataFim.ToString("dd/MM/yyyy")
            </p>
        </div>
        <div class="d-flex gap-2">
            <a asp-action="DownloadPdf" 
               asp-route-dataInicio="@Model.DataInicio.ToString("yyyy-MM-dd")" 
               asp-route-dataFim="@Model.DataFim.ToString("yyyy-MM-dd")" 
               class="btn btn-danger">
                <i class="bi bi-file-pdf me-1"></i>Baixar PDF
            </a>
            <button onclick="window.print()" class="btn btn-primary">
                <i class="bi bi-printer me-1"></i>Imprimir
            </button>
            <a asp-action="Index" class="btn btn-secondary">
                <i class="bi bi-arrow-left me-1"></i>Voltar
            </a>
        </div>
    </div>
</div>

<div class="card shadow-sm">
    <div class="card-body">
        <!-- Cabeçalho para impressão -->
        <div class="text-center mb-4 d-none d-print-block">
            <h2>Escala de Porteiros</h2>
            <p class="mb-0">Período: @Model.DataInicio.ToString("dd/MM/yyyy") a @Model.DataFim.ToString("dd/MM/yyyy")</p>
        </div>

        @if (Model.Escalas != null && Model.Escalas.Any())
        {
            <!-- Tabela da Escala -->
            <div class="table-responsive">
                <table class="table table-bordered table-hover">
                    <thead class="table-light">
                        <tr>
                            <th style="width: 15%;">Data</th>
                            <th style="width: 20%;">Dia da Semana</th>
                            <th style="width: 25%;">Tipo de Culto</th>
                            <th style="width: 40%;">Porteiro</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var escala in Model.Escalas.OrderBy(e => e.DataCulto))
                        {
                            <tr>
                                <td><strong>@LocalizacaoHelper.FormatarData(escala.DataCulto)</strong></td>
                                <td>@LocalizacaoHelper.ObterNomeDiaSemana(escala.DataCulto.DayOfWeek)</td>
                                <td>
                                    <span class="badge bg-info">@escala.TipoCulto.GetDisplayName()</span>
                                </td>
                                <td>
                                    <strong>@escala.Porteiro?.Nome</strong>
                                    @if (!string.IsNullOrEmpty(escala.Observacao))
                                    {
                                        <br />
                                        <small class="text-muted"><i>@escala.Observacao</i></small>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <!-- Rodapé com informações dos porteiros e responsável -->
            <div class="porteiros-rodape">
                <h5 class="fw-bold mb-3">
                    <i class="bi bi-people me-2"></i>Informações de Contato
                </h5>

                <div class="row">
                    <!-- Responsável -->
                    @if (Model.Responsavel != null)
                    {
                        <div class="col-md-12 mb-4">
                            <div class="card bg-success bg-opacity-10 border-success">
                                <div class="card-body">
                                    <h6 class="card-title text-success fw-bold">
                                        <i class="bi bi-person-check-fill me-2"></i>Responsável pela Escala
                                    </h6>
                                    <p class="card-text mb-1">
                                        <strong>Nome:</strong> @Model.Responsavel.Nome
                                    </p>
                                    <p class="card-text mb-0">
                                        <strong>Telefone:</strong> <i class="bi bi-telephone me-1"></i>@LocalizacaoHelper.FormatarTelefone(Model.Responsavel.Telefone)
                                    </p>
                                </div>
                            </div>
                        </div>
                    }

                    <!-- Porteiros -->
                    <div class="col-md-12">
                        <h6 class="fw-bold mb-3">
                            <i class="bi bi-person-badge me-2"></i>Porteiros
                        </h6>
                        <div class="row">
                            @foreach (var porteiro in Model.TodosPorteiros.OrderBy(p => p.Nome))
                            {
                                <div class="col-md-6 col-lg-4 mb-3">
                                    <div class="card h-100">
                                        <div class="card-body py-2">
                                            <div class="d-flex align-items-center">
                                                <div class="avatar-circle bg-primary text-white me-2" style="width: 35px; height: 35px;">
                                                    @porteiro.Nome.Substring(0, 1).ToUpper()
                                                </div>
                                                <div>
                                                    <div class="fw-semibold">@porteiro.Nome</div>
                                                    <small class="text-muted">
                                                        <i class="bi bi-telephone me-1"></i>@LocalizacaoHelper.FormatarTelefone(porteiro.Telefone)
                                                    </small>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>

            <!-- Observações adicionais -->
            <div class="mt-4 pt-3 border-top">
                <p class="text-muted small mb-1">
                    <i class="bi bi-info-circle me-1"></i>
                    Esta escala foi gerada automaticamente pelo sistema em @DateTime.Now.ToString("dd/MM/yyyy 'às' HH:mm")
                </p>
                <p class="text-muted small mb-0">
                    Em caso de dúvidas ou imprevistos, entrar em contato com o(a) responsável.
                </p>
            </div>
        }
        else
        {
            <div class="text-center py-5">
                <i class="bi bi-calendar-x text-muted" style="font-size: 4rem;"></i>
                <h5 class="mt-3 text-muted">Nenhuma escala encontrada</h5>
                <p class="text-muted">
                    Não há escalas cadastradas para o período selecionado.
                </p>
            </div>
        }
    </div>
</div>
