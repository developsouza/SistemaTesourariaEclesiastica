@{
    ViewData["Title"] = "Informações do Sistema";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="h2 mb-1 fw-bold text-info">
                <i class="bi bi-info-circle-fill me-2"></i>Informações do Sistema
            </h1>
            <p class="text-muted mb-0">Detalhes técnicos e status do ambiente</p>
        </div>
        <a asp-controller="Home" asp-action="SystemManagement" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left me-1"></i>Voltar
        </a>
    </div>

    <div class="row g-4">
        <!-- Informações do Servidor -->
        <div class="col-lg-6">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">
                        <i class="bi bi-server me-2"></i>Servidor
                    </h5>
                </div>
                <div class="card-body">
                    <table class="table table-borderless">
                        <tr>
                            <td class="fw-bold text-muted">Nome do Servidor:</td>
                            <td>@ViewBag.SystemInfo.ServerName</td>
                        </tr>
                        <tr>
                            <td class="fw-bold text-muted">Sistema Operacional:</td>
                            <td>@ViewBag.SystemInfo.OperatingSystem</td>
                        </tr>
                        <tr>
                            <td class="fw-bold text-muted">Processadores:</td>
                            <td>@ViewBag.SystemInfo.ProcessorCount núcleos</td>
                        </tr>
                        <tr>
                            <td class="fw-bold text-muted">Memória em Uso:</td>
                            <td>@Math.Round((double)ViewBag.SystemInfo.WorkingSet / 1024 / 1024, 2) MB</td>
                        </tr>
                        <tr>
                            <td class="fw-bold text-muted">Tempo de Atividade:</td>
                            <td class="text-success fw-bold">@ViewBag.SystemInfo.Uptime</td>
                        </tr>
                    </table>
                </div>
            </div>
        </div>

        <!-- Informações da Aplicação -->
        <div class="col-lg-6">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-success text-white">
                    <h5 class="mb-0">
                        <i class="bi bi-gear-fill me-2"></i>Aplicação
                    </h5>
                </div>
                <div class="card-body">
                    <table class="table table-borderless">
                        <tr>
                            <td class="fw-bold text-muted">Versão do Sistema:</td>
                            <td><span class="badge bg-primary">@ViewBag.SystemInfo.SystemVersion</span></td>
                        </tr>
                        <tr>
                            <td class="fw-bold text-muted">Framework .NET:</td>
                            <td>@ViewBag.SystemInfo.AspNetVersion</td>
                        </tr>
                        <tr>
                            <td class="fw-bold text-muted">Banco de Dados:</td>
                            <td>@ViewBag.SystemInfo.DatabaseProvider</td>
                        </tr>
                        <tr>
                            <td class="fw-bold text-muted">Último Deploy:</td>
                            <td>@ViewBag.SystemInfo.StartTime.ToString("dd/MM/yyyy HH:mm")</td>
                        </tr>
                        <tr>
                            <td class="fw-bold text-muted">Status:</td>
                            <td><span class="badge bg-success">Online</span></td>
                        </tr>
                    </table>
                </div>
            </div>
        </div>

        <!-- Configurações -->
        <div class="col-lg-6">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-warning text-dark">
                    <h5 class="mb-0">
                        <i class="bi bi-sliders me-2"></i>Configurações
                    </h5>
                </div>
                <div class="card-body">
                    <div class="d-flex align-items-center mb-2">
                        <i class="bi bi-check-circle text-success me-2"></i>
                        <span>Auditoria Ativada</span>
                    </div>
                    <div class="d-flex align-items-center mb-2">
                        <i class="bi bi-check-circle text-success me-2"></i>
                        <span>HTTPS Habilitado</span>
                    </div>
                    <div class="d-flex align-items-center mb-2">
                        <i class="bi bi-check-circle text-success me-2"></i>
                        <span>Identity Configurado</span>
                    </div>
                    <div class="d-flex align-items-center mb-2">
                        <i class="bi bi-exclamation-circle text-warning me-2"></i>
                        <span>Backup Automático: Não Configurado</span>
                    </div>
                </div>
            </div>
        </div>

        <!-- Recursos -->
        <div class="col-lg-6">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-info text-white">
                    <h5 class="mb-0">
                        <i class="bi bi-speedometer me-2"></i>Performance
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row text-center">
                        <div class="col-6">
                            <div class="border-end">
                                <h4 class="text-success mb-0">99%</h4>
                                <small class="text-muted">Uptime</small>
                            </div>
                        </div>
                        <div class="col-6">
                            <h4 class="text-primary mb-0">< 100ms</h4>
                            <small class="text-muted">Resp. Média</small>
                        </div>
                    </div>
                    <hr>
                    <div class="small text-muted">
                        <i class="bi bi-info-circle me-1"></i>
                        Métricas baseadas em dados simulados
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Logs de Sistema -->
    <div class="card mt-4">
        <div class="card-header">
            <h5 class="mb-0">
                <i class="bi bi-journal-text me-2"></i>Últimos Logs do Sistema
            </h5>
        </div>
        <div class="card-body">
            <div class="alert alert-info">
                <i class="bi bi-info-circle me-2"></i>
                Esta seção mostrará os últimos logs de aplicação. Implementação pendente.
            </div>
            <div class="table-responsive">
                <table class="table table-sm">
                    <thead>
                        <tr>
                            <th>Timestamp</th>
                            <th>Nível</th>
                            <th>Mensagem</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>@DateTime.Now.AddMinutes(-5).ToString("HH:mm:ss")</td>
                            <td><span class="badge bg-success">INFO</span></td>
                            <td>Sistema iniciado com sucesso</td>
                        </tr>
                        <tr>
                            <td>@DateTime.Now.AddMinutes(-10).ToString("HH:mm:ss")</td>
                            <td><span class="badge bg-primary">DEBUG</span></td>
                            <td>Conexão com banco de dados estabelecida</td>
                        </tr>
                        <tr>
                            <td>@DateTime.Now.AddMinutes(-15).ToString("HH:mm:ss")</td>
                            <td><span class="badge bg-warning">WARN</span></td>
                            <td>Cache de aplicação renovado</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
