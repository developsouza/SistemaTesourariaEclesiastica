@{
    ViewData["Title"] = "Segurança do Sistema";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="h2 mb-1 fw-bold text-danger">
                <i class="bi bi-shield-fill-check me-2"></i>Segurança do Sistema
            </h1>
            <p class="text-muted mb-0">Monitoramento e configurações de segurança</p>
        </div>
        <a asp-controller="Home" asp-action="SystemManagement" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left me-1"></i>Voltar
        </a>
    </div>

    <!-- Estatísticas de Segurança -->
    <div class="row g-4 mb-4">
        <div class="col-xl-3 col-md-6">
            <div class="card border-0 shadow-sm">
                <div class="card-body text-center">
                    <div class="bg-primary bg-opacity-10 rounded-circle d-inline-flex align-items-center justify-content-center mb-3" style="width: 60px; height: 60px;">
                        <i class="bi bi-door-open text-primary fs-4"></i>
                    </div>
                    <h3 class="fw-bold mb-1">@ViewBag.SecurityStats.TentativasLoginSemana</h3>
                    <p class="text-muted mb-0">Tentativas de Login</p>
                    <small class="text-muted">Última semana</small>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6">
            <div class="card border-0 shadow-sm">
                <div class="card-body text-center">
                    <div class="bg-success bg-opacity-10 rounded-circle d-inline-flex align-items-center justify-content-center mb-3" style="width: 60px; height: 60px;">
                        <i class="bi bi-people text-success fs-4"></i>
                    </div>
                    <h3 class="fw-bold mb-1">@ViewBag.SecurityStats.UsuariosAtivosSemana</h3>
                    <p class="text-muted mb-0">Usuários Ativos</p>
                    <small class="text-muted">Última semana</small>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6">
            <div class="card border-0 shadow-sm">
                <div class="card-body text-center">
                    <div class="bg-warning bg-opacity-10 rounded-circle d-inline-flex align-items-center justify-content-center mb-3" style="width: 60px; height: 60px;">
                        <i class="bi bi-gear text-warning fs-4"></i>
                    </div>
                    <h3 class="fw-bold mb-1">@ViewBag.SecurityStats.AcessosAdminMes</h3>
                    <p class="text-muted mb-0">Acessos Admin</p>
                    <small class="text-muted">Último mês</small>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6">
            <div class="card border-0 shadow-sm">
                <div class="card-body text-center">
                    <div class="bg-info bg-opacity-10 rounded-circle d-inline-flex align-items-center justify-content-center mb-3" style="width: 60px; height: 60px;">
                        <i class="bi bi-pencil text-info fs-4"></i>
                    </div>
                    <h3 class="fw-bold mb-1">@ViewBag.SecurityStats.AlteracoesSistema</h3>
                    <p class="text-muted mb-0">Alterações</p>
                    <small class="text-muted">Último mês</small>
                </div>
            </div>
        </div>
    </div>

    <div class="row g-4">
        <!-- Configurações de Segurança -->
        <div class="col-lg-6">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-danger text-white">
                    <h5 class="mb-0">
                        <i class="bi bi-shield-check me-2"></i>Configurações de Segurança
                    </h5>
                </div>
                <div class="card-body">
                    <div class="list-group list-group-flush">
                        <div class="list-group-item d-flex justify-content-between align-items-center border-0 px-0">
                            <div>
                                <strong>HTTPS Obrigatório</strong>
                                <br><small class="text-muted">Força conexões seguras</small>
                            </div>
                            <span class="badge bg-success">Ativo</span>
                        </div>

                        <div class="list-group-item d-flex justify-content-between align-items-center border-0 px-0">
                            <div>
                                <strong>Autenticação por Roles</strong>
                                <br><small class="text-muted">Controle de acesso por perfil</small>
                            </div>
                            <span class="badge bg-success">Ativo</span>
                        </div>

                        <div class="list-group-item d-flex justify-content-between align-items-center border-0 px-0">
                            <div>
                                <strong>Log de Auditoria</strong>
                                <br><small class="text-muted">Registro de todas as ações</small>
                            </div>
                            <span class="badge bg-success">Ativo</span>
                        </div>

                        <div class="list-group-item d-flex justify-content-between align-items-center border-0 px-0">
                            <div>
                                <strong>Validação Anti-CSRF</strong>
                                <br><small class="text-muted">Proteção contra ataques CSRF</small>
                            </div>
                            <span class="badge bg-success">Ativo</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Atividades Críticas Recentes -->
        <div class="col-lg-6">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-warning text-dark">
                    <h5 class="mb-0">
                        <i class="bi bi-exclamation-triangle me-2"></i>Atividades Críticas
                    </h5>
                </div>
                <div class="card-body" style="max-height: 400px; overflow-y: auto;">
                    @if (ViewBag.AtividadesCriticas != null && ViewBag.AtividadesCriticas.Count > 0)
                    {
                        @foreach (var atividade in ViewBag.AtividadesCriticas)
                        {
                            <div class="d-flex align-items-start mb-3 p-2 border rounded">
                                <div class="me-3">
                                    @if (atividade.Acao.Contains("DELETE"))
                                    {
                                        <i class="bi bi-trash text-danger"></i>
                                    }
                                    else if (atividade.Acao.Contains("ADMIN"))
                                    {
                                        <i class="bi bi-gear text-warning"></i>
                                    }
                                    else
                                    {
                                        <i class="bi bi-person text-info"></i>
                                    }
                                </div>
                                <div class="flex-grow-1">
                                    <div class="fw-bold">@atividade.Acao</div>
                                    <small class="text-muted">@atividade.Entidade</small>
                                    <div class="small text-muted">@atividade.DataHora.ToString("dd/MM/yyyy HH:mm")</div>
                                </div>
                            </div>
                        }
                    }
                    else
                    {
                        <div class="text-center text-muted">
                            <i class="bi bi-check-circle display-4"></i>
                            <p>Nenhuma atividade crítica recente</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- Alertas de Segurança -->
    <div class="card mt-4">
        <div class="card-header">
            <h5 class="mb-0">
                <i class="bi bi-bell me-2"></i>Alertas de Segurança
            </h5>
        </div>
        <div class="card-body">
            <div class="alert alert-success">
                <i class="bi bi-check-circle me-2"></i>
                <strong>Sistema Seguro:</strong> Não foram detectadas atividades suspeitas.
            </div>

            <div class="alert alert-info">
                <i class="bi bi-info-circle me-2"></i>
                <strong>Recomendação:</strong> Configure backup automático para maior segurança dos dados.
            </div>

            <div class="alert alert-warning">
                <i class="bi bi-exclamation-triangle me-2"></i>
                <strong>Atenção:</strong> Revise periodicamente os logs de auditoria para detectar anomalias.
            </div>
        </div>
    </div>
</div>
