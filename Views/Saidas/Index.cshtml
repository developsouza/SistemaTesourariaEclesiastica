@model IEnumerable<SistemaTesourariaEclesiastica.Models.Saida>

@{
    ViewData["Title"] = "Saídas (Despesas)";
}

<!-- Cabeçalho -->
<div class="d-flex flex-column flex-md-row justify-content-between align-items-start align-items-md-center mb-4 gap-2">
    <div>
        <h1 class="h3 mb-1">
            <i class="bi bi-arrow-up-circle me-2 text-danger"></i>Saídas (Despesas)
        </h1>
        <p class="text-muted mb-0 small">Gerenciar pagamentos e despesas</p>
    </div>
    <a asp-action="Create" class="btn btn-danger">
        <i class="bi bi-plus-circle me-2"></i>Nova Saída
    </a>
</div>

<!-- Filtros -->
<div class="card shadow-sm mb-4">
    <div class="card-body">
        <form method="get" class="row g-3">
            <div class="col-12 col-md-3">
                <label class="form-label small fw-semibold">Data Início</label>
                <input type="date" class="form-control" name="dataInicio" value="@ViewData["DataInicio"]">
            </div>
            <div class="col-12 col-md-3">
                <label class="form-label small fw-semibold">Data Fim</label>
                <input type="date" class="form-control" name="dataFim" value="@ViewData["DataFim"]">
            </div>
            <div class="col-12 col-md-3">
                <label class="form-label small fw-semibold">Centro de Custo</label>
                @Html.DropDownList("centroCustoId", ViewBag.CentrosCusto as SelectList, "Todos",
                new { @class = "form-select" })
            </div>
            <div class="col-12 col-md-3">
                <label class="form-label small fw-semibold">Categoria</label>
                @Html.DropDownList("planoContasId", ViewBag.PlanosContas as SelectList, "Todas",
                                new { @class = "form-select" })
            </div>
            <div class="col-12 col-md-3">
                <label class="form-label small fw-semibold">Fornecedor</label>
                @Html.DropDownList("fornecedorId", ViewBag.Fornecedores as SelectList, "Todos",
                                new { @class = "form-select" })
            </div>
            <div class="col-12 col-md-3">
                <label class="form-label small fw-semibold">Tipo de Despesa</label>
                <select name="tipoDespesa" class="form-select">
                    <option value="">Todos</option>
                    <option value="Fixa" selected="@(ViewData["TipoDespesa"]?.ToString() == "Fixa")">Fixa</option>
                    <option value="Variavel" selected="@(ViewData["TipoDespesa"]?.ToString() == "Variavel")">Variável</option>
                </select>
            </div>
            <div class="col-12 col-md-6 d-flex align-items-end gap-2">
                <button type="submit" class="btn btn-outline-primary">
                    <i class="bi bi-search me-1"></i>Filtrar
                </button>
                <a asp-action="Index" class="btn btn-outline-secondary">
                    <i class="bi bi-arrow-clockwise me-1"></i>Limpar
                </a>
            </div>
        </form>
    </div>
</div>

<!-- Resultados -->
<div class="card shadow-sm">
    <div class="card-header bg-white d-flex justify-content-between align-items-center py-3">
        <div>
            <h5 class="mb-1 fw-semibold">
                <i class="bi bi-list-ul me-2 text-danger"></i>
                @ViewBag.TotalItems saída(s) encontrada(s)
            </h5>
            @if (Model != null && Model.Any())
            {
                <small class="text-danger fw-semibold">
                    Total: @Model.Sum(s => s.Valor).ToString("C2")
                </small>
            }
        </div>
        <button type="button" class="btn btn-sm btn-outline-secondary" onclick="window.print()">
            <i class="bi bi-printer me-1"></i>Imprimir
        </button>
    </div>

    <div class="card-body p-0">
        @if (Model != null && Model.Any())
        {
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="table-light">
                        <tr>
                            <th class="ps-3">Data</th>
                            <th>Descrição</th>
                            <th class="text-end">Valor</th>
                            <th class="d-none d-lg-table-cell">Categoria</th>
                            <th class="d-none d-xl-table-cell">Fornecedor</th>
                            <th class="d-none d-md-table-cell">Tipo</th>
                            <th class="text-center" style="width: 140px;">Ações</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="ps-3">
                                    <div class="fw-semibold">@item.Data.ToString("dd/MM/yy")</div>
                                    <small class="text-muted">@item.Data.ToString("HH:mm")</small>
                                </td>
                                <td>
                                    <div class="fw-semibold">@item.Descricao</div>
                                    <small class="text-muted d-lg-none">@item.PlanoDeContas?.Nome</small>
                                </td>
                                <td class="text-end">
                                    <span class="fw-bold text-danger">@item.Valor.ToString("C2")</span>
                                </td>
                                <td class="d-none d-lg-table-cell">
                                    <span class="badge bg-danger bg-opacity-10 text-danger border border-danger">
                                        @item.PlanoDeContas?.Nome
                                    </span>
                                </td>
                                <td class="d-none d-xl-table-cell">
                                    @if (item.Fornecedor != null)
                                    {
                                        <span>@item.Fornecedor.Nome</span>
                                    }
                                    else
                                    {
                                        <span class="text-muted fst-italic">-</span>
                                    }
                                </td>
                                <td class="d-none d-md-table-cell">
                                    <span class="badge @(item.TipoDespesa.ToString() == "Fixa" ? "bg-warning" : "bg-secondary")">
                                        @item.TipoDespesa
                                    </span>
                                </td>
                                <td>
                                    <div class="btn-group btn-group-sm" role="group">
                                        <a asp-action="Details" asp-route-id="@item.Id"
                                           class="btn btn-outline-info" title="Detalhes">
                                            <i class="bi bi-eye"></i>
                                        </a>
                                        <a asp-action="Edit" asp-route-id="@item.Id"
                                           class="btn btn-outline-primary" title="Editar">
                                            <i class="bi bi-pencil"></i>
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@item.Id"
                                           class="btn btn-outline-danger" title="Excluir">
                                            <i class="bi bi-trash"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="text-center py-5">
                <i class="bi bi-arrow-up-circle text-muted" style="font-size: 4rem;"></i>
                <h5 class="mt-3 text-muted">Nenhuma saída encontrada</h5>
                <p class="text-muted">Não há saídas cadastradas com os filtros aplicados.</p>
                <a asp-action="Create" class="btn btn-danger mt-2">
                    <i class="bi bi-plus-circle me-2"></i>Registrar Primeira Saída
                </a>
            </div>
        }
    </div>

    @if (ViewBag.TotalPages > 1)
    {
        <div class="card-footer bg-white py-3">
            <nav aria-label="Navegação de páginas">
                <ul class="pagination pagination-sm justify-content-center mb-0">
                    <li class="page-item @(ViewBag.CurrentPage <= 1 ? "disabled" : "")">
                        <a class="page-link" asp-action="Index"
                           asp-route-page="@(ViewBag.CurrentPage - 1)"
                           asp-route-dataInicio="@ViewData["DataInicio"]"
                           asp-route-dataFim="@ViewData["DataFim"]"
                           asp-route-centroCustoId="@ViewData["CentroCustoId"]"
                           asp-route-planoContasId="@ViewData["PlanoContasId"]"
                           asp-route-fornecedorId="@ViewData["FornecedorId"]"
                           asp-route-tipoDespesa="@ViewData["TipoDespesa"]">
                            <i class="bi bi-chevron-left"></i>
                        </a>
                    </li>

                    @for (int i = Math.Max(1, ViewBag.CurrentPage - 2); i <= Math.Min(ViewBag.TotalPages, ViewBag.CurrentPage + 2); i++)
                    {
                        <li class="page-item @(i == ViewBag.CurrentPage ? "active" : "")">
                            <a class="page-link" asp-action="Index"
                               asp-route-page="@i"
                               asp-route-dataInicio="@ViewData["DataInicio"]"
                               asp-route-dataFim="@ViewData["DataFim"]"
                               asp-route-centroCustoId="@ViewData["CentroCustoId"]"
                               asp-route-planoContasId="@ViewData["PlanoContasId"]"
                               asp-route-fornecedorId="@ViewData["FornecedorId"]"
                               asp-route-tipoDespesa="@ViewData["TipoDespesa"]">
                                @i
                            </a>
                        </li>
                    }

                    <li class="page-item @(ViewBag.CurrentPage >= ViewBag.TotalPages ? "disabled" : "")">
                        <a class="page-link" asp-action="Index"
                           asp-route-page="@(ViewBag.CurrentPage + 1)"
                           asp-route-dataInicio="@ViewData["DataInicio"]"
                           asp-route-dataFim="@ViewData["DataFim"]"
                           asp-route-centroCustoId="@ViewData["CentroCustoId"]"
                           asp-route-planoContasId="@ViewData["PlanoContasId"]"
                           asp-route-fornecedorId="@ViewData["FornecedorId"]"
                           asp-route-tipoDespesa="@ViewData["TipoDespesa"]">
                            <i class="bi bi-chevron-right"></i>
                        </a>
                    </li>
                </ul>
            </nav>
        </div>
    }
</div>