@model SistemaTesourariaEclesiastica.Models.Porteiro

@{
    ViewData["Title"] = "Editar Porteiro";
}

<div class="row justify-content-center">
    <div class="col-lg-10">
        <div class="card shadow-sm">
            <div class="card-header bg-warning">
                <h4 class="mb-0">
                    <i class="bi bi-pencil-fill me-2"></i>Editar Porteiro
                </h4>
            </div>
            <div class="card-body">
                <form asp-action="Edit" method="post">
                    <input type="hidden" asp-for="Id" />
                    <input type="hidden" asp-for="DataCadastro" />
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                    <div class="row">
                        <div class="col-md-8 mb-3">
                            <label asp-for="Nome" class="form-label fw-semibold"></label>
                            <input asp-for="Nome" class="form-control" />
                            <span asp-validation-for="Nome" class="text-danger small"></span>
                        </div>

                        <div class="col-md-4 mb-3">
                            <label asp-for="Telefone" class="form-label fw-semibold"></label>
                            <input asp-for="Telefone" type="tel" class="form-control" maxlength="15" />
                            <span asp-validation-for="Telefone" class="text-danger small"></span>
                        </div>
                    </div>

                    <div class="mb-3">
                        <div class="form-check form-switch">
                            <input asp-for="Ativo" class="form-check-input" type="checkbox" />
                            <label asp-for="Ativo" class="form-check-label"></label>
                        </div>
                    </div>

                    <hr class="my-4" />

                    <h5 class="mb-3"><i class="bi bi-calendar-week me-2"></i>Disponibilidade</h5>
                    
                    <div class="alert alert-info" role="alert">
                        <i class="bi bi-info-circle me-2"></i>
                        Selecione os dias e horários em que o porteiro pode ser escalado. Se não selecionar, ele estará disponível para todos os dias e horários.
                    </div>

                    <div class="card mb-3">
                        <div class="card-header">
                            <h6 class="mb-0">Dias da Semana</h6>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-4 mb-2">
                                    <div class="form-check">
                                        <input asp-for="DisponibilidadeDomingo" class="form-check-input" type="checkbox" />
                                        <label asp-for="DisponibilidadeDomingo" class="form-check-label"></label>
                                    </div>
                                </div>
                                <div class="col-md-4 mb-2">
                                    <div class="form-check">
                                        <input asp-for="DisponibilidadeSegunda" class="form-check-input" type="checkbox" />
                                        <label asp-for="DisponibilidadeSegunda" class="form-check-label"></label>
                                    </div>
                                </div>
                                <div class="col-md-4 mb-2">
                                    <div class="form-check">
                                        <input asp-for="DisponibilidadeTerca" class="form-check-input" type="checkbox" />
                                        <label asp-for="DisponibilidadeTerca" class="form-check-label"></label>
                                    </div>
                                </div>
                                <div class="col-md-4 mb-2">
                                    <div class="form-check">
                                        <input asp-for="DisponibilidadeQuarta" class="form-check-input" type="checkbox" />
                                        <label asp-for="DisponibilidadeQuarta" class="form-check-label"></label>
                                    </div>
                                </div>
                                <div class="col-md-4 mb-2">
                                    <div class="form-check">
                                        <input asp-for="DisponibilidadeQuinta" class="form-check-input" type="checkbox" />
                                        <label asp-for="DisponibilidadeQuinta" class="form-check-label"></label>
                                    </div>
                                </div>
                                <div class="col-md-4 mb-2">
                                    <div class="form-check">
                                        <input asp-for="DisponibilidadeSexta" class="form-check-input" type="checkbox" />
                                        <label asp-for="DisponibilidadeSexta" class="form-check-label"></label>
                                    </div>
                                </div>
                                <div class="col-md-4 mb-2">
                                    <div class="form-check">
                                        <input asp-for="DisponibilidadeSabado" class="form-check-input" type="checkbox" />
                                        <label asp-for="DisponibilidadeSabado" class="form-check-label"></label>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="card mb-3">
                        <div class="card-header">
                            <h6 class="mb-0">Horários Disponíveis</h6>
                        </div>
                        <div class="card-body">
                            <label asp-for="HorariosDisponiveis" class="form-label"></label>
                            <input asp-for="HorariosDisponiveis" class="form-control" placeholder="Ex: 09:00, 19:00, 19:30" />
                            <small class="form-text text-muted">
                                Digite os horários separados por vírgula (formato HH:MM). Deixe em branco para disponibilidade em todos os horários.
                            </small>
                            <span asp-validation-for="HorariosDisponiveis" class="text-danger small"></span>
                        </div>
                    </div>

                    <div class="d-flex justify-content-between gap-2 mt-4">
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="bi bi-arrow-left me-1"></i>Voltar
                        </a>
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-save me-1"></i>Salvar Alterações
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
