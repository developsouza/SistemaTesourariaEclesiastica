@model IEnumerable<SistemaTesourariaEclesiastica.Models.PagamentoDespesaRecorrente>

@{
    ViewData["Title"] = "Controle de Pagamentos";
    var despesa = ViewBag.Despesa as SistemaTesourariaEclesiastica.Models.DespesaRecorrente;
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h1 class="h3 mb-1">
            <i class="bi bi-calendar-check text-success me-2"></i>
            Controle de Pagamentos
        </h1>
        <p class="text-muted mb-0">@despesa?.Nome</p>
    </div>
    <div>
        <a asp-action="GerarPagamentos" asp-route-id="@despesa?.Id" class="btn btn-primary me-2">
            <i class="bi bi-plus-circle-dotted me-2"></i>Gerar Pagamentos
        </a>
        <a asp-action="Index" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left me-2"></i>Voltar
        </a>
    </div>
</div>

<!-- Informações da Despesa -->
<div class="card shadow-sm mb-4">
    <div class="card-body">
        <div class="row g-3">
            <div class="col-md-3">
                <div class="text-muted small">Periodicidade</div>
                <div class="fw-semibold">@Html.DisplayFor(model => despesa.Periodicidade)</div>
            </div>
            <div class="col-md-3">
                <div class="text-muted small">Valor Padrão</div>
                <div class="fw-semibold text-warning">@despesa?.ValorPadrao.ToString("C2")</div>
            </div>
            <div class="col-md-3">
                <div class="text-muted small">Centro de Custo</div>
                <div class="fw-semibold">@despesa?.CentroCusto?.Nome</div>
            </div>
            <div class="col-md-3">
                <div class="text-muted small">Status</div>
                <div>
                    @if (despesa?.Ativa == true)
                    {
                        <span class="badge bg-success">Ativa</span>
                    }
                    else
                    {
                        <span class="badge bg-secondary">Inativa</span>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Estatísticas Rápidas -->
@{
    var totalPagamentos = Model?.Count() ?? 0;
    var pagamentosPagos = Model?.Count(p => p.Pago) ?? 0;
    var pagamentosPendentes = Model?.Count(p => !p.Pago) ?? 0;
    var pagamentosAtrasados = Model?.Count(p => !p.Pago && p.DataVencimento < DateTime.Today) ?? 0;
    var totalPago = Model?.Where(p => p.Pago).Sum(p => p.ValorPago.GetValueOrDefault()) ?? 0;
    var totalPendente = Model?.Where(p => !p.Pago).Sum(p => p.ValorPrevisto) ?? 0;
}

<div class="row g-3 mb-4">
    <div class="col-md-3">
        <div class="card bg-success bg-opacity-10 border-success">
            <div class="card-body">
                <div class="d-flex align-items-center">
                    <div class="flex-grow-1">
                        <div class="text-muted small">Pagos</div>
                        <div class="h4 mb-0 text-success">@pagamentosPagos</div>
                        <small class="text-success">@totalPago.ToString("C2")</small>
                    </div>
                    <i class="bi bi-check-circle-fill text-success" style="font-size: 2rem;"></i>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card bg-warning bg-opacity-10 border-warning">
            <div class="card-body">
                <div class="d-flex align-items-center">
                    <div class="flex-grow-1">
                        <div class="text-muted small">Pendentes</div>
                        <div class="h4 mb-0 text-warning">@pagamentosPendentes</div>
                        <small class="text-warning">@totalPendente.ToString("C2")</small>
                    </div>
                    <i class="bi bi-clock-fill text-warning" style="font-size: 2rem;"></i>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card bg-danger bg-opacity-10 border-danger">
            <div class="card-body">
                <div class="d-flex align-items-center">
                    <div class="flex-grow-1">
                        <div class="text-muted small">Atrasados</div>
                        <div class="h4 mb-0 text-danger">@pagamentosAtrasados</div>
                    </div>
                    <i class="bi bi-exclamation-triangle-fill text-danger" style="font-size: 2rem;"></i>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card bg-info bg-opacity-10 border-info">
            <div class="card-body">
                <div class="d-flex align-items-center">
                    <div class="flex-grow-1">
                        <div class="text-muted small">Total</div>
                        <div class="h4 mb-0 text-info">@totalPagamentos</div>
                    </div>
                    <i class="bi bi-list-ul text-info" style="font-size: 2rem;"></i>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Lista de Pagamentos -->
<div class="card shadow-sm">
    <div class="card-header bg-white py-3">
        <h5 class="mb-0 fw-semibold">
            <i class="bi bi-calendar3 me-2"></i>
            Histórico de Pagamentos
        </h5>
    </div>

    <div class="card-body p-0">
        @if (Model != null && Model.Any())
        {
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="table-light">
                        <tr>
                            <th class="ps-3">Vencimento</th>
                            <th class="text-end">Valor Previsto</th>
                            <th class="text-end">Valor Pago</th>
                            <th class="text-center">Status</th>
                            <th class="text-center">Data Pagamento</th>
                            <th class="text-center" style="width: 250px;">Ações</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            var statusClass = item.Pago ? "table-success" :
                            (item.DataVencimento < DateTime.Today ? "table-danger" :
                            (item.DataVencimento == DateTime.Today ? "table-warning" : ""));

                            <tr class="@statusClass">
                                <td class="ps-3">
                                    <div class="fw-semibold">@item.DataVencimento.ToString("dd/MM/yyyy")</div>
                                    @if (item.DiasAtraso.HasValue)
                                    {
                                        <small class="text-danger">
                                            <i class="bi bi-exclamation-circle"></i>
                                            @item.DiasAtraso dias de atraso
                                        </small>
                                    }
                                    else if (item.DataVencimento == DateTime.Today && !item.Pago)
                                    {
                                        <small class="text-warning">
                                            <i class="bi bi-clock"></i>
                                            Vence hoje
                                        </small>
                                    }
                                </td>
                                <td class="text-end">
                                    @item.ValorPrevisto.ToString("C2")
                                </td>
                                <td class="text-end">
                                    @if (item.ValorPago.HasValue)
                                    {
                                        <span class="fw-bold text-success">@item.ValorPago.Value.ToString("C2")</span>
                                    }
                                    else
                                    {
                                        <span class="text-muted">-</span>
                                    }
                                </td>
                                <td class="text-center">
                                    @switch (item.Status)
                                    {
                                        case "Pago":
                                            <span class="badge bg-success">
                                                <i class="bi bi-check-circle"></i> Pago
                                            </span>
                                            break;
                                        case "Atrasado":
                                            <span class="badge bg-danger">
                                                <i class="bi bi-exclamation-triangle"></i> Atrasado
                                            </span>
                                            break;
                                        case "Vence Hoje":
                                            <span class="badge bg-warning text-dark">
                                                <i class="bi bi-clock"></i> Vence Hoje
                                            </span>
                                            break;
                                        default:
                                            <span class="badge bg-secondary">
                                                <i class="bi bi-clock"></i> Pendente
                                            </span>
                                            break;
                                    }
                                </td>
                                <td class="text-center">
                                    @if (item.DataPagamento.HasValue)
                                    {
                                        <span>@item.DataPagamento.Value.ToString("dd/MM/yyyy")</span>
                                    }
                                    else
                                    {
                                        <span class="text-muted">-</span>
                                    }
                                </td>
                                <td class="text-center">
                                    @if (!item.Pago)
                                    {
                                        <!-- Botão Marcar como Pago -->
                                        <button type="button" class="btn btn-sm btn-success"
                                                data-bs-toggle="modal"
                                                data-bs-target="#modalMarcarPago"
                                                data-pagamento-id="@item.Id"
                                                data-valor-previsto="@item.ValorPrevisto.ToString(System.Globalization.CultureInfo.InvariantCulture)"
                                                data-data-vencimento="@item.DataVencimento.ToString("dd/MM/yyyy")">
                                            <i class="bi bi-check2-circle"></i> Marcar Pago
                                        </button>

                                        <!-- Botão Gerar Saída -->
                                        if (!item.SaidaGerada)
                                        {
                                            <form asp-action="GerarSaida" asp-route-pagamentoId="@item.Id"
                                                  method="post" class="d-inline">
                                                @Html.AntiForgeryToken()
                                                <button type="submit" class="btn btn-sm btn-primary"
                                                        onclick="return confirm('Deseja gerar uma saída automaticamente para este pagamento?');">
                                                    <i class="bi bi-arrow-up-circle"></i> Gerar Saída
                                                </button>
                                            </form>
                                        }
                                        else
                                        {
                                            <a asp-controller="Saidas" asp-action="Details" asp-route-id="@item.SaidaId"
                                               class="btn btn-sm btn-outline-info">
                                                <i class="bi bi-eye"></i> Ver Saída
                                            </a>
                                        }
                                    }
                                    else
                                    {
                                        <!-- Botão Desmarcar Pago -->
                                        <form asp-action="DesmarcarPago" asp-route-pagamentoId="@item.Id"
                                              method="post" class="d-inline">
                                            @Html.AntiForgeryToken()
                                            <button type="submit" class="btn btn-sm btn-outline-secondary"
                                                    onclick="return confirm('Deseja desmarcar este pagamento?');">
                                                <i class="bi bi-x-circle"></i> Desmarcar
                                            </button>
                                        </form>

                                        if (item.SaidaGerada && item.SaidaId.HasValue)
                                        {
                                            <a asp-controller="Saidas" asp-action="Details" asp-route-id="@item.SaidaId"
                                               class="btn btn-sm btn-outline-info">
                                                <i class="bi bi-eye"></i> Ver Saída
                                            </a>
                                        }
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="text-center py-5">
                <i class="bi bi-calendar-x text-muted" style="font-size: 4rem;"></i>
                <h5 class="mt-3 text-muted">Nenhum pagamento gerado</h5>
                <p class="text-muted">Clique em "Gerar Pagamentos" para criar os vencimentos.</p>
                <a asp-action="GerarPagamentos" asp-route-id="@despesa?.Id" class="btn btn-primary mt-2">
                    <i class="bi bi-plus-circle-dotted me-2"></i>Gerar Pagamentos
                </a>
            </div>
        }
    </div>
</div>

<!-- Modal Marcar como Pago -->
<div class="modal fade" id="modalMarcarPago" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">
                    <i class="bi bi-check2-circle me-2"></i>
                    Marcar Pagamento como Pago
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <form asp-action="MarcarPago" method="post">
                @Html.AntiForgeryToken()
                <input type="hidden" id="pagamentoId" name="pagamentoId" />
                <div class="modal-body">
                    <div class="mb-3">
                        <label class="form-label">Data de Vencimento</label>
                        <input type="text" id="dataVencimento" class="form-control" readonly />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Valor Previsto</label>
                        <input type="text" id="valorPrevisto" class="form-control" readonly />
                    </div>
                    <div class="mb-3">
                        <label for="valorPago" class="form-label">Valor Pago</label>
                        <div class="input-group">
                            <span class="input-group-text">R$</span>
                            <input type="number" class="form-control" id="valorPago"
                                   name="valorPago" step="0.01" min="0.01" required />
                        </div>
                        <div class="form-text">
                            Deixe em branco para usar o valor previsto
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                    <button type="submit" class="btn btn-success">
                        <i class="bi bi-check-circle"></i> Confirmar Pagamento
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Preencher modal com dados do pagamento
               document.getElementById('modalMarcarPago').addEventListener('show.bs.modal', function (event) {
                   var button = event.relatedTarget;
                   var pagamentoId = button.getAttribute('data-pagamento-id');
              var valorPrevisto = parseFloat(button.getAttribute('data-valor-previsto'));
                   var dataVencimento = button.getAttribute('data-data-vencimento');

                   document.getElementById('pagamentoId').value = pagamentoId;
            document.getElementById('valorPrevisto').value = 'R$ ' + valorPrevisto.toLocaleString('pt-BR', { minimumFractionDigits: 2, maximumFractionDigits: 2 });
           document.getElementById('dataVencimento').value = dataVencimento;
               document.getElementById('valorPago').value = valorPrevisto.toFixed(2);
           });
    </script>
}
