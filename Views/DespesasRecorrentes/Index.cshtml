@model IEnumerable<SistemaTesourariaEclesiastica.Models.DespesaRecorrente>

@{
    ViewData["Title"] = "Despesas Recorrentes";
}

<div class="d-flex flex-column flex-md-row justify-content-between align-items-start align-items-md-center mb-4 gap-2">
    <div>
        <h1 class="h3 mb-1">
            <i class="bi bi-arrow-repeat me-2 text-warning"></i>Despesas Recorrentes
        </h1>
        <p class="text-muted mb-0 small">Gerenciar despesas fixas e periódicas</p>
    </div>
    <a asp-action="Create" class="btn btn-warning">
        <i class="bi bi-plus-circle me-2"></i>Nova Despesa Recorrente
    </a>
</div>

<!-- Filtros -->
<div class="card shadow-sm mb-4">
    <div class="card-body">
        <form method="get" class="row g-3">
            <div class="col-12 col-md-4">
                <label class="form-label small fw-semibold">Centro de Custo</label>
                @Html.DropDownList("centroCustoId", ViewBag.CentrosCusto as SelectList, "Todos",
                new { @class = "form-select" })
            </div>
            <div class="col-12 col-md-3">
                <label class="form-label small fw-semibold">Status</label>
                <select name="ativa" class="form-select">
                    <option value="">Todas</option>
                    <option value="true" selected="@(ViewData["Ativa"]?.ToString() == "True")">Ativas</option>
                    <option value="false" selected="@(ViewData["Ativa"]?.ToString() == "False")">Inativas</option>
                </select>
            </div>
            <div class="col-12 col-md-3">
                <label class="form-label small fw-semibold">Periodicidade</label>
                <select name="periodicidade" class="form-select">
                    <option value="">Todas</option>
                    @foreach (var item in Html.GetEnumSelectList<SistemaTesourariaEclesiastica.Enums.Periodicidade>())
                    {
                        <option value="@item.Value">@item.Text</option>
                    }
                </select>
            </div>
            <div class="col-12 col-md-2 d-flex align-items-end gap-2">
                <button type="submit" class="btn btn-outline-primary w-100">
                    <i class="bi bi-search me-1"></i>Filtrar
                </button>
            </div>
        </form>
    </div>
</div>

<!-- Lista de Despesas -->
<div class="card shadow-sm">
    <div class="card-header bg-white py-3">
        <h5 class="mb-0 fw-semibold">
            <i class="bi bi-list-ul me-2 text-warning"></i>
            @(Model?.Count() ?? 0) despesa(s) recorrente(s) encontrada(s)
        </h5>
    </div>

    <div class="card-body p-0">
        @if (Model != null && Model.Any())
        {
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="table-light">
                        <tr>
                            <th class="ps-3">Nome</th>
                            <th>Periodicidade</th>
                            <th class="text-end">Valor Padrão</th>
                            <th class="d-none d-lg-table-cell">Centro de Custo</th>
                            <th class="d-none d-xl-table-cell">Categoria</th>
                            <th class="text-center">Status</th>
                            <th class="text-center">Pagamentos</th>
                            <th class="text-center" style="width: 200px;">Ações</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            var totalPagamentos = item.Pagamentos?.Count ?? 0;
                            var pagamentosPagos = item.Pagamentos?.Count(p => p.Pago) ?? 0;
                            var pagamentosAtrasados = item.Pagamentos?.Count(p => !p.Pago && p.DataVencimento < DateTime.Today) ?? 0;

                            <tr>
                                <td class="ps-3">
                                    <div class="fw-semibold">@item.Nome</div>
                                    @if (!string.IsNullOrEmpty(item.Descricao))
                                    {
                                        <small class="text-muted">@item.Descricao</small>
                                    }
                                </td>
                                <td>
                                    <span class="badge bg-info bg-opacity-10 text-info border border-info">
                                        @Html.DisplayFor(modelItem => item.Periodicidade)
                                    </span>
                                </td>
                                <td class="text-end fw-bold text-warning">
                                    @item.ValorPadrao.ToString("C2")
                                </td>
                                <td class="d-none d-lg-table-cell">
                                    <span class="badge bg-secondary bg-opacity-10 text-secondary border border-secondary">
                                        @item.CentroCusto?.Nome
                                    </span>
                                </td>
                                <td class="d-none d-xl-table-cell">
                                    <span class="badge bg-danger bg-opacity-10 text-danger border border-danger">
                                        @item.PlanoDeContas?.Nome
                                    </span>
                                </td>
                                <td class="text-center">
                                    @if (item.Ativa)
                                    {
                                        <span class="badge bg-success">
                                            <i class="bi bi-check-circle"></i> Ativa
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">
                                            <i class="bi bi-x-circle"></i> Inativa
                                        </span>
                                    }
                                </td>
                                <td class="text-center">
                                    <div>
                                        <span class="badge bg-success">@pagamentosPagos pagos</span>
                                    </div>
                                    @if (pagamentosAtrasados > 0)
                                    {
                                        <div class="mt-1">
                                            <span class="badge bg-danger">@pagamentosAtrasados atrasados</span>
                                        </div>
                                    }
                                    <div class="mt-1">
                                        <small class="text-muted">Total: @totalPagamentos</small>
                                    </div>
                                </td>
                                <td>
                                    <div class="btn-group btn-group-sm" role="group">
                                        <a asp-action="Pagamentos" asp-route-id="@item.Id"
                                           class="btn btn-outline-success" title="Gerenciar Pagamentos">
                                            <i class="bi bi-calendar-check"></i>
                                        </a>
                                        <a asp-action="Details" asp-route-id="@item.Id"
                                           class="btn btn-outline-info" title="Detalhes">
                                            <i class="bi bi-eye"></i>
                                        </a>
                                        <a asp-action="Edit" asp-route-id="@item.Id"
                                           class="btn btn-outline-primary" title="Editar">
                                            <i class="bi bi-pencil"></i>
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@item.Id"
                                           class="btn btn-outline-danger" title="Excluir">
                                            <i class="bi bi-trash"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="text-center py-5">
                <i class="bi bi-arrow-repeat text-muted" style="font-size: 4rem;"></i>
                <h5 class="mt-3 text-muted">Nenhuma despesa recorrente cadastrada</h5>
                <p class="text-muted">Comece cadastrando suas despesas fixas como zeladoria, auxílios, etc.</p>
                <a asp-action="Create" class="btn btn-warning mt-2">
                    <i class="bi bi-plus-circle me-2"></i>Cadastrar Primeira Despesa
                </a>
            </div>
        }
    </div>
</div>
