@model SistemaTesourariaEclesiastica.Models.FechamentoPeriodo

@{
    ViewData["Title"] = "Detalhes do Fechamento";
    var podeAprovar = User.IsInRole("Administrador") || User.IsInRole("TesoureiroGeral");
    var podeVerRateios = User.IsInRole("Administrador") || User.IsInRole("TesoureiroGeral");
    var diferenca = Model.BalancoFisico - Model.BalancoDigital;
var balancoTotal = Model.BalancoFisico + Model.BalancoDigital;
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h1 class="h3 mb-0">
 <i class="bi bi-file-earmark-text me-2"></i>
  Detalhes do Fechamento
        </h1>
        <p class="text-muted mb-0">
       @if (Model.TipoFechamento == SistemaTesourariaEclesiastica.Enums.TipoFechamento.Diario)
         {
    <span>Fechamento Diário - @Model.DataInicio.ToString("dd/MM/yyyy")</span>
       }
          else if (Model.TipoFechamento == SistemaTesourariaEclesiastica.Enums.TipoFechamento.Semanal)
            {
             <span>Fechamento Semanal - De @Model.DataInicio.ToString("dd/MM/yyyy") até @Model.DataFim.ToString("dd/MM/yyyy")</span>
    }
     else
  {
    <span>Fechamento Mensal - @Model.Mes.Value.ToString("00")/@Model.Ano</span>
            }
     </p>
    </div>
    <div>
        <a asp-action="Index" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left me-2"></i>Voltar
        </a>
     @if (Model.Status == SistemaTesourariaEclesiastica.Enums.StatusFechamentoPeriodo.Aprovado)
        {
<a asp-action="GerarPdf" asp-route-id="@Model.Id" class="btn btn-danger" target="_blank">
      <i class="bi bi-file-pdf me-2"></i>Gerar PDF
            </a>
    }
    </div>
</div>

<!-- Card de Status -->
<div class="row mb-4">
    <div class="col-12">
        <div class="card border-@(Model.Status == SistemaTesourariaEclesiastica.Enums.StatusFechamentoPeriodo.Aprovado ? "success" : Model.Status == SistemaTesourariaEclesiastica.Enums.StatusFechamentoPeriodo.Rejeitado ? "danger" : "warning")">
        <div class="card-body">
             <div class="row align-items-center">
      <div class="col-md-8">
   <h5 class="mb-2">
     <i class="bi bi-building me-2"></i>
        @Model.CentroCusto.Nome
        </h5>
   <div class="row">
         <div class="col-md-6">
 <small class="text-muted">
  <i class="bi bi-person me-1"></i>
       Submetido por: <strong>@Model.UsuarioSubmissao.NomeCompleto</strong>
          </small>
              </div>
               <div class="col-md-6">
    <small class="text-muted">
       <i class="bi bi-calendar me-1"></i>
 Data: <strong>@Model.DataSubmissao.ToString("dd/MM/yyyy HH:mm")</strong>
   </small>
               </div>
        </div>
             </div>
          <div class="col-md-4 text-end">
   <span class="badge bg-@(Model.Status == SistemaTesourariaEclesiastica.Enums.StatusFechamentoPeriodo.Aprovado ? "success" : Model.Status == SistemaTesourariaEclesiastica.Enums.StatusFechamentoPeriodo.Rejeitado ? "danger" : "warning") fs-5">
         @Model.Status.ToString()
                </span>
      </div>
      </div>
            </div>
        </div>
        @if (Model.FoiProcessadoPelaSede && Model.FechamentoSedeProcessador != null)
    {
   <div class="alert alert-info mt-3">
       <h6 class="alert-heading">
        <i class="bi bi-check2-circle me-2"></i>
  Incluído em Fechamento da SEDE
                </h6>
          <p class="mb-1">
     Esta prestação de contas foi incluída no fechamento da SEDE em
         <strong>@Model.DataProcessamentoPelaSede?.ToString("dd/MM/yyyy HH:mm")</strong>
     </p>
      <a asp-action="Details" asp-route-id="@Model.FechamentoSedeProcessadorId" class="btn btn-sm btn-outline-info">
           <i class="bi bi-eye me-1"></i>Ver Fechamento da SEDE
      </a>
            </div>
        }

        @if (Model.FechamentosCongregacoesIncluidos.Any())
        {
            <div class="alert alert-success mt-3">
           <h6 class="alert-heading">
          <i class="bi bi-list-check me-2"></i>
   Prestações de Congregações Incluídas
                </h6>
           <p class="mb-2">
         Este fechamento da SEDE processou <strong>@Model.FechamentosCongregacoesIncluidos.Count</strong> prestação(ões) de congregação(ões):
       </p>
     <ul class="mb-0">
       @foreach (var fechamento in Model.FechamentosCongregacoesIncluidos)
             {
 <li>
        <strong>@fechamento.CentroCusto.Nome</strong> -
     @fechamento.DataInicio.ToString("dd/MM/yyyy") até @fechamento.DataFim.ToString("dd/MM/yyyy")
         <a asp-action="Details" asp-route-id="@fechamento.Id" class="btn btn-sm btn-outline-success ms-2">
    <i class="bi bi-eye"></i>
  </a>
            </li>
}
       </ul>
     </div>
   }
    </div>
</div>

<!-- Cards de Balanços -->
<div class="row mb-4">
    <div class="col-md-3">
        <div class="card text-center border-primary">
            <div class="card-body">
           <i class="bi bi-arrow-down-circle text-primary display-4"></i>
 <h6 class="mt-2 mb-1">Total Entradas</h6>
       <h4 class="text-primary mb-0">@Model.TotalEntradas.ToString("C")</h4>
  <small class="text-muted">
            Físico: @Model.TotalEntradasFisicas.ToString("C")<br>
        Digital: @Model.TotalEntradasDigitais.ToString("C")
      </small>
            </div>
      </div>
    </div>
    <div class="col-md-3">
        <div class="card text-center border-danger">
         <div class="card-body">
    <i class="bi bi-arrow-up-circle text-danger display-4"></i>
                <h6 class="mt-2 mb-1">Total Saídas</h6>
   <h4 class="text-danger mb-0">@Model.TotalSaidas.ToString("C")</h4>
     <small class="text-muted">
        Físico: @Model.TotalSaidasFisicas.ToString("C")<br>
        Digital: @Model.TotalSaidasDigitais.ToString("C")
   </small>
            </div>
    </div>
    </div>
    <div class="col-md-3">
        <div class="card text-center border-warning">
      <div class="card-body">
 <i class="bi bi-cash text-warning display-4"></i>
                <h6 class="mt-2 mb-1">Balanço Físico</h6>
                <h4 class="text-warning mb-0">@Model.BalancoFisico.ToString("C")</h4>
  <small class="text-muted">A repassar em dinheiro</small>
     </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card text-center border-info">
     <div class="card-body">
      <i class="bi bi-bank text-info display-4"></i>
     <h6 class="mt-2 mb-1">Balanço Digital</h6>
          <h4 class="text-info mb-0">@Model.BalancoDigital.ToString("C")</h4>
         <small class="text-muted">Já depositado</small>
  </div>
        </div>
    </div>
</div>

<!-- Discriminação Detalhada -->
<div class="row mb-4">
    <div class="col-md-6">
        <div class="card">
 <div class="card-header bg-success text-white">
   <h6 class="mb-0">
      <i class="bi bi-cash-coin me-2"></i>
         Discriminação do Balanço Físico
         </h6>
          </div>
      <div class="card-body">
<table class="table table-sm mb-0">
  <tbody>
      <tr>
  <td><i class="bi bi-plus-circle text-success me-2"></i>Entradas Físicas:</td>
       <td class="text-end fw-bold text-success">+ @Model.TotalEntradasFisicas.ToString("C")</td>
      </tr>
       <tr>
   <td><i class="bi bi-dash-circle text-danger me-2"></i>Saídas Físicas:</td>
    <td class="text-end fw-bold text-danger">- @Model.TotalSaidasFisicas.ToString("C")</td>
              </tr>
<tr class="table-warning">
       <td><strong><i class="bi bi-wallet2 me-2"></i>Balanço Físico Total:</strong></td>
                 <td class="text-end fw-bold fs-5">@Model.BalancoFisico.ToString("C")</td>
            </tr>
       </tbody>
          </table>
 <div class="alert alert-warning mt-3 mb-0">
    <i class="bi bi-info-circle me-2"></i>
     <small><strong>Este é o valor em dinheiro</strong> que precisa ser fisicamente repassado para a Sede.</small>
                </div>
        </div>
        </div>
    </div>

    <div class="col-md-6">
<div class="card">
        <div class="card-header bg-info text-white">
        <h6 class="mb-0">
  <i class="bi bi-bank2 me-2"></i>
           Discriminação do Balanço Digital
       </h6>
   </div>
   <div class="card-body">
    <table class="table table-sm mb-0">
        <tbody>
     <tr>
    <td><i class="bi bi-plus-circle text-success me-2"></i>Entradas Digitais:</td>
     <td class="text-end fw-bold text-success">+ @Model.TotalEntradasDigitais.ToString("C")</td>
           </tr>
       <tr>
           <td><i class="bi bi-dash-circle text-danger me-2"></i>Saídas Digitais:</td>
     <td class="text-end fw-bold text-danger">- @Model.TotalSaidasDigitais.ToString("C")</td>
   </tr>
  <tr class="table-secondary">
              <td><strong><i class="bi bi-calculator me-2"></i>Subtotal:</strong></td>
            <td class="text-end fw-bold">@Model.BalancoDigital.ToString("C")</td>
     </tr>
         @if (Model.TotalRateios > 0)
  {
         <tr>
   <td><i class="bi bi-share text-danger me-2"></i>Rateios Aplicados:</td>
          <td class="text-end fw-bold text-danger">- @Model.TotalRateios.ToString("C")</td>
            </tr>
        <tr class="table-info">
            <td><strong><i class="bi bi-piggy-bank me-2"></i>Saldo Final:</strong></td>
        <td class="text-end fw-bold fs-5">@Model.SaldoFinal.ToString("C")</td>
            </tr>
             }
    else
      {
          <tr class="table-info">
    <td><strong><i class="bi bi-piggy-bank me-2"></i>Balanço Digital Total:</strong></td>
    <td class="text-end fw-bold fs-5">@Model.BalancoDigital.ToString("C")</td>
     </tr>
            }
   </tbody>
      </table>
       <div class="alert alert-info mt-3 mb-0">
         <i class="bi bi-info-circle me-2"></i>
                  <small><strong>Este é o valor eletrônico</strong> (PIX, cartões, transferências) já depositado.</small>
        </div>
          </div>
        </div>
    </div>
</div>

<!-- Rateios Aplicados - APENAS ADMIN E TESOUREIRO GERAL -->
@if (podeVerRateios && Model.ItensRateio.Any())
{
    <div class="card mb-4 border-primary">
     <div class="card-header bg-primary text-white">
    <h5 class="card-title mb-0">
      <i class="bi bi-share me-2"></i>
     Rateios Aplicados sobre o Total de Receitas
    </h5>
   </div>
        <div class="card-body">
         <!-- Card explicativo sobre o cálculo -->
            <div class="alert alert-info">
 <h6 class="alert-heading">
      <i class="bi bi-calculator me-2"></i>
              Base de Cálculo dos Rateios
      </h6>
       <div class="row">
          <div class="col-md-6">
   <table class="table table-sm table-borderless mb-0">
          <tbody>
              <tr>
   <td><i class="bi bi-arrow-down-circle text-success me-2"></i>Entradas Físicas:</td>
     <td class="text-end"><strong>@Model.TotalEntradasFisicas.ToString("C")</strong></td>
 </tr>
       <tr>
    <td><i class="bi bi-arrow-down-circle text-success me-2"></i>Entradas Digitais:</td>
         <td class="text-end"><strong>+ @Model.TotalEntradasDigitais.ToString("C")</strong></td>
  </tr>
                   <tr class="border-top">
           <td><strong><i class="bi bi-calculator-fill text-primary me-2"></i>TOTAL DE RECEITAS:</strong></td>
   <td class="text-end"><strong class="text-primary fs-5">@Model.TotalEntradas.ToString("C")</strong></td>
    </tr>
          </tbody>
           </table>
         </div>
           <div class="col-md-6">
      <p class="mb-0 small">
          <i class="bi bi-info-circle me-2"></i>
      Os rateios são aplicados sobre o <strong>Total de Receitas</strong>
  (soma de todas as entradas), garantindo que o percentual seja
      calculado sobre os valores arrecadados.
  </p>
         </div>
   </div>
      </div>

     <div class="table-responsive">
            <table class="table table-striped table-hover">
    <thead class="table-dark">
  <tr>
     <th>Regra de Rateio</th>
    <th>Destino</th>
       <th class="text-end">Percentual</th>
        <th class="text-end">Valor Base</th>
      <th class="text-end">Valor Rateado</th>
     </tr>
    </thead>
    <tbody>
  @foreach (var rateio in Model.ItensRateio.OrderBy(r => r.RegraRateio.Nome))
          {
     <tr>
         <td>
        <i class="bi bi-arrow-right-circle me-1 text-primary"></i>
       @rateio.RegraRateio.Nome
  </td>
       <td>
                   <strong>@rateio.RegraRateio.CentroCustoDestino.Nome</strong>
         @if (rateio.RegraRateio.CentroCustoDestino.Nome.ToUpper().Contains("FUNDO"))
                {
   <span class="badge bg-success ms-1">
     <i class="bi bi-piggy-bank"></i> FUNDO
</span>
   }
      </td>
            <td class="text-end">
 <span class="badge bg-info">@rateio.Percentual.ToString("F2")%</span>
         </td>
             <td class="text-end">@rateio.ValorBase.ToString("C")</td>
   <td class="text-end fw-bold text-primary">@rateio.ValorRateio.ToString("C")</td>
        </tr>
        }
    </tbody>
            <tfoot class="table-light">
         <tr>
 <td colspan="4" class="text-end">
      <strong>
  <i class="bi bi-calculator me-2"></i>
              TOTAL DE RATEIOS:
          </strong>
           </td>
                <td class="text-end fw-bold fs-5 text-danger">
    @Model.TotalRateios.ToString("C")
      </td>
  </tr>
   <tr class="table-success">
        <td colspan="4" class="text-end">
  <strong>
     <i class="bi bi-piggy-bank me-2"></i>
              SALDO FINAL (após rateios):
           </strong>
                  </td>
       <td class="text-end fw-bold fs-4 text-success">
              @Model.SaldoFinal.ToString("C")
           </td>
  </tr>
   </tfoot>
     </table>
            </div>

     <!-- Explicação detalhada do cálculo -->
   <div class="alert alert-light mt-3">
           <h6 class="mb-2">
        <i class="bi bi-info-circle me-2"></i>
           Como o Saldo Final foi Calculado:
      </h6>
       <div class="small">
        <p class="mb-2">
           <strong>1.</strong> Total de Receitas = Entradas Físicas + Entradas Digitais =
          <strong>@Model.TotalEntradasFisicas.ToString("C") + @Model.TotalEntradasDigitais.ToString("C") = @Model.TotalEntradas.ToString("C")</strong>
    </p>
        <p class="mb-2">
           <strong>2.</strong> Rateios Aplicados =
    <strong>@Model.TotalRateios.ToString("C")</strong>
 </p>
        <p class="mb-0">
  <strong>3.</strong> Saldo Final = Balanço Total - Total de Rateios =
   <strong>@balancoTotal.ToString("C") - @Model.TotalRateios.ToString("C") = @Model.SaldoFinal.ToString("C")</strong>
       </p>
      </div>
   </div>
        </div>
    </div>
}
else if (podeVerRateios && !Model.ItensRateio.Any())
{
 <!-- Mensagem quando não há rateios - APENAS ADMIN E TESOUREIRO GERAL -->
    <div class="card mb-4 border-warning">
        <div class="card-header bg-warning text-dark">
 <h6 class="card-title mb-0">
    <i class="bi bi-exclamation-triangle me-2"></i>
      Sem Rateios Aplicados
            </h6>
        </div>
        <div class="card-body">
            <p class="mb-2">Este fechamento não possui rateios aplicados.</p>
       <p class="mb-0 small text-muted">
 <strong>Possíveis motivos:</strong>
  </p>
            <ul class="small text-muted mb-0">
       <li>O centro de custo não é reconhecido como SEDE/GERAL</li>
      <li>Não há regras de rateio ativas configuradas</li>
    <li>O balanço total era zero ou negativo</li>
       </ul>
    <hr>
            <div class="d-grid gap-2 d-md-flex">
     <a asp-controller="RegrasRateio" asp-action="Index" class="btn btn-outline-primary btn-sm">
     <i class="bi bi-gear me-1"></i>
            Ver Regras de Rateio
      </a>
       <a asp-controller="CentrosCusto" asp-action="Index" class="btn btn-outline-secondary btn-sm">
 <i class="bi bi-building me-1"></i>
        Ver Centros de Custo
    </a>
          </div>
        </div>
    </div>
}

<!-- Observações -->
@if (!string.IsNullOrEmpty(Model.Observacoes))
{
    <div class="card mb-4">
        <div class="card-header">
    <h6 class="card-title mb-0">
            <i class="bi bi-chat-left-text me-2"></i>
           Observações
            </h6>
        </div>
        <div class="card-body">
      <p class="mb-0 white-space-pre-line">@Model.Observacoes</p>
   </div>
    </div>
}

<!-- Ações de Aprovação/Rejeição -->
@if (Model.Status == SistemaTesourariaEclesiastica.Enums.StatusFechamentoPeriodo.Pendente && podeAprovar)
{
    <div class="card shadow-sm">
        <div class="card-header bg-light">
            <h5 class="card-title mb-0">
     <i class="bi bi-hand-thumbs-up me-2"></i>
      Ações de Aprovação
            </h5>
        </div>
        <div class="card-body">
  <div class="row g-3">
   <div class="col-md-6">
           <form asp-action="Aprovar" asp-route-id="@Model.Id" method="post" style="display: inline;">
                 @Html.AntiForgeryToken()
        <button type="submit" class="btn btn-success w-100" onclick="return confirm('Tem certeza que deseja APROVAR este fechamento?');">
   <i class="bi bi-check-circle-fill me-2"></i>Aprovar Fechamento
         </button>
 </form>
    </div>
        <div class="col-md-6">
     <a asp-action="Rejeitar" asp-route-id="@Model.Id" class="btn btn-danger w-100">
                <i class="bi bi-x-circle-fill me-2"></i>Rejeitar Fechamento
        </a>
            </div>
            </div>
  <div class="alert alert-info mt-3 mb-0">
         <i class="bi bi-info-circle me-2"></i>
     <strong>Aprovar:</strong> Confirma o fechamento e aplica os rateios definitivamente.<br>
          <strong>Rejeitar:</strong> Devolve o fechamento para revisão do tesoureiro local com justificativa.
            </div>
        </div>
  </div>
}

@section Styles {
    <style>
  .white-space-pre-line {
    white-space: pre-line;
        }
    </style>
}
