@model SistemaTesourariaEclesiastica.Models.FechamentoPeriodo

@{
    ViewData["Title"] = "Excluir Fechamento";
    var podeExcluir = Model.Status == SistemaTesourariaEclesiastica.Enums.StatusFechamentoPeriodo.Pendente || 
                     (Model.Status == SistemaTesourariaEclesiastica.Enums.StatusFechamentoPeriodo.Aprovado && ViewBag.FechamentoAprovado == true);
    var ehAprovado = Model.Status == SistemaTesourariaEclesiastica.Enums.StatusFechamentoPeriodo.Aprovado;
    int diasSemana = (Model.DataFim - Model.DataInicio).Days + 1;
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h1 class="h3 mb-0">
            <i class="bi bi-trash text-danger me-2"></i>
            Excluir Fechamento de Período
            @if (ehAprovado)
            {
                <span class="badge bg-danger">APROVADO</span>
            }
        </h1>
        <p class="text-muted mb-0">Confirmar exclusão do registro</p>
    </div>
    <a asp-action="Index" class="btn btn-outline-secondary">
        <i class="bi bi-arrow-left me-2"></i>
        Voltar
    </a>
</div>

@if (ehAprovado && ViewBag.FechamentoAprovado == true)
{
    <!-- Aviso especial para administradores excluindo fechamento aprovado -->
    <div class="alert alert-danger border-3 border-danger" role="alert">
        <div class="d-flex align-items-start">
            <i class="bi bi-shield-exclamation me-3 fs-1 text-danger"></i>
            <div class="flex-grow-1">
                <h4 class="alert-heading mb-2">
                    <i class="bi bi-person-badge me-2"></i>ATENÇÃO ADMINISTRADOR
                </h4>
                <p class="mb-2">
                    <strong>@ViewBag.AvisoAdmin</strong>
                </p>
                <hr>
                <p class="mb-0 small">
                    ⚠️ <strong>IMPACTOS DA EXCLUSÃO:</strong>
                </p>
                <ul class="mb-0 small mt-2">
                    <li>Todos os lançamentos serão liberados (IncluidaEmFechamento = false)</li>
                    @if (Model.EhFechamentoSede)
                    {
                        <li><strong>Fechamentos de @Model.QuantidadeCongregacoesIncluidas congregação(ões) serão liberados</strong> (status retorna para Aprovado)</li>
                    }
                    <li>Relatórios financeiros podem ser afetados</li>
                    <li>Será necessário refazer o fechamento com os dados corretos</li>
                    <li><strong>Esta ação ficará registrada permanentemente nos logs de auditoria</strong></li>
                </ul>
            </div>
        </div>
    </div>
}

@if (!podeExcluir)
{
    <div class="alert alert-danger d-flex align-items-center" role="alert">
        <i class="bi bi-exclamation-octagon me-3 fs-3"></i>
        <div>
            <h5 class="alert-heading mb-2">Não é possível excluir este fechamento!</h5>
            <p class="mb-2">Este fechamento possui o status: <strong>@Model.Status.ToString()</strong></p>
            <p class="mb-0">
                @if (Model.Status == SistemaTesourariaEclesiastica.Enums.StatusFechamentoPeriodo.Aprovado)
                {
                    <strong>Apenas ADMINISTRADORES podem excluir fechamentos aprovados.</strong> 
                    <text>Entre em contato com um administrador do sistema se precisar excluir este fechamento.</text>
                }
                else
                {
                    <strong>Apenas fechamentos com status "Pendente" podem ser excluídos.</strong> 
                    <text>Fechamentos rejeitados fazem parte do histórico financeiro e não podem ser removidos para manter a integridade dos dados.</text>
                }
            </p>
        </div>
    </div>

    <div class="d-flex justify-content-end">
        <a asp-action="Index" class="btn btn-secondary">
            <i class="bi bi-arrow-left me-2"></i>
            Voltar para Lista
        </a>
    </div>
}
else
{
    @if (!ehAprovado)
    {
        <div class="alert alert-warning d-flex align-items-center" role="alert">
            <i class="bi bi-exclamation-triangle me-3 fs-3"></i>
            <div>
                <h5 class="alert-heading mb-2">Atenção!</h5>
                <p class="mb-0">Você está prestes a excluir este fechamento de período. <strong>Esta ação não pode ser desfeita.</strong></p>
            </div>
        </div>
    }

    <div class="row">
        <div class="col-lg-8">
            <!-- Informações do Fechamento -->
            <div class="card mb-4 @(ehAprovado ? "border-danger border-3" : "")">
                <div class="card-header @(ehAprovado ? "bg-danger text-white" : "bg-light")">
                    <h5 class="card-title mb-0">
                        <i class="bi bi-file-earmark-text me-2"></i>
                        Informações do Fechamento
                        @if (ehAprovado)
                        {
                            <span class="badge bg-white text-danger ms-2">STATUS: APROVADO</span>
                        }
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row mb-3">
                        <div class="col-md-6">
                            <small class="text-muted">Centro de Custo</small>
                            <div class="fw-bold">@Model.CentroCusto.Nome</div>
                        </div>
                        <div class="col-md-6">
                            <small class="text-muted">Tipo de Fechamento</small>
                            <div class="fw-bold">
                                @if (Model.TipoFechamento == SistemaTesourariaEclesiastica.Enums.TipoFechamento.Diario)
                                {
                                    <span><i class="bi bi-calendar-day me-1"></i>Fechamento Diário</span>
                                }
                                else if (Model.TipoFechamento == SistemaTesourariaEclesiastica.Enums.TipoFechamento.Semanal)
                                {
                                    <span><i class="bi bi-calendar-week me-1"></i>Fechamento Semanal</span>
                                }
                                else
                                {
                                    <span><i class="bi bi-calendar-month me-1"></i>Fechamento Mensal</span>
                                }
                            </div>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-6">
                            <small class="text-muted">Período</small>
                            <div class="fw-bold">
                                @if (Model.TipoFechamento == SistemaTesourariaEclesiastica.Enums.TipoFechamento.Diario)
                                {
                                    <span>@Model.DataInicio.ToString("dd/MM/yyyy")</span>
                                }
                                else if (Model.TipoFechamento == SistemaTesourariaEclesiastica.Enums.TipoFechamento.Semanal)
                                {
                                    <span>De @Model.DataInicio.ToString("dd/MM/yyyy") até @Model.DataFim.ToString("dd/MM/yyyy") (@diasSemana dia(s))</span>
                                }
                                else
                                {
                                    <span>@Model.Mes.Value.ToString("00")/@Model.Ano - De @Model.DataInicio.ToString("dd/MM/yyyy") até @Model.DataFim.ToString("dd/MM/yyyy")</span>
                                }
                            </div>
                        </div>
                        <div class="col-md-6">
                            <small class="text-muted">Status</small>
                            <div>
                                <span class="badge @(ehAprovado ? "bg-success" : "bg-warning") fs-6">@Model.Status.ToString()</span>
                            </div>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-6">
                            <small class="text-muted">Submetido por</small>
                            <div class="fw-bold">@Model.UsuarioSubmissao.NomeCompleto</div>
                        </div>
                        <div class="col-md-6">
                            <small class="text-muted">Data de Submissão</small>
                            <div class="fw-bold">@Model.DataSubmissao.ToString("dd/MM/yyyy HH:mm")</div>
                        </div>
                    </div>

                    @if (ehAprovado && Model.UsuarioAprovacao != null)
                    {
                        <div class="row mb-3">
                            <div class="col-md-6">
                                <small class="text-muted">Aprovado por</small>
                                <div class="fw-bold text-success">@Model.UsuarioAprovacao.NomeCompleto</div>
                            </div>
                            <div class="col-md-6">
                                <small class="text-muted">Data de Aprovação</small>
                                <div class="fw-bold text-success">@Model.DataAprovacao.Value.ToString("dd/MM/yyyy HH:mm")</div>
                            </div>
                        </div>
                    }

                    @if (!string.IsNullOrEmpty(Model.Observacoes))
                    {
                        <div class="row">
                            <div class="col-12">
                                <small class="text-muted">Observações</small>
                                <div class="alert alert-light mb-0">
                                    @Model.Observacoes
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>

            <!-- Resumo Financeiro -->
            <div class="card mb-4">
                <div class="card-header bg-light">
                    <h5 class="card-title mb-0">
                        <i class="bi bi-calculator me-2"></i>
                        Resumo Financeiro
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-3">
                            <div class="text-center p-3 border rounded">
                                <small class="text-muted">Total Entradas</small>
                                <div class="h5 mb-0 text-success">@Model.TotalEntradas.ToString("C")</div>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="text-center p-3 border rounded">
                                <small class="text-muted">Total Saídas</small>
                                <div class="h5 mb-0 text-danger">@Model.TotalSaidas.ToString("C")</div>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="text-center p-3 border rounded">
                                <small class="text-muted">Balanço Físico</small>
                                <div class="h5 mb-0 text-warning">@Model.BalancoFisico.ToString("C")</div>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="text-center p-3 border rounded">
                                <small class="text-muted">Balanço Digital</small>
                                <div class="h5 mb-0 text-info">@Model.BalancoDigital.ToString("C")</div>
                            </div>
                        </div>
                    </div>

                    @if (Model.TotalRateios > 0)
                    {
                        <div class="mt-3">
                            <div class="alert alert-secondary mb-0">
                                <div class="d-flex justify-content-between align-items-center">
                                    <div>
                                        <i class="bi bi-share me-2"></i>
                                        <strong>Total de Rateios:</strong>
                                    </div>
                                    <div class="h5 mb-0">@Model.TotalRateios.ToString("C")</div>
                                </div>
                                <hr>
                                <div class="d-flex justify-content-between align-items-center">
                                    <strong>Saldo Final:</strong>
                                    <div class="h5 mb-0">@Model.SaldoFinal.ToString("C")</div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>

            <!-- O que será excluído -->
            <div class="card border-danger mb-4">
                <div class="card-header bg-danger text-white">
                    <h5 class="card-title mb-0">
                        <i class="bi bi-trash me-2"></i>
                        O que será excluído
                    </h5>
                </div>
                <div class="card-body">
                    <p class="mb-3">A exclusão deste fechamento removerá permanentemente:</p>
                    <ul>
                        <li><strong>@Model.DetalhesFechamento.Count</strong> registro(s) de detalhamento de movimentações</li>
                        @if (Model.ItensRateio.Any())
                        {
                            <li><strong>@Model.ItensRateio.Count</strong> item(ns) de rateio aplicado(s)</li>
                        }
                        <li>Todos os cálculos e balanços associados</li>
                        @if (Model.EhFechamentoSede && Model.QuantidadeCongregacoesIncluidas > 0)
                        {
                            <li class="text-danger"><strong>⚠️ @Model.QuantidadeCongregacoesIncluidas fechamento(s) de congregações serão LIBERADOS</strong> (voltarão para status Aprovado)</li>
                        }
                    </ul>
                    <div class="alert alert-@(ehAprovado ? "danger" : "warning") mb-0">
                        <i class="bi bi-exclamation-triangle me-2"></i>
                        <strong>IMPORTANTE:</strong> As movimentações originais (entradas e saídas) @(ehAprovado ? "SERÃO LIBERADAS" : "não serão excluídas"), podendo ser incluídas em novo fechamento.
                    </div>
                </div>
            </div>

            <!-- Formulário de Confirmação -->
            <form asp-action="Delete" method="post">
                <input type="hidden" asp-for="Id" />
                
                <div class="card border-danger">
                    <div class="card-body">
                        @if (ehAprovado)
                        {
                            <div class="alert alert-danger mb-3">
                                <i class="bi bi-shield-exclamation me-2"></i>
                                <strong>PRIVILÉGIO DE ADMINISTRADOR:</strong> Você está autorizado a excluir fechamentos aprovados. Use este poder com responsabilidade!
                            </div>
                        }

                        <div class="form-check mb-3">
                            <input class="form-check-input" type="checkbox" id="confirmarExclusao" required>
                            <label class="form-check-label" for="confirmarExclusao">
                                <strong>Confirmo que entendo que esta ação é irreversível e desejo excluir este fechamento@(ehAprovado ? " APROVADO" : "").</strong>
                            </label>
                        </div>

                        @if (ehAprovado)
                        {
                            <div class="form-check mb-3">
                                <input class="form-check-input" type="checkbox" id="confirmarImpacto" required>
                                <label class="form-check-label" for="confirmarImpacto">
                                    <strong>Estou ciente dos impactos nos relatórios financeiros e na necessidade de refazer o fechamento.</strong>
                                </label>
                            </div>
                        }

                        <div class="d-flex justify-content-end gap-2">
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="bi bi-x-circle me-2"></i>
                                Cancelar
                            </a>
                            <button type="submit" class="btn btn-danger" id="btnExcluir" disabled>
                                <i class="bi bi-trash me-2"></i>
                                Confirmar Exclusão@(ehAprovado ? " (ADMINISTRADOR)" : "")
                            </button>
                        </div>
                    </div>
                </div>
            </form>
        </div>

        <!-- Sidebar de Avisos -->
        <div class="col-lg-4">
            <div class="card bg-danger bg-opacity-10 border-danger mb-3">
                <div class="card-header bg-transparent border-danger">
                    <h6 class="card-title mb-0 text-danger">
                        <i class="bi bi-exclamation-octagon me-2"></i>
                        Atenção Especial
                    </h6>
                </div>
                <div class="card-body">
                    <p class="small mb-2">
                        <strong>Esta ação é PERMANENTE e NÃO pode ser desfeita!</strong>
                    </p>
                    @if (!ehAprovado)
                    {
                        <p class="small mb-2">
                            Considere as seguintes alternativas antes de excluir:
                        </p>
                        <ul class="small mb-0">
                            <li>Editar as observações se houver algum erro</li>
                            <li>Aguardar rejeição do Tesoureiro Geral (se aplicável)</li>
                            <li>Manter o registro para histórico</li>
                        </ul>
                    }
                    else
                    {
                        <p class="small mb-2 text-danger">
                            <strong>FECHAMENTO APROVADO:</strong> A exclusão deve ser feita apenas em casos extremos, como:
                        </p>
                        <ul class="small mb-0">
                            <li>Erro grave nos dados que invalida o fechamento</li>
                            <li>Necessidade de refazer o fechamento corretamente</li>
                            <li>Lançamentos incorretos foram incluídos</li>
                        </ul>
                    }
                </div>
            </div>

            @if (ehAprovado)
            {
                <div class="card bg-warning bg-opacity-10 border-warning mb-3">
                    <div class="card-header bg-transparent border-warning">
                        <h6 class="card-title mb-0">
                            <i class="bi bi-journal-text me-2"></i>
                            Após a Exclusão
                        </h6>
                    </div>
                    <div class="card-body">
                        <p class="small mb-2">
                            <strong>Providências necessárias:</strong>
                        </p>
                        <ol class="small mb-0">
                            <li>Corrigir os lançamentos com erros</li>
                            <li>Criar novo fechamento com dados corretos</li>
                            <li>Notificar equipe financeira sobre a alteração</li>
                            <li>Verificar relatórios afetados</li>
                        </ol>
                    </div>
                </div>
            }

            <div class="card bg-info bg-opacity-10 border-info">
                <div class="card-header bg-transparent border-info">
                    <h6 class="card-title mb-0">
                        <i class="bi bi-info-circle me-2"></i>
                        @(ehAprovado ? "Rastreamento" : "Quando Excluir?")
                    </h6>
                </div>
                <div class="card-body">
                    @if (ehAprovado)
                    {
                        <p class="small mb-2">
                            <strong>Auditoria completa:</strong>
                        </p>
                        <ul class="small mb-0">
                            <li>A exclusão será registrada nos logs</li>
                            <li>Seu usuário ficará identificado</li>
                            <li>Data e hora serão gravadas</li>
                            <li>Valores excluídos serão mantidos no log</li>
                        </ul>
                    }
                    else
                    {
                        <p class="small mb-2">
                            <strong>Razões válidas para exclusão:</strong>
                        </p>
                        <ul class="small mb-0">
                            <li>Fechamento criado por engano</li>
                            <li>Período incorreto selecionado</li>
                            <li>Centro de custo errado</li>
                            <li>Duplicação acidental</li>
                        </ul>
                    }
                </div>
            </div>
        </div>
    </div>
}

@section Scripts {
    <script>
        $(document).ready(function() {
            var ehAprovado = @(ehAprovado ? "true" : "false");
            
            // Habilitar botão de exclusão apenas quando todos os checkboxes marcados
            function verificarCheckboxes() {
                var confirmarExclusao = $('#confirmarExclusao').is(':checked');
                var confirmarImpacto = ehAprovado ? $('#confirmarImpacto').is(':checked') : true;
                
                $('#btnExcluir').prop('disabled', !(confirmarExclusao && confirmarImpacto));
            }
            
            $('#confirmarExclusao').change(verificarCheckboxes);
            if (ehAprovado) {
                $('#confirmarImpacto').change(verificarCheckboxes);
            }

            // Confirmação adicional ao submeter
            $('form').submit(function(e) {
                var mensagem = ehAprovado 
                    ? 'ÚLTIMA CONFIRMAÇÃO (ADMINISTRADOR): Tem certeza ABSOLUTA que deseja excluir este fechamento APROVADO? Isto afetará relatórios e liberará lançamentos! Esta ação NÃO pode ser desfeita!'
                    : 'ÚLTIMA CONFIRMAÇÃO: Tem certeza absoluta que deseja excluir este fechamento? Esta ação NÃO pode ser desfeita!';
                    
                if (!confirm(mensagem)) {
                    e.preventDefault();
                    return false;
                }
            });
        });
    </script>
}