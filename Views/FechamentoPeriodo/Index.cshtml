@model IEnumerable<SistemaTesourariaEclesiastica.Models.FechamentoPeriodo>

@{
    ViewData["Title"] = "Prestação de Contas";
}

<!-- Cabeçalho -->
<div class="d-flex flex-column flex-md-row justify-content-between align-items-start align-items-md-center mb-3 mb-md-4 gap-2">
    <h2 class="h3 mb-0">
        <i class="bi bi-calendar-check me-2"></i>
        Prestação de Contas
    </h2>
    <a asp-action="Create" class="btn btn-primary btn-sm">
        <i class="bi bi-plus-circle me-1"></i>Novo Fechamento
    </a>
</div>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<!-- Tabela -->
<div class="card">
    <div class="card-body p-0">
        @if (Model.Any())
        {
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <!-- Desktop -->
                    <thead class="table-dark d-none d-md-table-header-group">
                        <tr>
                            <th>Período</th>
                            <th>Centro</th>
                            <th>Balanço Digital</th>
                            <th>Balanço Físico</th>
                            <th>Diferença</th>
                            <th>Status</th>
                            <th>Submetido</th>
                            <th>Data</th>
                            <th width="180">Ações</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            var diferenca = item.BalancoFisico - item.BalancoDigital;

                            <!-- Desktop -->
                            <tr class="d-none d-md-table-row">
                                <td class="fw-semibold">@item.Mes.ToString().PadLeft(2, '0')/@item.Ano</td>
                                <td>@item.CentroCusto.Nome</td>
                                <td class="text-end">@item.BalancoDigital.ToString("C")</td>
                                <td class="text-end">@item.BalancoFisico.ToString("C")</td>
                                <td class="text-end">
                                    <span class="@(diferenca == 0 ? "text-success" : "text-warning") fw-bold">
                                        @diferenca.ToString("C")
                                    </span>
                                </td>
                                <td>
                                    @switch (item.Status)
                                    {
                                        case SistemaTesourariaEclesiastica.Enums.StatusFechamentoPeriodo.Pendente:
                                            <span class="badge bg-warning">Pendente</span>
                                            break;
                                        case SistemaTesourariaEclesiastica.Enums.StatusFechamentoPeriodo.Aprovado:
                                            <span class="badge bg-success">Aprovado</span>
                                            break;
                                        case SistemaTesourariaEclesiastica.Enums.StatusFechamentoPeriodo.Rejeitado:
                                            <span class="badge bg-danger">Rejeitado</span>
                                            break;
                                    }
                                </td>
                                <td>@item.UsuarioSubmissao.NomeCompleto</td>
                                <td>@item.DataSubmissao.ToString("dd/MM/yyyy")</td>
                                <td>
                                    <div class="btn-group btn-group-sm" role="group">
                                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-info" title="Detalhes">
                                            <i class="bi bi-eye"></i>
                                        </a>
                                        @if (item.Status == SistemaTesourariaEclesiastica.Enums.StatusFechamentoPeriodo.Pendente)
                                        {
                                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-warning" title="Editar">
                                                <i class="bi bi-pencil"></i>
                                            </a>
                                            <form asp-action="Aprovar" asp-route-id="@item.Id" method="post" style="display: inline;">
                                                <button type="submit" class="btn btn-outline-success btn-sm" title="Aprovar"
                                                        onclick="return confirm('Confirma a aprovação?')">
                                                    <i class="bi bi-check-circle"></i>
                                                </button>
                                            </form>
                                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger" title="Excluir">
                                                <i class="bi bi-trash"></i>
                                            </a>
                                        }
                                    </div>
                                </td>
                            </tr>

                            <!-- Mobile -->
                            <tr class="d-md-none">
                                <td class="p-3">
                                    <div class="d-flex justify-content-between align-items-start mb-2">
                                        <div>
                                            <div class="fw-bold mb-1">
                                                @item.Mes.ToString().PadLeft(2, '0')/@item.Ano
                                            </div>
                                            <span class="badge bg-info" style="font-size: 0.7rem;">
                                                @item.CentroCusto.Nome
                                            </span>
                                            @switch (item.Status)
                                            {
                                                case SistemaTesourariaEclesiastica.Enums.StatusFechamentoPeriodo.Pendente:
                                                    <span class="badge bg-warning ms-1" style="font-size: 0.7rem;">Pendente</span>
                                                    break;
                                                case SistemaTesourariaEclesiastica.Enums.StatusFechamentoPeriodo.Aprovado:
                                                    <span class="badge bg-success ms-1" style="font-size: 0.7rem;">Aprovado</span>
                                                    break;
                                                case SistemaTesourariaEclesiastica.Enums.StatusFechamentoPeriodo.Rejeitado:
                                                    <span class="badge bg-danger ms-1" style="font-size: 0.7rem;">Rejeitado</span>
                                                    break;
                                            }
                                        </div>
                                    </div>

                                    <div class="row g-2 mb-2 small">
                                        <div class="col-4">
                                            <div class="text-muted" style="font-size: 0.7rem;">Digital</div>
                                            <div class="fw-bold">@item.BalancoDigital.ToString("C")</div>
                                        </div>
                                        <div class="col-4">
                                            <div class="text-muted" style="font-size: 0.7rem;">Físico</div>
                                            <div class="fw-bold">@item.BalancoFisico.ToString("C")</div>
                                        </div>
                                        <div class="col-4">
                                            <div class="text-muted" style="font-size: 0.7rem;">Diferença</div>
                                            <div class="fw-bold @(diferenca == 0 ? "text-success" : "text-warning")">
                                                @diferenca.ToString("C")
                                            </div>
                                        </div>
                                    </div>

                                    <div class="small text-muted mb-2">
                                        <i class="bi bi-person me-1"></i>@item.UsuarioSubmissao.NomeCompleto
                                        <i class="bi bi-calendar3 ms-2 me-1"></i>@item.DataSubmissao.ToString("dd/MM/yy")
                                    </div>

                                    <div class="btn-group btn-group-sm w-100" role="group">
                                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-info">
                                            <i class="bi bi-eye"></i>
                                        </a>
                                        @if (item.Status == SistemaTesourariaEclesiastica.Enums.StatusFechamentoPeriodo.Pendente)
                                        {
                                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-warning">
                                                <i class="bi bi-pencil"></i>
                                            </a>
                                            <form asp-action="Aprovar" asp-route-id="@item.Id" method="post" class="d-inline">
                                                <button type="submit" class="btn btn-outline-success btn-sm"
                                                        onclick="return confirm('Aprovar?')">
                                                    <i class="bi bi-check-circle"></i>
                                                </button>
                                            </form>
                                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger">
                                                <i class="bi bi-trash"></i>
                                            </a>
                                        }
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="text-center py-5">
                <i class="bi bi-calendar-x display-4 text-muted"></i>
                <p class="text-muted mt-2">Nenhum fechamento de período cadastrado.</p>
                <a asp-action="Create" class="btn btn-primary">
                    <i class="bi bi-plus-circle me-1"></i>Criar Primeiro Fechamento
                </a>
            </div>
        }
    </div>
</div>