@model IEnumerable<SistemaTesourariaEclesiastica.Models.FechamentoPeriodo>

@{
    ViewData["Title"] = "Prestação de Contas";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2><i class="bi bi-calendar-check me-2"></i>Prestação de Contas</h2>
    <a asp-action="Create" class="btn btn-primary">
        <i class="bi bi-plus-circle me-1"></i>Novo Fechamento
    </a>
</div>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<div class="card">
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead class="table-dark">
                    <tr>
                        <th>Período</th>
                        <th>Centro de Custo</th>
                        <th>Balanço Digital</th>
                        <th>Balanço Físico</th>
                        <th>Diferença</th>
                        <th>Status</th>
                        <th>Submetido por</th>
                        <th>Data Submissão</th>
                        <th width="200">Ações</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Mes.ToString("00")/@item.Ano</td>
                            <td>@Html.DisplayFor(modelItem => item.CentroCusto.Nome)</td>
                            <td class="text-end">@item.BalancoDigital.ToString("C")</td>
                            <td class="text-end">@item.BalancoFisico.ToString("C")</td>
                            <td class="text-end">
                                @{
                                    var diferenca = item.BalancoFisico - item.BalancoDigital;
                                }
                                <span class="@(diferenca == 0 ? "text-success" : "text-warning")">
                                    @diferenca.ToString("C")
                                </span>
                            </td>
                            <td>
                                @switch (item.Status)
                                {
                                    case SistemaTesourariaEclesiastica.Enums.StatusFechamentoPeriodo.Pendente:
                                        <span class="badge bg-warning">Pendente</span>
                                        break;
                                    case SistemaTesourariaEclesiastica.Enums.StatusFechamentoPeriodo.Aprovado:
                                        <span class="badge bg-success">Aprovado</span>
                                        break;
                                    case SistemaTesourariaEclesiastica.Enums.StatusFechamentoPeriodo.Rejeitado:
                                        <span class="badge bg-danger">Rejeitado</span>
                                        break;
                                }
                            </td>
                            <td>@Html.DisplayFor(modelItem => item.UsuarioSubmissao.NomeCompleto)</td>
                            <td>@item.DataSubmissao.ToString("dd/MM/yyyy")</td>
                            <td>
                                <div class="btn-group" role="group">
                                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-info btn-sm" title="Detalhes">
                                        <i class="bi bi-eye"></i>
                                    </a>
                                    @if (item.Status == SistemaTesourariaEclesiastica.Enums.StatusFechamentoPeriodo.Pendente)
                                    {
                                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-warning btn-sm" title="Editar">
                                            <i class="bi bi-pencil"></i>
                                        </a>
                                        <form asp-action="Aprovar" asp-route-id="@item.Id" method="post" style="display: inline;">
                                            <button type="submit" class="btn btn-outline-success btn-sm" title="Aprovar" onclick="return confirm('Confirma a aprovação deste fechamento?')">
                                                <i class="bi bi-check-circle"></i>
                                            </button>
                                        </form>
                                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger btn-sm" title="Excluir">
                                            <i class="bi bi-trash"></i>
                                        </a>
                                    }
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        @if (!Model.Any())
        {
            <div class="text-center py-4">
                <i class="bi bi-calendar-x display-1 text-muted"></i>
                <p class="text-muted mt-2">Nenhum fechamento de período cadastrado.</p>
                <a asp-action="Create" class="btn btn-primary">
                    <i class="bi bi-plus-circle me-1"></i>Criar Primeiro Fechamento
                </a>
            </div>
        }
    </div>
</div>
