@model IEnumerable<SistemaTesourariaEclesiastica.Models.FechamentoPeriodo>

@{
    ViewData["Title"] = "Fechamento de Período";
}

<!-- Cabeçalho -->
<div class="d-flex flex-column flex-md-row justify-content-between align-items-start align-items-md-center mb-4 gap-2">
    <div>
        <h1 class="h3 mb-1">
            <i class="bi bi-calendar-check me-2 text-primary"></i>Fechamento de Período
        </h1>
        <p class="text-muted mb-0 small">Prestação de contas e repasses financeiros</p>
    </div>
    <a asp-action="Create" class="btn btn-primary">
        <i class="bi bi-plus-circle me-2"></i>Novo Fechamento
    </a>
</div>

<!-- Filtros -->
<div class="card shadow-sm mb-4">
    <div class="card-body">
        <form method="get" class="row g-3">
            <div class="col-12 col-md-3">
                <label class="form-label small fw-semibold">Centro de Custo</label>
                @Html.DropDownList("centroCustoId", ViewBag.CentrosCusto as SelectList, "Todos",
                new { @class = "form-select" })
            </div>
            <div class="col-12 col-md-3">
                <label class="form-label small fw-semibold">Status</label>
                <select name="status" class="form-select">
                    <option value="">Todos</option>
                    <option value="Pendente">Pendente</option>
                    <option value="Aprovado">Aprovado</option>
                    <option value="Rejeitado">Rejeitado</option>
                </select>
            </div>
            <div class="col-12 col-md-3">
                <label class="form-label small fw-semibold">Tipo</label>
                <select name="tipo" class="form-select">
                    <option value="">Todos</option>
                    <option value="Diario">Diário</option>
                    <option value="Semanal">Semanal</option>
                    <option value="Mensal">Mensal</option>
                </select>
            </div>
            <div class="col-12 col-md-3 d-flex align-items-end gap-2">
                <button type="submit" class="btn btn-outline-primary flex-fill">
                    <i class="bi bi-search"></i>
                    <span class="d-none d-md-inline ms-1">Filtrar</span>
                </button>
                <a asp-action="Index" class="btn btn-outline-secondary">
                    <i class="bi bi-arrow-clockwise"></i>
                </a>
            </div>
        </form>
    </div>
</div>

<!-- Resultados -->
<div class="card shadow-sm">
    <div class="card-header bg-white d-flex justify-content-between align-items-center py-3">
        <h5 class="mb-0 fw-semibold">
            <i class="bi bi-list-ul me-2 text-primary"></i>
            @(Model != null ? Model.Count() : 0) fechamento(s) encontrado(s)
        </h5>
        <button type="button" class="btn btn-sm btn-outline-secondary" onclick="window.print()">
            <i class="bi bi-printer me-1"></i>Imprimir
        </button>
    </div>

    <div class="card-body p-0">
        @if (Model != null && Model.Any())
        {
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="table-light">
                        <tr>
                            <th class="ps-3">Período</th>
                            <th class="d-none d-lg-table-cell">Centro de Custo</th>
                            <th class="d-none d-xl-table-cell text-end">Total Entradas</th>
                            <th class="d-none d-xl-table-cell text-end">Total Saídas</th>
                            <th class="text-end">Balanço Físico</th>
                            <th class="d-none d-md-table-cell">Tipo</th>
                            <th>Status</th>
                            <th class="text-center" style="width: 140px;">Ações</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="ps-3">
                                    <div class="fw-semibold">
                                        @item.DataInicio.ToString("dd/MM/yy")
                                        @if (item.DataInicio != item.DataFim)
                                        {
                                            <span> - @item.DataFim.ToString("dd/MM/yy")</span>
                                        }
                                    </div>
                                    <small class="text-muted d-lg-none">@item.CentroCusto?.Nome</small>
                                </td>
                                <td class="d-none d-lg-table-cell">
                                    <span class="badge bg-info bg-opacity-10 text-info border border-info">
                                        @item.CentroCusto?.Nome
                                    </span>
                                </td>
                                <td class="d-none d-xl-table-cell text-end">
                                    <span class="text-success fw-semibold">@item.TotalEntradas.ToString("C2")</span>
                                </td>
                                <td class="d-none d-xl-table-cell text-end">
                                    <span class="text-danger fw-semibold">@item.TotalSaidas.ToString("C2")</span>
                                </td>
                                <td class="text-end">
                                    <span class="fw-bold @(item.BalancoFisico >= 0 ? "text-success" : "text-danger")">
                                        @item.BalancoFisico.ToString("C2")
                                    </span>
                                </td>
                                <td class="d-none d-md-table-cell">
                                    <span class="badge @(item.TipoFechamento.ToString() == "Diario" ? "bg-primary" : item.TipoFechamento.ToString() == "Semanal" ? "bg-info" : "bg-warning text-dark")">
                                        @item.TipoFechamento.ToString()
                                    </span>
                                </td>
                                <td>
                                    @if (item.Status.ToString() == "Pendente")
                                    {
                                        <span class="badge bg-warning text-dark">
                                            <i class="bi bi-clock me-1"></i>Pendente
                                        </span>
                                    }
                                    else if (item.Status.ToString() == "Aprovado")
                                    {
                                        <span class="badge bg-success">
                                            <i class="bi bi-check-circle me-1"></i>Aprovado
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-danger">
                                            <i class="bi bi-x-circle me-1"></i>Rejeitado
                                        </span>
                                    }
                                </td>
                                <td>
                                    <div class="btn-group btn-group-sm" role="group">
                                        <a asp-action="Details" asp-route-id="@item.Id"
                                           class="btn btn-outline-info" title="Detalhes">
                                            <i class="bi bi-eye"></i>
                                        </a>
                                        @if (item.Status.ToString() == "Pendente")
                                        {
                                            <a asp-action="Edit" asp-route-id="@item.Id"
                                               class="btn btn-outline-primary" title="Editar">
                                                <i class="bi bi-pencil"></i>
                                            </a>
                                            <a asp-action="Delete" asp-route-id="@item.Id"
                                               class="btn btn-outline-danger" title="Excluir">
                                                <i class="bi bi-trash"></i>
                                            </a>
                                        }
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="text-center py-5">
                <i class="bi bi-calendar-check text-muted" style="font-size: 4rem;"></i>
                <h5 class="mt-3 text-muted">Nenhum fechamento encontrado</h5>
                <p class="text-muted">Não há fechamentos de período cadastrados com os filtros aplicados.</p>
                <a asp-action="Create" class="btn btn-primary mt-2">
                    <i class="bi bi-plus-circle me-2"></i>Criar Primeiro Fechamento
                </a>
            </div>
        }
    </div>
</div>

<!-- Alert informativo -->
<div class="alert alert-info mt-4 d-flex align-items-start">
    <i class="bi bi-info-circle me-3 fs-5"></i>
    <div>
        <h6 class="alert-heading mb-2">Como funciona o Fechamento de Período</h6>
        <p class="mb-1 small">
            O fechamento separa automaticamente as movimentações em:
        </p>
        <ul class="small mb-0">
            <li><strong>Balanço Físico:</strong> Dinheiro em espécie que deve ser repassado fisicamente à Sede</li>
            <li><strong>Balanço Digital:</strong> Valores já depositados (PIX, transferências) - apenas informativo</li>
        </ul>
    </div>
</div>