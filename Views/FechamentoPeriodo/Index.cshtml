@model IEnumerable<SistemaTesourariaEclesiastica.Models.FechamentoPeriodo>

@{
    ViewData["Title"] = "Fechamento de Período";
    var abaAtiva = ViewBag.AbaAtiva ?? "pendentes";
    
    var fechamentosPendentes = Model?.Where(f => f.Status.ToString() == "Pendente") ?? Enumerable.Empty<SistemaTesourariaEclesiastica.Models.FechamentoPeriodo>();
    var fechamentosAprovados = Model?.Where(f => f.Status.ToString() == "Aprovado") ?? Enumerable.Empty<SistemaTesourariaEclesiastica.Models.FechamentoPeriodo>();
    var fechamentosConsolidados = Model?.Where(f => f.Status.ToString() == "Processado") ?? Enumerable.Empty<SistemaTesourariaEclesiastica.Models.FechamentoPeriodo>();
    var fechamentosRejeitados = Model?.Where(f => f.Status.ToString() == "Rejeitado") ?? Enumerable.Empty<SistemaTesourariaEclesiastica.Models.FechamentoPeriodo>();
}

<!-- Cabeçalho -->
<div class="d-flex flex-column flex-md-row justify-content-between align-items-start align-items-md-center mb-4 gap-2">
    <div>
        <h1 class="h3 mb-1">
            <i class="bi bi-calendar-check me-2 text-primary"></i>Fechamento de Período
        </h1>
        <p class="text-muted mb-0 small">Prestação de contas e repasses financeiros</p>
    </div>
    <a asp-action="Create" class="btn btn-primary">
        <i class="bi bi-plus-circle me-2"></i>Novo Fechamento
    </a>
</div>

<!-- Filtros -->
<div class="card shadow-sm mb-4">
    <div class="card-body">
        <form method="get" class="row g-3">
            <div class="col-12 col-md-4">
                <label class="form-label small fw-semibold">Centro de Custo</label>
                @Html.DropDownList("centroCustoId", ViewBag.CentrosCusto as SelectList, "Todos",
                new { @class = "form-select" })
            </div>
            <div class="col-12 col-md-4">
                <label class="form-label small fw-semibold">Tipo</label>
                <select name="tipo" class="form-select">
                    <option value="">Todos</option>
                    <option value="Diario">Diário</option>
                    <option value="Semanal">Semanal</option>
                    <option value="Mensal">Mensal</option>
                </select>
            </div>
            <div class="col-12 col-md-4 d-flex align-items-end gap-2">
                <button type="submit" class="btn btn-outline-primary flex-fill">
                    <i class="bi bi-search"></i>
                    <span class="d-none d-md-inline ms-1">Filtrar</span>
                </button>
                <a asp-action="Index" class="btn btn-outline-secondary">
                    <i class="bi bi-arrow-clockwise"></i>
                </a>
            </div>
        </form>
    </div>
</div>

<!-- Abas de Navegação -->
<ul class="nav nav-tabs mb-3" id="fechamentoTabs" role="tablist">
    <li class="nav-item" role="presentation">
        <button class="nav-link active" id="pendentes-tab" data-bs-toggle="tab" data-bs-target="#pendentes" 
                type="button" role="tab" aria-controls="pendentes" aria-selected="true">
            <i class="bi bi-clock me-2"></i>Pendentes
            <span class="badge bg-warning text-dark ms-2">@fechamentosPendentes.Count()</span>
        </button>
    </li>
    <li class="nav-item" role="presentation">
        <button class="nav-link" id="aprovados-tab" data-bs-toggle="tab" data-bs-target="#aprovados" 
                type="button" role="tab" aria-controls="aprovados" aria-selected="false">
            <i class="bi bi-check-circle me-2"></i>Aprovados
            <span class="badge bg-success ms-2">@fechamentosAprovados.Count()</span>
        </button>
    </li>
    <li class="nav-item" role="presentation">
        <button class="nav-link" id="consolidados-tab" data-bs-toggle="tab" data-bs-target="#consolidados" 
                type="button" role="tab" aria-controls="consolidados" aria-selected="false">
            <i class="bi bi-layers me-2"></i>Consolidados
            <span class="badge bg-info ms-2">@fechamentosConsolidados.Count()</span>
        </button>
    </li>
    <li class="nav-item" role="presentation">
        <button class="nav-link" id="rejeitados-tab" data-bs-toggle="tab" data-bs-target="#rejeitados" 
                type="button" role="tab" aria-controls="rejeitados" aria-selected="false">
            <i class="bi bi-x-circle me-2"></i>Rejeitados
            <span class="badge bg-danger ms-2">@fechamentosRejeitados.Count()</span>
        </button>
    </li>
</ul>

<!-- Conteúdo das Abas -->
<div class="tab-content" id="fechamentoTabsContent">
    
    <!-- Aba Pendentes -->
    <div class="tab-pane fade show active" id="pendentes" role="tabpanel" aria-labelledby="pendentes-tab">
        @await Html.PartialAsync("_TabelaFechamentos", fechamentosPendentes)
    </div>
    
    <!-- Aba Aprovados -->
    <div class="tab-pane fade" id="aprovados" role="tabpanel" aria-labelledby="aprovados-tab">
        @await Html.PartialAsync("_TabelaFechamentos", fechamentosAprovados)
    </div>
    
    <!-- Aba Consolidados -->
    <div class="tab-pane fade" id="consolidados" role="tabpanel" aria-labelledby="consolidados-tab">
        @await Html.PartialAsync("_TabelaFechamentos", fechamentosConsolidados)
    </div>
    
    <!-- Aba Rejeitados -->
    <div class="tab-pane fade" id="rejeitados" role="tabpanel" aria-labelledby="rejeitados-tab">
        @await Html.PartialAsync("_TabelaFechamentos", fechamentosRejeitados)
    </div>
</div>

<!-- Alert informativo -->
<div class="alert alert-info mt-4 d-flex align-items-start">
    <i class="bi bi-info-circle me-3 fs-5"></i>
    <div>
        <h6 class="alert-heading mb-2">Como funciona o Fechamento de Período</h6>
        <p class="mb-1 small">
            O fechamento separa automaticamente as movimentações em:
        </p>
        <ul class="small mb-0">
            <li><strong>Balanço Físico:</strong> Dinheiro em espécie que deve ser repassado fisicamente à Sede</li>
            <li><strong>Balanço Digital:</strong> Valores já depositados (PIX, transferências) - apenas informativo</li>
        </ul>
    </div>
</div>