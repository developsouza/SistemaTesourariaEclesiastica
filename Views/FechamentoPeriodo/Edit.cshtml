@model SistemaTesourariaEclesiastica.Models.FechamentoPeriodo

@{
    ViewData["Title"] = "Editar Fechamento";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h1 class="h3 mb-0">
            <i class="bi bi-pencil me-2"></i>
            Editar Fechamento de Período
        </h1>
        <p class="text-muted mb-0">Atualizar informações do fechamento pendente</p>
    </div>
    <a asp-action="Index" class="btn btn-outline-secondary">
        <i class="bi bi-arrow-left me-2"></i>
        Voltar
    </a>
</div>

@if (Model.Status != SistemaTesourariaEclesiastica.Enums.StatusFechamentoPeriodo.Pendente)
{
    <div class="alert alert-warning">
        <i class="bi bi-exclamation-triangle me-2"></i>
        <strong>Atenção:</strong> Apenas fechamentos com status <strong>Pendente</strong> podem ser editados.
    </div>
}

<form asp-action="Edit" method="post" id="formFechamento">
    <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
    
    <!-- Campos obrigatórios ocultos -->
    <input type="hidden" asp-for="Id" />
    
    <div class="row">
        <!-- Coluna Principal -->
        <div class="col-lg-8">
            <div class="card mb-4">
                <div class="card-header">
                    <h5 class="card-title mb-0">
                        <i class="bi bi-info-circle me-2"></i>
                        Informações do Fechamento
                    </h5>
                </div>
                <div class="card-body">
                    <!-- Centro de Custo -->
                    <div class="mb-3">
                        <label asp-for="CentroCustoId" class="form-label required"></label>
                        <select asp-for="CentroCustoId" class="form-select" asp-items="ViewBag.CentrosCusto" disabled>
                            <option value="">Selecione o centro de custo...</option>
                        </select>
                        <span asp-validation-for="CentroCustoId" class="text-danger"></span>
                        <div class="form-text">
                            <i class="bi bi-info-circle me-1"></i>
                            O centro de custo não pode ser alterado após a criação
                        </div>
                    </div>

                    <!-- Tipo de Fechamento -->
                    <div class="mb-3">
                        <label asp-for="TipoFechamento" class="form-label required"></label>
                        <select asp-for="TipoFechamento" class="form-select" asp-items="Html.GetEnumSelectList<SistemaTesourariaEclesiastica.Enums.TipoFechamento>()" disabled>
                        </select>
                        <span asp-validation-for="TipoFechamento" class="text-danger"></span>
                        <div class="form-text">
                            <i class="bi bi-info-circle me-1"></i>
                            O tipo de fechamento não pode ser alterado após a criação
                        </div>
                    </div>

                    @if (Model.TipoFechamento == SistemaTesourariaEclesiastica.Enums.TipoFechamento.Diario)
                    {
                        <!-- Fechamento Diário -->
                        <div class="alert alert-info">
                            <i class="bi bi-calendar-day me-2"></i>
                            <strong>Fechamento Diário:</strong> @Model.DataInicio.ToString("dd/MM/yyyy")
                        </div>
                    }
                    else if (Model.TipoFechamento == SistemaTesourariaEclesiastica.Enums.TipoFechamento.Semanal)
                    {
                        <!-- Fechamento Semanal -->
                        <div class="alert alert-primary">
                            <i class="bi bi-calendar-week me-2"></i>
                            <strong>Fechamento Semanal:</strong> De @Model.DataInicio.ToString("dd/MM/yyyy") até @Model.DataFim.ToString("dd/MM/yyyy")
                        </div>
                        
                        <div class="mb-3">
                            <label class="form-label">Período da Semana</label>
                            <div class="alert alert-secondary">
                                @{
                                    var diasSemana = (Model.DataFim - Model.DataInicio).Days + 1;
                                }
                                <strong>@diasSemana dia(s)</strong> - De <strong>@Model.DataInicio.ToString("dd/MM/yyyy")</strong> até <strong>@Model.DataFim.ToString("dd/MM/yyyy")</strong>
                            </div>
                        </div>
                    }
                    else
                    {
                        <!-- Fechamento Mensal -->
                        <div class="alert alert-primary">
                            <i class="bi bi-calendar-month me-2"></i>
                            <strong>Fechamento Mensal:</strong> @Model.Mes.Value.ToString("00")/@Model.Ano
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Período do Fechamento</label>
                            <div class="alert alert-secondary">
                                De <strong>@Model.DataInicio.ToString("dd/MM/yyyy")</strong> até <strong>@Model.DataFim.ToString("dd/MM/yyyy")</strong>
                            </div>
                        </div>
                    }

                    <!-- Observações -->
                    @{
                        var isReadOnly = Model.Status != SistemaTesourariaEclesiastica.Enums.StatusFechamentoPeriodo.Pendente;
                    }

                    <div class="mb-3">
                        <label asp-for="Observacoes" class="form-label"></label>
                        @if (isReadOnly)
                        {
                            <textarea asp-for="Observacoes" class="form-control" rows="4" placeholder="Observações sobre este fechamento..." readonly></textarea>
                        }
                        else
                        {
                            <textarea asp-for="Observacoes" class="form-control" rows="4" placeholder="Observações sobre este fechamento..."></textarea>
                        }
                        <span asp-validation-for="Observacoes" class="text-danger"></span>
                        <div class="form-text">
                            <span id="contadorCaracteres">@(Model.Observacoes?.Length ?? 0)</span> / 500 caracteres
                        </div>
                    </div>
                </div>
            </div>

            <!-- Resumo Financeiro (Apenas Visualização) -->
            <div class="card mb-4">
                <div class="card-header bg-light">
                    <h5 class="card-title mb-0">
                        <i class="bi bi-calculator me-2"></i>
                        Resumo Financeiro (Calculado Automaticamente)
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="alert alert-warning">
                                <h6 class="mb-2">
                                    <i class="bi bi-cash-coin me-1"></i>
                                    Balanço Físico
                                </h6>
                                <div class="d-flex justify-content-between">
                                    <span>Entradas:</span>
                                    <strong>@Model.TotalEntradasFisicas.ToString("C")</strong>
                                </div>
                                <div class="d-flex justify-content-between">
                                    <span>Saídas:</span>
                                    <strong>@Model.TotalSaidasFisicas.ToString("C")</strong>
                                </div>
                                <hr>
                                <div class="d-flex justify-content-between">
                                    <strong>Total:</strong>
                                    <strong class="fs-5">@Model.BalancoFisico.ToString("C")</strong>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="alert alert-info">
                                <h6 class="mb-2">
                                    <i class="bi bi-bank2 me-1"></i>
                                    Balanço Digital
                                </h6>
                                <div class="d-flex justify-content-between">
                                    <span>Entradas:</span>
                                    <strong>@Model.TotalEntradasDigitais.ToString("C")</strong>
                                </div>
                                <div class="d-flex justify-content-between">
                                    <span>Saídas:</span>
                                    <strong>@Model.TotalSaidasDigitais.ToString("C")</strong>
                                </div>
                                <hr>
                                <div class="d-flex justify-content-between">
                                    <strong>Total:</strong>
                                    <strong class="fs-5">@Model.BalancoDigital.ToString("C")</strong>
                                </div>
                            </div>
                        </div>
                    </div>

                    @if (Model.TotalRateios > 0)
                    {
                        <div class="alert alert-secondary">
                            <h6 class="mb-2">
                                <i class="bi bi-share me-1"></i>
                                Rateios Aplicados
                            </h6>
                            <div class="d-flex justify-content-between">
                                <span>Total de Rateios:</span>
                                <strong>@Model.TotalRateios.ToString("C")</strong>
                            </div>
                            <hr>
                            <div class="d-flex justify-content-between">
                                <strong>Saldo Final:</strong>
                                <strong class="fs-5">@Model.SaldoFinal.ToString("C")</strong>
                            </div>
                        </div>
                    }

                    <div class="alert alert-light mb-0">
                        <i class="bi bi-info-circle me-2"></i>
                        <small>Os valores financeiros são recalculados automaticamente ao salvar</small>
                    </div>
                </div>
            </div>

            <!-- Botões de Ação -->
            @if (Model.Status == SistemaTesourariaEclesiastica.Enums.StatusFechamentoPeriodo.Pendente)
            {
                <div class="d-flex justify-content-end gap-2">
                    <a asp-action="Index" class="btn btn-outline-secondary">
                        <i class="bi bi-x-circle me-2"></i>
                        Cancelar
                    </a>
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-check-circle me-2"></i>
                        Salvar Alterações
                    </button>
                </div>
            }
            else
            {
                <div class="alert alert-warning mb-0">
                    <i class="bi bi-lock me-2"></i>
                    Este fechamento não pode ser editado porque já foi <strong>@Model.Status.ToString()</strong>.
                </div>
            }
        </div>

        <!-- Sidebar de Informações -->
        <div class="col-lg-4">
            <div class="card mb-3">
                <div class="card-header">
                    <h6 class="card-title mb-0">
                        <i class="bi bi-info-circle me-2"></i>
                        Status do Fechamento
                    </h6>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <small class="text-muted">Status Atual</small>
                        <div>
                            <span class="badge bg-@(Model.Status == SistemaTesourariaEclesiastica.Enums.StatusFechamentoPeriodo.Aprovado ? "success" : Model.Status == SistemaTesourariaEclesiastica.Enums.StatusFechamentoPeriodo.Rejeitado ? "danger" : "warning") fs-6">
                                @Model.Status.ToString()
                            </span>
                        </div>
                    </div>

                    <div class="mb-3">
                        <small class="text-muted">Submetido por</small>
                        <div><strong>@Model.UsuarioSubmissao.NomeCompleto</strong></div>
                    </div>

                    <div class="mb-3">
                        <small class="text-muted">Data de Submissão</small>
                        <div><strong>@Model.DataSubmissao.ToString("dd/MM/yyyy HH:mm")</strong></div>
                    </div>

                    @if (Model.DataAprovacao.HasValue)
                    {
                        <div class="mb-0">
                            <small class="text-muted">Data de Aprovação</small>
                            <div><strong>@Model.DataAprovacao.Value.ToString("dd/MM/yyyy HH:mm")</strong></div>
                        </div>
                    }
                </div>
            </div>

            <div class="card bg-info bg-opacity-10 border-info">
                <div class="card-header bg-transparent border-info">
                    <h6 class="card-title mb-0">
                        <i class="bi bi-lightbulb me-2"></i>
                        Sobre a Edição
                    </h6>
                </div>
                <div class="card-body">
                    <p class="small mb-2">
                        <strong>O que pode ser editado:</strong>
                    </p>
                    <ul class="small mb-3">
                        <li>Observações do fechamento</li>
                    </ul>

                    <p class="small mb-2">
                        <strong>O que NÃO pode ser alterado:</strong>
                    </p>
                    <ul class="small mb-3">
                        <li>Centro de Custo</li>
                        <li>Tipo de Fechamento</li>
                        <li>Período (datas)</li>
                        <li>Valores financeiros</li>
                    </ul>

                    <div class="alert alert-warning mb-0">
                        <i class="bi bi-info-circle me-1"></i>
                        <small>Os valores são <strong>recalculados automaticamente</strong> ao salvar</small>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    
    <script>
        $(document).ready(function() {
            // Contador de caracteres
            $('#Observacoes').on('input', function() {
                $('#contadorCaracteres').text($(this).val().length);
            });
        });
    </script>
}