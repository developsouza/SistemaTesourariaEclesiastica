@model IEnumerable<SistemaTesourariaEclesiastica.Models.Entrada>

@{
    ViewData["Title"] = "Entradas (Receitas)";
}

<!-- Cabeçalho -->
<div class="d-flex flex-column flex-md-row justify-content-between align-items-start align-items-md-center mb-4 gap-2">
    <div>
        <h1 class="h3 mb-1">
            <i class="bi bi-arrow-down-circle me-2 text-success"></i>Entradas (Receitas)
        </h1>
        <p class="text-muted mb-0 small">Gerenciar recebimentos e receitas</p>
    </div>
    <a asp-action="Create" class="btn btn-success">
        <i class="bi bi-plus-circle me-2"></i>Nova Entrada
    </a>
</div>

<!-- Filtros -->
<div class="card shadow-sm mb-4">
    <div class="card-body">
        <form method="get" class="row g-3">
            <div class="col-12 col-md-3">
                <label class="form-label small fw-semibold">Data Início</label>
                <input type="date" class="form-control" name="dataInicio" value="@ViewData["DataInicio"]">
            </div>
            <div class="col-12 col-md-3">
                <label class="form-label small fw-semibold">Data Fim</label>
                <input type="date" class="form-control" name="dataFim" value="@ViewData["DataFim"]">
            </div>
            <div class="col-12 col-md-3">
                <label class="form-label small fw-semibold">Centro de Custo</label>
                @Html.DropDownList("centroCustoId", ViewBag.CentrosCusto as SelectList, "Todos",
                new { @class = "form-select" })
            </div>
            <div class="col-12 col-md-3">
                <label class="form-label small fw-semibold">Fonte de Renda</label>
                @Html.DropDownList("planoContasId", ViewBag.PlanosContas as SelectList, "Todas",
                                new { @class = "form-select" })
            </div>
            <div class="col-12 col-md-3">
                <label class="form-label small fw-semibold">Membro</label>
                @Html.DropDownList("membroId", ViewBag.Membros as SelectList, "Todos",
                                new { @class = "form-select" })
            </div>
            <div class="col-12 col-md-9 d-flex align-items-end gap-2">
                <button type="submit" class="btn btn-outline-primary">
                    <i class="bi bi-search me-1"></i>Filtrar
                </button>
                <a asp-action="Index" class="btn btn-outline-secondary">
                    <i class="bi bi-arrow-clockwise me-1"></i>Limpar
                </a>
            </div>
        </form>
    </div>
</div>

<!-- Resultados -->
<div class="card shadow-sm">
    <div class="card-header bg-white d-flex justify-content-between align-items-center py-3">
        <div>
            <h5 class="mb-1 fw-semibold">
                <i class="bi bi-list-ul me-2 text-success"></i>
                @ViewBag.TotalItems entrada(s) encontrada(s)
            </h5>
            @if (Model != null && Model.Any())
            {
                var totalIncluidasEmFechamento = Model.Where(e => e.IncluidaEmFechamento).Sum(e => e.Valor);
                <small class="text-success fw-semibold">
                    Total Prestado: @totalIncluidasEmFechamento.ToString("C2")
                </small>
            }
        </div>
        <button type="button" class="btn btn-sm btn-outline-secondary" onclick="window.print()">
            <i class="bi bi-printer me-1"></i>Imprimir
        </button>
    </div>

    <div class="card-body p-0">
        @if (Model != null && Model.Any())
        {
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="table-light">
                        <tr>
                            <th class="ps-3">Data</th>
                            <th>Centro de Custo</th>
                            <th>Descrição</th>
                            <th class="text-end">Valor</th>
                            <th class="d-none d-lg-table-cell">Fonte</th>
                            <th class="d-none d-xl-table-cell">Membro</th>
                            <th class="d-none d-md-table-cell">Meio Pgto</th>
                            <th class="text-center">Status</th>
                            <th class="text-center" style="width: 140px;">Ações</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="ps-3">
                                    <div class="fw-semibold">@item.Data.ToString("dd/MM/yy")</div>
                                    <small class="text-muted">@item.Data.ToString("HH:mm")</small>
                                </td>
                                <td>
                                    <span class="badge bg-info bg-opacity-10 text-info border border-info">
                                        @item.CentroCusto?.Nome
                                    </span>
                                </td>
                                <td>
                                    <div class="fw-semibold">@item.Descricao</div>
                                    <small class="text-muted d-lg-none">@item.PlanoDeContas?.Nome</small>
                                </td>
                                <td class="text-end">
                                    @if (item.IncluidaEmFechamento)
                                    {
                                        <span class="fw-bold text-success">@item.Valor.ToString("C2")</span>
                                    }
                                    else
                                    {
                                        <span class="text-muted fst-italic" title="Valor será exibido após prestação de contas">
                                            <i class="bi bi-lock"></i> Pendente
                                        </span>
                                    }
                                </td>
                                <td class="d-none d-lg-table-cell">
                                    <span class="badge bg-success bg-opacity-10 text-success border border-success">
                                        @item.PlanoDeContas?.Nome
                                    </span>
                                </td>
                                <td class="d-none d-xl-table-cell">
                                    @if (item.Membro != null)
                                    {
                                        <div class="d-flex align-items-center">
                                            <div class="avatar-circle-sm bg-primary text-white me-2">
                                                @item.Membro.NomeCompleto.Substring(0, 1).ToUpper()
                                            </div>
                                            <span>@item.Membro.NomeCompleto</span>
                                        </div>
                                    }
                                    else
                                    {
                                        <span class="text-muted fst-italic">-</span>
                                    }
                                </td>
                                <td class="d-none d-md-table-cell">
                                    <small class="text-muted">@item.MeioDePagamento?.Nome</small>
                                </td>
                                <td class="text-center">
                                    @if (item.IncluidaEmFechamento)
                                    {
                                        <span class="badge bg-success" title="Incluída no fechamento #@item.FechamentoQueIncluiuId em @item.DataInclusaoFechamento?.ToString("dd/MM/yy")">
                                            <i class="bi bi-check-circle"></i> Prestada
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-warning text-dark">
                                            <i class="bi bi-clock"></i> Aguardando
                                        </span>
                                    }
                                </td>
                                <td>
                                    <div class="btn-group btn-group-sm" role="group">
                                        <a asp-action="Details" asp-route-id="@item.Id"
                                           class="btn btn-outline-info" title="Detalhes">
                                            <i class="bi bi-eye"></i>
                                        </a>
                                        <a asp-action="Edit" asp-route-id="@item.Id"
                                           class="btn btn-outline-primary" title="Editar">
                                            <i class="bi bi-pencil"></i>
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@item.Id"
                                           class="btn btn-outline-danger" title="Excluir">
                                            <i class="bi bi-trash"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="text-center py-5">
                <i class="bi bi-arrow-down-circle text-muted" style="font-size: 4rem;"></i>
                <h5 class="mt-3 text-muted">Nenhuma entrada encontrada</h5>
                <p class="text-muted">Não há entradas cadastradas com os filtros aplicados.</p>
                <a asp-action="Create" class="btn btn-success mt-2">
                    <i class="bi bi-plus-circle me-2"></i>Registrar Primeira Entrada
                </a>
            </div>
        }
    </div>

    @if (ViewBag.TotalPages > 1)
    {
        <div class="card-footer bg-white py-3">
            <nav aria-label="Navegação de páginas">
                <ul class="pagination pagination-sm justify-content-center mb-0">
                    <li class="page-item @(ViewBag.CurrentPage <= 1 ? "disabled" : "")">
                        <a class="page-link" asp-action="Index"
                           asp-route-page="@(ViewBag.CurrentPage - 1)"
                           asp-route-dataInicio="@ViewData["DataInicio"]"
                           asp-route-dataFim="@ViewData["DataFim"]"
                           asp-route-centroCustoId="@ViewData["CentroCustoId"]"
                           asp-route-planoContasId="@ViewData["PlanoContasId"]"
                           asp-route-membroId="@ViewData["MembroId"]">
                            <i class="bi bi-chevron-left"></i>
                        </a>
                    </li>

                    @for (int i = Math.Max(1, ViewBag.CurrentPage - 2); i <= Math.Min(ViewBag.TotalPages, ViewBag.CurrentPage + 2); i++)
                    {
                        <li class="page-item @(i == ViewBag.CurrentPage ? "active" : "")">
                            <a class="page-link" asp-action="Index"
                               asp-route-page="@i"
                               asp-route-dataInicio="@ViewData["DataInicio"]"
                               asp-route-dataFim="@ViewData["DataFim"]"
                               asp-route-centroCustoId="@ViewData["CentroCustoId"]"
                               asp-route-planoContasId="@ViewData["PlanoContasId"]"
                               asp-route-membroId="@ViewData["MembroId"]">
                                @i
                            </a>
                        </li>
                    }

                    <li class="page-item @(ViewBag.CurrentPage >= ViewBag.TotalPages ? "disabled" : "")">
                        <a class="page-link" asp-action="Index"
                           asp-route-page="@(ViewBag.CurrentPage + 1)"
                           asp-route-dataInicio="@ViewData["DataInicio"]"
                           asp-route-dataFim="@ViewData["DataFim"]"
                           asp-route-centroCustoId="@ViewData["CentroCustoId"]"
                           asp-route-planoContasId="@ViewData["PlanoContasId"]"
                           asp-route-membroId="@ViewData["MembroId"]">
                            <i class="bi bi-chevron-right"></i>
                        </a>
                    </li>
                </ul>
            </nav>
        </div>
    }
</div>