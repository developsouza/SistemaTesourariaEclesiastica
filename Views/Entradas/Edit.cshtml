@model SistemaTesourariaEclesiastica.Models.Entrada

@{
    ViewData["Title"] = "Editar Entrada";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h1 class="h3 mb-0">
            <i class="bi bi-pencil-square me-2"></i>
            Editar Entrada
        </h1>
        <p class="text-muted mb-0">Atualizar informações da entrada</p>
    </div>
    <a asp-action="Index" class="btn btn-outline-secondary">
        <i class="bi bi-arrow-left me-2"></i>Voltar
    </a>
</div>

<div class="row">
    <div class="col-lg-8">
        <div class="card shadow-sm">
            <div class="card-header">
                <h5 class="mb-0">
                    <i class="bi bi-info-circle me-2"></i>
                    Dados da Entrada
                </h5>
            </div>
            <div class="card-body">
                <form asp-action="Edit" method="post">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                    <input type="hidden" asp-for="Id" />

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="Data" class="form-label">Data <span class="text-danger">*</span></label>
                            <input asp-for="Data" class="form-control" type="date" />
                            <span asp-validation-for="Data" class="text-danger"></span>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label asp-for="Valor" class="form-label">Valor <span class="text-danger">*</span></label>
                            <div class="input-group">
                                <span class="input-group-text">R$</span>
                                <input asp-for="Valor" class="form-control" type="number" step="0.01" min="0.01" />
                            </div>
                            <span asp-validation-for="Valor" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="MembroId" class="form-label">Membro</label>
                            <select asp-for="MembroId" class="form-select" asp-items="@((SelectList)ViewData["MembroId"])">
                                <option value="">Selecione o membro (opcional)</option>
                            </select>
                            <span asp-validation-for="MembroId" class="text-danger"></span>
                            <small class="form-text text-muted">Selecione apenas para dízimos</small>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label asp-for="PlanoDeContasId" class="form-label">Fonte de Renda <span class="text-danger">*</span></label>
                            <select asp-for="PlanoDeContasId" class="form-select" asp-items="@((SelectList)ViewData["PlanoDeContasId"])">
                                <option value="">Selecione a fonte de renda</option>
                            </select>
                            <span asp-validation-for="PlanoDeContasId" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="CentroCustoId" class="form-label">Centro de Custo <span class="text-danger">*</span></label>
                            <select asp-for="CentroCustoId" class="form-select" asp-items="@((SelectList)ViewData["CentroCustoId"])">
                                <option value="">Selecione o centro de custo</option>
                            </select>
                            <span asp-validation-for="CentroCustoId" class="text-danger"></span>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label asp-for="MeioDePagamentoId" class="form-label">Meio de Pagamento <span class="text-danger">*</span></label>
                            <select asp-for="MeioDePagamentoId" class="form-select" asp-items="@((SelectList)ViewData["MeioDePagamentoId"])">
                                <option value="">Selecione o meio de pagamento</option>
                            </select>
                            <span asp-validation-for="MeioDePagamentoId" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Descricao" class="form-label">Descrição</label>
                        <textarea asp-for="Descricao" class="form-control" rows="3" placeholder="Descrição adicional da entrada"></textarea>
                        <span asp-validation-for="Descricao" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Observacoes" class="form-label">Observações</label>
                        <textarea asp-for="Observacoes" class="form-control" rows="2" placeholder="Observações internas"></textarea>
                        <span asp-validation-for="Observacoes" class="text-danger"></span>
                    </div>

                    <hr class="my-4">

                    <div class="d-flex justify-content-end gap-2">
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="bi bi-x-circle me-2"></i>Cancelar
                        </a>
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-check-circle me-2"></i>Salvar Alterações
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <div class="col-lg-4">
        <div class="card bg-warning bg-opacity-10 border-warning">
            <div class="card-header bg-transparent border-warning">
                <h6 class="mb-0">
                    <i class="bi bi-exclamation-triangle me-2"></i>Atenção
                </h6>
            </div>
            <div class="card-body">
                <p class="small mb-2">
                    <strong>Importante:</strong> Ao editar uma entrada, verifique se as alterações estão corretas.
                </p>
                <p class="small mb-2">
                    Alterações em entradas podem afetar:
                </p>
                <ul class="small mb-0">
                    <li>Relatórios financeiros</li>
                    <li>Saldos de meios de pagamento</li>
                    <li>Saldos de centros de custo</li>
                </ul>
            </div>
        </div>

        <div class="card mt-3 bg-light border-0">
            <div class="card-header bg-transparent">
                <h6 class="mb-0">
                    <i class="bi bi-clock-history me-2"></i>Histórico
                </h6>
            </div>
            <div class="card-body">
                <p class="small mb-1">
                    <strong>Criada em:</strong><br>
                    @Model.DataCriacao.ToString("dd/MM/yyyy 'às' HH:mm")
                </p>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        $(document).ready(function() {
            // Validação adicional do valor
            $('#Valor').on('input', function() {
                var val = $(this).val();
                if (val < 0.01) {
                    $(this).addClass('is-invalid');
                } else {
                    $(this).removeClass('is-invalid');
                }
            });
        });
    </script>
}