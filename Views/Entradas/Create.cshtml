@model SistemaTesourariaEclesiastica.Models.Entrada

@{
    ViewData["Title"] = "Nova Entrada";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h1 class="h3 mb-0">
            <i class="bi bi-plus-circle me-2 text-success"></i>
            Nova Entrada
        </h1>
        <p class="text-muted mb-0">Registrar nova receita ou dízimo</p>
    </div>
    <a asp-action="Index" class="btn btn-outline-secondary">
        <i class="bi bi-arrow-left me-2"></i>Voltar
    </a>
</div>

<div class="row">
    <div class="col-lg-8">
        <div class="card shadow-sm">
            <div class="card-header">
                <h5 class="mb-0">
                    <i class="bi bi-info-circle me-2"></i>
                    Dados da Entrada
                </h5>
            </div>
            <div class="card-body">
                <form asp-action="Create" method="post">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="Data" class="form-label">Data <span class="text-danger">*</span></label>
                            <input asp-for="Data" class="form-control" type="date" />
                            <span asp-validation-for="Data" class="text-danger"></span>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label asp-for="Valor" class="form-label">Valor <span class="text-danger">*</span></label>
                            <div class="input-group">
                                <span class="input-group-text">R$</span>
                                <input asp-for="Valor" class="form-control" type="number" step="0.01" min="0.01" />
                            </div>
                            <span asp-validation-for="Valor" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="MembroId" class="form-label">Membro</label>
                            <select asp-for="MembroId" class="form-select" asp-items="@((SelectList)ViewData["MembroId"])">
                                <option value="">Selecione o membro (opcional)</option>
                            </select>
                            <span asp-validation-for="MembroId" class="text-danger"></span>
                            <small class="form-text text-muted">Selecione apenas para dízimos</small>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label asp-for="PlanoDeContasId" class="form-label">Fonte de Renda <span class="text-danger">*</span></label>
                            <select asp-for="PlanoDeContasId" class="form-select" asp-items="@((SelectList)ViewData["PlanoDeContasId"])">
                                <option value="">Selecione a fonte de renda</option>
                            </select>
                            <span asp-validation-for="PlanoDeContasId" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="CentroCustoId" class="form-label">Centro de Custo <span class="text-danger">*</span></label>
                            <select asp-for="CentroCustoId" class="form-select" asp-items="@((SelectList)ViewData["CentroCustoId"])">
                                <option value="">Selecione o centro de custo</option>
                            </select>
                            <span asp-validation-for="CentroCustoId" class="text-danger"></span>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label asp-for="MeioDePagamentoId" class="form-label">Meio de Pagamento <span class="text-danger">*</span></label>
                            <select asp-for="MeioDePagamentoId" class="form-select" asp-items="@((SelectList)ViewData["MeioDePagamentoId"])">
                                <option value="">Selecione o meio de pagamento</option>
                            </select>
                            <span asp-validation-for="MeioDePagamentoId" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Descricao" class="form-label">Descrição</label>
                        <textarea asp-for="Descricao" class="form-control" rows="3" placeholder="Descrição adicional da entrada"></textarea>
                        <span asp-validation-for="Descricao" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Observacoes" class="form-label">Observações</label>
                        <textarea asp-for="Observacoes" class="form-control" rows="2" placeholder="Observações internas"></textarea>
                        <span asp-validation-for="Observacoes" class="text-danger"></span>
                    </div>

                    <hr class="my-4">

                    <div class="d-flex justify-content-end gap-2">
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="bi bi-x-circle me-2"></i>Cancelar
                        </a>
                        <button type="submit" class="btn btn-success">
                            <i class="bi bi-check-circle me-2"></i>Salvar Entrada
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <div class="col-lg-4">
        <div class="card">
    <div class="card-header">
     <h6 class="card-title mb-0">
      <i class="bi bi-lightbulb me-2"></i>Informações
    </h6>
            </div>
   <div class="card-body">
 <div class="mb-3 pb-3 border-bottom border-opacity-25">
  <p class="small mb-0">
          <strong>Dica:</strong> Para registrar dízimos, selecione o membro correspondente.
    </p>
     </div>

           <div class="mb-3 pb-3 border-bottom border-opacity-25">
   <p class="small mb-0">
    <strong>Importante:</strong> Todos os campos marcados com <span class="text-danger">*</span> são obrigatórios.
   </p>
       </div>

    <div>
    <p class="small mb-0">
       <strong>Lembrete:</strong> Escolha corretamente o meio de pagamento para facilitar a conciliação bancária.
           </p>
     </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        $(document).ready(function() {
    // Formatar data para hoje se estiver vazia
       if (!$('#Data').val()) {
 var today = new Date();
                var year = today.getFullYear();
          var month = String(today.getMonth() + 1).padStart(2, '0');
    var day = String(today.getDate()).padStart(2, '0');
  var dateString = year + '-' + month + '-' + day;
   $('#Data').val(dateString);
            }

            // Validação adicional do valor
       $('#Valor').on('input', function() {
    var val = $(this).val();
 if (val < 0.01) {
      $(this).addClass('is-invalid');
    } else {
        $(this).removeClass('is-invalid');
                }
     });

       // Inicializar Select2 para o campo de Membro com busca AJAX
        $('#MembroId').select2({
     theme: 'bootstrap-5',
  placeholder: 'Digite para buscar o membro...',
       allowClear: true,
                language: {
      noResults: function() {
         return "Nenhum membro encontrado";
        },
                searching: function() {
       return "Buscando...";
     },
       inputTooShort: function() {
      return "Digite pelo menos 2 caracteres";
      }
       },
   ajax: {
        url: '@Url.Action("BuscarMembros", "Membros")',
          dataType: 'json',
      delay: 300,
  data: function(params) {
        return {
    term: params.term || ''
        };
          },
          processResults: function(data) {
        return {
         results: data.map(function(item) {
            return {
  id: item.id,
           text: item.text + (item.apelido ? ' (' + item.apelido + ')' : ''),
       centroCusto: item.centroCustoNome
        };
     })
       };
      },
 cache: true
          },
        minimumInputLength: 2,
    templateResult: formatMembro,
         templateSelection: formatMembroSelection
            });

          // Formatar resultado no dropdown
          function formatMembro(membro) {
       if (!membro.id) {
         return membro.text;
       }
    
     var $membro = $(
'<div class="d-flex flex-column">' +
       '<div class="fw-semibold">' + membro.text + '</div>' +
          (membro.centroCusto ? '<small class="text-muted">' + membro.centroCusto + '</small>' : '') +
    '</div>'
     );
                return $membro;
            }

            // Formatar seleção
    function formatMembroSelection(membro) {
                return membro.text || membro.id;
            }
     });
    </script>
}