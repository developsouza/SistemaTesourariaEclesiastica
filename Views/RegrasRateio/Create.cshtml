@model SistemaTesourariaEclesiastica.Models.RegraRateio

@{
    ViewData["Title"] = "Nova Regra de Rateio";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h1 class="h3 mb-0">
            <i class="bi bi-share me-2"></i>
            Nova Regra de Rateio
        </h1>
        <p class="text-muted mb-0">Configurar nova regra de rateio automático</p>
    </div>
    <a asp-action="Index" class="btn btn-outline-secondary">
        <i class="bi bi-arrow-left me-2"></i>
        Voltar
    </a>
</div>

<div class="row">
    <div class="col-lg-8">
        <div class="card">
            <div class="card-header">
                <h5 class="card-title mb-0">Dados da Regra</h5>
            </div>
            <div class="card-body">
                <form asp-action="Create" method="post">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                    
                    <div class="row g-3">
                        <div class="col-md-8">
                            <label asp-for="Nome" class="form-label required"></label>
                            <input asp-for="Nome" class="form-control" placeholder="Ex: Rateio para Departamento A">
                            <span asp-validation-for="Nome" class="text-danger"></span>
                        </div>
                        
                        <div class="col-md-4">
                            <label asp-for="Percentual" class="form-label required"></label>
                            <div class="input-group">
                                <input asp-for="Percentual" class="form-control" type="number" step="0.01" min="0.01" max="100" placeholder="10,00">
                                <span class="input-group-text">%</span>
                            </div>
                            <span asp-validation-for="Percentual" class="text-danger"></span>
                        </div>
                        
                        <div class="col-md-6">
                            <label asp-for="CentroCustoOrigemId" class="form-label required"></label>
                            <select asp-for="CentroCustoOrigemId" class="form-select" asp-items="ViewBag.CentroCustoOrigemId">
                                <option value="">Selecione o centro de custo origem</option>
                            </select>
                            <span asp-validation-for="CentroCustoOrigemId" class="text-danger"></span>
                            <div class="form-text">
                                <i class="bi bi-info-circle me-1"></i>
                                Centro de custo que fará o rateio
                            </div>
                        </div>
                        
                        <div class="col-md-6">
                            <label asp-for="CentroCustoDestinoId" class="form-label required"></label>
                            <select asp-for="CentroCustoDestinoId" class="form-select" asp-items="ViewBag.CentroCustoDestinoId">
                                <option value="">Selecione o centro de custo destino</option>
                            </select>
                            <span asp-validation-for="CentroCustoDestinoId" class="text-danger"></span>
                            <div class="form-text">
                                <i class="bi bi-info-circle me-1"></i>
                                Centro de custo que receberá o rateio
                            </div>
                        </div>
                        
                        <div class="col-12">
                            <label asp-for="Descricao" class="form-label"></label>
                            <textarea asp-for="Descricao" class="form-control" rows="3" placeholder="Descrição detalhada da regra (opcional)"></textarea>
                            <span asp-validation-for="Descricao" class="text-danger"></span>
                        </div>
                    </div>
                    
                    <hr class="my-4">
                    
                    <div class="d-flex justify-content-end gap-2">
                        <a asp-action="Index" class="btn btn-outline-secondary">
                            <i class="bi bi-x-circle me-2"></i>
                            Cancelar
                        </a>
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-check-circle me-2"></i>
                            Criar Regra
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
    
    <div class="col-lg-4">
        <div class="card">
            <div class="card-header">
                <h6 class="card-title mb-0">
                    <i class="bi bi-info-circle me-2"></i>
                    Como Funciona
                </h6>
            </div>
            <div class="card-body">
                <div class="alert alert-info">
                    <h6 class="alert-heading">
                        <i class="bi bi-lightbulb me-2"></i>
                        Aplicação Automática
                    </h6>
                    <div class="small">
                        <p class="mb-2">A regra será aplicada automaticamente quando:</p>
                        <ul class="mb-3">
                            <li>O fechamento for do centro de custo origem</li>
                            <li>O centro de custo for "SEDE" ou "GERAL"</li>
                            <li>A regra estiver ativa</li>
                        </ul>
                        
                        <p class="mb-2"><strong>Cálculo:</strong></p>
                        <p class="mb-0">Valor do Rateio = Balanço Digital × (Percentual ÷ 100)</p>
                    </div>
                </div>
                
                <div class="alert alert-warning">
                    <h6 class="alert-heading">
                        <i class="bi bi-exclamation-triangle me-2"></i>
                        Importante
                    </h6>
                    <ul class="mb-0 small">
                        <li>Origem e destino devem ser diferentes</li>
                        <li>Apenas uma regra ativa por combinação</li>
                        <li>Percentual entre 0,01% e 100%</li>
                        <li>Aplicação apenas em fechamentos SEDE</li>
                    </ul>
                </div>
            </div>
        </div>
        
        <div class="card mt-3">
            <div class="card-header">
                <h6 class="card-title mb-0">
                    <i class="bi bi-calculator me-2"></i>
                    Simulador
                </h6>
            </div>
            <div class="card-body">
                <div class="mb-3">
                    <label class="form-label">Valor Base (R$):</label>
                    <input type="number" id="valorBase" class="form-control" placeholder="10000" step="0.01">
                </div>
                <div class="mb-3">
                    <label class="form-label">Percentual (%):</label>
                    <input type="number" id="percentualSim" class="form-control" placeholder="10" step="0.01">
                </div>
                <div class="alert alert-light">
                    <strong>Valor do Rateio:</strong>
                    <div id="valorRateio" class="h5 text-primary">R$ 0,00</div>
                    <strong>Saldo Restante:</strong>
                    <div id="saldoRestante" class="h6 text-secondary">R$ 0,00</div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    
    <script>
        $(document).ready(function() {
            // Validação para evitar origem = destino
            $('#CentroCustoOrigemId, #CentroCustoDestinoId').on('change', function() {
                var origem = $('#CentroCustoOrigemId').val();
                var destino = $('#CentroCustoDestinoId').val();
                
                if (origem && destino && origem === destino) {
                    alert('O centro de custo destino deve ser diferente do origem.');
                    $(this).val('');
                }
            });
            
            // Simulador de cálculo
            $('#valorBase, #percentualSim, #Percentual').on('input', function() {
                var valorBase = parseFloat($('#valorBase').val()) || 0;
                var percentual = parseFloat($('#percentualSim').val()) || parseFloat($('#Percentual').val()) || 0;
                
                var valorRateio = valorBase * (percentual / 100);
                var saldoRestante = valorBase - valorRateio;
                
                $('#valorRateio').text(valorRateio.toLocaleString('pt-BR', {
                    style: 'currency',
                    currency: 'BRL'
                }));
                
                $('#saldoRestante').text(saldoRestante.toLocaleString('pt-BR', {
                    style: 'currency',
                    currency: 'BRL'
                }));
                
                // Sincronizar percentual
                if ($(this).attr('id') === 'Percentual') {
                    $('#percentualSim').val($(this).val());
                }
            });
            
            // Foco no primeiro campo
            $('#Nome').focus();
        });
    </script>
}
