@model IEnumerable<SistemaTesourariaEclesiastica.Models.RegraRateio>

@{
    ViewData["Title"] = "Regras de Rateio";
}

<!-- Cabeçalho -->
<div class="d-flex flex-column flex-md-row justify-content-between align-items-start align-items-md-center mb-4 gap-2">
    <div>
        <h1 class="h3 mb-1">
            <i class="bi bi-diagram-2 me-2"></i>Regras de Rateio
        </h1>
        <p class="text-muted mb-0 small">Configuração de distribuição automática de verbas</p>
    </div>
    <a asp-action="Create" class="btn btn-primary">
        <i class="bi bi-plus-circle me-2"></i>Nova Regra
    </a>
</div>

<!-- Alert informativo -->
<div class="alert alert-info mb-4 d-flex align-items-start">
    <i class="bi bi-info-circle me-3 fs-5"></i>
    <div>
        <h6 class="alert-heading mb-2">Como funcionam as Regras de Rateio</h6>
        <p class="mb-0 small">
            As regras de rateio definem automaticamente como os recursos serão distribuídos durante o fechamento de período.
            Você pode configurar percentuais para diversos destinos, incluindo o <strong>Fundo de Empréstimo</strong> (o "dízimo dos dízimos").
        </p>
    </div>
</div>

<!-- Resultados -->
<div class="card shadow-sm">
    <div class="card-header bg-white d-flex justify-content-between align-items-center py-3">
        <h5 class="mb-0 fw-semibold">
            <i class="bi bi-list-ul me-2 text-primary"></i>
            @(Model != null ? Model.Count() : 0) regra(s) cadastrada(s)
        </h5>
        <button type="button" class="btn btn-sm btn-outline-secondary" onclick="window.print()">
            <i class="bi bi-printer me-1"></i>Imprimir
        </button>
    </div>

    <div class="card-body p-0">
        @if (Model != null && Model.Any())
        {
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="table-light">
                        <tr>
                            <th class="ps-3">Nome da Regra</th>
                            <th class="d-none d-md-table-cell">Centro de Custo Origem</th>
                            <th class="d-none d-lg-table-cell">Centro de Custo Destino</th>
                            <th class="text-center">Percentual</th>
                            <th class="d-none d-xl-table-cell text-center">Status</th>
                            <th class="d-none d-xl-table-cell">Data Criação</th>
                            <th class="text-center" style="width: 140px;">Ações</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr class="@(item.Ativo ? "" : "table-secondary")">
                                <td class="ps-3">
                                    <div class="d-flex align-items-center">
                                        <div class="avatar-circle bg-primary text-white me-2">
                                            <i class="bi bi-diagram-2"></i>
                                        </div>
                                        <div>
                                            <div class="fw-semibold">@item.Nome</div>
                                            <small class="text-muted d-md-none">
                                                @item.CentroCustoOrigem?.Nome → @item.CentroCustoDestino?.Nome
                                            </small>
                                        </div>
                                    </div>
                                </td>
                                <td class="d-none d-md-table-cell">
                                    <span class="badge bg-danger bg-opacity-10 text-danger border border-danger">
                                        <i class="bi bi-arrow-up me-1"></i>
                                        @item.CentroCustoOrigem?.Nome
                                    </span>
                                </td>
                                <td class="d-none d-lg-table-cell">
                                    <span class="badge bg-success bg-opacity-10 text-success border border-success">
                                        <i class="bi bi-arrow-down me-1"></i>
                                        @item.CentroCustoDestino?.Nome
                                    </span>
                                </td>
                                <td class="text-center">
                                    <div class="d-flex flex-column align-items-center">
                                        <span class="badge bg-primary fs-6 mb-1">@item.Percentual.ToString("F2")%</span>
                                        <div class="progress w-100" style="height: 8px;">
                                            <div class="progress-bar bg-primary"
                                                 role="progressbar"
                                                 style="width: @item.Percentual%"
                                                 aria-valuenow="@item.Percentual"
                                                 aria-valuemin="0"
                                                 aria-valuemax="100">
                                            </div>
                                        </div>
                                    </div>
                                </td>
                                <td class="d-none d-xl-table-cell text-center">
                                    @if (item.Ativo)
                                    {
                                        <span class="badge bg-success bg-opacity-10 text-success border border-success">
                                            <i class="bi bi-check-circle me-1"></i>Ativa
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary bg-opacity-10 text-secondary border border-secondary">
                                            <i class="bi bi-x-circle me-1"></i>Inativa
                                        </span>
                                    }
                                </td>
                                <td class="d-none d-xl-table-cell">
                                    <small class="text-muted">@item.DataCriacao.ToString("dd/MM/yyyy")</small>
                                </td>
                                <td>
                                    <div class="btn-group btn-group-sm" role="group">
                                        <a asp-action="Details" asp-route-id="@item.Id"
                                           class="btn btn-outline-info" title="Detalhes">
                                            <i class="bi bi-eye"></i>
                                        </a>
                                        <a asp-action="Edit" asp-route-id="@item.Id"
                                           class="btn btn-outline-primary" title="Editar">
                                            <i class="bi bi-pencil"></i>
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@item.Id"
                                           class="btn btn-outline-danger" title="Excluir">
                                            <i class="bi bi-trash"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="text-center py-5">
                <i class="bi bi-diagram-2 text-muted" style="font-size: 4rem;"></i>
                <h5 class="mt-3 text-muted">Nenhuma regra de rateio encontrada</h5>
                <p class="text-muted">Configure regras para distribuição automática de recursos.</p>
                <a asp-action="Create" class="btn btn-primary mt-2">
                    <i class="bi bi-plus-circle me-2"></i>Criar Primeira Regra
                </a>
            </div>
        }
    </div>
</div>

<!-- Cards de Exemplo -->
<div class="row g-3 mt-4">
    <div class="col-12 col-md-6">
        <div class="card border-primary">
            <div class="card-header bg-primary text-white">
                <h6 class="mb-0">
                    <i class="bi bi-lightbulb me-2"></i>Exemplo: Dízimo dos Dízimos
                </h6>
            </div>
            <div class="card-body">
                <p class="small mb-2">
                    <strong>Nome da Regra:</strong> Repasse para Fundo de Empréstimo
                </p>
                <p class="small mb-2">
                    <strong>Origem:</strong> Congregação Central<br>
                    <strong>Destino:</strong> Sede (Fundo de Empréstimo)<br>
                    <strong>Percentual:</strong> 10%
                </p>
                <p class="small text-muted mb-0">
                    Esta regra transfere automaticamente 10% de tudo arrecadado pela Congregação Central para o Fundo de Empréstimo da Sede.
                </p>
            </div>
        </div>
    </div>
    <div class="col-12 col-md-6">
        <div class="card border-success">
            <div class="card-header bg-success text-white">
                <h6 class="mb-0">
                    <i class="bi bi-lightbulb me-2"></i>Exemplo: Missões
                </h6>
            </div>
            <div class="card-body">
                <p class="small mb-2">
                    <strong>Nome da Regra:</strong> Repasse para Missões
                </p>
                <p class="small mb-2">
                    <strong>Origem:</strong> Congregação Norte<br>
                    <strong>Destino:</strong> Sede (Fundo de Missões)<br>
                    <strong>Percentual:</strong> 5%
                </p>
                <p class="small text-muted mb-0">
                    Esta regra destina 5% da arrecadação da Congregação Norte para ações missionárias.
                </p>
            </div>
        </div>
    </div>
</div>