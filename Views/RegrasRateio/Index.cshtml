@model IEnumerable<SistemaTesourariaEclesiastica.Models.RegraRateio>

@{
    ViewData["Title"] = "Regras de Rateio";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h1 class="h3 mb-0">
            <i class="bi bi-share me-2"></i>
            Regras de Rateio
        </h1>
        <p class="text-muted mb-0">Configuração de rateios automáticos para fechamentos</p>
    </div>
    <a asp-action="Create" class="btn btn-primary">
        <i class="bi bi-plus-circle me-2"></i>
        Nova Regra
    </a>
</div>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<div class="card">
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead class="table-dark">
                    <tr>
                        <th>Nome da Regra</th>
                        <th>Centro de Custo Origem</th>
                        <th>Centro de Custo Destino</th>
                        <th>Percentual</th>
                        <th>Status</th>
                        <th>Data de Criação</th>
                        <th width="200">Ações</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                <strong>@item.Nome</strong>
                                @if (!string.IsNullOrEmpty(item.Descricao))
                                {
                                    <br><small class="text-muted">@item.Descricao</small>
                                }
                            </td>
                            <td>@item.CentroCustoOrigem.Nome</td>
                            <td>@item.CentroCustoDestino.Nome</td>
                            <td class="text-end">
                                <span class="badge bg-info">@item.Percentual.ToString("F2")%</span>
                            </td>
                            <td>
                                @if (item.Ativo)
                                {
                                    <span class="badge bg-success">Ativo</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">Inativo</span>
                                }
                            </td>
                            <td>@item.DataCriacao.ToString("dd/MM/yyyy")</td>
                            <td>
                                <div class="btn-group" role="group">
                                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-info btn-sm" title="Detalhes">
                                        <i class="bi bi-eye"></i>
                                    </a>
                                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-warning btn-sm" title="Editar">
                                        <i class="bi bi-pencil"></i>
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger btn-sm" title="Excluir">
                                        <i class="bi bi-trash"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        @if (!Model.Any())
        {
            <div class="text-center py-4">
                <i class="bi bi-share display-1 text-muted"></i>
                <p class="text-muted mt-2">Nenhuma regra de rateio cadastrada.</p>
                <a asp-action="Create" class="btn btn-primary">
                    <i class="bi bi-plus-circle me-1"></i>Criar Primeira Regra
                </a>
            </div>
        }
    </div>
</div>

<div class="card mt-4">
    <div class="card-header">
        <h5 class="card-title mb-0">
            <i class="bi bi-info-circle me-2"></i>
            Como Funcionam as Regras de Rateio
        </h5>
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-md-6">
                <h6>Aplicação Automática</h6>
                <p class="small text-muted">
                    As regras são aplicadas automaticamente durante o fechamento de período quando o centro de custo origem for "SEDE" ou "GERAL".
                </p>
                
                <h6>Cálculo do Rateio</h6>
                <p class="small text-muted">
                    O valor do rateio é calculado aplicando o percentual sobre o balanço digital do fechamento.
                </p>
            </div>
            <div class="col-md-6">
                <h6>Exemplo Prático</h6>
                <div class="alert alert-light">
                    <small>
                        <strong>Regra:</strong> SEDE → Departamento A (10%)<br>
                        <strong>Balanço Digital:</strong> R$ 10.000,00<br>
                        <strong>Valor do Rateio:</strong> R$ 1.000,00<br>
                        <strong>Saldo Final SEDE:</strong> R$ 9.000,00
                    </small>
                </div>
            </div>
        </div>
    </div>
</div>
