@model SistemaTesourariaEclesiastica.Models.RegraRateio

@{
    ViewData["Title"] = "Detalhes da Regra de Rateio";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h1 class="h3 mb-0">
            <i class="bi bi-info-circle me-2"></i>
            Detalhes da Regra de Rateio
        </h1>
        <p class="text-muted mb-0">Informações completas da regra</p>
    </div>
    <div class="btn-group">
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">
            <i class="bi bi-pencil me-2"></i>
            Editar
        </a>
        <a asp-action="Index" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left me-2"></i>
            Voltar
        </a>
    </div>
</div>

<div class="row">
    <div class="col-lg-8">
        <div class="card">
            <div class="card-header bg-light">
                <h5 class="card-title mb-0">
                    <i class="bi bi-file-text me-2"></i>
                    Informações da Regra
                </h5>
            </div>
            <div class="card-body">
                <div class="row mb-3">
                    <div class="col-md-4">
                        <label class="form-label text-muted">Nome da Regra</label>
                        <p class="h5">@Model.Nome</p>
                    </div>
                    <div class="col-md-4">
                        <label class="form-label text-muted">Percentual</label>
                        <p class="h5">
                            <span class="badge bg-info" style="font-size: 1.1rem;">@Model.Percentual.ToString("F2")%</span>
                        </p>
                    </div>
                    <div class="col-md-4">
                        <label class="form-label text-muted">Status</label>
                        <p class="h5">
                            @if (Model.Ativo)
                            {
                                <span class="badge bg-success" style="font-size: 1rem;">
                                    <i class="bi bi-check-circle me-1"></i>
                                    Ativo
                                </span>
                            }
                            else
                            {
                                <span class="badge bg-secondary" style="font-size: 1rem;">
                                    <i class="bi bi-x-circle me-1"></i>
                                    Inativo
                                </span>
                            }
                        </p>
                    </div>
                </div>

                <hr>

                <div class="row mb-3">
                    <div class="col-md-6">
                        <label class="form-label text-muted">
                            <i class="bi bi-arrow-right-circle me-1"></i>
                            Centro de Custo Origem
                        </label>
                        <div class="alert alert-light border mb-0">
                            <h6 class="mb-0">@Model.CentroCustoOrigem.Nome</h6>
                        </div>
                        <small class="text-muted">Centro que fará o rateio</small>
                    </div>
                    <div class="col-md-6">
                        <label class="form-label text-muted">
                            <i class="bi bi-bullseye me-1"></i>
                            Centro de Custo Destino
                        </label>
                        <div class="alert alert-primary border-primary mb-0">
                            <h6 class="mb-0 text-primary">@Model.CentroCustoDestino.Nome</h6>
                        </div>
                        <small class="text-muted">Centro que receberá o rateio</small>
                    </div>
                </div>

                @if (!string.IsNullOrEmpty(Model.Descricao))
                {
                    <hr>
                    <div class="mb-3">
                        <label class="form-label text-muted">Descrição</label>
                        <p class="text-muted">@Model.Descricao</p>
                    </div>
                }

                <hr>

                <div class="row">
                    <div class="col-md-4">
                        <label class="form-label text-muted">Data de Criação</label>
                        <p>
                            <i class="bi bi-calendar-event me-1"></i>
                            @Model.DataCriacao.ToString("dd/MM/yyyy HH:mm")
                        </p>
                    </div>
                    <div class="col-md-4">
                        <label class="form-label text-muted">ID da Regra</label>
                        <p>
                            <i class="bi bi-hash me-1"></i>
                            @Model.Id
                        </p>
                    </div>
                </div>
            </div>
        </div>

        <div class="card mt-3">
            <div class="card-header bg-light">
                <h5 class="card-title mb-0">
                    <i class="bi bi-graph-up me-2"></i>
                    Utilização da Regra
                </h5>
            </div>
            <div class="card-body">
                <p class="text-muted mb-3">
                    <i class="bi bi-info-circle me-1"></i>
                    Esta regra é aplicada automaticamente em fechamentos do centro de custo <strong>@Model.CentroCustoOrigem.Nome</strong>.
                </p>

                <div class="alert alert-info">
                    <h6 class="alert-heading">Como funciona:</h6>
                    <ul class="mb-0 small">
                        <li>A regra só é aplicada se o centro de custo for <strong>SEDE</strong> ou <strong>GERAL</strong></li>
                        <li>O rateio é calculado sobre o <strong>Total de Receitas</strong> do fechamento</li>
                        <li>A regra precisa estar <strong>ATIVA</strong> para ser aplicada</li>
                        <li>O valor é enviado automaticamente para <strong>@Model.CentroCustoDestino.Nome</strong></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>

    <div class="col-lg-4">
        <div class="card">
            <div class="card-header bg-light">
                <h6 class="card-title mb-0">
                    <i class="bi bi-gear me-2"></i>
                    Ações
                </h6>
            </div>
            <div class="card-body">
                <div class="d-grid gap-2">
                    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">
                        <i class="bi bi-pencil me-2"></i>
                        Editar Regra
                    </a>

                    @if (Model.Ativo)
                    {
                        <button type="button" class="btn btn-outline-secondary" data-bs-toggle="modal" data-bs-target="#modalDesativar">
                            <i class="bi bi-pause-circle me-2"></i>
                            Desativar Regra
                        </button>
                    }
                    else
                    {
                        <button type="button" class="btn btn-outline-success" data-bs-toggle="modal" data-bs-target="#modalAtivar">
                            <i class="bi bi-play-circle me-2"></i>
                            Ativar Regra
                        </button>
                    }

                    <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-outline-danger">
                        <i class="bi bi-trash me-2"></i>
                        Excluir Regra
                    </a>

                    <hr>

                    <a asp-action="Index" class="btn btn-outline-secondary">
                        <i class="bi bi-arrow-left me-2"></i>
                        Voltar para Lista
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
}